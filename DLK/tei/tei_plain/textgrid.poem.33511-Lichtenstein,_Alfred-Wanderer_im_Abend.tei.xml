        <lg type="poem">
          <head>Wanderer im Abend</head>
          <lg rhyme="unknown" type="stanza">
            <l>Der staubige Sonntag</l>
            <l>Liegt zerbrannt.</l>
            <l>Verkohlte Kühle</l>
            <l>Bemuttert das Land.</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Verkommene Sehnsucht</l>
            <l>Klafft weit wieder auf.</l>
            <l>Träume und Tränen</l>
            <l>Strömen herauf.</l>
          </lg>
