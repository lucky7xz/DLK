        <lg type="poem">
          <head>Letzter Ritt</head>
          <lg rhyme="unknown" type="stanza">
            <l>Ein Mädchen ritt</l>
            <l>Ihren Schimmel</l>
            <l>Zum Schlachter</l>
            <l>Im Schritt</l>
            <l>Nach dem Städtchen.</l>
            <l>Gott regnete</l>
            <l>Und segnete</l>
            <l>Das traurige Mädchen.</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Da vergoß es</l>
            <l>Eine Träne</l>
            <l>In die Mähne</l>
            <l>Des Rosses</l>
            <l>Und ritt weiter hin.</l>
            <l>Als der Schlachtersknecht,</l>
            <l>Etwas angezecht,</l>
            <l>Jener Reiterin</l>
            <l>Guten Morgen bot,</l>
            <l>War sie tot.</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Ein Gewitter</l>
            <l>Brach vom Himmel.</l>
            <l>Und der Schimmel</l>
            <l>Schmeckte bitter.</l>
          </lg>
