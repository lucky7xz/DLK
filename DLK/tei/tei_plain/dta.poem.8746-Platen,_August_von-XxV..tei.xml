  <text>
    <body>
      <div n="1">
        <lg type="poem">
          <head>XxV.</head>
          <lg rhyme="unknown" type="stanza">
            <l>Frey und fröhlich</l>
            <l>Kroch die Raupe,</l>
            <l>Freute kindisch,</l>
            <l>Immer kriechend,</l>
            <l>Sich umhüllter,</l>
            <l>Junger Knospen.</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Aber selbstisch</l>
            <l>Eingeklostert</l>
            <l>Spinnt die Puppe:</l>
            <l>Der Entfaltung</l>
            <l>Qualenkämpfe</l>
            <l>Wühlen grausam</l>
            <l>Durch das Innre.</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Doch befreyend</l>
            <l>Sieget Wärme:</l>
            <l>Schwebe rastlos,</l>
            <l>Aetherkostend,</l>
            <l>Farbefunkelnd,</l>
            <l>Du erlöster</l>
            <l>Sommervogel!</l>
          </lg>
        </lg>
      </div>
    </body>
