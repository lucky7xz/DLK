  <text>
    <body>
      <div n="1">
        <lg type="poem">
          <head>Christnacht.</head>
          <lg rhyme="unknown" type="stanza">
            <l>Fromme Gluth entfache</l>
            <l>Jedes Herz gelind,</l>
            <l>Eilt nach jenem Dache,</l>
            <l>Betet an das Kind!</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Jener heißerflehte</l>
            <l>Hort der Menschen lebt,</l>
            <l>Der euch im Gebete</l>
            <l>Lange vorgeschwebt.</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Traun! Die Macht des Bösen</l>
            <l>Sinkt nun fort und fort,</l>
            <l>Jener wird erlösen</l>
            <l>Durch das Eine Wort.</l>
          </lg>
        </lg>
      </div>
    </body>
