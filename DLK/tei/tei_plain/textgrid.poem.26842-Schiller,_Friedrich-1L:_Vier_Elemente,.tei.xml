        <lg type="poem">
          <head>1L: Vier Elemente,</head>
          <lg rhyme="unknown" type="stanza">
            <l>Vier Elemente,</l>
            <l>Innig gesellt,</l>
            <l>Bilden das Leben,</l>
            <l>Bauen die Welt.</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Preßt der Zitrone</l>
            <l>Saftigen Stern,</l>
            <l>Herb ist des Lebens</l>
            <l>Innerster Kern.</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Jetzt mit des Zuckers</l>
            <l>Linderndem Saft</l>
            <l>Zähmet die herbe</l>
            <l>Brennende Kraft,</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Gießet des Wassers</l>
            <l>Sprudelnden Schwall,</l>
            <l>Wasser umfänget</l>
            <l>Ruhig das All.</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Tropfen des Geistes</l>
            <l>Gießet hinein,</l>
            <l>Leben dem Leben</l>
            <l>Gibt er allein.</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Eh es verdüftet,</l>
            <l>Schöpfet es schnell,</l>
            <l>Nur wenn er glühet,</l>
            <l>Labet der Quell.</l>
          </lg>
