      <div n="1">
        <lg type="poem">
          <head>Lenz</head>
          <lg rhyme="unknown" type="stanza">
            <l>Die Bäume blühn,</l>
            <l>Die Vöglein singen,</l>
            <l>Die Wiesen bringen</l>
            <l>Ihr erstes Grün.</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Schier tuts mir leid,</l>
            <l>Zu treten die Erden</l>
            <l>Und ihr zu gefährden</l>
            <l>Ihr neues Kleid.</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Sie hat nicht acht,</l>
            <l>Ob Knospenspringen</l>
            <l>Und Frühlingssingen</l>
            <l>Mich traurig macht.</l>
          </lg>
