        <lg type="poem">
          <head>1.</head>
          <lg rhyme="unknown" type="stanza">
            <l>Ueber jähe Freud'</l>
            <l>Und wehes Zagen,</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Ueber Seligkeit,</l>
            <l>Verzweifeltes Wagen,</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Ueber tiefes Leid</l>
            <l>Und schweres Entsagen ...</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Hat mich getragen</l>
            <l>Deine strenge Hand</l>
            <l>In geweihten Tagen.</l>
          </lg>
