        <lg type="poem">
          <head>Goldene Lichter</head>
          <lg rhyme="unknown" type="stanza">
            <l>Das junge Rohr im Teiche</l>
            <l>Starrt wie ein Lanzenwall,</l>
            <l>In den Weiden jubelt</l>
            <l>Klagend die Nachtigall.</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Hinter den Ellern erblasset</l>
            <l>Rosig die Abendglut,</l>
            <l>Goldene Lichter zittern</l>
            <l>Über die dunkle Flut.</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Goldene Lichter zittern</l>
            <l>Über mein Leben hin,</l>
            <l>Seit ich deiner Augen</l>
            <l>Leuchten begegnet bin.</l>
          </lg>
