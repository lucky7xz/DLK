      <div n="1">
        <lg type="poem">
          <head>[die Liebe lehrt]</head>
          <lg rhyme="unknown" type="stanza">
            <l>Die Liebe lehrt</l>
            <l>Mich lieblich reden,</l>
            <l>Da Lieblichkeit</l>
            <l>Mich lieben lehrte.</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Arm bin ich nicht</l>
            <l>In Deinen Armen,</l>
            <l>Umarmst du mich</l>
            <l>Du süße Armut.</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Wie reich bin ich</l>
            <l>In Deinem Reiche,</l>
            <l>Der Liebe Reichtum</l>
            <l>Reichst du mir.</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>O Lieblichkeit!</l>
            <l>O reiche Armut!</l>
            <l>Umarme mich</l>
            <l>In Liebesarmen.</l>
          </lg>
