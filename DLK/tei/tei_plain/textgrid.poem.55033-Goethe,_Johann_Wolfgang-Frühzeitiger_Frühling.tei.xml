      <div n="1">
        <lg type="poem">
          <head>Frühzeitiger Frühling</head>
          <lg rhyme="unknown" type="stanza">
            <l>Tage der Wonne,</l>
            <l>Kommt ihr so bald?</l>
            <l>Schenkt mir die Sonne,</l>
            <l>Hügel und Wald?</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Reichlicher fließen</l>
            <l>Bächlein zumal.</l>
            <l>Sind, es die Wiesen?</l>
            <l>Ist es das Tal?</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Blauliche Frische!</l>
            <l>Himmel und Höh!</l>
            <l>Goldene Fische</l>
            <l>Wimmeln im See.</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Buntes Gefieder</l>
            <l>Rauschet im Hain;</l>
            <l>Himmlische Lieder</l>
            <l>Schallen darein.</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Unter des Grünen</l>
            <l>Blühender Kraft</l>
            <l>Naschen die Bienen</l>
            <l>Summend am Saft.</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Leise Bewegung</l>
            <l>Bebt in der Luft,</l>
            <l>Reizende Regung,</l>
            <l>Schläfernder Duft.</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Mächtiger rühret</l>
            <l>Bald sich ein Hauch,</l>
            <l>Doch er verlieret</l>
            <l>Gleich sich im Strauch.</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Aber zum Busen</l>
            <l>Kehrt er zurück.</l>
            <l>Helfet, ihr Musen,</l>
            <l>Tragen das Glück!</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Saget, seit gestern</l>
            <l>Wie mir geschah?</l>
            <l>Liebliche Schwestern,</l>
            <l>Liebchen ist da!</l>
          </lg>
