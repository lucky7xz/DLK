      <div n="1">
        <lg type="poem">
          <head>Trieb</head>
          <lg rhyme="unknown" type="stanza">
            <l>Schrecken Sträuben</l>
            <l>Wehren Ringen</l>
            <l>Ächzen Schluchzen</l>
            <l>Stürzen</l>
            <l>Du!</l>
            <l>Grellen Gehren</l>
            <l>Winden Klammern</l>
            <l>Hitzen Schwächen</l>
            <l>Ich und Du!</l>
            <l>Lösen Gleiten</l>
            <l>Stöhnen Wellen</l>
            <l>Schwinden Finden</l>
            <l>Ich</l>
            <l>Dich</l>
            <l>Du!</l>
          </lg>
