        <lg type="poem">
          <head>Schneeweiße Wetterköpfe ...</head>
          <lg rhyme="unknown" type="stanza">
            <l>Schneeweiße Wetterköpfe</l>
            <l>Lagern am Himmelsrand,</l>
            <l>Auf den gemähten Wiesen</l>
            <l>Brütet der Sonnenbrand.</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Aus den welkenden Gräsern</l>
            <l>Steigt ein schwerer Duft,</l>
            <l>Voll von süßen Gerüchen</l>
            <l>Ist die zitternde Luft.</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Langsam gehen wir beide</l>
            <l>Über das duftende Heu,</l>
            <l>Aus der blauen Höhe</l>
            <l>Ertönt eines Falken Schrei</l>
          </lg>
