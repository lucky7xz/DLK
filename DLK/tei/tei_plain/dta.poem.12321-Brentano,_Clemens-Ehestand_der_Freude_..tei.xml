      <div n="1">
        <lg type="poem">
          <head>Ehestand der Freude .</head>
          <lg rhyme="unknown" type="stanza">
            <l>Lasset uns scherzen               </l>
            <l>Blühende Herzen,</l>
            <l>Lasset uns lieben</l>
            <l>Ohne Verschieben,</l>
            <l>Lauten und Geigen</l>
            <l>Sollen nicht schweigen,</l>
            <l>Kommet zum Tanze,</l>
            <l>Pflücket vom Kranze.</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Drücket die Hände,</l>
            <l>Legt euch zum Ende,</l>
            <l>Gebet Euch Küsse,</l>
            <l>Tretet die Füße,</l>
            <l>Machet euch fröhlich,</l>
            <l>Machet euch ehlich,</l>
            <l>Lasset die Narren</l>
            <l>Einsam verharren.</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Ehlich zu werden</l>
            <l>Dienet der Erden,</l>
            <l>Ledige Leute</l>
            <l>Mangeln der Freude;</l>
            <l>Jeder muß sterben,</l>
            <l>Machet euch Erben</l>
            <l>Euerem Gute,</l>
            <l>Namen und Blute.</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Lasset der Grauen</l>
            <l>Murren und Schauen,</l>
            <l>Rathen und Wissen,</l>
            <l>Wenig erspriessen;</l>
            <l>Eben sie selber</l>
            <l>Waren auch Kälber,</l>
            <l>Blühende Herzen</l>
            <l>Lasset uns scherzen.</l>
          </lg>
        </lg>
      </div>
