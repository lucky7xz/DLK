  <text>
    <body>
      <div n="1">
        <lg type="poem">
          <head>XxI.</head>
          <lg rhyme="unknown" type="stanza">
            <l>Jene Schatten</l>
            <l>Ueber Matten</l>
            <l>Um den Quell,</l>
            <l>Reich an losen</l>
            <l>Hagerosen,</l>
            <l>Kommt zu kosen,</l>
            <l>Brüder, schnell!</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Kaum gefunden,</l>
            <l>Schon umwunden,</l>
            <l>Schon verbunden,</l>
            <l>Weiß ich wie?</l>
            <l>Keiner höhne,</l>
            <l>Musensöhne,</l>
            <l>Diese schöne</l>
            <l>Sympathie!</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Jubelt, bringet</l>
            <l>Dank und singet,</l>
            <l>Welle klinget,</l>
            <l>Rose blüht:</l>
            <l>Das in Wonnen</l>
            <l>Nie zerronnen,</l>
            <l>Welch besonnen,</l>
            <l>Kalt Gemüth!</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Vögel neigen</l>
            <l>Aus den Zweigen,</l>
            <l>Heißen schweigen</l>
            <l>Mich zulezt:</l>
            <l>Wer beschriebe</l>
            <l>Lenzestriebe,</l>
            <l>Wer die Liebe,</l>
            <l>Wer das Jezt?</l>
          </lg>
        </lg>
      </div>
    </body>
