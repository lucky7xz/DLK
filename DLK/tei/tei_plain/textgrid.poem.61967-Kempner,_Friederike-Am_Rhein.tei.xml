      <div n="1">
        <lg type="poem">
          <head>Am Rhein</head>
          <lg rhyme="unknown" type="stanza">
            <l>Auf Bergeshöh'</l>
            <l>Den Pfad entlang,</l>
            <l>Auf off'ner See</l>
            <l>Beim Harfenklang.</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Im Frührotschein,</l>
            <l>Bei blauer Luft,</l>
            <l>Am Rhein, am Rhein</l>
            <l>Beim Blumenduft.</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Im Himmelsraum</l>
            <l>Den Vögelschwarm,</l>
            <l>Im Hirn den Traum,</l>
            <l>Ganz sonder Harm.</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Im Abendrot</l>
            <l>Das Tal hinab,</l>
            <l>Und dann, dann tot,</l>
            <l>Allein im Grab.</l>
          </lg>
