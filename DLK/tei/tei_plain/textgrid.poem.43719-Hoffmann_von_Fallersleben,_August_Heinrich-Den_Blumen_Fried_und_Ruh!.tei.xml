    <body>
      <div n="1">
        <lg type="poem">
          <head>Den Blumen Fried und Ruh!</head>
          <lg rhyme="unknown" type="stanza">
            <l>Lieben Abendwinde,</l>
            <l>Säuselt Fried und Ruh,</l>
            <l>Säuselt leis' und linde</l>
            <l>Meinen Blumen zu!</l>
            <l>Lieben Abendwinde</l>
            <l>Säuselt Fried und Ruh!</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Scheine freundlich wieder,</l>
            <l>Lieber Mondenschein,</l>
            <l>Sende Schlummer nieder</l>
            <l>Meinen Blümelein!</l>
            <l>Scheine freundlich wieder,</l>
            <l>Lieber Mondenschein!</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Singt, ihr Nachtigallen,</l>
            <l>Singet hübsch und fein,</l>
            <l>Gute Nacht! singt allen</l>
            <l>Meinen Blümelein!</l>
            <l>Singt, ihr Nachtigallen,</l>
            <l>Singet hübsch und fein!</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
