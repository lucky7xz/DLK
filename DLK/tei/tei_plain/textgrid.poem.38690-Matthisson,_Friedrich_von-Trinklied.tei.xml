        <lg type="poem">
          <head>Trinklied</head>
          <lg rhyme="unknown" type="stanza">
            <l>Der Gram soll heute,</l>
            <l>Bei goldnem Wein,</l>
            <l>Des Windes Beute</l>
            <l>Wie gestern seyn!</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Dahinten lasse,</l>
            <l>Wer hoch sich freut,</l>
            <l>Die leichenblasse</l>
            <l>Vergangenheit!</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Kein roher Scythe</l>
            <l>Nah' diesem Kreis!</l>
            <l>Des Frohsinns Blüthe</l>
            <l>Liebt Mittelgleis.</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Wir ziehn die Segel,</l>
            <l>Wenn Taumel dräun,</l>
            <l>Nach Flaccus Regel,</l>
            <l>Bedächtig ein.</l>
          </lg>
