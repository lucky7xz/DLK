        <lg type="poem">
          <head>Wie man Napoliums macht</head>
          <lg rhyme="unknown" type="stanza">
            <l>Nimm Feder und Tintenfaß!</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Mach dies,</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>mach das!</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Und mach noch so!</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>bei Austerlitz und Waterloo.</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Fruchtstück</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Den Kürbis nimm!</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Setz die Gurke dran!</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Drei Radi vollenden</l>
            <l>den großen Mann.</l>
          </lg>
