        <lg type="poem">
          <head>[wie die Biene]</head>
          <lg rhyme="unknown" type="stanza">
            <l>Wie die Biene</l>
            <l>Flogest du,</l>
            <l>Froher Miene</l>
            <l>Sogest du</l>
            <l>Blüthenthau, o welchen</l>
            <l>Thau aus allen Kelchen</l>
            <l>Saugend zogest du!</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Wie die Biene</l>
            <l>Labest du,</l>
            <l>Süßer Miene</l>
            <l>Gabest du</l>
            <l>Honig nur den deinen,</l>
            <l>Und wir dachten, keinen</l>
            <l>Stachel habest du.</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Unsre Biene</l>
            <l>Warest du,</l>
            <l>Sanfter Miene</l>
            <l>Sparest du</l>
            <l>Nur dein Gift, und solchen</l>
            <l>Stachel nun gleich Dolchen</l>
            <l>Offenbarest du.</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Wie die Biene</l>
            <l>Flogest du,</l>
            <l>Frommer Miene</l>
            <l>Logest du,</l>
            <l>Ließest wund die Herzen</l>
            <l>Und den Seim für Schmerzen</l>
            <l>Uns entzogest du.</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Wie die Biene</l>
            <l>Sei nicht bang,</l>
            <l>Froher Miene</l>
            <l>Mein Gesang!</l>
            <l>Diese Schmerzen taugen,</l>
            <l>Lust daraus zu saugen</l>
            <l>Unter Bienenklang.</l>
          </lg>
