        <lg type="poem">
          <head>[sonne, gehst du nieder]</head>
          <lg rhyme="unknown" type="stanza">
            <l>Sonne, gehst du nieder,</l>
            <l>Und der Lerche Lieder</l>
            <l>Jubeln nach mit Schall</l>
            <l>Deinem Feuerball!</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Wenn Du aufgehst wieder,</l>
            <l>Jubeln Lerchenlieder</l>
            <l>Deinem Feuerball</l>
            <l>Wieder zu mit Schall.</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Ob du gehest nieder,</l>
            <l>Oder aufgehst wieder,</l>
            <l>Nie den schönsten Schall</l>
            <l>Hörst du, goldner Ball.</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Wenn die Lerchenlieder</l>
            <l>Schweigen hin und wieder,</l>
            <l>Wird die Nachtigall</l>
            <l>Laut am Wasserfall.</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Wenn das Tagsgefieder</l>
            <l>Schläft im Nachtduftflieder,</l>
            <l>Weckt die Nachtigall</l>
            <l>Seelenwiderhall.</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Sonne, niemals wieder</l>
            <l>Sing' ich andre Lieder</l>
            <l>Als Nachtseufzerhall</l>
            <l>Unter Thränenfall.</l>
          </lg>
