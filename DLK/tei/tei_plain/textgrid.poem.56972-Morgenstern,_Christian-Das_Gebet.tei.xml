        <lg type="poem">
          <head>Das Gebet</head>
          <lg rhyme="unknown" type="stanza">
            <l>Die Rehlein beten zur Nacht,</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>hab acht!</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Halb neun!</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Halb zehn!</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Halb elf!</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Halb zwölf!</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Zwölf!</l>
          </lg>
          <lg rhyme="unknown" type="stanza">
            <l>Die Rehlein beten zur Nacht,</l>
            <l>hab acht!</l>
            <l>Sie falten die kleinen Zehlein,</l>
            <l>die Rehlein.</l>
          </lg>
