{"dta.poem.6037": {"metadata": {"author": {"name": "Brockes, Barthold Heinrich", "birth": "N.A.", "death": "N.A."}, "title": "Von der Sonne, den Planeten,  \n und vom Firmament.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1730", "urn": "urn:nbn:de:kobv:b4-20087-5", "language": ["de:0.99"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "Bestimmte man der Erd gleich einen festen Ort,", "tokens": ["Be\u00b7stimm\u00b7te", "man", "der", "Erd", "gleich", "ei\u00b7nen", "fes\u00b7ten", "Ort", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "PIS", "ART", "NN", "ADV", "ART", "ADJA", "NN", "$,"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "So reisset sie jedoch ihr Himmel mit sich fort.", "tokens": ["So", "reis\u00b7set", "sie", "je\u00b7doch", "ihr", "Him\u00b7mel", "mit", "sich", "fort", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VVFIN", "PPER", "ADV", "PPOSAT", "NN", "APPR", "PRF", "PTKVZ", "$."], "meter": "-+--+--+-+-+", "measure": "amphibrach.tri.plus"}, "line.3": {"text": "Man wird es leicht begreiffen k\u00f6nnen,", "tokens": ["Man", "wird", "es", "leicht", "be\u00b7greif\u00b7fen", "k\u00f6n\u00b7nen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["PIS", "VAFIN", "PPER", "ADJD", "VVINF", "VMINF", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.4": {"text": "(scheint gleich was \u00fcber uns des Tages fort zu rennen)", "tokens": ["(", "scheint", "gleich", "was", "\u00fc\u00b7ber", "uns", "des", "Ta\u00b7ges", "fort", "zu", "ren\u00b7nen", ")"], "token_info": ["punct", "word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["$(", "VVFIN", "ADV", "PRELS", "APPR", "PPER", "ART", "NN", "PTKVZ", "PTKZU", "VVINF", "$("], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.5": {"text": "Da\u00df wir es dennoch seyn, die auf den Leimen-Hauffen", "tokens": ["Da\u00df", "wir", "es", "den\u00b7noch", "seyn", ",", "die", "auf", "den", "Lei\u00b7men\u00b7Hauf\u00b7fen"], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word", "word"], "pos": ["KOUS", "PPER", "PPER", "ADV", "VAINF", "$,", "PRELS", "APPR", "ART", "NN"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.6": {"text": "Uns drehn, und alle Tag im regen Wirbel lauffen.", "tokens": ["Uns", "drehn", ",", "und", "al\u00b7le", "Tag", "im", "re\u00b7gen", "Wir\u00b7bel", "lauf\u00b7fen", "."], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VVINF", "$,", "KON", "PIAT", "NN", "APPRART", "ADJA", "NN", "VVINF", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}}}}}