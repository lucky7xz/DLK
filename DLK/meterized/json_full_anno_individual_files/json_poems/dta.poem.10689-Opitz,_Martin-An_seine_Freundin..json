{"dta.poem.10689": {"metadata": {"author": {"name": "Opitz, Martin", "birth": "N.A.", "death": "N.A."}, "title": "An seine Freundin.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1624", "urn": "urn:nbn:de:kobv:b4-200905197859", "language": ["de:0.99"], "booktitle": "Opitz, Martin: Teutsche P\u00f6emata und: Aristarchvs Wieder die verachtung Teutscher Sprach. Stra\u00dfburg, 1624."}, "poem": {"stanza.1": {"line.1": {"text": "Gleich wie der Morgenstern dem Menschen gibt das Liecht/", "tokens": ["Gleich", "wie", "der", "Mor\u00b7gens\u00b7tern", "dem", "Men\u00b7schen", "gibt", "das", "Liecht", "/"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "KOKOM", "ART", "NN", "ART", "NN", "VVFIN", "ART", "NN", "$("], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "So scheinet mich auch an dein klares Angesicht:", "tokens": ["So", "schei\u00b7net", "mich", "auch", "an", "dein", "kla\u00b7res", "An\u00b7ge\u00b7sicht", ":"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VVFIN", "PPER", "ADV", "APPR", "PPOSAT", "ADJA", "NN", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.3": {"text": "Gleich wie zu Mittag-zeit man Sonnen-hitz empfindet/", "tokens": ["Gleich", "wie", "zu", "Mit\u00b7tag\u00b7zeit", "man", "Son\u00b7nen\u00b7hitz", "emp\u00b7fin\u00b7det", "/"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "KOKOM", "APPR", "NN", "PIS", "NN", "VVFIN", "$("], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.4": {"text": "So brennet mein Gem\u00fcth in Liebes brunst entz\u00fcndet:", "tokens": ["So", "bren\u00b7net", "mein", "Ge\u00b7m\u00fcth", "in", "Lie\u00b7bes", "brunst", "ent\u00b7z\u00fcn\u00b7det", ":"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VVFIN", "PPOSAT", "NN", "APPR", "ADJA", "NN", "VVPP", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.5": {"text": "Gleich wie die k\u00fchle Nacht vertreibt der Hitze Noth/", "tokens": ["Gleich", "wie", "die", "k\u00fch\u00b7le", "Nacht", "ver\u00b7treibt", "der", "Hit\u00b7ze", "Noth", "/"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "KOKOM", "ART", "ADJA", "NN", "VVFIN", "ART", "NN", "NN", "$("], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.6": {"text": "So wird mein brennend Hertz nichts l\u00f6schen als der Todt.", "tokens": ["So", "wird", "mein", "bren\u00b7nend", "Hertz", "nichts", "l\u00f6\u00b7schen", "als", "der", "Todt", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VAFIN", "PPOSAT", "ADJD", "NN", "PIS", "VVINF", "KOKOM", "ART", "NN", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}}}}}