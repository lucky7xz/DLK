{"dta.poem.3864": {"metadata": {"author": {"name": "Spindler, Christian Gotthold", "birth": "N.A.", "death": "N.A."}, "title": "Auf einen Todtengr\u00e4ber.  \n  J. G. Schr\u00e4pel.  1744.", "genre": "Lyrik, Drama", "period": "N.A.", "pub_year": "1745", "urn": "urn:nbn:de:kobv:b4-20581-9", "language": ["de:0.99"], "booktitle": "Spindler, Christian Gotthold: Unschuldige Jugend-Fr\u00fcchte. Leipzig, 1745."}, "poem": {"stanza.1": {"line.1": {"text": "Ich habe manchen eingescharret,", "tokens": ["Ich", "ha\u00b7be", "man\u00b7chen", "ein\u00b7ge\u00b7schar\u00b7ret", ","], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["PPER", "VAFIN", "PIS", "VVFIN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.2": {"text": "Und ihm sein Ruhe-Bett gemacht;", "tokens": ["Und", "ihm", "sein", "Ru\u00b7he\u00b7Bett", "ge\u00b7macht", ";"], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["KON", "PPER", "PPOSAT", "NN", "VVPP", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.3": {"text": "Nun bin ich endlich selbst erstarret,", "tokens": ["Nun", "bin", "ich", "end\u00b7lich", "selbst", "er\u00b7star\u00b7ret", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VAFIN", "PPER", "ADV", "ADV", "VVFIN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.4": {"text": "Und in das d\u00fcstre Grab gebracht.", "tokens": ["Und", "in", "das", "d\u00fcst\u00b7re", "Grab", "ge\u00b7bracht", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "APPR", "ART", "ADJA", "NN", "VVPP", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.5": {"text": "Du, Leser! solst die Nachricht haben,", "tokens": ["Du", ",", "Le\u00b7ser", "!", "solst", "die", "Nach\u00b7richt", "ha\u00b7ben", ","], "token_info": ["word", "punct", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["PPER", "$,", "NN", "$.", "VMFIN", "ART", "NN", "VAFIN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.6": {"text": "Gantz Buchholtz ist es fast bekannt:", "tokens": ["Gantz", "Buch\u00b7holtz", "ist", "es", "fast", "be\u00b7kannt", ":"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "NN", "VAFIN", "PPER", "ADV", "ADJD", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.7": {"text": "Zwey Tausend habe ich begraben,", "tokens": ["Zwey", "Tau\u00b7send", "ha\u00b7be", "ich", "be\u00b7gra\u00b7ben", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["CARD", "NN", "VAFIN", "PPER", "VVPP", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.8": {"text": "Und mich begr\u00e4bt des Sohnes Hand.", "tokens": ["Und", "mich", "be\u00b7gr\u00e4bt", "des", "Soh\u00b7nes", "Hand", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "PPER", "VVFIN", "ART", "NN", "NN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}}}}}