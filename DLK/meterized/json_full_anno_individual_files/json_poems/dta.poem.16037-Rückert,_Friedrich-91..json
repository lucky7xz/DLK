{"dta.poem.16037": {"metadata": {"author": {"name": "R\u00fcckert, Friedrich", "birth": "N.A.", "death": "N.A."}, "title": "91.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1837", "urn": "urn:nbn:de:kobv:b4-200905195088", "language": ["de:0.99"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "Der Maler in der Nacht sehnt sich dem Tage zu,", "tokens": ["Der", "Ma\u00b7ler", "in", "der", "Nacht", "sehnt", "sich", "dem", "Ta\u00b7ge", "zu", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "APPR", "ART", "NN", "VVFIN", "PRF", "ART", "NN", "PTKVZ", "$,"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Denn was er malen soll, l\u00e4\u00dft ihm nicht Rast noch Ruh.", "tokens": ["Denn", "was", "er", "ma\u00b7len", "soll", ",", "l\u00e4\u00dft", "ihm", "nicht", "Rast", "noch", "Ruh", "."], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "PWS", "PPER", "VVINF", "VMFIN", "$,", "VVFIN", "PPER", "PTKNEG", "NN", "ADV", "NN", "$."], "meter": "-+-+--+--+-+", "measure": "iambic.penta.relaxed"}}, "stanza.2": {"line.1": {"text": "Er kann es in der Nacht bei Kerzenschein nicht malen,", "tokens": ["Er", "kann", "es", "in", "der", "Nacht", "bei", "Ker\u00b7zen\u00b7schein", "nicht", "ma\u00b7len", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VMFIN", "PPER", "APPR", "ART", "NN", "APPR", "NN", "PTKNEG", "VVINF", "$,"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Denn sein Gebilde soll von Lebensfarben stralen.", "tokens": ["Denn", "sein", "Ge\u00b7bil\u00b7de", "soll", "von", "Le\u00b7bens\u00b7far\u00b7ben", "stra\u00b7len", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "PPOSAT", "NN", "VMFIN", "APPR", "NN", "VVFIN", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}}, "stanza.3": {"line.1": {"text": "La\u00df ihm den Tag aufgehn, und einen hellen Tag!", "tokens": ["La\u00df", "ihm", "den", "Tag", "auf\u00b7gehn", ",", "und", "ei\u00b7nen", "hel\u00b7len", "Tag", "!"], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["VVIMP", "PPER", "ART", "NN", "VVINF", "$,", "KON", "ART", "ADJA", "NN", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Weil er am tr\u00fcben auch nichts helles malen mag.", "tokens": ["Weil", "er", "am", "tr\u00fc\u00b7ben", "auch", "nichts", "hel\u00b7les", "ma\u00b7len", "mag."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "abbreviation"], "pos": ["KOUS", "PPER", "APPRART", "ADJA", "ADV", "PIS", "ADJA", "VVINF", "VMFIN"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}}}}