{"dta.poem.10440": {"metadata": {"author": {"name": "Heine, Heinrich", "birth": "N.A.", "death": "N.A."}, "title": "LxIII.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1827", "urn": "urn:nbn:de:kobv:b4-200905192211", "language": ["de:0.99"], "booktitle": "Heine, Heinrich: Buch der Lieder. Hamburg, 1827."}, "poem": {"stanza.1": {"line.1": {"text": "Am Kreuzweg wird begraben", "tokens": ["Am", "Kreuz\u00b7weg", "wird", "be\u00b7gra\u00b7ben"], "token_info": ["word", "word", "word", "word"], "pos": ["APPRART", "NN", "VAFIN", "VVPP"], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.2": {"text": "Wer selber sich brachte um;", "tokens": ["Wer", "sel\u00b7ber", "sich", "brach\u00b7te", "um", ";"], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PWS", "ADV", "PRF", "VVFIN", "PTKVZ", "$."], "meter": "-+--+-+", "measure": "iambic.tri.relaxed"}, "line.3": {"text": "Dort w\u00e4chst eine blaue Blume,", "tokens": ["Dort", "w\u00e4chst", "ei\u00b7ne", "blau\u00b7e", "Blu\u00b7me", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VVFIN", "ART", "ADJA", "NN", "$,"], "meter": "-+--+-+-", "measure": "iambic.tri.relaxed"}, "line.4": {"text": "Die Armes\u00fcnderblum'.", "tokens": ["Die", "Ar\u00b7me\u00b7s\u00fcn\u00b7der\u00b7blum'", "."], "token_info": ["word", "word", "punct"], "pos": ["ART", "NN", "$."], "meter": "-+-+-+", "measure": "iambic.tri"}}, "stanza.2": {"line.1": {"text": "Am Kreuzweg stand ich und seufzte;", "tokens": ["Am", "Kreuz\u00b7weg", "stand", "ich", "und", "seufz\u00b7te", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPRART", "NN", "VVFIN", "PPER", "KON", "VVFIN", "$."], "meter": "-+-+--+-", "measure": "iambic.tri.relaxed"}, "line.2": {"text": "Die Nacht war kalt und stumm.", "tokens": ["Die", "Nacht", "war", "kalt", "und", "stumm", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VAFIN", "ADJD", "KON", "ADJD", "$."], "meter": "-+-+-+", "measure": "iambic.tri"}, "line.3": {"text": "Im Mondschein bewegte sich langsam", "tokens": ["Im", "Mond\u00b7schein", "be\u00b7weg\u00b7te", "sich", "lang\u00b7sam"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["APPRART", "NN", "VVFIN", "PRF", "ADJD"], "meter": "-+--+--+-", "measure": "amphibrach.tri"}, "line.4": {"text": "Die Armes\u00fcnderblum'.", "tokens": ["Die", "Ar\u00b7me\u00b7s\u00fcn\u00b7der\u00b7blum'", "."], "token_info": ["word", "word", "punct"], "pos": ["ART", "NN", "$."], "meter": "-+-+-+", "measure": "iambic.tri"}}}}}