{"dta.poem.36": {"metadata": {"author": {"name": "Ebeling, Johann Justus", "birth": "N.A.", "death": "N.A."}, "title": "Bey dem Grabe eines ehrlichen  \n und Recht liebenden Mannes.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1747", "urn": "urn:nbn:de:kobv:b4-200905198797", "language": ["de:0.99"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "Hier ruht Nathanael in einer Friedens-\nkammer,", "tokens": ["Hier", "ruht", "Na\u00b7tha\u00b7nael", "in", "ei\u00b7ner", "Frie\u00b7dens", "kam\u00b7mer", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VVFIN", "NE", "APPR", "ART", "TRUNC", "NN", "$,"], "meter": "-+--+-+-+-+-", "measure": "iambic.penta.relaxed"}, "line.2": {"text": "Er schied zwar fr\u00fch hinweg; doch", "tokens": ["Er", "schied", "zwar", "fr\u00fch", "hin\u00b7weg", ";", "doch"], "token_info": ["word", "word", "word", "word", "word", "punct", "word"], "pos": ["PPER", "VVFIN", "ADV", "ADJD", "PTKVZ", "$.", "ADV"], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.3": {"text": "Sein Herze suchte stets, was recht und billig war,", "tokens": ["Sein", "Her\u00b7ze", "such\u00b7te", "stets", ",", "was", "recht", "und", "bil\u00b7lig", "war", ","], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["PPOSAT", "NN", "VVFIN", "ADV", "$,", "PRELS", "ADJD", "KON", "ADJD", "VAFIN", "$,"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.4": {"text": "Und dadurch k\u00fcrzte er sich seine Lebens-Jahr.", "tokens": ["Und", "da\u00b7durch", "k\u00fcrz\u00b7te", "er", "sich", "sei\u00b7ne", "Le\u00b7bens\u00b7Jahr", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "PAV", "VVFIN", "PPER", "PRF", "PPOSAT", "NN", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.5": {"text": "Er lebte in der Welt in Kedars b\u00f6sen H\u00fctten,", "tokens": ["Er", "leb\u00b7te", "in", "der", "Welt", "in", "Ke\u00b7dars", "b\u00f6\u00b7sen", "H\u00fct\u00b7ten", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "APPR", "ART", "NN", "APPR", "NE", "ADJA", "NN", "$,"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.6": {"text": "Da er bis in den Tod vor billig Recht gestritten.", "tokens": ["Da", "er", "bis", "in", "den", "Tod", "vor", "bil\u00b7lig", "Recht", "ge\u00b7strit\u00b7ten", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "PPER", "ADV", "APPR", "ART", "NN", "APPR", "ADJD", "NN", "VVPP", "$."], "meter": "--+--+-+-+-+-", "measure": "anapaest.di.plus"}, "line.7": {"text": "Nun ist er in der Ruh und l\u00e4st uns dies zur Lehr:", "tokens": ["Nun", "ist", "er", "in", "der", "Ruh", "und", "l\u00e4st", "uns", "dies", "zur", "Lehr", ":"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VAFIN", "PPER", "APPR", "ART", "NN", "KON", "VVFIN", "PPER", "PDS", "APPRART", "NN", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.8": {"text": "Wers B\u00f6se \u00e4ndern will, der sterbe nur viel-\nmehr.", "tokens": ["Wers", "B\u00f6\u00b7se", "\u00e4n\u00b7dern", "will", ",", "der", "ster\u00b7be", "nur", "viel", "mehr", "."], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["NE", "NN", "VVINF", "VMFIN", "$,", "PRELS", "VVFIN", "ADV", "TRUNC", "PIS", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}}}}}