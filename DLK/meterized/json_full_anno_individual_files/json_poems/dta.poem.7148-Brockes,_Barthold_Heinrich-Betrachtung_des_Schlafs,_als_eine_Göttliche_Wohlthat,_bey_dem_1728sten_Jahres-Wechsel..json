{"dta.poem.7148": {"metadata": {"author": {"name": "Brockes, Barthold Heinrich", "birth": "N.A.", "death": "N.A."}, "title": "Betrachtung des Schlafs,  \n als  \n eine G\u00f6ttliche Wohlthat,  \n bey dem 1728sten Jahres-Wechsel.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1730", "urn": "urn:nbn:de:kobv:b4-20087-5", "language": ["de:0.99"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "Die Absicht war allein, dem Grossen GOTT zu dancken", "tokens": ["Die", "Ab\u00b7sicht", "war", "al\u00b7lein", ",", "dem", "Gros\u00b7sen", "GoTT", "zu", "dan\u00b7cken"], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "word"], "pos": ["ART", "NN", "VAFIN", "ADV", "$,", "ART", "NN", "NE", "PTKZU", "VVINF"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "F\u00fcr Seine Weisheit, Lieb\u2019 und wunderbare Macht,", "tokens": ["F\u00fcr", "Sei\u00b7ne", "Weis\u00b7heit", ",", "Lieb'", "und", "wun\u00b7der\u00b7ba\u00b7re", "Macht", ","], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["APPR", "PPOSAT", "NN", "$,", "NN", "KON", "ADJA", "NN", "$,"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.3": {"text": "Womit Er \u00fcber uns, auch wenn wir schlaffen, wacht.", "tokens": ["Wo\u00b7mit", "Er", "\u00fc\u00b7ber", "uns", ",", "auch", "wenn", "wir", "schlaf\u00b7fen", ",", "wacht", "."], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct", "word", "punct"], "pos": ["PWAV", "PPER", "APPR", "PPER", "$,", "ADV", "KOUS", "PPER", "VVFIN", "$,", "VVFIN", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.4": {"text": "Und Seine Wunder-Huld in Seinen Wercken,", "tokens": ["Und", "Sei\u00b7ne", "Wun\u00b7der\u00b7Huld", "in", "Sei\u00b7nen", "Wer\u00b7cken", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "PPOSAT", "NN", "APPR", "PPOSAT", "NN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.5": {"text": "In ehrerbietiger Betrachtung zu bemercken.", "tokens": ["In", "ehr\u00b7er\u00b7bie\u00b7ti\u00b7ger", "Be\u00b7trach\u00b7tung", "zu", "be\u00b7mer\u00b7cken", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "ADJA", "NN", "PTKZU", "VVINF", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.6": {"text": "Dies ist vor andern ja der Menschen Schuldigkeit,", "tokens": ["Dies", "ist", "vor", "an\u00b7dern", "ja", "der", "Men\u00b7schen", "Schul\u00b7dig\u00b7keit", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PDS", "VAFIN", "APPR", "PIS", "ADV", "ART", "NN", "NN", "$,"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.7": {"text": "Mit Lust, zu unserm Heil, den Sch\u00f6pffer anzusehn,", "tokens": ["Mit", "Lust", ",", "zu", "un\u00b7serm", "Heil", ",", "den", "Sch\u00f6pf\u00b7fer", "an\u00b7zu\u00b7sehn", ","], "token_info": ["word", "word", "punct", "word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["APPR", "NN", "$,", "APPR", "PPOSAT", "NN", "$,", "ART", "NN", "VVIZU", "$,"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.8": {"text": "Und danckend Seinen Ruhm nach M\u00f6glichkeit erh\u00f6hn.", "tokens": ["Und", "dan\u00b7ckend", "Sei\u00b7nen", "Ruhm", "nach", "M\u00f6g\u00b7lich\u00b7keit", "er\u00b7h\u00f6hn", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "ADJD", "PPOSAT", "NN", "APPR", "NN", "VVINF", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}}}}}