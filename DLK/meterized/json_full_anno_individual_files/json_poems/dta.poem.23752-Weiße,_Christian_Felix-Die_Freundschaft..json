{"dta.poem.23752": {"metadata": {"author": {"name": "Wei\u00dfe, Christian Felix", "birth": "N.A.", "death": "N.A."}, "title": "Die Freundschaft.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1767", "urn": "urn:nbn:de:kobv:b4-20643-5", "language": ["de:0.99"], "booktitle": "Wei\u00dfe, Christian Felix: Lieder f\u00fcr Kinder. Leipzig, 1767."}, "poem": {"stanza.1": {"line.1": {"text": "Der Freund, der mir den Spiegel zeiget,", "tokens": ["Der", "Freund", ",", "der", "mir", "den", "Spie\u00b7gel", "zei\u00b7get", ","], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "$,", "PRELS", "PPER", "ART", "NN", "VVFIN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.2": {"text": "Den kleinsten Flecken nicht ver-", "tokens": ["Den", "kleins\u00b7ten", "Fle\u00b7cken", "nicht", "ver"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["ART", "ADJA", "NN", "PTKNEG", "TRUNC"], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.3": {"text": "schweiget,", "tokens": ["schwei\u00b7get", ","], "token_info": ["word", "punct"], "pos": ["VVFIN", "$,"], "meter": "+-", "measure": "trochaic.single"}, "line.4": {"text": "Mich freundlich warnt, mich ernstlich", "tokens": ["Mich", "freund\u00b7lich", "warnt", ",", "mich", "ernst\u00b7lich"], "token_info": ["word", "word", "word", "punct", "word", "word"], "pos": ["PPER", "ADJD", "VVFIN", "$,", "PPER", "ADJD"], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.5": {"text": "schilt,", "tokens": ["schilt", ","], "token_info": ["word", "punct"], "pos": ["VVFIN", "$,"], "meter": "+", "measure": "single.up"}, "line.6": {"text": "Wenn ich nicht meine Pflicht erf\u00fcllt:", "tokens": ["Wenn", "ich", "nicht", "mei\u00b7ne", "Pflicht", "er\u00b7f\u00fcllt", ":"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "PPER", "PTKNEG", "PPOSAT", "NN", "VVPP", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.7": {"text": "Das ist ein Freund,", "tokens": ["Das", "ist", "ein", "Freund", ","], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["PDS", "VAFIN", "ART", "NN", "$,"], "meter": "-+-+", "measure": "iambic.di"}, "line.8": {"text": "So wenig er es scheint!", "tokens": ["So", "we\u00b7nig", "er", "es", "scheint", "!"], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "PIS", "PPER", "PPER", "VVFIN", "$."], "meter": "-+-+-+", "measure": "iambic.tri"}}, "stanza.2": {"line.1": {"text": "Doch der, der mich stets schmeichelnd", "tokens": ["Doch", "der", ",", "der", "mich", "stets", "schmei\u00b7chelnd"], "token_info": ["word", "word", "punct", "word", "word", "word", "word"], "pos": ["KON", "ART", "$,", "PRELS", "PPER", "ADV", "ADJD"], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.2": {"text": "preiset,", "tokens": ["prei\u00b7set", ","], "token_info": ["word", "punct"], "pos": ["VVFIN", "$,"], "meter": "+-", "measure": "trochaic.single"}, "line.3": {"text": "Mir alles lobt, nie was verweiset;", "tokens": ["Mir", "al\u00b7les", "lobt", ",", "nie", "was", "ver\u00b7wei\u00b7set", ";"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["PPER", "PIS", "VVFIN", "$,", "ADV", "PWS", "VVFIN", "$."], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.4": {"text": "Zu Fehlern mir die H\u00e4nde beut,", "tokens": ["Zu", "Feh\u00b7lern", "mir", "die", "H\u00e4n\u00b7de", "beut", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "NN", "PPER", "ART", "NN", "VVFIN", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.5": {"text": "Und mir vergiebt, eh ich bereut:", "tokens": ["Und", "mir", "ver\u00b7giebt", ",", "eh", "ich", "be\u00b7reut", ":"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["KON", "PPER", "VVFIN", "$,", "KOUS", "PPER", "VVFIN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.6": {"text": "Das ist ein Feind,", "tokens": ["Das", "ist", "ein", "Feind", ","], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["PDS", "VAFIN", "ART", "NN", "$,"], "meter": "-+-+", "measure": "iambic.di"}, "line.7": {"text": "So freundlich er auch scheint!", "tokens": ["So", "freund\u00b7lich", "er", "auch", "scheint", "!"], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "ADJD", "PPER", "ADV", "VVFIN", "$."], "meter": "-+-+-+", "measure": "iambic.tri"}}}}}