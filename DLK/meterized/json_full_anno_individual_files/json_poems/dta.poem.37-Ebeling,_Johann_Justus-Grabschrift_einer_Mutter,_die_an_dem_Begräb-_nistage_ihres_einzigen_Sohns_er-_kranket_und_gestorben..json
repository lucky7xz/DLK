{"dta.poem.37": {"metadata": {"author": {"name": "Ebeling, Johann Justus", "birth": "N.A.", "death": "N.A."}, "title": "Grabschrift  \n einer Mutter, die an dem Begr\u00e4b-  \n nistage ihres einzigen Sohns er-  \n kranket und gestorben.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1747", "urn": "urn:nbn:de:kobv:b4-200905198797", "language": ["de:0.99"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "Ruh wol du Seelige! du wirst ges\u00e4t\nin Thr\u00e4nen,", "tokens": ["Ruh", "wol", "du", "See\u00b7li\u00b7ge", "!", "du", "wirst", "ge\u00b7s\u00e4t", "in", "Thr\u00e4\u00b7nen", ","], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["NN", "ADV", "PPER", "NN", "$.", "PPER", "VAFIN", "VVPP", "APPR", "NN", "$,"], "meter": "+--+-+-+-+-+-", "measure": "iambic.hexa.invert"}, "line.2": {"text": "Den Tod bef\u00f6rdert dir, dein Kum-", "tokens": ["Den", "Tod", "be\u00b7f\u00f6r\u00b7dert", "dir", ",", "dein", "Kum"], "token_info": ["word", "word", "word", "word", "punct", "word", "word"], "pos": ["ART", "NN", "VVFIN", "PPER", "$,", "PPOSAT", "TRUNC"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.3": {"text": "Da nasse K\u00fcmmernis das matte Herze fri\u00dft,", "tokens": ["Da", "nas\u00b7se", "K\u00fcm\u00b7mer\u00b7nis", "das", "mat\u00b7te", "Her\u00b7ze", "fri\u00dft", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "ADJA", "NN", "ART", "ADJA", "NN", "VVFIN", "$,"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.4": {"text": "Und dir des Sohnes Tod ein Weg zum Grabe ist.", "tokens": ["Und", "dir", "des", "Soh\u00b7nes", "Tod", "ein", "Weg", "zum", "Gra\u00b7be", "ist", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "PPER", "ART", "NN", "NN", "ART", "NN", "APPRART", "NN", "VAFIN", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.5": {"text": "Doch CHristi K\u00fcmmernis, sein trauriges Geb\u00e4r-", "tokens": ["Doch", "Chris\u00b7ti", "K\u00fcm\u00b7mer\u00b7nis", ",", "sein", "trau\u00b7ri\u00b7ges", "Ge\u00b7b\u00e4r"], "token_info": ["word", "word", "word", "punct", "word", "word", "word"], "pos": ["KON", "NE", "NE", "$,", "PPOSAT", "ADJA", "NN"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.6": {"text": "Das heiligt deine Noth und der Natur Beschwer-", "tokens": ["Das", "hei\u00b7ligt", "dei\u00b7ne", "Noth", "und", "der", "Na\u00b7tur", "Be\u00b7schwer"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word"], "pos": ["PDS", "VVFIN", "PPOSAT", "NN", "KON", "ART", "NN", "TRUNC"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.7": {"text": "Auf deine Thr\u00e4nen Saat, folgt nun die Erndte-", "tokens": ["Auf", "dei\u00b7ne", "Thr\u00e4\u00b7nen", "Saat", ",", "folgt", "nun", "die", "Ernd\u00b7te"], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word"], "pos": ["APPR", "PPOSAT", "NN", "NN", "$,", "VVFIN", "ADV", "ART", "TRUNC"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.8": {"text": "Die deine Seel geniest in jener Ewigkeit.", "tokens": ["Die", "dei\u00b7ne", "Seel", "ge\u00b7niest", "in", "je\u00b7ner", "E\u00b7wig\u00b7keit", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "PPOSAT", "NN", "VVFIN", "APPR", "PDAT", "NN", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.9": {"text": "Dein Leib ist in dies Grab verweslich ausges\u00e4et", "tokens": ["Dein", "Leib", "ist", "in", "dies", "Grab", "ver\u00b7wes\u00b7lich", "aus\u00b7ge\u00b7s\u00e4et"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word"], "pos": ["PPOSAT", "NN", "VAFIN", "APPR", "PDS", "NN", "ADJD", "VVFIN"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.10": {"text": "Daraus er dreinst verkl\u00e4rt durch CHristum aufer-", "tokens": ["Da\u00b7raus", "er", "dreinst", "ver\u00b7kl\u00e4rt", "durch", "Chris\u00b7tum", "auf\u00b7er"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["PAV", "PPER", "ADV", "VVPP", "APPR", "NE", "TRUNC"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}}}}