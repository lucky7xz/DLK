{"dta.poem.2815": {"metadata": {"author": {"name": "R\u00fcckert, Friedrich", "birth": "N.A.", "death": "N.A."}, "title": "16.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1838", "urn": "urn:nbn:de:kobv:b4-200905195108", "language": ["de:0.99"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "Du fragst, ob du zum Heil der Welt und Wissenschaft,", "tokens": ["Du", "fragst", ",", "ob", "du", "zum", "Heil", "der", "Welt", "und", "Wis\u00b7sen\u00b7schaft", ","], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "$,", "KOUS", "PPER", "APPRART", "NN", "ART", "NN", "KON", "NN", "$,"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "An, was dir widersteht, sollst wenden deine Kraft?,", "tokens": ["An", ",", "was", "dir", "wi\u00b7der\u00b7steht", ",", "sollst", "wen\u00b7den", "dei\u00b7ne", "Kraft", "?", ","], "token_info": ["word", "punct", "word", "word", "word", "punct", "word", "word", "word", "word", "punct", "punct"], "pos": ["APPR", "$,", "PWS", "PPER", "VVFIN", "$,", "VMFIN", "PIS", "PPOSAT", "NN", "$.", "$,"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}}, "stanza.2": {"line.1": {"text": "Weil \u00fcberzeugt du seist, es sei nun an der Zeit,", "tokens": ["Weil", "\u00fc\u00b7berz\u00b7eugt", "du", "seist", ",", "es", "sei", "nun", "an", "der", "Zeit", ","], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "VVPP", "PPER", "VAFIN", "$,", "PPER", "VAFIN", "ADV", "APPR", "ART", "NN", "$,"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Und doch daran zu gehn kein andrer sei bereit.", "tokens": ["Und", "doch", "da\u00b7ran", "zu", "gehn", "kein", "an\u00b7drer", "sei", "be\u00b7reit", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "ADV", "PAV", "PTKZU", "VVINF", "PIAT", "ADJA", "VAFIN", "ADJD", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}}, "stanza.3": {"line.1": {"text": "Mein Sohn, was irgend an der Zeit ist, das wird kommen;", "tokens": ["Mein", "Sohn", ",", "was", "ir\u00b7gend", "an", "der", "Zeit", "ist", ",", "das", "wird", "kom\u00b7men", ";"], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["PPOSAT", "NN", "$,", "PRELS", "ADV", "APPR", "ART", "NN", "VAFIN", "$,", "PDS", "VAFIN", "VVINF", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Der Welt und Wissenschaft mag gar Verschiednes frommen.", "tokens": ["Der", "Welt", "und", "Wis\u00b7sen\u00b7schaft", "mag", "gar", "Ver\u00b7schied\u00b7nes", "from\u00b7men", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "KON", "NN", "VMFIN", "ADV", "ADJA", "ADJA", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}}, "stanza.4": {"line.1": {"text": "Drum rath' ich dir, nur was dir selber taugt, zu treiben;", "tokens": ["Drum", "ra\u00b7th'", "ich", "dir", ",", "nur", "was", "dir", "sel\u00b7ber", "taugt", ",", "zu", "trei\u00b7ben", ";"], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct", "word", "word", "punct"], "pos": ["PAV", "VVFIN", "PPER", "PPER", "$,", "ADV", "PWS", "PPER", "ADV", "VVFIN", "$,", "PTKZU", "VVINF", "$."], "meter": "+-+-+-+-+-+-+-", "measure": "trochaic.septa"}, "line.2": {"text": "Weil vielen vieles taugt, wird keines unterbleiben.", "tokens": ["Weil", "vie\u00b7len", "vie\u00b7les", "taugt", ",", "wird", "kei\u00b7nes", "un\u00b7ter\u00b7blei\u00b7ben", "."], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["KOUS", "PIAT", "PIS", "VVFIN", "$,", "VAFIN", "PIS", "VVINF", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}}, "stanza.5": {"line.1": {"text": "So wird am sichersten zum Weltheil beigetragen,", "tokens": ["So", "wird", "am", "si\u00b7chers\u00b7ten", "zum", "Welt\u00b7heil", "bei\u00b7ge\u00b7tra\u00b7gen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VAFIN", "APPRART", "ADJA", "APPRART", "NN", "VVINF", "$,"], "meter": "-+--+--+-+-+-", "measure": "amphibrach.tri.plus"}, "line.2": {"text": "Und keinem braucht die Welt besonders Dank zu sagen.", "tokens": ["Und", "kei\u00b7nem", "braucht", "die", "Welt", "be\u00b7son\u00b7ders", "Dank", "zu", "sa\u00b7gen", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "PIS", "VVFIN", "ART", "NN", "ADJA", "NN", "PTKZU", "VVINF", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}}, "stanza.6": {"line.1": {"text": "Ein jeder baue nur mit Lust sein eignes Zelt;", "tokens": ["Ein", "je\u00b7der", "bau\u00b7e", "nur", "mit", "Lust", "sein", "eig\u00b7nes", "Zelt", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "PIS", "VVFIN", "ADV", "APPR", "NN", "PPOSAT", "ADJA", "NN", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Durch Gottes Segen wird daraus ein Bau der Welt.", "tokens": ["Durch", "Got\u00b7tes", "Se\u00b7gen", "wird", "da\u00b7raus", "ein", "Bau", "der", "Welt", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "NN", "NN", "VAFIN", "PAV", "ART", "NN", "ART", "NN", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}}}}}