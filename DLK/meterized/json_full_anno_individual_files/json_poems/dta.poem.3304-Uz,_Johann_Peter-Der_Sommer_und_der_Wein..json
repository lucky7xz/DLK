{"dta.poem.3304": {"metadata": {"author": {"name": "Uz, Johann Peter", "birth": "N.A.", "death": "N.A."}, "title": "Der Sommer und der Wein.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1755", "urn": "urn:nbn:de:kobv:b4-20614-6", "language": ["de:0.99"], "booktitle": "Uz, Johann Peter: Lyrische und andere Gedichte. 2. Aufl. Ansbach, 1755."}, "poem": {"stanza.1": {"line.1": {"text": "In diesen schw\u00fclen Sommertagen", "tokens": ["In", "die\u00b7sen", "schw\u00fc\u00b7len", "Som\u00b7mer\u00b7ta\u00b7gen"], "token_info": ["word", "word", "word", "word"], "pos": ["APPR", "PDAT", "ADJA", "NN"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.2": {"text": "Fliegt Amor nur in k\u00fchler Nacht,", "tokens": ["Fliegt", "A\u00b7mor", "nur", "in", "k\u00fch\u00b7ler", "Nacht", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "NE", "ADV", "APPR", "ADJA", "NN", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.3": {"text": "Und schlummert, wann die Sonne wacht:", "tokens": ["Und", "schlum\u00b7mert", ",", "wann", "die", "Son\u00b7ne", "wacht", ":"], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["KON", "VVFIN", "$,", "PWAV", "ART", "NN", "VVFIN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "Die Muse tr\u00e4umt nur matte Klagen.", "tokens": ["Die", "Mu\u00b7se", "tr\u00e4umt", "nur", "mat\u00b7te", "Kla\u00b7gen", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VVFIN", "ADV", "ADJA", "NN", "$."], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.5": {"text": "Ich h\u00e4nge mit verdrossner Hand", "tokens": ["Ich", "h\u00e4n\u00b7ge", "mit", "ver\u00b7dross\u00b7ner", "Hand"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["PPER", "VVFIN", "APPR", "ADJA", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.6": {"text": "Die tr\u00e4ge Leyer an die Wand.", "tokens": ["Die", "tr\u00e4\u00b7ge", "Le\u00b7yer", "an", "die", "Wand", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "APPR", "ART", "NN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}}, "stanza.2": {"line.1": {"text": "Doch, Freund! in schw\u00fclen Sommertagen,", "tokens": ["Doch", ",", "Freund", "!", "in", "schw\u00fc\u00b7len", "Som\u00b7mer\u00b7ta\u00b7gen", ","], "token_info": ["word", "punct", "word", "punct", "word", "word", "word", "punct"], "pos": ["KON", "$,", "NN", "$.", "APPR", "ADJA", "NN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.2": {"text": "(zischt mir Ly\u00e4us in das Ohr:)", "tokens": ["(", "zischt", "mir", "Ly\u00b7\u00e4us", "in", "das", "Ohr", ":)"], "token_info": ["punct", "word", "word", "word", "word", "word", "word", "emoticon"], "pos": ["$(", "VVFIN", "PPER", "NE", "APPR", "ART", "NN", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.3": {"text": "Hebt sich der Weinstock stolz empor,", "tokens": ["Hebt", "sich", "der", "Wein\u00b7stock", "stolz", "em\u00b7por", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "PRF", "ART", "NN", "ADJD", "PTKVZ", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "Den Frost und Regen niederschlagen:", "tokens": ["Den", "Frost", "und", "Re\u00b7gen", "nie\u00b7der\u00b7schla\u00b7gen", ":"], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "KON", "NN", "VVINF", "$."], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.5": {"text": "Und nur der h\u00f6hern Sonne Glut", "tokens": ["Und", "nur", "der", "h\u00f6\u00b7hern", "Son\u00b7ne", "Glut"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["KON", "ADV", "ART", "ADJA", "NN", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.6": {"text": "Kocht seiner Trauben g\u00f6ttlich Blut.", "tokens": ["Kocht", "sei\u00b7ner", "Trau\u00b7ben", "g\u00f6tt\u00b7lich", "Blut", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["NN", "PPOSAT", "NN", "ADJD", "NN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}}, "stanza.3": {"line.1": {"text": "So mag in schw\u00fclen Sommertagen", "tokens": ["So", "mag", "in", "schw\u00fc\u00b7len", "Som\u00b7mer\u00b7ta\u00b7gen"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["ADV", "VMFIN", "APPR", "ADJA", "NN"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.2": {"text": "Der Weichling, Amor, sch\u00fcchtern fliehn,", "tokens": ["Der", "Weich\u00b7ling", ",", "A\u00b7mor", ",", "sch\u00fcch\u00b7tern", "fliehn", ","], "token_info": ["word", "word", "punct", "word", "punct", "word", "word", "punct"], "pos": ["ART", "NN", "$,", "NE", "$,", "VVFIN", "VVINF", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.3": {"text": "Und Scherz und Muse sich entziehn:", "tokens": ["Und", "Scherz", "und", "Mu\u00b7se", "sich", "ent\u00b7ziehn", ":"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "NN", "KON", "NN", "PRF", "VVINF", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "Der Wein wird sie zur\u00fccke jagen.", "tokens": ["Der", "Wein", "wird", "sie", "zu\u00b7r\u00fc\u00b7cke", "ja\u00b7gen", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VAFIN", "PPER", "VVFIN", "VVINF", "$."], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.5": {"text": "Es reife nur der frohe Wein:", "tokens": ["Es", "rei\u00b7fe", "nur", "der", "fro\u00b7he", "Wein", ":"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "ADV", "ART", "ADJA", "NN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.6": {"text": "Was kann mir unertr\u00e4glich seyn?", "tokens": ["Was", "kann", "mir", "un\u00b7er\u00b7tr\u00e4g\u00b7lich", "seyn", "?"], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PWS", "VMFIN", "PPER", "ADJD", "VAINF", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}}}}}