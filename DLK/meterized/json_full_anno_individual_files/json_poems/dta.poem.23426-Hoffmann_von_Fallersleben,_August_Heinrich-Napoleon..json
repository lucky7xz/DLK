{"dta.poem.23426": {"metadata": {"author": {"name": "Hoffmann von Fallersleben, August Heinrich", "birth": "N.A.", "death": "N.A."}, "title": "Napoleon.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1841", "urn": "urn:nbn:de:kobv:b4-200905192634", "language": ["de:0.99"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "Ruhen soll in tiefem Frieden", "tokens": ["Ru\u00b7hen", "soll", "in", "tie\u00b7fem", "Frie\u00b7den"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["NN", "VMFIN", "APPR", "ADJA", "NN"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.2": {"text": "Er der gro\u00dfe Mann des Kriegs", "tokens": ["Er", "der", "gro\u00b7\u00dfe", "Mann", "des", "Kriegs"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["PPER", "ART", "ADJA", "NN", "ART", "NN"], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.3": {"text": "Im Hotel der Invaliden", "tokens": ["Im", "Ho\u00b7tel", "der", "In\u00b7va\u00b7li\u00b7den"], "token_info": ["word", "word", "word", "word"], "pos": ["APPRART", "NN", "ART", "NN"], "meter": "-+-+-+--", "measure": "unknown.measure.tri"}, "line.4": {"text": "Bei den Zeichen seines Siegs.", "tokens": ["Bei", "den", "Zei\u00b7chen", "sei\u00b7nes", "Siegs", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "ART", "NN", "PPOSAT", "NN", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}}, "stanza.2": {"line.1": {"text": "M\u00f6gt dann Staub zum Staube legen,", "tokens": ["M\u00f6gt", "dann", "Staub", "zum", "Stau\u00b7be", "le\u00b7gen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["VMFIN", "ADV", "NN", "APPRART", "NN", "VVINF", "$,"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.2": {"text": "Wo der Staub im Staube ruht:", "tokens": ["Wo", "der", "Staub", "im", "Stau\u00b7be", "ruht", ":"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["PWAV", "ART", "NN", "APPRART", "NN", "VVFIN", "$."], "meter": "--+-+-+", "measure": "anapaest.init"}, "line.3": {"text": "Legt auf's Grab ihm seinen Degen,", "tokens": ["Legt", "auf's", "Grab", "ihm", "sei\u00b7nen", "De\u00b7gen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "APPRART", "NN", "PPER", "PPOSAT", "NN", "$,"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.4": {"text": "Seinen Stern und seinen Hut.", "tokens": ["Sei\u00b7nen", "Stern", "und", "sei\u00b7nen", "Hut", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PPOSAT", "NN", "KON", "PPOSAT", "NN", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}}, "stanza.3": {"line.1": {"text": "Nun, er ruh' in Gottes Namen,", "tokens": ["Nun", ",", "er", "ruh'", "in", "Got\u00b7tes", "Na\u00b7men", ","], "token_info": ["word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "$,", "PPER", "VVFIN", "APPR", "NN", "NN", "$,"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.2": {"text": "Und du Frankreich freue dich!", "tokens": ["Und", "du", "Fran\u00b7kreich", "freu\u00b7e", "dich", "!"], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["KON", "PPER", "NE", "VVFIN", "PPER", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.3": {"text": "Und wir alle jauchzten: Amen!", "tokens": ["Und", "wir", "al\u00b7le", "jauchz\u00b7ten", ":", "A\u00b7men", "!"], "token_info": ["word", "word", "word", "word", "punct", "word", "punct"], "pos": ["KON", "PPER", "PIS", "VVFIN", "$.", "NN", "$."], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}}}}}