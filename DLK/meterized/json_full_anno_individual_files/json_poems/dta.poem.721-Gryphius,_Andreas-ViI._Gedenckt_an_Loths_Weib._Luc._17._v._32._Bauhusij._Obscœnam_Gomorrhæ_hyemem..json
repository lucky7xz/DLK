{"dta.poem.721": {"metadata": {"author": {"name": "Gryphius, Andreas", "birth": "N.A.", "death": "N.A."}, "title": "ViI.  Gedenckt an Loths Weib.  Luc. 17. v. 32.  \n Bauhusij. Obsc\u0153nam Gomorrh\u00e6 hyemem.", "genre": "Lyrik, Drama", "period": "N.A.", "pub_year": "1650", "urn": "urn:nbn:de:kobv:b4-20218-7", "language": ["de:0.99"], "booktitle": "Gryphius, Andreas: Teutsche Reim-Gedichte. Frankfurt (Main), 1650."}, "poem": {"stanza.1": {"line.1": {"text": "Eh' als der ernste Gott mit Blitz vnd Schwefel regen ", "tokens": ["Eh'", "als", "der", "erns\u00b7te", "Gott", "mit", "Blitz", "vnd", "Schwe\u00b7fel", "re\u00b7gen"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "word"], "pos": ["PIAT", "KOKOM", "ART", "ADJA", "NN", "APPR", "NN", "KON", "NN", "ADJA"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Mit Fewer/ Bech vnd Sturm hat Sodom vmbgekehrt ", "tokens": ["Mit", "Fe\u00b7wer", "/", "Bech", "vnd", "Sturm", "hat", "So\u00b7dom", "vmb\u00b7ge\u00b7kehrt"], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "word"], "pos": ["APPR", "NN", "$(", "NE", "KON", "NN", "VAFIN", "NE", "VVPP"], "meter": "-+-+-+--+--+", "measure": "iambic.penta.relaxed"}, "line.3": {"text": "Eh\u2019 Erd vnd Himmel kracht vor seines eyfers Schwerdt/", "tokens": ["Eh'", "Erd", "vnd", "Him\u00b7mel", "kracht", "vor", "sei\u00b7nes", "ey\u00b7fers", "Schwerdt", "/"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["NN", "NN", "KON", "NN", "VVFIN", "APPR", "PPOSAT", "ADJA", "NN", "$("], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.4": {"text": "Eh\u2019 als er Zeboim lies in die Asche legen;", "tokens": ["Eh'", "als", "er", "Ze\u00b7bo\u00b7im", "lies", "in", "die", "A\u00b7sche", "le\u00b7gen", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["NN", "KOUS", "PPER", "NE", "VVFIN", "APPR", "ART", "NN", "VVINF", "$."], "meter": "++-+--+--+-+-", "measure": "trochaic.hexa.relaxed"}}, "stanza.2": {"line.1": {"text": "Eh\u2019 als die heisse Lufft erklang von donnerschl\u00e4gen;", "tokens": ["Eh'", "als", "die", "heis\u00b7se", "Lufft", "er\u00b7klang", "von", "don\u00b7ner\u00b7schl\u00e4\u00b7gen", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["NN", "KOKOM", "ART", "ADJA", "NN", "VVFIN", "APPR", "NN", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Eh\u2019 er auff ", "tokens": ["Eh'", "er", "auff"], "token_info": ["word", "word", "word"], "pos": ["KOUS", "PPER", "APPR"], "meter": "+-+", "measure": "trochaic.di"}, "line.3": {"text": "Eh\u2019 als ", "tokens": ["Eh'", "als"], "token_info": ["word", "word"], "pos": ["NN", "KOKOM"], "meter": "+-", "measure": "trochaic.single"}, "line.4": {"text": "Mu\u00df Loth mit Weib vnd Kind von dannen sich bewegen. ", "tokens": ["Mu\u00df", "Loth", "mit", "Weib", "vnd", "Kind", "von", "dan\u00b7nen", "sich", "be\u00b7we\u00b7gen", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VMFIN", "NN", "APPR", "NN", "KON", "NN", "APPR", "ADV", "PRF", "VVINF", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}}, "stanza.3": {"line.1": {"text": "In dem der brandt entsteht/ vnd sein best\u00fcrtzt Gemahl", "tokens": ["In", "dem", "der", "brandt", "ent\u00b7steht", "/", "vnd", "sein", "be\u00b7st\u00fcrtzt", "Ge\u00b7mahl"], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word", "word"], "pos": ["APPR", "ART", "ART", "NN", "VVFIN", "$(", "KON", "PPOSAT", "ADJD", "NN"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Mit vmbgekehrten Aug erblickt wie von dem strahl/", "tokens": ["Mit", "vmb\u00b7ge\u00b7kehr\u00b7ten", "Aug", "er\u00b7blickt", "wie", "von", "dem", "strahl", "/"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "ADJA", "NN", "VVPP", "KOKOM", "APPR", "ART", "NN", "$("], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.3": {"text": "Mit loh' vnd lichter glut die H\u00e4user sind gekr\u00f6net; ", "tokens": ["Mit", "loh'", "vnd", "lich\u00b7ter", "glut", "die", "H\u00e4u\u00b7ser", "sind", "ge\u00b7kr\u00f6\u00b7net", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "NN", "KON", "ADJD", "VVFIN", "ART", "NN", "VAFIN", "VVPP", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}}, "stanza.4": {"line.1": {"text": "F\u00fchlt sie das threnen Saltz au\u00df jhren Augen rinnt/", "tokens": ["F\u00fchlt", "sie", "das", "thre\u00b7nen", "Saltz", "au\u00df", "jhren", "Au\u00b7gen", "rinnt", "/"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "PPER", "ART", "ADJA", "NN", "APPR", "PPOSAT", "NN", "VVFIN", "$("], "meter": "-+-+-+--+-+", "measure": "iambic.penta.relaxed"}, "line.2": {"text": "Vnd sie/ sie selbst wird Saltz/ Ja ehr sie sich besinnt/", "tokens": ["Vnd", "sie", "/", "sie", "selbst", "wird", "Saltz", "/", "Ja", "ehr", "sie", "sich", "be\u00b7sinnt", "/"], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "PPER", "$(", "PPER", "ADV", "VAFIN", "NN", "$(", "PTKANT", "KOUS", "PPER", "PRF", "ADJD", "$("], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.3": {"text": "Ohn sinn vnd witz; so wird jhr vorwitz au\u00dfges\u00f6hnet.", "tokens": ["Ohn", "sinn", "vnd", "witz", ";", "so", "wird", "jhr", "vor\u00b7witz", "au\u00df\u00b7ge\u00b7s\u00f6h\u00b7net", "."], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "NN", "KON", "NN", "$.", "ADV", "VAFIN", "PPER", "ADJD", "VVPP", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}}}}}