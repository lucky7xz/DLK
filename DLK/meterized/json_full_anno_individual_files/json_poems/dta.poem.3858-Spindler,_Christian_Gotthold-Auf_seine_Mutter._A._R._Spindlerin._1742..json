{"dta.poem.3858": {"metadata": {"author": {"name": "Spindler, Christian Gotthold", "birth": "N.A.", "death": "N.A."}, "title": "Auf seine Mutter.  \n  A. R. Spindlerin.   1742.", "genre": "Lyrik, Drama", "period": "N.A.", "pub_year": "1745", "urn": "urn:nbn:de:kobv:b4-20581-9", "language": ["de:0.85", "da:0.14"], "booktitle": "Spindler, Christian Gotthold: Unschuldige Jugend-Fr\u00fcchte. Leipzig, 1745."}, "poem": {"stanza.1": {"line.1": {"text": "Du stirbst, o frommes Mutter-Hertz!", "tokens": ["Du", "stirbst", ",", "o", "from\u00b7mes", "Mut\u00b7ter\u00b7Hertz", "!"], "token_info": ["word", "word", "punct", "word", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "$,", "FM", "ADJA", "NN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Auch dir soll mein bethr\u00e4ntes Dichten,", "tokens": ["Auch", "dir", "soll", "mein", "be\u00b7thr\u00e4n\u00b7tes", "Dich\u00b7ten", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "PPER", "VMFIN", "PPOSAT", "ADJA", "NN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.3": {"text": "O! herbe Angst! o Ach! o Schmertz!", "tokens": ["O", "!", "her\u00b7be", "Angst", "!", "o", "Ach", "!", "o", "Schmertz", "!"], "token_info": ["word", "punct", "word", "word", "punct", "word", "word", "punct", "word", "word", "punct"], "pos": ["NE", "$.", "ADJA", "NN", "$.", "FM", "ITJ", "$.", "FM", "NN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "Die letzte Kindes-Pflicht entrichten.", "tokens": ["Die", "letz\u00b7te", "Kin\u00b7des\u00b7Pflicht", "ent\u00b7rich\u00b7ten", "."], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "VVFIN", "$."], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.5": {"text": "Hab Danck vor alle Treu und Huld,", "tokens": ["Hab", "Danck", "vor", "al\u00b7le", "Treu", "und", "Huld", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["NN", "NN", "APPR", "PIAT", "NN", "KON", "NN", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.6": {"text": "Ein Thr\u00e4nen-Ku\u00df bezahlt die Schuld.", "tokens": ["Ein", "Thr\u00e4\u00b7nen\u00b7Ku\u00df", "be\u00b7zahlt", "die", "Schuld", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VVFIN", "ART", "NN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.7": {"text": "Du Herrscher \u00fcber Tod und Leben,", "tokens": ["Du", "Herr\u00b7scher", "\u00fc\u00b7ber", "Tod", "und", "Le\u00b7ben", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "NN", "APPR", "NN", "KON", "NN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.8": {"text": "Wirst mir sie einsten wieder geben.", "tokens": ["Wirst", "mir", "sie", "eins\u00b7ten", "wie\u00b7der", "ge\u00b7ben", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["VAFIN", "PPER", "PPER", "VVFIN", "ADV", "VVINF", "$."], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}}}}}