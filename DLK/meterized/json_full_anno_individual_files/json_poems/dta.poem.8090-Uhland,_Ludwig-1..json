{"dta.poem.8090": {"metadata": {"author": {"name": "Uhland, Ludwig", "birth": "N.A.", "death": "N.A."}, "title": "1.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1815", "urn": "urn:nbn:de:kobv:b4-200905196438", "language": ["de:0.99"], "booktitle": "Uhland, Ludwig: Gedichte. Stuttgart u. a., 1815."}, "poem": {"stanza.1": {"line.1": {"text": "Der alte, graue K\u00f6nig sitzt", "tokens": ["Der", "al\u00b7te", ",", "grau\u00b7e", "K\u00f6\u00b7nig", "sitzt"], "token_info": ["word", "word", "punct", "word", "word", "word"], "pos": ["ART", "ADJA", "$,", "ADJA", "NN", "VVFIN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Auf seiner V\u00e4ter Throne,", "tokens": ["Auf", "sei\u00b7ner", "V\u00e4\u00b7ter", "Thro\u00b7ne", ","], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["APPR", "PPOSAT", "NN", "NN", "$,"], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.3": {"text": "Sein Mantel gl\u00e4nzt wie Abendroth,", "tokens": ["Sein", "Man\u00b7tel", "gl\u00e4nzt", "wie", "A\u00b7ben\u00b7droth", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PPOSAT", "NN", "VVFIN", "KOKOM", "NN", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "Wie sinkende Sonn\u2019 die Krone.", "tokens": ["Wie", "sin\u00b7ken\u00b7de", "Sonn'", "die", "Kro\u00b7ne", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PWAV", "ADJA", "NN", "ART", "NN", "$."], "meter": "-+--+-+-", "measure": "iambic.tri.relaxed"}}, "stanza.2": {"line.1": {"text": "\u201emein erster und mein zweiter Sohn!", "tokens": ["\u201e", "mein", "ers\u00b7ter", "und", "mein", "zwei\u00b7ter", "Sohn", "!"], "token_info": ["punct", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["$(", "PPOSAT", "ADJA", "KON", "PPOSAT", "ADJA", "NN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Euch theil\u2019 ich meine Lande.", "tokens": ["Euch", "theil'", "ich", "mei\u00b7ne", "Lan\u00b7de", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "PPER", "PPOSAT", "NN", "$."], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.3": {"text": "Mein dritter Sohn, mein liebstes Kind!", "tokens": ["Mein", "drit\u00b7ter", "Sohn", ",", "mein", "liebs\u00b7tes", "Kind", "!"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["PPOSAT", "ADJA", "NN", "$,", "PPOSAT", "ADJA", "NN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "Was lass\u2019 ich dir zum Pfande?\u201c", "tokens": ["Was", "lass'", "ich", "dir", "zum", "Pfan\u00b7de", "?", "\u201c"], "token_info": ["word", "word", "word", "word", "word", "word", "punct", "punct"], "pos": ["PWS", "VVFIN", "PPER", "PPER", "APPRART", "NN", "$.", "$("], "meter": "-+-+-+-", "measure": "iambic.tri"}}, "stanza.3": {"line.1": {"text": "\u201egib mir von allen Sch\u00e4tzen nur", "tokens": ["\u201e", "gib", "mir", "von", "al\u00b7len", "Sch\u00e4t\u00b7zen", "nur"], "token_info": ["punct", "word", "word", "word", "word", "word", "word"], "pos": ["$(", "VVIMP", "PPER", "APPR", "PIAT", "NN", "ADV"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Die alte, rostige Krone!", "tokens": ["Die", "al\u00b7te", ",", "ros\u00b7ti\u00b7ge", "Kro\u00b7ne", "!"], "token_info": ["word", "word", "punct", "word", "word", "punct"], "pos": ["ART", "ADJA", "$,", "ADJA", "NN", "$."], "meter": "-+-+--+-", "measure": "iambic.tri.relaxed"}, "line.3": {"text": "Gib mir drei Schiffe! so fahr\u2019 ich hin,", "tokens": ["Gib", "mir", "drei", "Schif\u00b7fe", "!", "so", "fahr'", "ich", "hin", ","], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["VVIMP", "PPER", "CARD", "NN", "$.", "ADV", "VVFIN", "PPER", "PTKVZ", "$,"], "meter": "+--+--+-+", "measure": "dactylic.di.plus"}, "line.4": {"text": "Und suche nach einem Throne.\u201c", "tokens": ["Und", "su\u00b7che", "nach", "ei\u00b7nem", "Thro\u00b7ne", ".", "\u201c"], "token_info": ["word", "word", "word", "word", "word", "punct", "punct"], "pos": ["KON", "VVFIN", "APPR", "ART", "NN", "$.", "$("], "meter": "-+--+-+-", "measure": "iambic.tri.relaxed"}}}}}