{"dta.poem.17229": {"metadata": {"author": {"name": "Silesius, Angelus", "birth": "N.A.", "death": "N.A."}, "title": "79.  Der beste Freund und Feind.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1675", "urn": "urn:nbn:de:kobv:b4-20008-3", "language": ["de:0.99"], "booktitle": "Silesius, Angelus: Cherubinischer Wandersmann oder Geist-Reiche Sinn- und Schlu\u00df-Reime. 2. Aufl. Glatz, 1675."}, "poem": {"stanza.1": {"line.1": {"text": "Mein bester Freund mein Leib/ der ist mein \u00e4rgster", "tokens": ["Mein", "bes\u00b7ter", "Freund", "mein", "Leib", "/", "der", "ist", "mein", "\u00e4rgs\u00b7ter"], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word", "word"], "pos": ["PPOSAT", "ADJA", "NN", "PPOSAT", "NN", "$(", "ART", "VAFIN", "PPOSAT", "ADJA"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "Feind:", "tokens": ["Feind", ":"], "token_info": ["word", "punct"], "pos": ["NN", "$."], "meter": "+", "measure": "single.up"}, "line.3": {"text": "Er bindt und h\u00e4lt mich auff/ wie gut ers immer meint.", "tokens": ["Er", "bindt", "und", "h\u00e4lt", "mich", "auff", "/", "wie", "gut", "ers", "im\u00b7mer", "meint", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "KON", "VVFIN", "PPER", "APPR", "$(", "PWAV", "ADJD", "PIS", "ADV", "VVFIN", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.4": {"text": "Ich ha\u00df\u2019 und lieb ihn auch: und wann es kombt zum", "tokens": ["Ich", "ha\u00df'", "und", "lieb", "ihn", "auch", ":", "und", "wann", "es", "kombt", "zum"], "token_info": ["word", "word", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "word"], "pos": ["PPER", "PTKVZ", "KON", "ADJD", "PPER", "ADV", "$.", "KON", "PWAV", "PPER", "VVFIN", "APPRART"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.5": {"text": "scheiden/", "tokens": ["schei\u00b7den", "/"], "token_info": ["word", "punct"], "pos": ["VVFIN", "$("], "meter": "+-", "measure": "trochaic.single"}, "line.6": {"text": "So rei\u00df\u2019 ich mich von ihm mit Freuden und mit Leiden.", "tokens": ["So", "rei\u00df'", "ich", "mich", "von", "ihm", "mit", "Freu\u00b7den", "und", "mit", "Lei\u00b7den", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VVFIN", "PPER", "PRF", "APPR", "PPER", "APPR", "NN", "KON", "APPR", "NN", "$."], "meter": "-+-++--+-+-+-", "measure": "iambic.hexa.relaxed"}}}}}