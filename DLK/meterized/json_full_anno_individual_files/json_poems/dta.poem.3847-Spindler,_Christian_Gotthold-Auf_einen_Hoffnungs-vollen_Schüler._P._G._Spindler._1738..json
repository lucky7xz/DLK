{"dta.poem.3847": {"metadata": {"author": {"name": "Spindler, Christian Gotthold", "birth": "N.A.", "death": "N.A."}, "title": "Auf einen Hoffnungs-vollen Sch\u00fcler.  \n  P. G. Spindler.   1738.", "genre": "Lyrik, Drama", "period": "N.A.", "pub_year": "1745", "urn": "urn:nbn:de:kobv:b4-20581-9", "language": ["de:0.99"], "booktitle": "Spindler, Christian Gotthold: Unschuldige Jugend-Fr\u00fcchte. Leipzig, 1745."}, "poem": {"stanza.1": {"line.1": {"text": "Ruhe wohl in deiner Kammer,", "tokens": ["Ru\u00b7he", "wohl", "in", "dei\u00b7ner", "Kam\u00b7mer", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["NN", "ADV", "APPR", "PPOSAT", "NN", "$,"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.2": {"text": "Frommer Sch\u00fcler Tugend-Bild!", "tokens": ["From\u00b7mer", "Sch\u00fc\u00b7ler", "Tu\u00b7gen\u00b7dBild", "!"], "token_info": ["word", "word", "word", "punct"], "pos": ["ADJA", "NN", "NN", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.3": {"text": "Du, der Tugenden Exempel,", "tokens": ["Du", ",", "der", "Tu\u00b7gen\u00b7den", "Ex\u00b7em\u00b7pel", ","], "token_info": ["word", "punct", "word", "word", "word", "punct"], "pos": ["PPER", "$,", "ART", "NN", "NN", "$,"], "meter": "+-+--+-+", "measure": "glykoneus"}, "line.4": {"text": "Ruhest hier an GOttes Tempel.", "tokens": ["Ru\u00b7hest", "hier", "an", "Got\u00b7tes", "Tem\u00b7pel", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "ADV", "APPR", "NN", "NN", "$."], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.5": {"text": "Wir bethr\u00e4nen dich mit Jammer,", "tokens": ["Wir", "be\u00b7th\u00b7r\u00e4\u00b7nen", "dich", "mit", "Jam\u00b7mer", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "PRF", "APPR", "NN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.6": {"text": "Bis uns GOtt die Z\u00e4hren stillt.", "tokens": ["Bis", "uns", "Gott", "die", "Z\u00e4h\u00b7ren", "stillt", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "PPER", "NN", "ART", "NN", "VVFIN", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.7": {"text": "Nun wirst du die Wei\u00dfheits-Lehren,", "tokens": ["Nun", "wirst", "du", "die", "Wei\u00df\u00b7heits\u00b7Leh\u00b7ren", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VAFIN", "PPER", "ART", "NN", "$,"], "meter": "-+--+-+-", "measure": "iambic.tri.relaxed"}, "line.8": {"text": "Dort in vollem Maasse h\u00f6ren.", "tokens": ["Dort", "in", "vol\u00b7lem", "Maas\u00b7se", "h\u00f6\u00b7ren", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "APPR", "ADJA", "NN", "VVINF", "$."], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}}}}}