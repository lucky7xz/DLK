{"dta.poem.10338": {"metadata": {"author": {"name": "Heine, Heinrich", "birth": "N.A.", "death": "N.A."}, "title": "I.  \n  Der Traurige.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1827", "urn": "urn:nbn:de:kobv:b4-200905192211", "language": ["de:0.99"], "booktitle": "Heine, Heinrich: Buch der Lieder. Hamburg, 1827."}, "poem": {"stanza.1": {"line.1": {"text": "Allen thut es weh im Herzen,", "tokens": ["Al\u00b7len", "thut", "es", "weh", "im", "Her\u00b7zen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["NE", "VVFIN", "PPER", "ADV", "APPRART", "NN", "$,"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.2": {"text": "Die den bleichen Knaben sehn,", "tokens": ["Die", "den", "blei\u00b7chen", "Kna\u00b7ben", "sehn", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ART", "ADJA", "NN", "VVINF", "$,"], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.3": {"text": "Dem die Leiden, dem die Schmerzen", "tokens": ["Dem", "die", "Lei\u00b7den", ",", "dem", "die", "Schmer\u00b7zen"], "token_info": ["word", "word", "word", "punct", "word", "word", "word"], "pos": ["PDS", "ART", "NN", "$,", "PRELS", "ART", "NN"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.4": {"text": "Auf's Gesicht geschrieben stehn.", "tokens": ["Auf's", "Ge\u00b7sicht", "ge\u00b7schrie\u00b7ben", "stehn", "."], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["APPRART", "NN", "VVPP", "VVINF", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}}, "stanza.2": {"line.1": {"text": "Mitleidvolle L\u00fcfte f\u00e4cheln", "tokens": ["Mit\u00b7leid\u00b7vol\u00b7le", "L\u00fcf\u00b7te", "f\u00e4\u00b7cheln"], "token_info": ["word", "word", "word"], "pos": ["PIAT", "NN", "VVINF"], "meter": "-+--+-+-", "measure": "iambic.tri.relaxed"}, "line.2": {"text": "K\u00fchlung seiner hei\u00dfen Stirn;", "tokens": ["K\u00fch\u00b7lung", "sei\u00b7ner", "hei\u00b7\u00dfen", "Stirn", ";"], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["NN", "PPOSAT", "ADJA", "NN", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.3": {"text": "Labung m\u00f6cht' ins Herz ihm l\u00e4cheln", "tokens": ["La\u00b7bung", "m\u00f6cht'", "ins", "Herz", "ihm", "l\u00e4\u00b7cheln"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["NN", "VMFIN", "APPRART", "NN", "PPER", "VVFIN"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.4": {"text": "Manche sonst so spr\u00f6de Dirn'.", "tokens": ["Man\u00b7che", "sonst", "so", "spr\u00f6\u00b7de", "Dirn'", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PIS", "ADV", "ADV", "ADJA", "NN", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}}, "stanza.3": {"line.1": {"text": "Aus dem wilden L\u00e4rm der St\u00e4dter", "tokens": ["Aus", "dem", "wil\u00b7den", "L\u00e4rm", "der", "St\u00e4d\u00b7ter"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["APPR", "ART", "ADJA", "NN", "ART", "NN"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.2": {"text": "Fl\u00fcchtet er sich nach dem Wald.", "tokens": ["Fl\u00fcch\u00b7tet", "er", "sich", "nach", "dem", "Wald", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "PPER", "PRF", "APPR", "ART", "NN", "$."], "meter": "+--+--+", "measure": "dactylic.tri"}, "line.3": {"text": "Lustig rauschen dort die Bl\u00e4tter,", "tokens": ["Lus\u00b7tig", "rau\u00b7schen", "dort", "die", "Bl\u00e4t\u00b7ter", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["NE", "VVFIN", "ADV", "ART", "NN", "$,"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.4": {"text": "Lust'ger Vogelsang erschallt.", "tokens": ["Lust'\u00b7ger", "Vo\u00b7gel\u00b7sang", "er\u00b7schallt", "."], "token_info": ["word", "word", "word", "punct"], "pos": ["ADJA", "NN", "VVPP", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}}, "stanza.4": {"line.1": {"text": "Doch der Sang verstummet balde,", "tokens": ["Doch", "der", "Sang", "ver\u00b7stum\u00b7met", "bal\u00b7de", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["KON", "ART", "NN", "VVFIN", "ADV", "$,"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.2": {"text": "Traurig rauschet Baum und Blatt,", "tokens": ["Trau\u00b7rig", "rau\u00b7schet", "Baum", "und", "Blatt", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ADJD", "VVFIN", "NE", "KON", "NN", "$,"], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.3": {"text": "Wenn der Traurige dem Walde", "tokens": ["Wenn", "der", "Trau\u00b7ri\u00b7ge", "dem", "Wal\u00b7de"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["KOUS", "ART", "NN", "ART", "NN"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.4": {"text": "Langsam sich gen\u00e4hert hat.", "tokens": ["Lang\u00b7sam", "sich", "ge\u00b7n\u00e4\u00b7hert", "hat", "."], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["ADJD", "PRF", "VVPP", "VAFIN", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}}}}}