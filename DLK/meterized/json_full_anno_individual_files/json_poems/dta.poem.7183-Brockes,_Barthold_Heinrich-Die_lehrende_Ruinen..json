{"dta.poem.7183": {"metadata": {"author": {"name": "Brockes, Barthold Heinrich", "birth": "N.A.", "death": "N.A."}, "title": "Die lehrende Ruinen.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1730", "urn": "urn:nbn:de:kobv:b4-20087-5", "language": ["de:0.99"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "Nachdem ich bey dem Kern und Auszug kluger Geister,", "tokens": ["Nach\u00b7dem", "ich", "bey", "dem", "Kern", "und", "Aus\u00b7zug", "klu\u00b7ger", "Geis\u00b7ter", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "PPER", "APPR", "ART", "NN", "KON", "NN", "ADJA", "NN", "$,"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Dem Welt-bekannten Burgermeister,", "tokens": ["Dem", "Welt\u00b7be\u00b7kann\u00b7ten", "Bur\u00b7ger\u00b7meis\u00b7ter", ","], "token_info": ["word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.3": {"text": "Dem theuren ", "tokens": ["Dem", "theu\u00b7ren"], "token_info": ["word", "word"], "pos": ["ART", "ADJA"], "meter": "-+-", "measure": "amphibrach.single"}, "line.4": {"text": "Von tausend Wundern sah: und tausend Seltenheiten,", "tokens": ["Von", "tau\u00b7send", "Wun\u00b7dern", "sah", ":", "und", "tau\u00b7send", "Sel\u00b7ten\u00b7hei\u00b7ten", ","], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["APPR", "CARD", "NN", "VVFIN", "$.", "KON", "CARD", "NN", "$,"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.5": {"text": "Womit Sein Haus erf\u00fcllt, recht als ein Sammel-Platz", "tokens": ["Wo\u00b7mit", "Sein", "Haus", "er\u00b7f\u00fcllt", ",", "recht", "als", "ein", "Sam\u00b7mel\u00b7Platz"], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word"], "pos": ["PWAV", "PPOSAT", "NN", "VVPP", "$,", "ADJD", "KOKOM", "ART", "NN"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.6": {"text": "Von dem, was sonst in den verborgnen Gr\u00fcnden", "tokens": ["Von", "dem", ",", "was", "sonst", "in", "den", "ver\u00b7borg\u00b7nen", "Gr\u00fcn\u00b7den"], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "word"], "pos": ["APPR", "ART", "$,", "PRELS", "ADV", "APPR", "ART", "ADJA", "NN"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.7": {"text": "Der Erden und der See zu finden,", "tokens": ["Der", "Er\u00b7den", "und", "der", "See", "zu", "fin\u00b7den", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "KON", "ART", "NN", "PTKZU", "VVINF", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.8": {"text": "(von deren Ordnung, Meng\u2019 und Trefflichkeiten", "tokens": ["(", "von", "de\u00b7ren", "Ord\u00b7nung", ",", "Meng'", "und", "Treff\u00b7lich\u00b7kei\u00b7ten"], "token_info": ["punct", "word", "word", "word", "punct", "word", "word", "word"], "pos": ["$(", "APPR", "PRELAT", "NN", "$,", "NE", "KON", "NN"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.9": {"text": "Ich k\u00fcnfftig mehr zu melden Willens bin)", "tokens": ["Ich", "k\u00fcnff\u00b7tig", "mehr", "zu", "mel\u00b7den", "Wil\u00b7lens", "bin", ")"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "ADJD", "ADV", "PTKZU", "VVINF", "NN", "VAFIN", "$("], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.10": {"text": "Bewundernd angeschaut, mit fast erstauntem Sinn,", "tokens": ["Be\u00b7wun\u00b7dernd", "an\u00b7ge\u00b7schaut", ",", "mit", "fast", "er\u00b7staun\u00b7tem", "Sinn", ","], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["VVPP", "VVPP", "$,", "APPR", "ADV", "ADJA", "NN", "$,"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.11": {"text": "Und bald darauf daselbst, von einer fremden Hand,", "tokens": ["Und", "bald", "da\u00b7rauf", "da\u00b7selbst", ",", "von", "ei\u00b7ner", "frem\u00b7den", "Hand", ","], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["KON", "ADV", "PAV", "PAV", "$,", "APPR", "ART", "ADJA", "NN", "$,"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.12": {"text": "Ein Wunderwerck der Kunst in raren Rissen fand;", "tokens": ["Ein", "Wun\u00b7der\u00b7werck", "der", "Kunst", "in", "ra\u00b7ren", "Ris\u00b7sen", "fand", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "ART", "NN", "APPR", "ADJA", "NN", "VVFIN", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.13": {"text": "Bin ich bey dem, was ich gesehn, geh\u00f6rt, gelesen,", "tokens": ["Bin", "ich", "bey", "dem", ",", "was", "ich", "ge\u00b7sehn", ",", "ge\u00b7h\u00f6rt", ",", "ge\u00b7le\u00b7sen", ","], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "punct", "word", "punct", "word", "punct"], "pos": ["VAFIN", "PPER", "APPR", "ART", "$,", "PWS", "PPER", "VVPP", "$,", "VVFIN", "$,", "VVPP", "$,"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.14": {"text": "Mehr als vergn\u00fcgt, mehr als erstaunt, gewesen.", "tokens": ["Mehr", "als", "ver\u00b7gn\u00fcgt", ",", "mehr", "als", "er\u00b7staunt", ",", "ge\u00b7we\u00b7sen", "."], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "punct", "word", "punct"], "pos": ["PIAT", "KOKOM", "VVPP", "$,", "PIAT", "KOKOM", "VVFIN", "$,", "VAPP", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}}}}