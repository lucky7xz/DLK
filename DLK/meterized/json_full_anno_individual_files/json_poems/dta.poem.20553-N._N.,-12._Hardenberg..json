{"dta.poem.20553": {"metadata": {"author": {"name": "N. N., ", "birth": "N.A.", "death": "N.A."}, "title": "12.  \n  Hardenberg.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1848", "urn": "urn:nbn:de:kobv:b4-25129-1", "language": ["de:0.99"], "booktitle": "[N. N.]: Erinnerungen eines freiwilligen reitenden J\u00e4gers aus den Kriegsjahren 1813\u20131815. Berlin, 1848."}, "poem": {"stanza.1": {"line.1": {"text": "Wohl ist es schwer im wilden Sturm der Zeiten,", "tokens": ["Wohl", "ist", "es", "schwer", "im", "wil\u00b7den", "Sturm", "der", "Zei\u00b7ten", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VAFIN", "PPER", "ADJD", "APPRART", "ADJA", "NN", "ART", "NN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "Mit Sicherheit und Ruhe dazustehn,", "tokens": ["Mit", "Si\u00b7cher\u00b7heit", "und", "Ru\u00b7he", "da\u00b7zu\u00b7stehn", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "NN", "KON", "NN", "VVINF", "$,"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.3": {"text": "Und so wie ", "tokens": ["Und", "so", "wie"], "token_info": ["word", "word", "word"], "pos": ["KON", "ADV", "KOKOM"], "meter": "+-+", "measure": "trochaic.di"}, "line.4": {"text": "Den Gang der Zeit im Geist vorauszusehn.", "tokens": ["Den", "Gang", "der", "Zeit", "im", "Geist", "vor\u00b7aus\u00b7zu\u00b7sehn", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "ART", "NN", "APPRART", "NN", "VVINF", "$."], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.5": {"text": "Denn so nur konnt\u2019 er Alles vorbereiten,", "tokens": ["Denn", "so", "nur", "konnt'", "er", "Al\u00b7les", "vor\u00b7be\u00b7rei\u00b7ten", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "ADV", "ADV", "VMFIN", "PPER", "PIS", "VVINF", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.6": {"text": "Was sp\u00e4ter durch ihn Herrliches gescheh\u2019n;", "tokens": ["Was", "sp\u00e4\u00b7ter", "durch", "ihn", "Herr\u00b7li\u00b7ches", "ge\u00b7scheh'n", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["PWS", "ADJD", "APPR", "PPER", "NN", "VVPP", "$."], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.7": {"text": "Er wu\u00dfte selbst im Drange der Gefahren", "tokens": ["Er", "wu\u00df\u00b7te", "selbst", "im", "Dran\u00b7ge", "der", "Ge\u00b7fah\u00b7ren"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["PPER", "VVFIN", "ADV", "APPRART", "NN", "ART", "NN"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.8": {"text": "Den heit\u2019ren milden Geist sich zu bewahren.", "tokens": ["Den", "heit'\u00b7ren", "mil\u00b7den", "Geist", "sich", "zu", "be\u00b7wah\u00b7ren", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "ADJA", "NN", "PRF", "PTKZU", "VVINF", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}, "stanza.2": {"line.1": {"text": "Das Steuerruder haltend fest in H\u00e4nden,", "tokens": ["Das", "Steu\u00b7er\u00b7ru\u00b7der", "hal\u00b7tend", "fest", "in", "H\u00e4n\u00b7den", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "ADJD", "ADJD", "APPR", "NN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "Lenkt er des Staates Schiff mit That und Wort.", "tokens": ["Lenkt", "er", "des", "Staa\u00b7tes", "Schiff", "mit", "That", "und", "Wort", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "PPER", "ART", "ADJA", "NN", "APPR", "NN", "KON", "NN", "$."], "meter": "++-+-+-+-+", "measure": "iambic.penta.spondeus"}, "line.3": {"text": "Bei Gegenwind lavirt er, statt zu wenden;", "tokens": ["Bei", "Ge\u00b7gen\u00b7wind", "la\u00b7virt", "er", ",", "statt", "zu", "wen\u00b7den", ";"], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["APPR", "NN", "VVFIN", "PPER", "$,", "KOUI", "PTKZU", "VVINF", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.4": {"text": "Dreidecker trieb so leise vorw\u00e4rts fort.", "tokens": ["Drei\u00b7de\u00b7cker", "trieb", "so", "lei\u00b7se", "vor\u00b7w\u00e4rts", "fort", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["NE", "VVFIN", "ADV", "ADJD", "ADV", "PTKVZ", "$."], "meter": "---+-+-+-+", "measure": "zehnsilber"}, "line.5": {"text": "Er glaubte fest, da\u00df Drangsal m\u00fcsse enden;", "tokens": ["Er", "glaub\u00b7te", "fest", ",", "da\u00df", "Dran\u00b7gsal", "m\u00fcs\u00b7se", "en\u00b7den", ";"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "PTKVZ", "$,", "KOUS", "NN", "VMFIN", "VVINF", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.6": {"text": "Vom Ziel der Seefahrt ahndet er den Ort.", "tokens": ["Vom", "Ziel", "der", "See\u00b7fahrt", "ahn\u00b7det", "er", "den", "Ort", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPRART", "NN", "ART", "NN", "VVFIN", "PPER", "ART", "NN", "$."], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.7": {"text": "Es brannten Er und ", "tokens": ["Es", "brann\u00b7ten", "Er", "und"], "token_info": ["word", "word", "word", "word"], "pos": ["PPER", "VVFIN", "PPER", "KON"], "meter": "-+-+-", "measure": "iambic.di"}, "line.8": {"text": "Jm Voraus in Paris als Leuchtthurmlichter!", "tokens": ["Jm", "Vo\u00b7raus", "in", "Pa\u00b7ris", "als", "Leucht\u00b7thurm\u00b7lich\u00b7ter", "!"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPRART", "NN", "APPR", "NE", "KOUS", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}}}}