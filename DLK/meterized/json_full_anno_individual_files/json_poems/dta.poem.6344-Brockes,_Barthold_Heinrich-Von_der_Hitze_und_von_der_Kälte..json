{"dta.poem.6344": {"metadata": {"author": {"name": "Brockes, Barthold Heinrich", "birth": "N.A.", "death": "N.A."}, "title": "Von der Hitze und von der K\u00e4lte.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1730", "urn": "urn:nbn:de:kobv:b4-20087-5", "language": ["de:0.99"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "Wenn in der Lufft die Hitze sich verbreitet,", "tokens": ["Wenn", "in", "der", "Lufft", "die", "Hit\u00b7ze", "sich", "ver\u00b7brei\u00b7tet", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "APPR", "ART", "NN", "ART", "NN", "PRF", "VVPP", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "So dringt die Gluht dadurch viel leichter fort,", "tokens": ["So", "dringt", "die", "Gluht", "da\u00b7durch", "viel", "leich\u00b7ter", "fort", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VVFIN", "ART", "NN", "PAV", "ADV", "ADJD", "PTKVZ", "$,"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.3": {"text": "Ein Holtz-Sto\u00df, der im Sommer zubereitet,", "tokens": ["Ein", "Holtz\u00b7Sto\u00df", ",", "der", "im", "Som\u00b7mer", "zu\u00b7be\u00b7rei\u00b7tet", ","], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "$,", "PRELS", "APPRART", "NN", "VVPP", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.4": {"text": "Brennt, da die Lufft gedehnt, so hefftig lange nicht.", "tokens": ["Brennt", ",", "da", "die", "Lufft", "ge\u00b7dehnt", ",", "so", "heff\u00b7tig", "lan\u00b7ge", "nicht", "."], "token_info": ["word", "punct", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "$,", "KOUS", "ART", "NN", "VVPP", "$,", "ADV", "ADJD", "ADV", "PTKNEG", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.5": {"text": "Wenn aber der ergrimmte Nord", "tokens": ["Wenn", "a\u00b7ber", "der", "er\u00b7grimm\u00b7te", "Nord"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["KOUS", "ADV", "ART", "ADJA", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.6": {"text": "Aus den gefrornen H\u00f6len bricht,", "tokens": ["Aus", "den", "ge\u00b7fror\u00b7nen", "H\u00f6\u00b7len", "bricht", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "ART", "ADJA", "NN", "VVFIN", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.7": {"text": "Und nichts, als schwartzen Dufft,", "tokens": ["Und", "nichts", ",", "als", "schwart\u00b7zen", "Dufft", ","], "token_info": ["word", "word", "punct", "word", "word", "word", "punct"], "pos": ["KON", "PIS", "$,", "KOUS", "ADJA", "NN", "$,"], "meter": "-+-+-+", "measure": "iambic.tri"}, "line.8": {"text": "Frost, Ei\u00df und Schlossen, schnaubt; so macht die dicke Lufft,", "tokens": ["Frost", ",", "Ei\u00df", "und", "Schlos\u00b7sen", ",", "schnaubt", ";", "so", "macht", "die", "di\u00b7cke", "Lufft", ","], "token_info": ["word", "punct", "word", "word", "word", "punct", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["NN", "$,", "NN", "KON", "NN", "$,", "VVFIN", "$.", "ADV", "VVFIN", "ART", "ADJA", "NN", "$,"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.9": {"text": "Da\u00df sich des Feuers Krafft recht zu verdoppeln pfleget.", "tokens": ["Da\u00df", "sich", "des", "Feu\u00b7ers", "Krafft", "recht", "zu", "ver\u00b7dop\u00b7peln", "pfle\u00b7get", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "PRF", "ART", "NN", "NN", "ADJD", "PTKZU", "VVINF", "VVFIN", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.10": {"text": "Wenn ihm der Weg verleget,", "tokens": ["Wenn", "ihm", "der", "Weg", "ver\u00b7le\u00b7get", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "PPER", "ART", "NN", "VVFIN", "$,"], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.11": {"text": "So krachet, h\u00fcpffet es, und springet,", "tokens": ["So", "kra\u00b7chet", ",", "h\u00fcpf\u00b7fet", "es", ",", "und", "sprin\u00b7get", ","], "token_info": ["word", "word", "punct", "word", "word", "punct", "word", "word", "punct"], "pos": ["ADV", "VVFIN", "$,", "VVFIN", "PPER", "$,", "KON", "VVFIN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.12": {"text": "Es gl\u00e4ntzet, spitzet sich, es funckelt, es durchdringet,", "tokens": ["Es", "gl\u00e4nt\u00b7zet", ",", "spit\u00b7zet", "sich", ",", "es", "fun\u00b7ckelt", ",", "es", "durch\u00b7drin\u00b7get", ","], "token_info": ["word", "word", "punct", "word", "word", "punct", "word", "word", "punct", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "$,", "VVFIN", "PRF", "$,", "PPER", "VVFIN", "$,", "PPER", "VVFIN", "$,"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.13": {"text": "Und seine W\u00e4rme nimmt sodann vom Sonnen-Schein", "tokens": ["Und", "sei\u00b7ne", "W\u00e4r\u00b7me", "nimmt", "so\u00b7dann", "vom", "Son\u00b7nen\u00b7Schein"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["KON", "PPOSAT", "NN", "VVFIN", "ADV", "APPRART", "NN"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.14": {"text": "Die Stell\u2019 im Winter gleichsam ein.", "tokens": ["Die", "Stell'", "im", "Win\u00b7ter", "gleich\u00b7sam", "ein", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "APPRART", "NN", "ADJD", "PTKVZ", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}}}}}