{"dta.poem.19156": {"metadata": {"author": {"name": "R\u00fcckert, Friedrich", "birth": "N.A.", "death": "N.A."}, "title": "3.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1837", "urn": "urn:nbn:de:kobv:b4-200905195090", "language": ["de:0.99"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "Als wie ein Kind im Schlaf empor sein Auge schl\u00e4gt,", "tokens": ["Als", "wie", "ein", "Kind", "im", "Schlaf", "em\u00b7por", "sein", "Au\u00b7ge", "schl\u00e4gt", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "KOKOM", "ART", "NN", "APPRART", "NN", "PTKVZ", "PPOSAT", "NN", "VVFIN", "$,"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Und alsobald sein Haupt befriedigt wieder legt,", "tokens": ["Und", "al\u00b7so\u00b7bald", "sein", "Haupt", "be\u00b7frie\u00b7digt", "wie\u00b7der", "legt", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "KOUS", "PPOSAT", "NN", "VVFIN", "ADV", "VVFIN", "$,"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}}, "stanza.2": {"line.1": {"text": "Weil nah das Angesicht sich ihm der Mutter zeigt,", "tokens": ["Weil", "nah", "das", "An\u00b7ge\u00b7sicht", "sich", "ihm", "der", "Mut\u00b7ter", "zeigt", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "ADJD", "ART", "NN", "PRF", "PPER", "ART", "NN", "VVFIN", "$,"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Die wachend \u00fcber ihr geliebtes Kind sich neigt;", "tokens": ["Die", "wa\u00b7chend", "\u00fc\u00b7ber", "ihr", "ge\u00b7lieb\u00b7tes", "Kind", "sich", "neigt", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADJD", "APPR", "PPOSAT", "ADJA", "NN", "PRF", "VVFIN", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}}, "stanza.3": {"line.1": {"text": "Begl\u00fcckt, wer so den Traum des Erdenlebens lebt,", "tokens": ["Be\u00b7gl\u00fcckt", ",", "wer", "so", "den", "Traum", "des", "Er\u00b7den\u00b7le\u00b7bens", "lebt", ","], "token_info": ["word", "punct", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVPP", "$,", "PWS", "ADV", "ART", "NN", "ART", "NN", "VVFIN", "$,"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Und wenn dazwischen er den Blick zum Himmel hebt,", "tokens": ["Und", "wenn", "da\u00b7zwi\u00b7schen", "er", "den", "Blick", "zum", "Him\u00b7mel", "hebt", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "KOUS", "PAV", "PPER", "ART", "NN", "APPRART", "NN", "VVFIN", "$,"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}}, "stanza.4": {"line.1": {"text": "Die Mutter Liebe sieht hernieder schauen heiter", "tokens": ["Die", "Mut\u00b7ter", "Lie\u00b7be", "sieht", "her\u00b7nie\u00b7der", "schau\u00b7en", "hei\u00b7ter"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["ART", "NN", "NN", "VVFIN", "PTKVZ", "VVFIN", "ADJD"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Und l\u00e4chelnd winken ihm: Ich wache, schlaf nur weiter!", "tokens": ["Und", "l\u00e4\u00b7chelnd", "win\u00b7ken", "ihm", ":", "Ich", "wa\u00b7che", ",", "schlaf", "nur", "wei\u00b7ter", "!"], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["KON", "ADJD", "VVFIN", "PPER", "$.", "PPER", "VVFIN", "$,", "VVFIN", "ADV", "ADV", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}}}}}