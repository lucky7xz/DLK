{"dta.poem.10930": {"metadata": {"author": {"name": "Brockes, Barthold Heinrich", "birth": "N.A.", "death": "N.A."}, "title": "Zuversichtlicher Trost.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1740", "urn": "urn:nbn:de:kobv:b4-200905198572", "language": ["de:0.99"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "Da ein Sterblicher dem N\u00e4chsten sein Vergehn soll sieb-\nzigmal", "tokens": ["Da", "ein", "Sterb\u00b7li\u00b7cher", "dem", "N\u00e4chs\u00b7ten", "sein", "Ver\u00b7gehn", "soll", "sie\u00b7b", "zig\u00b7mal"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "word"], "pos": ["KOUS", "ART", "NN", "ART", "NN", "PPOSAT", "NN", "VMFIN", "TRUNC", "NN"], "meter": "+-+-+-+-+-+--+-+", "measure": "trochaic.octa.plus.relaxed"}, "line.2": {"text": "Siebenmal des Tags vergeben,", "tokens": ["Sie\u00b7ben\u00b7mal", "des", "Tags", "ver\u00b7ge\u00b7ben", ","], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["ADV", "ART", "NN", "VVPP", "$,"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.3": {"text": "Selbst nach Christi Unterricht;", "tokens": ["Selbst", "nach", "Chris\u00b7ti", "Un\u00b7ter\u00b7richt", ";"], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["ADV", "APPR", "NE", "NN", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.4": {"text": "Mit wie vieler Zuversicht", "tokens": ["Mit", "wie", "vie\u00b7ler", "Zu\u00b7ver\u00b7sicht"], "token_info": ["word", "word", "word", "word"], "pos": ["APPR", "KOKOM", "PIAT", "NN"], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.5": {"text": "Kann man sich zu Gott erheben,", "tokens": ["Kann", "man", "sich", "zu", "Gott", "er\u00b7he\u00b7ben", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["VMFIN", "PIS", "PRF", "APPR", "NN", "VVINF", "$,"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.6": {"text": "Da er die selbstst\u00e4ndge Liebe, Huld, Barmherzigkeit und Leben,", "tokens": ["Da", "er", "die", "selbst\u00b7st\u00e4nd\u00b7ge", "Lie\u00b7be", ",", "Huld", ",", "Barm\u00b7her\u00b7zig\u00b7keit", "und", "Le\u00b7ben", ","], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "punct", "word", "word", "word", "punct"], "pos": ["KOUS", "PPER", "ART", "ADJA", "NN", "$,", "NN", "$,", "NN", "KON", "NN", "$,"], "meter": "+-+-+-+-+-+-+-+-", "measure": "trochaic.octa.plus"}, "line.7": {"text": "Und Vergebung von ihm hoffen: W\u00e4r die S\u00fcnd auch ohne Zahl.", "tokens": ["Und", "Ver\u00b7ge\u00b7bung", "von", "ihm", "hof\u00b7fen", ":", "W\u00e4r", "die", "S\u00fcnd", "auch", "oh\u00b7ne", "Zahl", "."], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "NN", "APPR", "PPER", "VVINF", "$.", "VAFIN", "ART", "NN", "ADV", "APPR", "NN", "$."], "meter": "+-+-+-+-+-+-+-+", "measure": "trochaic.octa.plus"}}}}}