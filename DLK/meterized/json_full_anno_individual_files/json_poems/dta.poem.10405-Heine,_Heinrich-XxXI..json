{"dta.poem.10405": {"metadata": {"author": {"name": "Heine, Heinrich", "birth": "N.A.", "death": "N.A."}, "title": "XxXI.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1827", "urn": "urn:nbn:de:kobv:b4-200905192211", "language": ["de:0.99"], "booktitle": "Heine, Heinrich: Buch der Lieder. Hamburg, 1827."}, "poem": {"stanza.1": {"line.1": {"text": "Die Welt ist so sch\u00f6n und der Himmel so blau,", "tokens": ["Die", "Welt", "ist", "so", "sch\u00f6n", "und", "der", "Him\u00b7mel", "so", "blau", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VAFIN", "ADV", "ADJD", "KON", "ART", "NN", "ADV", "ADJD", "$,"], "meter": "-+--+--+--+", "measure": "amphibrach.tetra"}, "line.2": {"text": "Und die L\u00fcfte die wehen so lind und so lau,", "tokens": ["Und", "die", "L\u00fcf\u00b7te", "die", "we\u00b7hen", "so", "lind", "und", "so", "lau", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "ART", "NN", "ART", "VVFIN", "ADV", "ADJD", "KON", "ADV", "ADJD", "$,"], "meter": "--+--+--+--+", "measure": "anapaest.tetra.plus"}, "line.3": {"text": "Und die Blumen winken auf bl\u00fchender Au',", "tokens": ["Und", "die", "Blu\u00b7men", "win\u00b7ken", "auf", "bl\u00fc\u00b7hen\u00b7der", "Au'", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "ART", "NN", "VVFIN", "APPR", "ADJA", "NN", "$,"], "meter": "--+-+--+--+", "measure": "iambic.tetra.relaxed"}, "line.4": {"text": "Und funkeln und glitzern im Morgenthau,", "tokens": ["Und", "fun\u00b7keln", "und", "glit\u00b7zern", "im", "Mor\u00b7gent\u00b7hau", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "VVINF", "KON", "VVFIN", "APPRART", "NN", "$,"], "meter": "-+--+--+-+", "measure": "amphibrach.tri.plus"}, "line.5": {"text": "Und die Menschen jubeln, wohin ich schau', \u2014", "tokens": ["Und", "die", "Men\u00b7schen", "ju\u00b7beln", ",", "wo\u00b7hin", "ich", "schau'", ","], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "punct", "punct"], "pos": ["KON", "ART", "NN", "VVINF", "$,", "PWAV", "PPER", "VVFIN", "$,", "$("], "meter": "--+-+--+-+", "measure": "iambic.tetra.relaxed"}, "line.6": {"text": "Und doch m\u00f6cht' ich im Grabe liegen,", "tokens": ["Und", "doch", "m\u00f6cht'", "ich", "im", "Gra\u00b7be", "lie\u00b7gen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "ADV", "VMFIN", "PPER", "APPRART", "NN", "VVFIN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.7": {"text": "Und mich an ein todtes Liebchen schmiegen.", "tokens": ["Und", "mich", "an", "ein", "tod\u00b7tes", "Lieb\u00b7chen", "schmie\u00b7gen", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "PPER", "APPR", "ART", "ADJA", "NN", "VVINF", "$."], "meter": "+-+-+-+-+-", "measure": "trochaic.penta"}}}}}