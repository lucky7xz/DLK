{"dta.poem.19568": {"metadata": {"author": {"name": "Meyer, Conrad Ferdinand", "birth": "N.A.", "death": "N.A."}, "title": "Die Schule des Silen.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1882", "urn": "urn:nbn:de:kobv:b4-200905193933", "language": ["de:0.99"], "booktitle": "Meyer, Conrad Ferdinand: Gedichte. Leipzig, 1882."}, "poem": {"stanza.1": {"line.1": {"text": "In der schattendunkeln Laube gab Silen, der weise, Stunde,", "tokens": ["In", "der", "schat\u00b7ten\u00b7dun\u00b7keln", "Lau\u00b7be", "gab", "Si\u00b7len", ",", "der", "wei\u00b7se", ",", "Stun\u00b7de", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct", "word", "word", "punct", "word", "punct"], "pos": ["APPR", "ART", "ADJA", "NN", "VVFIN", "NN", "$,", "PRELS", "VVFIN", "$,", "NN", "$,"], "meter": "+-+-+-+-+-+-+-+-", "measure": "trochaic.octa.plus"}, "line.2": {"text": "Der ihm weich ans Knie geschmiegte Bacchus hing an seinem Munde,", "tokens": ["Der", "ihm", "weich", "ans", "Knie", "ge\u00b7schmieg\u00b7te", "Bac\u00b7chus", "hing", "an", "sei\u00b7nem", "Mun\u00b7de", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "PPER", "ADJD", "APPRART", "NN", "VVFIN", "NE", "VVFIN", "APPR", "PPOSAT", "NN", "$,"], "meter": "+-+-+-+-+-+-+-+-", "measure": "trochaic.octa.plus"}, "line.3": {"text": "Lieblich lauschend.", "tokens": ["Lieb\u00b7lich", "lau\u00b7schend", "."], "token_info": ["word", "word", "punct"], "pos": ["ADJD", "ADJD", "$."], "meter": "+-+-", "measure": "trochaic.di"}}, "stanza.2": {"line.1": {"text": "Unter seinem krausen Barte lachte freundlich der Ergraute,", "tokens": ["Un\u00b7ter", "sei\u00b7nem", "krau\u00b7sen", "Bar\u00b7te", "lach\u00b7te", "freund\u00b7lich", "der", "Er\u00b7grau\u00b7te", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "PPOSAT", "ADJA", "NN", "VVFIN", "ADJD", "ART", "NN", "$,"], "meter": "+-+-+-+-+-+-+-+-", "measure": "trochaic.octa.plus"}, "line.2": {"text": "Da er in das milde Feuer junger G\u00f6tteraugen schaute,", "tokens": ["Da", "er", "in", "das", "mil\u00b7de", "Feu\u00b7er", "jun\u00b7ger", "G\u00f6t\u00b7ter\u00b7au\u00b7gen", "schau\u00b7te", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "PPER", "APPR", "ART", "ADJA", "NN", "ADJA", "NN", "VVFIN", "$,"], "meter": "+-+-+-+-+-+-+-+-", "measure": "trochaic.octa.plus"}, "line.3": {"text": "Dann begann er:", "tokens": ["Dann", "be\u00b7gann", "er", ":"], "token_info": ["word", "word", "word", "punct"], "pos": ["ADV", "VVFIN", "PPER", "$."], "meter": "+-+-", "measure": "trochaic.di"}}, "stanza.3": {"line.1": {"text": "\u201ekind, betrachte dieses Antlitz, die gedankenschweren Lider!", "tokens": ["\u201e", "kind", ",", "be\u00b7trach\u00b7te", "die\u00b7ses", "Ant\u00b7litz", ",", "die", "ge\u00b7dan\u00b7ken\u00b7schwe\u00b7ren", "Li\u00b7der", "!"], "token_info": ["punct", "word", "punct", "word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["$(", "ADJD", "$,", "VVFIN", "PDAT", "NN", "$,", "ART", "ADJA", "NN", "$."], "meter": "+-+-+-+-+-+-+-+-", "measure": "trochaic.octa.plus"}, "line.2": {"text": "Kind, in jedem greisen Zecher ehre du die Z\u00fcge wieder", "tokens": ["Kind", ",", "in", "je\u00b7dem", "grei\u00b7sen", "Ze\u00b7cher", "eh\u00b7re", "du", "die", "Z\u00fc\u00b7ge", "wie\u00b7der"], "token_info": ["word", "punct", "word", "word", "word", "word", "word", "word", "word", "word", "word"], "pos": ["NN", "$,", "APPR", "PIAT", "ADJA", "NN", "VVFIN", "PPER", "ART", "NN", "ADV"], "meter": "+-+-+-+-+-+-+-+-", "measure": "trochaic.octa.plus"}, "line.3": {"text": "Deines Lehrers.", "tokens": ["Dei\u00b7nes", "Leh\u00b7rers", "."], "token_info": ["word", "word", "punct"], "pos": ["PPOSAT", "NN", "$."], "meter": "+-+-", "measure": "trochaic.di"}}, "stanza.4": {"line.1": {"text": "Oft, wo die Veliten wankten, jene prahlerischen Knaben,", "tokens": ["Oft", ",", "wo", "die", "Ve\u00b7li\u00b7ten", "wank\u00b7ten", ",", "je\u00b7ne", "prah\u00b7le\u00b7ri\u00b7schen", "Kna\u00b7ben", ","], "token_info": ["word", "punct", "word", "word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["ADV", "$,", "PWAV", "ART", "NN", "VVFIN", "$,", "PDAT", "ADJA", "NN", "$,"], "meter": "-+-+--+-+-+-+-+-", "measure": "iambic.septa.relaxed"}, "line.2": {"text": "Sind es die Triarier, Liebling, die das Feld behauptet haben", "tokens": ["Sind", "es", "die", "Tri\u00b7a\u00b7rier", ",", "Lieb\u00b7ling", ",", "die", "das", "Feld", "be\u00b7haup\u00b7tet", "ha\u00b7ben"], "token_info": ["word", "word", "word", "word", "punct", "word", "punct", "word", "word", "word", "word", "word"], "pos": ["VAFIN", "PPER", "ART", "NN", "$,", "NN", "$,", "PRELS", "ART", "NN", "VVPP", "VAINF"], "meter": "+-+-+-+-+-+-+-+-", "measure": "trochaic.octa.plus"}, "line.3": {"text": "Unersch\u00fcttert!", "tokens": ["Un\u00b7er\u00b7sch\u00fct\u00b7tert", "!"], "token_info": ["word", "punct"], "pos": ["ADJD", "$."], "meter": "+-+-", "measure": "trochaic.di"}}, "stanza.5": {"line.1": {"text": "Wenn auf Chios mit dem M\u00e4dchen theilt den Becher der Ephebe,", "tokens": ["Wenn", "auf", "Chios", "mit", "dem", "M\u00e4d\u00b7chen", "theilt", "den", "Be\u00b7cher", "der", "E\u00b7phe\u00b7be", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "APPR", "NN", "APPR", "ART", "NN", "VVFIN", "ART", "NN", "ART", "NN", "$,"], "meter": "-++--+-+-+-+-+-", "measure": "iambic.septa.relaxed"}, "line.2": {"text": "La\u00df sie nippen, la\u00df sie kosen \u2014 mit der vollsten Schale schwebe", "tokens": ["La\u00df", "sie", "nip\u00b7pen", ",", "la\u00df", "sie", "ko\u00b7sen", "mit", "der", "volls\u00b7ten", "Scha\u00b7le", "schwe\u00b7be"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "punct", "word", "word", "word", "word", "word"], "pos": ["VVIMP", "PPER", "VVINF", "$,", "VVIMP", "PPER", "VVINF", "$(", "APPR", "ART", "ADJA", "NN", "VVFIN"], "meter": "+-+-+-+--+-+-+-", "measure": "trochaic.septa.relaxed"}, "line.3": {"text": "Du vor\u00fcber.", "tokens": ["Du", "vor\u00b7\u00fc\u00b7ber", "."], "token_info": ["word", "word", "punct"], "pos": ["PPER", "PTKVZ", "$."], "meter": "+-+-", "measure": "trochaic.di"}}, "stanza.6": {"line.1": {"text": "Lenke deine g\u00f6tterleichten Schritte zu Homer dem alten,", "tokens": ["Len\u00b7ke", "dei\u00b7ne", "g\u00f6t\u00b7ter\u00b7leich\u00b7ten", "Schrit\u00b7te", "zu", "Ho\u00b7mer", "dem", "al\u00b7ten", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["NE", "PPOSAT", "ADJA", "NN", "APPR", "NE", "ART", "ADJA", "$,"], "meter": "+-+-+-+-+--+--+-", "measure": "trochaic.septa.relaxed"}, "line.2": {"text": "Netze seine heil'gen Lippen, gl\u00e4tte seiner Stirne Falten,", "tokens": ["Net\u00b7ze", "sei\u00b7ne", "heil'\u00b7gen", "Lip\u00b7pen", ",", "gl\u00e4t\u00b7te", "sei\u00b7ner", "Stir\u00b7ne", "Fal\u00b7ten", ","], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["NN", "PPOSAT", "ADJA", "NN", "$,", "VVFIN", "PPOSAT", "NN", "NN", "$,"], "meter": "+-+-+-+-+-+-+-+-", "measure": "trochaic.octa.plus"}, "line.3": {"text": "Wunderth\u00e4ter!", "tokens": ["Wun\u00b7der\u00b7th\u00e4\u00b7ter", "!"], "token_info": ["word", "punct"], "pos": ["NN", "$."], "meter": "+-+-", "measure": "trochaic.di"}}, "stanza.7": {"line.1": {"text": "L\u00f6s ihm jeder Erdenschwere Fessel mit der Hand, der milden,", "tokens": ["L\u00f6s", "ihm", "je\u00b7der", "Er\u00b7den\u00b7schwe\u00b7re", "Fes\u00b7sel", "mit", "der", "Hand", ",", "der", "mil\u00b7den", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct", "word", "word", "punct"], "pos": ["NE", "PPER", "PIAT", "NN", "NN", "APPR", "ART", "NN", "$,", "ART", "ADJA", "$,"], "meter": "+-+-+-+-+-+-+-+-", "measure": "trochaic.octa.plus"}, "line.2": {"text": "F\u00fclle du des Blinden Auge mit unsterblichen Gebilden,", "tokens": ["F\u00fcl\u00b7le", "du", "des", "Blin\u00b7den", "Au\u00b7ge", "mit", "uns\u00b7terb\u00b7li\u00b7chen", "Ge\u00b7bil\u00b7den", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["NN", "PPER", "ART", "NN", "NN", "APPR", "ADJA", "NN", "$,"], "meter": "+-+-+-+-+-+-+-+-", "measure": "trochaic.octa.plus"}, "line.3": {"text": "Ewig sch\u00f6nen!\u201c", "tokens": ["E\u00b7wig", "sch\u00f6\u00b7nen", "!", "\u201c"], "token_info": ["word", "word", "punct", "punct"], "pos": ["ADJD", "VVINF", "$.", "$("], "meter": "+-+-", "measure": "trochaic.di"}}}}}