{"dta.poem.3834": {"metadata": {"author": {"name": "Spindler, Christian Gotthold", "birth": "N.A.", "death": "N.A."}, "title": "Schreiben an einen Freund/  \n wegen der verlangt und hier eingedruckten Grab-Schrifften.", "genre": "Lyrik, Drama", "period": "N.A.", "pub_year": "1745", "urn": "urn:nbn:de:kobv:b4-20581-9", "language": ["de:0.99"], "booktitle": "Spindler, Christian Gotthold: Unschuldige Jugend-Fr\u00fcchte. Leipzig, 1745."}, "poem": {"stanza.1": {"line.1": {"text": "Vo solst du nun, entfernter Freund!", "tokens": ["Vo", "solst", "du", "nun", ",", "ent\u00b7fern\u00b7ter", "Freund", "!"], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "punct"], "pos": ["NE", "VMFIN", "PPER", "ADV", "$,", "ADJA", "NN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Nach deinen g\u00fctigsten Verlangen,", "tokens": ["Nach", "dei\u00b7nen", "g\u00fc\u00b7tigs\u00b7ten", "Ver\u00b7lan\u00b7gen", ","], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["APPR", "PPOSAT", "ADJA", "NN", "$,"], "meter": "-+--+--+-", "measure": "amphibrach.tri"}, "line.3": {"text": "Das mir treu, gut und ehrlich scheint,", "tokens": ["Das", "mir", "treu", ",", "gut", "und", "ehr\u00b7lich", "scheint", ","], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["PDS", "PPER", "ADJD", "$,", "ADJD", "KON", "ADJD", "VVFIN", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "So Grab- als Leichen-Schrifft empfangen.", "tokens": ["So", "Grab", "als", "Lei\u00b7chen\u00b7Schrifft", "emp\u00b7fan\u00b7gen", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "TRUNC", "KON", "NN", "VVPP", "$."], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.5": {"text": "Denn wie du schreibest, will, nebst dir,", "tokens": ["Denn", "wie", "du", "schrei\u00b7best", ",", "will", ",", "nebst", "dir", ","], "token_info": ["word", "word", "word", "word", "punct", "word", "punct", "word", "word", "punct"], "pos": ["KON", "PWAV", "PPER", "VVFIN", "$,", "VMFIN", "$,", "APPR", "PPER", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.6": {"text": "Mein ", "tokens": ["Mein"], "token_info": ["word"], "pos": ["PPOSAT"], "meter": "-", "measure": "single.down"}, "line.7": {"text": "Wohlan, ich folge eurem Willen,", "tokens": ["Wo\u00b7hlan", ",", "ich", "fol\u00b7ge", "eu\u00b7rem", "Wil\u00b7len", ","], "token_info": ["word", "punct", "word", "word", "word", "word", "punct"], "pos": ["ADV", "$,", "PPER", "VVFIN", "PPOSAT", "NN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.8": {"text": "Und di\u00df Verlangen zu erf\u00fcllen,", "tokens": ["Und", "di\u00df", "Ver\u00b7lan\u00b7gen", "zu", "er\u00b7f\u00fcl\u00b7len", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["KON", "PDS", "NN", "PTKZU", "VVINF", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.9": {"text": "Sprach auch mein werthester ", "tokens": ["Sprach", "auch", "mein", "wert\u00b7hes\u00b7ter"], "token_info": ["word", "word", "word", "word"], "pos": ["NN", "ADV", "PPOSAT", "NN"], "meter": "+--+--", "measure": "dactylic.di.plus"}, "line.10": {"text": "Zu meinem Vorsatz willigst ja.", "tokens": ["Zu", "mei\u00b7nem", "Vor\u00b7satz", "wil\u00b7ligst", "ja", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "PPOSAT", "NN", "VMFIN", "ADV", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.11": {"text": "Ich freue mich, durch seine Schrifften", "tokens": ["Ich", "freu\u00b7e", "mich", ",", "durch", "sei\u00b7ne", "Schriff\u00b7ten"], "token_info": ["word", "word", "word", "punct", "word", "word", "word"], "pos": ["PPER", "VVFIN", "PPER", "$,", "APPR", "PPOSAT", "NN"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.12": {"text": "Viel Frommer Ehrenmahl zu stifften.", "tokens": ["Viel", "From\u00b7mer", "Eh\u00b7ren\u00b7mahl", "zu", "stiff\u00b7ten", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PIAT", "ADJA", "NN", "PTKZU", "VVINF", "$."], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.13": {"text": "Dir aber sey der Vorsicht Huld", "tokens": ["Dir", "a\u00b7ber", "sey", "der", "Vor\u00b7sicht", "Huld"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["PPER", "ADV", "VAFIN", "ART", "NN", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.14": {"text": "Allstets mit ihrem Schutz zur Seiten,", "tokens": ["Alls\u00b7tets", "mit", "ih\u00b7rem", "Schutz", "zur", "Sei\u00b7ten", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "APPR", "PPOSAT", "NN", "APPRART", "NN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.15": {"text": "Bezahle der Natur die Schuld", "tokens": ["Be\u00b7zah\u00b7le", "der", "Na\u00b7tur", "die", "Schuld"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["NN", "ART", "NN", "ART", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.16": {"text": "Nicht eher, als nach sp\u00e4ten Zeiten.", "tokens": ["Nicht", "e\u00b7her", ",", "als", "nach", "sp\u00e4\u00b7ten", "Zei\u00b7ten", "."], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["PTKNEG", "ADV", "$,", "KOUS", "APPR", "ADJA", "NN", "$."], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}}}}}