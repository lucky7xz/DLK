{"dta.poem.3979": {"metadata": {"author": {"name": "Spindler, Christian Gotthold", "birth": "N.A.", "death": "N.A."}, "title": "XxXIX.", "genre": "Lyrik, Drama", "period": "N.A.", "pub_year": "1745", "urn": "urn:nbn:de:kobv:b4-20581-9", "language": ["de:0.99"], "booktitle": "Spindler, Christian Gotthold: Unschuldige Jugend-Fr\u00fcchte. Leipzig, 1745."}, "poem": {"stanza.1": {"line.1": {"text": "Lie\u00df, mehr als grosser Freund, die treu-ergebne", "tokens": ["Lie\u00df", ",", "mehr", "als", "gros\u00b7ser", "Freund", ",", "die", "treu\u00b7er\u00b7geb\u00b7ne"], "token_info": ["word", "punct", "word", "word", "word", "word", "punct", "word", "word"], "pos": ["VVFIN", "$,", "PIAT", "KOKOM", "ADJA", "NN", "$,", "ART", "ADJA"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "Schrifft,", "tokens": ["Schrifft", ","], "token_info": ["word", "punct"], "pos": ["NN", "$,"], "meter": "+", "measure": "single.up"}, "line.3": {"text": "Ich bin dein treuster Knecht, verwirff der Schm\u00e4-", "tokens": ["Ich", "bin", "dein", "treus\u00b7ter", "Knecht", ",", "ver\u00b7wirff", "der", "Schm\u00e4"], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word"], "pos": ["PPER", "VAFIN", "PPOSAT", "ADJA", "NN", "$,", "VVFIN", "ART", "TRUNC"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.4": {"text": "hung Gifft.", "tokens": ["hung", "Gifft", "."], "token_info": ["word", "word", "punct"], "pos": ["NN", "NN", "$."], "meter": "-+", "measure": "iambic.single"}, "line.5": {"text": "Nur glaube nicht von mir, ich sey dir untreu worden,", "tokens": ["Nur", "glau\u00b7be", "nicht", "von", "mir", ",", "ich", "sey", "dir", "un\u00b7treu", "wor\u00b7den", ","], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VVFIN", "PTKNEG", "APPR", "PPER", "$,", "PPER", "VAFIN", "PPER", "ADJD", "VAPP", "$,"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.6": {"text": "Nein, meine Redlichkeit gr\u00fcnt auch an fernen Orte\u0303.", "tokens": ["Nein", ",", "mei\u00b7ne", "Red\u00b7lich\u00b7keit", "gr\u00fcnt", "auch", "an", "fer\u00b7nen", "Or\u00b7t\u1ebd", "."], "token_info": ["word", "punct", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PTKANT", "$,", "PPOSAT", "NN", "VVFIN", "ADV", "APPR", "ADJA", "NN", "$."], "meter": "+--+--+--+--+", "measure": "dactylic.penta"}}}}}