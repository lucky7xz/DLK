{"dta.poem.23430": {"metadata": {"author": {"name": "Hoffmann von Fallersleben, August Heinrich", "birth": "N.A.", "death": "N.A."}, "title": "Der Augenblick.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1841", "urn": "urn:nbn:de:kobv:b4-200905192634", "language": ["de:0.99"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "Die Zukunft und Vergangenheit", "tokens": ["Die", "Zu\u00b7kunft", "und", "Ver\u00b7gan\u00b7gen\u00b7heit"], "token_info": ["word", "word", "word", "word"], "pos": ["ART", "NN", "KON", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Gilt uns, und nicht das Heute;", "tokens": ["Gilt", "uns", ",", "und", "nicht", "das", "Heu\u00b7te", ";"], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "PPER", "$,", "KON", "PTKNEG", "ART", "NN", "$."], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.3": {"text": "Zuk\u00fcnftig sind wir allezeit", "tokens": ["Zu\u00b7k\u00fcnf\u00b7tig", "sind", "wir", "al\u00b7le\u00b7zeit"], "token_info": ["word", "word", "word", "word"], "pos": ["ADJD", "VAFIN", "PPER", "ADV"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "Und sind vergangne Leute.", "tokens": ["Und", "sind", "ver\u00b7gang\u00b7ne", "Leu\u00b7te", "."], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["KON", "VAFIN", "ADJA", "NN", "$."], "meter": "-+-+-+-", "measure": "iambic.tri"}}, "stanza.2": {"line.1": {"text": "Doch Frankreich hofft und harret nicht,", "tokens": ["Doch", "Fran\u00b7kreich", "hofft", "und", "har\u00b7ret", "nicht", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "NE", "VVFIN", "KON", "VVFIN", "PTKNEG", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Es z\u00e4hlt nicht die Sekunden,", "tokens": ["Es", "z\u00e4hlt", "nicht", "die", "Se\u00b7kun\u00b7den", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "PTKNEG", "ART", "NN", "$,"], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.3": {"text": "Bis ihm der helle Tag anbricht", "tokens": ["Bis", "ihm", "der", "hel\u00b7le", "Tag", "an\u00b7bricht"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["APPR", "PPER", "ART", "ADJA", "NN", "VVFIN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "Zum Heilen und Gesunden.", "tokens": ["Zum", "Hei\u00b7len", "und", "Ge\u00b7sun\u00b7den", "."], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["APPRART", "NN", "KON", "NN", "$."], "meter": "-+-+-+-", "measure": "iambic.tri"}}, "stanza.3": {"line.1": {"text": "Es sieht nicht \u00e4ngstlich mehr zur\u00fcck", "tokens": ["Es", "sieht", "nicht", "\u00e4ngst\u00b7lich", "mehr", "zu\u00b7r\u00fcck"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["PPER", "VVFIN", "PTKNEG", "ADJD", "ADV", "PTKVZ"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "In l\u00e4ngst vergangne Zeiten;", "tokens": ["In", "l\u00e4ngst", "ver\u00b7gang\u00b7ne", "Zei\u00b7ten", ";"], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["APPR", "ADV", "ADJA", "NN", "$."], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.3": {"text": "Die Gegenwart soll ihm das Gl\u00fcck", "tokens": ["Die", "Ge\u00b7gen\u00b7wart", "soll", "ihm", "das", "Gl\u00fcck"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["ART", "NN", "VMFIN", "PPER", "ART", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "Und alles Heil bereiten.", "tokens": ["Und", "al\u00b7les", "Heil", "be\u00b7rei\u00b7ten", "."], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["KON", "PIAT", "NN", "VVINF", "$."], "meter": "-+-+-+-", "measure": "iambic.tri"}}, "stanza.4": {"line.1": {"text": "So la\u00dft auch uns nicht immerfort", "tokens": ["So", "la\u00dft", "auch", "uns", "nicht", "im\u00b7mer\u00b7fort"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["ADV", "VVFIN", "ADV", "PPER", "PTKNEG", "ADV"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Nach allen Seiten schweifen,", "tokens": ["Nach", "al\u00b7len", "Sei\u00b7ten", "schwei\u00b7fen", ","], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["APPR", "PIAT", "NN", "VVFIN", "$,"], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.3": {"text": "La\u00dft uns des Lebens treusten Hort:", "tokens": ["La\u00dft", "uns", "des", "Le\u00b7bens", "treus\u00b7ten", "Hort", ":"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVIMP", "PPER", "ART", "NN", "ADJA", "NN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "Den ", "tokens": ["Den"], "token_info": ["word"], "pos": ["ART"], "meter": "+", "measure": "single.up"}}}}}