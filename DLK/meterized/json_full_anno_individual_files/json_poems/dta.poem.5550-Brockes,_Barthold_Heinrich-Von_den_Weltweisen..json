{"dta.poem.5550": {"metadata": {"author": {"name": "Brockes, Barthold Heinrich", "birth": "N.A.", "death": "N.A."}, "title": "Von den Weltweisen.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1730", "urn": "urn:nbn:de:kobv:b4-20087-5", "language": ["de:0.99"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "Man spreche nicht: es sey nur Frechheit, die den Geist", "tokens": ["Man", "spre\u00b7che", "nicht", ":", "es", "sey", "nur", "Frech\u00b7heit", ",", "die", "den", "Geist"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word", "punct", "word", "word", "word"], "pos": ["PIS", "VVFIN", "PTKNEG", "$.", "PPER", "VAFIN", "ADV", "NN", "$,", "PRELS", "ART", "NN"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Mit einer unfruchtbar-und falschen Hoffnung speist,", "tokens": ["Mit", "ei\u00b7ner", "un\u00b7frucht\u00b7ba\u00b7r\u00b7und", "fal\u00b7schen", "Hoff\u00b7nung", "speist", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "ART", "ADJA", "ADJA", "NN", "VVFIN", "$,"], "meter": "-+-+--+-+-+-+", "measure": "iambic.hexa.relaxed"}, "line.3": {"text": "Geheimniss\u2019 auszufinden,", "tokens": ["Ge\u00b7heim\u00b7niss'", "aus\u00b7zu\u00b7fin\u00b7den", ","], "token_info": ["word", "word", "punct"], "pos": ["NN", "VVIZU", "$,"], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.4": {"text": "Die nie ein Mensch verm\u00f6gend zu ergr\u00fcnden.", "tokens": ["Die", "nie", "ein", "Mensch", "ver\u00b7m\u00f6\u00b7gend", "zu", "er\u00b7gr\u00fcn\u00b7den", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADV", "ART", "NN", "VVPP", "PTKZU", "VVINF", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.5": {"text": "Man spreche nicht: es such\u2019 ein\u2019 eitle Wissenschafft", "tokens": ["Man", "spre\u00b7che", "nicht", ":", "es", "such'", "ein'", "eit\u00b7le", "Wis\u00b7sen\u00b7schafft"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word", "word"], "pos": ["PIS", "VVFIN", "PTKNEG", "$.", "PPER", "VVFIN", "ART", "ADJA", "NN"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.6": {"text": "Durch falschen K\u00f6der uns zu t\u00e4uschen, zu betr\u00fcgen.", "tokens": ["Durch", "fal\u00b7schen", "K\u00f6\u00b7der", "uns", "zu", "t\u00e4u\u00b7schen", ",", "zu", "be\u00b7tr\u00fc\u00b7gen", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct", "word", "word", "punct"], "pos": ["APPR", "ADJA", "NN", "PPER", "PTKZU", "VVINF", "$,", "PTKZU", "VVINF", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.7": {"text": "Uns leitet die Vernunfft, sie reitzt durch ihre Krafft", "tokens": ["Uns", "lei\u00b7tet", "die", "Ver\u00b7nunfft", ",", "sie", "reitzt", "durch", "ih\u00b7re", "Krafft"], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "word"], "pos": ["PPER", "VVFIN", "ART", "NN", "$,", "PPER", "VVFIN", "APPR", "PPOSAT", "NN"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.8": {"text": "Zur ", "tokens": ["Zur"], "token_info": ["word"], "pos": ["APPRART"], "meter": "+", "measure": "single.up"}, "line.9": {"text": "Dies ist es eigentlich, was einen Menschen macht,", "tokens": ["Dies", "ist", "es", "ei\u00b7gent\u00b7lich", ",", "was", "ei\u00b7nen", "Men\u00b7schen", "macht", ","], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["PDS", "VAFIN", "PPER", "ADV", "$,", "PRELS", "ART", "NN", "VVFIN", "$,"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.10": {"text": "Und was er wissen soll. Solch edeles-Vergn\u00fcgen", "tokens": ["Und", "was", "er", "wis\u00b7sen", "soll", ".", "Solch", "e\u00b7de\u00b7les\u00b7Ver\u00b7gn\u00fc\u00b7gen"], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word"], "pos": ["KON", "PWS", "PPER", "VVINF", "VMFIN", "$.", "PIAT", "NN"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.11": {"text": "Soll billig einzig und allein", "tokens": ["Soll", "bil\u00b7lig", "ein\u00b7zig", "und", "al\u00b7lein"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["VMFIN", "ADJD", "ADJD", "KON", "ADV"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.12": {"text": "So seine Pflicht, als Endzweck seyn.", "tokens": ["So", "sei\u00b7ne", "Pflicht", ",", "als", "End\u00b7zweck", "seyn", "."], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["ADV", "PPOSAT", "NN", "$,", "KOUS", "NN", "VAINF", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}}}}}