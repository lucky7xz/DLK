{"dta.poem.10955": {"metadata": {"author": {"name": "Brockes, Barthold Heinrich", "birth": "N.A.", "death": "N.A."}, "title": "Eigentlicher Zustand auf Erden.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1740", "urn": "urn:nbn:de:kobv:b4-200905198572", "language": ["de:0.99"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "Sich unsern Erdkreis vorzustellen,", "tokens": ["Sich", "un\u00b7sern", "Erd\u00b7kreis", "vor\u00b7zu\u00b7stel\u00b7len", ","], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["PRF", "PPOSAT", "NN", "VVIZU", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.2": {"text": "Als wie ein Vorgemach der H\u00f6llen,", "tokens": ["Als", "wie", "ein", "Vor\u00b7ge\u00b7mach", "der", "H\u00f6l\u00b7len", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "KOKOM", "ART", "NN", "ART", "NN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.3": {"text": "Und wenigstens, als einen Kerker, den lauter Misseth\u00e4ter f\u00fcllen,", "tokens": ["Und", "we\u00b7nigs\u00b7tens", ",", "als", "ei\u00b7nen", "Ker\u00b7ker", ",", "den", "lau\u00b7ter", "Mis\u00b7set\u00b7h\u00e4\u00b7ter", "f\u00fcl\u00b7len", ","], "token_info": ["word", "word", "punct", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["KON", "ADV", "$,", "KOUS", "ART", "NN", "$,", "ART", "PIAT", "NN", "VVINF", "$,"], "meter": "-+-+-+-+--+-+-+-+-", "measure": "iambic.octa.plus.relaxed"}, "line.4": {"text": "So alle schmerzlich abzuthun; sind schwarze schw\u00e4rmerische", "tokens": ["So", "al\u00b7le", "schmerz\u00b7lich", "ab\u00b7zu\u00b7thun", ";", "sind", "schwar\u00b7ze", "schw\u00e4r\u00b7me\u00b7ri\u00b7sche"], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word"], "pos": ["ADV", "PIAT", "ADJD", "VVIZU", "$.", "VAFIN", "ADJA", "ADJA"], "meter": "-+-+-+-+-+-+-+-", "measure": "iambic.septa"}, "line.5": {"text": "Von unserm Kreis der Erden wollen,", "tokens": ["Von", "un\u00b7serm", "Kreis", "der", "Er\u00b7den", "wol\u00b7len", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "PPOSAT", "NN", "ART", "NN", "VMFIN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.6": {"text": "Da\u00df wir uns stets ergetzen sollen,", "tokens": ["Da\u00df", "wir", "uns", "stets", "er\u00b7get\u00b7zen", "sol\u00b7len", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "PPER", "PRF", "ADV", "VVINF", "VMFIN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.7": {"text": "Und, als in der Eliser Auen, in ungest\u00f6rter Wollust schweben,", "tokens": ["Und", ",", "als", "in", "der", "E\u00b7li\u00b7ser", "Au\u00b7en", ",", "in", "un\u00b7ge\u00b7st\u00f6r\u00b7ter", "Wol\u00b7lust", "schwe\u00b7ben", ","], "token_info": ["word", "punct", "word", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["KON", "$,", "KOUS", "APPR", "ART", "ADJA", "NN", "$,", "APPR", "ADJA", "NN", "VVINF", "$,"], "meter": "-+--+--+--+-+-+-+-", "measure": "amphibrach.tetra.plus"}, "line.8": {"text": "Von aller Widrigkeit befreyt, in Ruh und steten Freuden, leben,", "tokens": ["Von", "al\u00b7ler", "Wid\u00b7rig\u00b7keit", "be\u00b7freyt", ",", "in", "Ruh", "und", "ste\u00b7ten", "Freu\u00b7den", ",", "le\u00b7ben", ","], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct", "word", "punct"], "pos": ["APPR", "PIAT", "NN", "VVPP", "$,", "APPR", "NN", "KON", "ADJA", "NN", "$,", "VVFIN", "$,"], "meter": "-+-+-+-+-+-+-+-+-", "measure": "iambic.octa.plus"}, "line.9": {"text": "Sind Grillen, die ein Sybarith und ein Sardanapal sich macht.", "tokens": ["Sind", "Gril\u00b7len", ",", "die", "ein", "Sy\u00b7ba\u00b7rith", "und", "ein", "Sar\u00b7da\u00b7na\u00b7pal", "sich", "macht", "."], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VAFIN", "NN", "$,", "PRELS", "ART", "NN", "KON", "ART", "NN", "PRF", "VVFIN", "$."], "meter": "-+-+-+-+--+--+-+", "measure": "iambic.septa.relaxed"}, "line.10": {"text": "Gedenken, da\u00df der Erdenkreis, zusammt den Menschen und", "tokens": ["Ge\u00b7den\u00b7ken", ",", "da\u00df", "der", "Er\u00b7den\u00b7kreis", ",", "zu\u00b7sammt", "den", "Men\u00b7schen", "und"], "token_info": ["word", "punct", "word", "word", "word", "punct", "word", "word", "word", "word"], "pos": ["NN", "$,", "KOUS", "ART", "NN", "$,", "VVFIN", "ART", "NN", "KON"], "meter": "-+-+-+-+-+-+-+", "measure": "iambic.septa"}, "line.11": {"text": "Sich, nach des weisen Sch\u00f6pfers Willen, best\u00e4ndig in der Ord-", "tokens": ["Sich", ",", "nach", "des", "wei\u00b7sen", "Sch\u00f6p\u00b7fers", "Wil\u00b7len", ",", "be\u00b7st\u00e4n\u00b7dig", "in", "der", "Ord"], "token_info": ["word", "punct", "word", "word", "word", "word", "word", "punct", "word", "word", "word", "word"], "pos": ["PRF", "$,", "APPR", "ART", "ADJA", "NN", "NN", "$,", "ADJD", "APPR", "ART", "TRUNC"], "meter": "-+-+-+-+--+-+-+", "measure": "iambic.septa.relaxed"}, "line.12": {"text": "Und das seyn, was sie sollen seyn, ist, wie man denken soll, gedacht.", "tokens": ["Und", "das", "seyn", ",", "was", "sie", "sol\u00b7len", "seyn", ",", "ist", ",", "wie", "man", "den\u00b7ken", "soll", ",", "ge\u00b7dacht", "."], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word", "punct", "word", "punct", "word", "word", "word", "word", "punct", "word", "punct"], "pos": ["KON", "ART", "VAINF", "$,", "PRELS", "PPER", "VMFIN", "VAINF", "$,", "VAFIN", "$,", "PWAV", "PIS", "VVINF", "VMFIN", "$,", "VVPP", "$."], "meter": "-++--+-+-+-+-+-+", "measure": "iambic.octa.plus.relaxed"}}}}}