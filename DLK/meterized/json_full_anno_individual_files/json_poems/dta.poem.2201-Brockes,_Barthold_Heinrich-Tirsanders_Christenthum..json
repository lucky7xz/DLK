{"dta.poem.2201": {"metadata": {"author": {"name": "Brockes, Barthold Heinrich", "birth": "N.A.", "death": "N.A."}, "title": "Tirsanders Christenthum.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1748", "urn": "urn:nbn:de:kobv:b4-200905198553", "language": ["de:0.99"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "Tirsander meynt, zum Christenthum geh\u00f6re dieses", "tokens": ["Tir\u00b7san\u00b7der", "meynt", ",", "zum", "Chris\u00b7ten\u00b7thum", "ge\u00b7h\u00f6\u00b7re", "die\u00b7ses"], "token_info": ["word", "word", "punct", "word", "word", "word", "word"], "pos": ["NN", "VVFIN", "$,", "APPRART", "NN", "VVFIN", "PDAT"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "ganz allein:", "tokens": ["ganz", "al\u00b7lein", ":"], "token_info": ["word", "word", "punct"], "pos": ["ADV", "ADV", "$."], "meter": "+-+", "measure": "trochaic.di"}, "line.3": {"text": "Man m\u00fcsse schnell und tapfer glauben; recht steif in seiner", "tokens": ["Man", "m\u00fcs\u00b7se", "schnell", "und", "tap\u00b7fer", "glau\u00b7ben", ";", "recht", "steif", "in", "sei\u00b7ner"], "token_info": ["word", "word", "word", "word", "word", "word", "punct", "word", "word", "word", "word"], "pos": ["PIS", "VMFIN", "ADJD", "KON", "ADJD", "VVINF", "$.", "ADV", "ADJD", "APPR", "PPOSAT"], "meter": "-+-+-+-+--+-+-", "measure": "iambic.hexa.relaxed"}, "line.4": {"text": "Meynung seyn;", "tokens": ["Mey\u00b7nung", "seyn", ";"], "token_info": ["word", "word", "punct"], "pos": ["NN", "VAINF", "$."], "meter": "+-+", "measure": "trochaic.di"}, "line.5": {"text": "Nicht auf ein Haar breit sie verlassen;", "tokens": ["Nicht", "auf", "ein", "Haar", "breit", "sie", "ver\u00b7las\u00b7sen", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PTKNEG", "APPR", "ART", "NN", "ADJD", "PPER", "VVINF", "$."], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.6": {"text": "Mit ihr die Ehre Gottes mischen; diejenigen von Herzen", "tokens": ["Mit", "ihr", "die", "Eh\u00b7re", "Got\u00b7tes", "mi\u00b7schen", ";", "die\u00b7je\u00b7ni\u00b7gen", "von", "Her\u00b7zen"], "token_info": ["word", "word", "word", "word", "word", "word", "punct", "word", "word", "word"], "pos": ["APPR", "PPER", "ART", "NN", "NN", "VVFIN", "$.", "PDS", "APPR", "NN"], "meter": "-+-+-+-+--+-+-+-", "measure": "iambic.septa.relaxed"}, "line.7": {"text": "hassen,", "tokens": ["has\u00b7sen", ","], "token_info": ["word", "punct"], "pos": ["VVFIN", "$,"], "meter": "+-", "measure": "trochaic.single"}, "line.8": {"text": "Die anders glauben, als wir selbst; nach diesem Ha\u00df", "tokens": ["Die", "an\u00b7ders", "glau\u00b7ben", ",", "als", "wir", "selbst", ";", "nach", "die\u00b7sem", "Ha\u00df"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "punct", "word", "word", "word"], "pos": ["ART", "ADV", "VVINF", "$,", "KOUS", "PPER", "ADV", "$.", "APPR", "PDAT", "NN"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.9": {"text": "die falsche Liebe", "tokens": ["die", "fal\u00b7sche", "Lie\u00b7be"], "token_info": ["word", "word", "word"], "pos": ["ART", "ADJA", "NN"], "meter": "-+-+-", "measure": "iambic.di"}, "line.10": {"text": "Zur Gottheit messen; davor halten, der Himmel sey ihm", "tokens": ["Zur", "Got\u00b7theit", "mes\u00b7sen", ";", "da\u00b7vor", "hal\u00b7ten", ",", "der", "Him\u00b7mel", "sey", "ihm"], "token_info": ["word", "word", "word", "punct", "word", "word", "punct", "word", "word", "word", "word"], "pos": ["APPRART", "NN", "VVINF", "$.", "PAV", "VVINF", "$,", "ART", "NN", "VAFIN", "PPER"], "meter": "---+-+-+--+-+-", "measure": "iambic.penta.relaxed"}, "line.11": {"text": "zuerkannt;", "tokens": ["zu\u00b7er\u00b7kannt", ";"], "token_info": ["word", "punct"], "pos": ["VVFIN", "$."], "meter": "+-+", "measure": "trochaic.di"}, "line.12": {"text": "Der christlichen Religion zu Ehren opfern, nicht die", "tokens": ["Der", "christ\u00b7li\u00b7chen", "Re\u00b7li\u00b7gi\u00b7on", "zu", "Eh\u00b7ren", "op\u00b7fern", ",", "nicht", "die"], "token_info": ["word", "word", "word", "word", "word", "word", "punct", "word", "word"], "pos": ["ART", "ADJA", "NN", "APPR", "NN", "VVINF", "$,", "PTKNEG", "ART"], "meter": "-+--+--+-+-+-+-", "measure": "amphibrach.tri.plus"}, "line.13": {"text": "Triebe", "tokens": ["Trie\u00b7be"], "token_info": ["word"], "pos": ["NN"], "meter": "+-", "measure": "trochaic.single"}, "line.14": {"text": "Der Leidenschaften, seine Wollust, den Stolz, den Geiz;", "tokens": ["Der", "Lei\u00b7den\u00b7schaf\u00b7ten", ",", "sei\u00b7ne", "Wol\u00b7lust", ",", "den", "Stolz", ",", "den", "Geiz", ";"], "token_info": ["word", "word", "punct", "word", "word", "punct", "word", "word", "punct", "word", "word", "punct"], "pos": ["ART", "NN", "$,", "PPOSAT", "NN", "$,", "ART", "NN", "$,", "ART", "NN", "$."], "meter": "-+-+-+-+--+-+", "measure": "iambic.hexa.relaxed"}, "line.15": {"text": "nein, den Verstand.", "tokens": ["nein", ",", "den", "Ver\u00b7stand", "."], "token_info": ["word", "punct", "word", "word", "punct"], "pos": ["PTKANT", "$,", "ART", "NN", "$."], "meter": "+--+", "measure": "iambic.di.chol"}}}}}