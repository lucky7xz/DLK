{"dta.poem.19479": {"metadata": {"author": {"name": "Meyer, Conrad Ferdinand", "birth": "N.A.", "death": "N.A."}, "title": "Ein bischen Freude.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1882", "urn": "urn:nbn:de:kobv:b4-200905193933", "language": ["de:0.99"], "booktitle": "Meyer, Conrad Ferdinand: Gedichte. Leipzig, 1882."}, "poem": {"stanza.1": {"line.1": {"text": "Wie heilt sich ein verlassen Herz,", "tokens": ["Wie", "heilt", "sich", "ein", "ver\u00b7las\u00b7sen", "Herz", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["PWAV", "VVFIN", "PRF", "ART", "ADJA", "NN", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Der dunkeln Schwermuth Beute?", "tokens": ["Der", "dun\u00b7keln", "Schwer\u00b7muth", "Beu\u00b7te", "?"], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "NN", "$."], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.3": {"text": "Mit Becher-Rundgel\u00e4ute?", "tokens": ["Mit", "Be\u00b7cher\u00b7Rund\u00b7ge\u00b7l\u00e4u\u00b7te", "?"], "token_info": ["word", "word", "punct"], "pos": ["APPR", "NN", "$."], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.4": {"text": "Mit bitterm Spott? Mit frevlem Scherz?", "tokens": ["Mit", "bit\u00b7term", "Spott", "?", "Mit", "frev\u00b7lem", "Scherz", "?"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["APPR", "ADJA", "NN", "$.", "APPR", "ADJA", "NN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.5": {"text": "Nein. Mit ein bischen Freude!", "tokens": ["Nein", ".", "Mit", "ein", "bi\u00b7schen", "Freu\u00b7de", "!"], "token_info": ["word", "punct", "word", "word", "word", "word", "punct"], "pos": ["PTKANT", "$.", "APPR", "ART", "ADJA", "NN", "$."], "meter": "+-+--+-", "measure": "pherekrateus"}}, "stanza.2": {"line.1": {"text": "Wie flicht sich ein zerrissner Kranz,", "tokens": ["Wie", "flicht", "sich", "ein", "zer\u00b7riss\u00b7ner", "Kranz", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["PWAV", "VVFIN", "PRF", "ART", "ADJA", "NN", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Den jach der Sturm zerstreute?", "tokens": ["Den", "jach", "der", "Sturm", "zer\u00b7streu\u00b7te", "?"], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "ART", "NN", "VVFIN", "$."], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.3": {"text": "Wie kn\u00fcpft sich der erneute?", "tokens": ["Wie", "kn\u00fcpft", "sich", "der", "er\u00b7neu\u00b7te", "?"], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PWAV", "VVFIN", "PRF", "ART", "ADJA", "$."], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.4": {"text": "Mit welchem Endchen bunten Bands?", "tokens": ["Mit", "wel\u00b7chem", "End\u00b7chen", "bun\u00b7ten", "Bands", "?"], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "PWAT", "NN", "ADJA", "NN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.5": {"text": "Mit nur ein bischen Freude!", "tokens": ["Mit", "nur", "ein", "bi\u00b7schen", "Freu\u00b7de", "!"], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "ADV", "ART", "ADJA", "NN", "$."], "meter": "+-+--+-", "measure": "pherekrateus"}}}}}