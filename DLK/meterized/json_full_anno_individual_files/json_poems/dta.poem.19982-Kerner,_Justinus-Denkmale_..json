{"dta.poem.19982": {"metadata": {"author": {"name": "Kerner, Justinus", "birth": "N.A.", "death": "N.A."}, "title": "Denkmale .", "genre": "Lyrik", "period": "N.A.", "pub_year": "1826", "urn": "urn:nbn:de:kobv:b4-200905193111", "language": ["de:0.99"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "Arm, preisgegeben jeglicher Beschwerde,", "tokens": ["Arm", ",", "preis\u00b7ge\u00b7ge\u00b7ben", "jeg\u00b7li\u00b7cher", "Be\u00b7schwer\u00b7de", ","], "token_info": ["word", "punct", "word", "word", "word", "punct"], "pos": ["NN", "$,", "VVFIN", "PIAT", "NN", "$,"], "meter": "+--+-+-+-+-", "measure": "iambic.penta.invert"}, "line.2": {"text": "Vom undankbaren Heimatland vertrieben,", "tokens": ["Vom", "un\u00b7dank\u00b7ba\u00b7ren", "Hei\u00b7mat\u00b7land", "ver\u00b7trie\u00b7ben", ","], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["APPRART", "ADJA", "NN", "VVPP", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Sah er empor von dieser kalten Erde,", "tokens": ["Sah", "er", "em\u00b7por", "von", "die\u00b7ser", "kal\u00b7ten", "Er\u00b7de", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "PPER", "PTKVZ", "APPR", "PDAT", "ADJA", "NN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.4": {"text": "Und lernte recht die warmen Sonnen lieben.", "tokens": ["Und", "lern\u00b7te", "recht", "die", "war\u00b7men", "Son\u00b7nen", "lie\u00b7ben", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "VVFIN", "ADV", "ART", "ADJA", "NN", "VVINF", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.5": {"text": "Der Erd' entlehntes Licht er gern entbehrte,", "tokens": ["Der", "Erd'", "ent\u00b7lehn\u00b7tes", "Licht", "er", "gern", "ent\u00b7behr\u00b7te", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "ADJA", "NN", "PPER", "ADV", "VVFIN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.6": {"text": "War ihm die hell're Heimat doch geblieben,", "tokens": ["War", "ihm", "die", "hell'\u00b7re", "Hei\u00b7mat", "doch", "ge\u00b7blie\u00b7ben", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VAFIN", "PPER", "ART", "ADJA", "NN", "ADV", "VVPP", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.7": {"text": "Von Sonnengold sein hehres Haupt umflossen,", "tokens": ["Von", "Son\u00b7nen\u00b7gold", "sein", "heh\u00b7res", "Haupt", "um\u00b7flos\u00b7sen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "NN", "PPOSAT", "ADJA", "NN", "VVINF", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.8": {"text": "Standen die Himmel all' ihm aufgeschlossen.", "tokens": ["Stan\u00b7den", "die", "Him\u00b7mel", "all'", "ihm", "auf\u00b7ge\u00b7schlos\u00b7sen", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["NN", "ART", "NN", "PIS", "PPER", "VVPP", "$."], "meter": "+--+-+-+-+-", "measure": "iambic.penta.invert"}}, "stanza.2": {"line.1": {"text": "Ihn schlossen sie in starre Felsen ein,", "tokens": ["Ihn", "schlos\u00b7sen", "sie", "in", "star\u00b7re", "Fel\u00b7sen", "ein", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "PPER", "APPR", "ADJA", "NN", "PTKVZ", "$,"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.2": {"text": "Ihn, dem zu eng der Erde weite Lande.", "tokens": ["Ihn", ",", "dem", "zu", "eng", "der", "Er\u00b7de", "wei\u00b7te", "Lan\u00b7de", "."], "token_info": ["word", "punct", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "$,", "PRELS", "PTKA", "ADJD", "ART", "NN", "ADJA", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Er doch, voll Kraft, zerbrach den Felsenstein,", "tokens": ["Er", "doch", ",", "voll", "Kraft", ",", "zer\u00b7brach", "den", "Fel\u00b7sen\u00b7stein", ","], "token_info": ["word", "word", "punct", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["PPER", "ADV", "$,", "ADJD", "NN", "$,", "VVFIN", "ART", "NN", "$,"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.4": {"text": "Und lie\u00df sich abw\u00e4rts am unsichern Bande.", "tokens": ["Und", "lie\u00df", "sich", "ab\u00b7w\u00e4rts", "am", "un\u00b7si\u00b7chern", "Ban\u00b7de", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "VVFIN", "PRF", "ADV", "APPRART", "ADJA", "NN", "$."], "meter": "-+-+--+--+-", "measure": "iambic.tetra.relaxed"}, "line.5": {"text": "Da fanden sie im bleichen Mondenschein", "tokens": ["Da", "fan\u00b7den", "sie", "im", "blei\u00b7chen", "Mon\u00b7den\u00b7schein"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["ADV", "VVFIN", "PPER", "APPRART", "ADJA", "NN"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.6": {"text": "Zerschmettert ihn, zerrissen die Gewande.", "tokens": ["Zer\u00b7schmet\u00b7tert", "ihn", ",", "zer\u00b7ris\u00b7sen", "die", "Ge\u00b7wan\u00b7de", "."], "token_info": ["word", "word", "punct", "word", "word", "word", "punct"], "pos": ["VVFIN", "PPER", "$,", "VVFIN", "ART", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.7": {"text": "Weh! Muttererde, da\u00df mit linden Armen", "tokens": ["Weh", "!", "Mut\u00b7ter\u00b7er\u00b7de", ",", "da\u00df", "mit", "lin\u00b7den", "Ar\u00b7men"], "token_info": ["word", "punct", "word", "punct", "word", "word", "word", "word"], "pos": ["NN", "$.", "NN", "$,", "KOUS", "APPR", "ADJA", "NN"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.8": {"text": "Du ihn nicht auffiengst, sch\u00fctzend, voll Erbarmen.", "tokens": ["Du", "ihn", "nicht", "auf\u00b7fiengst", ",", "sch\u00fct\u00b7zend", ",", "voll", "Er\u00b7bar\u00b7men", "."], "token_info": ["word", "word", "word", "word", "punct", "word", "punct", "word", "word", "punct"], "pos": ["PPER", "PPER", "PTKNEG", "VVFIN", "$,", "ADJD", "$,", "ADJD", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}, "stanza.3": {"line.1": {"text": "Ihn stie\u00dfen sie aus frischen Lebensg\u00e4rten", "tokens": ["Ihn", "stie\u00b7\u00dfen", "sie", "aus", "fri\u00b7schen", "Le\u00b7bens\u00b7g\u00e4r\u00b7ten"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["PPER", "VVFIN", "PPER", "APPR", "ADJA", "NN"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "In dunkle, modernde Gew\u00f6lbe nieder,", "tokens": ["In", "dunk\u00b7le", ",", "mo\u00b7dern\u00b7de", "Ge\u00b7w\u00f6l\u00b7be", "nie\u00b7der", ","], "token_info": ["word", "word", "punct", "word", "word", "word", "punct"], "pos": ["APPR", "ADJA", "$,", "ADJA", "NN", "PTKVZ", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Mit Ketten seine H\u00e4nde sie beschwerten:", "tokens": ["Mit", "Ket\u00b7ten", "sei\u00b7ne", "H\u00e4n\u00b7de", "sie", "be\u00b7schwer\u00b7ten", ":"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "NN", "PPOSAT", "NN", "PPER", "VVFIN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.4": {"text": "Da stiegen Heil'ge liebend zu ihm nieder,", "tokens": ["Da", "stie\u00b7gen", "Heil'\u00b7ge", "lie\u00b7bend", "zu", "ihm", "nie\u00b7der", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "ADJA", "NN", "ADJD", "APPR", "PPER", "PTKVZ", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.5": {"text": "Und wurden fortan Freund' ihm und Gef\u00e4hrten;", "tokens": ["Und", "wur\u00b7den", "for\u00b7tan", "Freund'", "ihm", "und", "Ge\u00b7f\u00e4hr\u00b7ten", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "VAFIN", "ADV", "NN", "PPER", "KON", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.6": {"text": "So sang begeistert er die frommen Lieder.", "tokens": ["So", "sang", "be\u00b7geis\u00b7tert", "er", "die", "from\u00b7men", "Lie\u00b7der", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "ADJD", "VVFIN", "PPER", "ART", "ADJA", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.7": {"text": "Und als den Kerker sie ihm aufgeschlossen,", "tokens": ["Und", "als", "den", "Ker\u00b7ker", "sie", "ihm", "auf\u00b7ge\u00b7schlos\u00b7sen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "KOUS", "ART", "NN", "PPER", "PPER", "VVPP", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.8": {"text": "Schien ihm die Welt von Graun und Nacht umflossen.", "tokens": ["Schien", "ihm", "die", "Welt", "von", "Graun", "und", "Nacht", "um\u00b7flos\u00b7sen", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "PPER", "ART", "NN", "APPR", "NE", "KON", "NN", "VVINF", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}}}}