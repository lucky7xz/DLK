{"textgrid.poem.63061": {"metadata": {"author": {"name": "Klabund", "birth": "N.A.", "death": "N.A."}, "title": "Der Blinde", "genre": "verse", "period": "N.A.", "pub_year": 1909, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Sie nennen immer eine Farbe", "tokens": ["Sie", "nen\u00b7nen", "im\u00b7mer", "ei\u00b7ne", "Far\u00b7be"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["PPER", "VVFIN", "ADV", "ART", "NN"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.2": {"text": "Und nennen etwas rot und bunt,", "tokens": ["Und", "nen\u00b7nen", "et\u00b7was", "rot", "und", "bunt", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "VVFIN", "ADV", "ADJD", "KON", "ADJD", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.3": {"text": "Und golden sei die Garbe", "tokens": ["Und", "gol\u00b7den", "sei", "die", "Gar\u00b7be"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["KON", "ADJD", "VAFIN", "ART", "NN"], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.4": {"text": "Und blau des Himmels riesig Rund.", "tokens": ["Und", "blau", "des", "Him\u00b7mels", "rie\u00b7sig", "Rund", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "ADJD", "ART", "NN", "ADJD", "ADJD", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.5": {"text": "Was wei\u00df denn ich von Rose, Mensch und Ziege?", "tokens": ["Was", "wei\u00df", "denn", "ich", "von", "Ro\u00b7se", ",", "Mensch", "und", "Zie\u00b7ge", "?"], "token_info": ["word", "word", "word", "word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["PWS", "VVFIN", "KON", "PPER", "APPR", "NE", "$,", "NN", "KON", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.6": {"text": "Mir ist die Welt ein tr\u00fcbes Loch,", "tokens": ["Mir", "ist", "die", "Welt", "ein", "tr\u00fc\u00b7bes", "Loch", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VAFIN", "ART", "NN", "ART", "ADJA", "NN", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.7": {"text": "In das ich mit gebrochnen Gliedern kroch,", "tokens": ["In", "das", "ich", "mit", "ge\u00b7broch\u00b7nen", "Glie\u00b7dern", "kroch", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "PRELS", "PPER", "APPR", "ADJA", "NN", "VVFIN", "$,"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.8": {"text": "Und nun, ein stummer Stein, am Boden liege.", "tokens": ["Und", "nun", ",", "ein", "stum\u00b7mer", "Stein", ",", "am", "Bo\u00b7den", "lie\u00b7ge", "."], "token_info": ["word", "word", "punct", "word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["KON", "ADV", "$,", "ART", "ADJA", "NN", "$,", "APPRART", "NN", "VVFIN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.9": {"text": "Sie sagen, ich h\u00e4tte Augen. Wo,", "tokens": ["Sie", "sa\u00b7gen", ",", "ich", "h\u00e4t\u00b7te", "Au\u00b7gen", ".", "Wo", ","], "token_info": ["word", "word", "punct", "word", "word", "word", "punct", "word", "punct"], "pos": ["PPER", "VVFIN", "$,", "PPER", "VAFIN", "NN", "$.", "PWAV", "$,"], "meter": "-+--+-+-+", "measure": "iambic.tetra.relaxed"}, "line.10": {"text": "Wo sind sie? Sie sagen immer: sehen,", "tokens": ["Wo", "sind", "sie", "?", "Sie", "sa\u00b7gen", "im\u00b7mer", ":", "se\u00b7hen", ","], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "punct", "word", "punct"], "pos": ["PWAV", "VAFIN", "PPER", "$.", "PPER", "VVFIN", "ADV", "$.", "VVINF", "$,"], "meter": "+-+-+-+-+-", "measure": "trochaic.penta"}, "line.11": {"text": "Und meinen: mit Gedanken weit \u00fcber die Wiese gehen.", "tokens": ["Und", "mei\u00b7nen", ":", "mit", "Ge\u00b7dan\u00b7ken", "weit", "\u00fc\u00b7ber", "die", "Wie\u00b7se", "ge\u00b7hen", "."], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "VVFIN", "$.", "APPR", "NN", "ADJD", "APPR", "ART", "NN", "VVINF", "$."], "meter": "-+-+-+-+---+-+-", "measure": "unknown.measure.hexa"}, "line.12": {"text": "Sie lachen mich aus: Blinder, sei froh,", "tokens": ["Sie", "la\u00b7chen", "mich", "aus", ":", "Blin\u00b7der", ",", "sei", "froh", ","], "token_info": ["word", "word", "word", "word", "punct", "word", "punct", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "PPER", "PTKVZ", "$.", "NN", "$,", "VAFIN", "ADJD", "$,"], "meter": "-+-+-+--+", "measure": "iambic.tetra.chol"}, "line.13": {"text": "Da\u00df du die Welt nicht siehst, h\u00e4\u00dflich ist sie und schwarz.", "tokens": ["Da\u00df", "du", "die", "Welt", "nicht", "siehst", ",", "h\u00e4\u00df\u00b7lich", "ist", "sie", "und", "schwarz", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "PPER", "ART", "NN", "PTKNEG", "VVFIN", "$,", "ADJD", "VAFIN", "PPER", "KON", "ADJD", "$."], "meter": "-+-+--+-+--+", "measure": "iambic.penta.relaxed"}, "line.14": {"text": "Aber schwarz: was ist das? Ich w\u00fc\u00dft es, wenn ich sehend w\u00e4r.", "tokens": ["A\u00b7ber", "schwarz", ":", "was", "ist", "das", "?", "Ich", "w\u00fc\u00dft", "es", ",", "wenn", "ich", "se\u00b7hend", "w\u00e4r", "."], "token_info": ["word", "word", "punct", "word", "word", "word", "punct", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["KON", "ADJD", "$.", "PWS", "VAFIN", "PDS", "$.", "PPER", "VVFIN", "PPER", "$,", "KOUS", "PPER", "VVPP", "VAFIN", "$."], "meter": "+-+-++-+-+-+-+", "measure": "unknown.measure.octa.plus"}, "line.15": {"text": "Ich f\u00fchle nur dies: ich bin mir selbst so lastend schwer...", "tokens": ["Ich", "f\u00fch\u00b7le", "nur", "dies", ":", "ich", "bin", "mir", "selbst", "so", "las\u00b7tend", "schwer", "..."], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "ADV", "PDS", "$.", "PPER", "VAFIN", "PPER", "ADV", "ADV", "ADJD", "ADJD", "$("], "meter": "-+--+-+-+-+-+", "measure": "iambic.hexa.relaxed"}, "line.16": {"text": "Vom Baume meines Seins tropft meine Seele wie Harz.", "tokens": ["Vom", "Bau\u00b7me", "mei\u00b7nes", "Seins", "tropft", "mei\u00b7ne", "See\u00b7le", "wie", "Harz", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPRART", "NN", "PPOSAT", "NN", "VVFIN", "PPOSAT", "NN", "KOKOM", "NE", "$."], "meter": "-+-+-+-+-+--+", "measure": "iambic.hexa.chol.strict"}}}}}