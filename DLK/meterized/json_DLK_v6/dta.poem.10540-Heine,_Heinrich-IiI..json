{"dta.poem.10540": {"metadata": {"author": {"name": "Heine, Heinrich", "birth": "N.A.", "death": "N.A."}, "title": "IiI.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1827", "urn": "urn:nbn:de:kobv:b4-200905192211", "language": ["de:0.99"], "booktitle": "Heine, Heinrich: Buch der Lieder. Hamburg, 1827."}, "poem": {"stanza.1": {"line.1": {"text": "Der kranke Sohn und die Mutter,", "tokens": ["Der", "kran\u00b7ke", "Sohn", "und", "die", "Mut\u00b7ter", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "KON", "ART", "NN", "$,"], "meter": "-+-+--+-", "measure": "iambic.tri.relaxed"}, "line.2": {"text": "Die schliefen im K\u00e4mmerlein;", "tokens": ["Die", "schlie\u00b7fen", "im", "K\u00e4m\u00b7mer\u00b7lein", ";"], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["PDS", "VVFIN", "APPRART", "NN", "$."], "meter": "-+--+-+", "measure": "iambic.tri.relaxed"}, "line.3": {"text": "Da kam die Mutter Gottes", "tokens": ["Da", "kam", "die", "Mut\u00b7ter", "Got\u00b7tes"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["ADV", "VVFIN", "ART", "NN", "NN"], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.4": {"text": "Ganz leise geschritten herein.", "tokens": ["Ganz", "lei\u00b7se", "ge\u00b7schrit\u00b7ten", "her\u00b7ein", "."], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["ADV", "ADJD", "VVPP", "PTKVZ", "$."], "meter": "-+--+--+", "measure": "prosodiakos"}}, "stanza.2": {"line.1": {"text": "Sie beugte sich \u00fcber den Kranken,", "tokens": ["Sie", "beug\u00b7te", "sich", "\u00fc\u00b7ber", "den", "Kran\u00b7ken", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "PRF", "APPR", "ART", "NN", "$,"], "meter": "-+--+--+-", "measure": "amphibrach.tri"}, "line.2": {"text": "Und legte ihre Hand", "tokens": ["Und", "leg\u00b7te", "ih\u00b7re", "Hand"], "token_info": ["word", "word", "word", "word"], "pos": ["KON", "VVFIN", "PPOSAT", "NN"], "meter": "-+-+-+", "measure": "iambic.tri"}, "line.3": {"text": "Ganz leise auf sein Herze,", "tokens": ["Ganz", "lei\u00b7se", "auf", "sein", "Her\u00b7ze", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "ADJD", "APPR", "PPOSAT", "VVFIN", "$,"], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.4": {"text": "Und l\u00e4chelte mild und schwand.", "tokens": ["Und", "l\u00e4\u00b7chel\u00b7te", "mild", "und", "schwand", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["KON", "VVFIN", "ADJD", "KON", "VVFIN", "$."], "meter": "-+--+-+", "measure": "iambic.tri.relaxed"}}, "stanza.3": {"line.1": {"text": "Die Mutter schaut Alles im Traume,", "tokens": ["Die", "Mut\u00b7ter", "schaut", "Al\u00b7les", "im", "Trau\u00b7me", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VVFIN", "PIS", "APPRART", "NN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.2": {"text": "Und hat noch mehr geschaut;", "tokens": ["Und", "hat", "noch", "mehr", "ge\u00b7schaut", ";"], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["KON", "VAFIN", "ADV", "ADV", "VVPP", "$."], "meter": "-+-+-+", "measure": "iambic.tri"}, "line.3": {"text": "Sie erwachte aus dem Schlummer,", "tokens": ["Sie", "er\u00b7wach\u00b7te", "aus", "dem", "Schlum\u00b7mer", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "APPR", "ART", "NN", "$,"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.4": {"text": "Die Hunde bellten zu laut.", "tokens": ["Die", "Hun\u00b7de", "bell\u00b7ten", "zu", "laut", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VVFIN", "PTKA", "ADJD", "$."], "meter": "-+-+--+", "measure": "iambic.tri.chol"}}, "stanza.4": {"line.1": {"text": "Da lag dahingestrecket", "tokens": ["Da", "lag", "da\u00b7hin\u00b7ge\u00b7stre\u00b7cket"], "token_info": ["word", "word", "word"], "pos": ["ADV", "VVFIN", "PAV"], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.2": {"text": "Ihr Sohn, und der war todt;", "tokens": ["Ihr", "Sohn", ",", "und", "der", "war", "todt", ";"], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["PPOSAT", "NN", "$,", "KON", "ART", "VAFIN", "ADJD", "$."], "meter": "-+-+-+", "measure": "iambic.tri"}, "line.3": {"text": "Es spielt auf den bleichen Wangen", "tokens": ["Es", "spielt", "auf", "den", "blei\u00b7chen", "Wan\u00b7gen"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["PPER", "VVFIN", "APPR", "ART", "ADJA", "NN"], "meter": "-+--+-+-", "measure": "iambic.tri.relaxed"}, "line.4": {"text": "Das lichte Morgenroth.", "tokens": ["Das", "lich\u00b7te", "Mor\u00b7gen\u00b7roth", "."], "token_info": ["word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "$."], "meter": "-+-+-+", "measure": "iambic.tri"}}, "stanza.5": {"line.1": {"text": "Die Mutter faltet die H\u00e4nde,", "tokens": ["Die", "Mut\u00b7ter", "fal\u00b7tet", "die", "H\u00e4n\u00b7de", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VVFIN", "ART", "NN", "$,"], "meter": "-+-+--+-", "measure": "iambic.tri.relaxed"}, "line.2": {"text": "Ihr war, sie wu\u00dfte nicht wie;", "tokens": ["Ihr", "war", ",", "sie", "wu\u00df\u00b7te", "nicht", "wie", ";"], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VAFIN", "$,", "PPER", "VVFIN", "PTKNEG", "KOKOM", "$."], "meter": "-+-+--+", "measure": "iambic.tri.chol"}, "line.3": {"text": "And\u00e4chtig sang sie leise:", "tokens": ["An\u00b7d\u00e4ch\u00b7tig", "sang", "sie", "lei\u00b7se", ":"], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["ADJD", "VVFIN", "PPER", "ADJD", "$."], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.4": {"text": "Gelobt sey'st du, Marie!", "tokens": ["Ge\u00b7lobt", "sey'st", "du", ",", "Ma\u00b7rie", "!"], "token_info": ["word", "word", "word", "punct", "word", "punct"], "pos": ["VVPP", "VAFIN", "PPER", "$,", "NE", "$."], "meter": "-+-+-+", "measure": "iambic.tri"}}}}}