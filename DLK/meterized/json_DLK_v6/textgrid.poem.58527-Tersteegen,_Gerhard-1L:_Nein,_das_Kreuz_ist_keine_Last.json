{"textgrid.poem.58527": {"metadata": {"author": {"name": "Tersteegen, Gerhard", "birth": "N.A.", "death": "N.A."}, "title": "1L: Nein, das Kreuz ist keine Last", "genre": "verse", "period": "N.A.", "pub_year": 1733, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Nein, das Kreuz ist keine Last", "tokens": ["Nein", ",", "das", "Kreuz", "ist", "kei\u00b7ne", "Last"], "token_info": ["word", "punct", "word", "word", "word", "word", "word"], "pos": ["PTKANT", "$,", "ART", "NN", "VAFIN", "PIAT", "NN"], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.2": {"text": "Als der Seele nur, die's ha\u00dft;", "tokens": ["Als", "der", "See\u00b7le", "nur", ",", "die's", "ha\u00dft", ";"], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "punct"], "pos": ["KOUS", "ART", "NN", "ADV", "$,", "PDS", "VVFIN", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.3": {"text": "Wer's mit Liebe will umfassen", "tokens": ["Wer's", "mit", "Lie\u00b7be", "will", "um\u00b7fas\u00b7sen"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["VAFIN", "APPR", "NN", "VMFIN", "VVINF"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.4": {"text": "Und sich kindlich Gott kann lassen,", "tokens": ["Und", "sich", "kind\u00b7lich", "Gott", "kann", "las\u00b7sen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "PRF", "ADJD", "NN", "VMFIN", "VVINF", "$,"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.5": {"text": "Der mag bei des Kreuzes Pein", "tokens": ["Der", "mag", "bei", "des", "Kreu\u00b7zes", "Pein"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["PDS", "VMFIN", "APPR", "ART", "NN", "NN"], "meter": "-+--+-+", "measure": "iambic.tri.relaxed"}, "line.6": {"text": "Innig still und freudig sein.", "tokens": ["In\u00b7nig", "still", "und", "freu\u00b7dig", "sein", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "ADJD", "KON", "ADJD", "VAINF", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}}, "stanza.2": {"line.1": {"text": "Eigenwille, klage nur,", "tokens": ["Ei\u00b7gen\u00b7wil\u00b7le", ",", "kla\u00b7ge", "nur", ","], "token_info": ["word", "punct", "word", "word", "punct"], "pos": ["NN", "$,", "VVFIN", "ADV", "$,"], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.2": {"text": "Murret, Sinne und Natur!", "tokens": ["Mur\u00b7ret", ",", "Sin\u00b7ne", "und", "Na\u00b7tur", "!"], "token_info": ["word", "punct", "word", "word", "word", "punct"], "pos": ["NE", "$,", "NN", "KON", "NN", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.3": {"text": "Ihr m\u00fc\u00dft klagen, ihr m\u00fc\u00dft sterben,", "tokens": ["Ihr", "m\u00fc\u00dft", "kla\u00b7gen", ",", "ihr", "m\u00fc\u00dft", "ster\u00b7ben", ","], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["PPER", "VMFIN", "VVINF", "$,", "PPER", "VMFIN", "VVINF", "$,"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.4": {"text": "Wenn der Geist nicht soll verderben;", "tokens": ["Wenn", "der", "Geist", "nicht", "soll", "ver\u00b7der\u00b7ben", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "ART", "NN", "PTKNEG", "VMFIN", "VVFIN", "$."], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.5": {"text": "Kreuz ist gut und lieb und leicht,", "tokens": ["Kreuz", "ist", "gut", "und", "lieb", "und", "leicht", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["NN", "VAFIN", "ADJD", "KON", "ADJD", "KON", "ADJD", "$,"], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.6": {"text": "Weil es Gottes Liebe reicht.", "tokens": ["Weil", "es", "Got\u00b7tes", "Lie\u00b7be", "reicht", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "PPER", "NN", "NN", "VVFIN", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}}}}}