{"textgrid.poem.40981": {"metadata": {"author": {"name": "Kerner, Justinus", "birth": "N.A.", "death": "N.A."}, "title": "Herzenslast", "genre": "verse", "period": "N.A.", "pub_year": 1824, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "F\u00fchlt seines B\u00fcndels Dr\u00fccken", "tokens": ["F\u00fchlt", "sei\u00b7nes", "B\u00fcn\u00b7dels", "Dr\u00fc\u00b7cken"], "token_info": ["word", "word", "word", "word"], "pos": ["VVFIN", "PPOSAT", "NN", "NN"], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.2": {"text": "Der m\u00fcde Wandersmann,", "tokens": ["Der", "m\u00fc\u00b7de", "Wan\u00b7ders\u00b7mann", ","], "token_info": ["word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "$,"], "meter": "-+-+-+", "measure": "iambic.tri"}, "line.3": {"text": "Schnallt er die Last vom R\u00fccken,", "tokens": ["Schnallt", "er", "die", "Last", "vom", "R\u00fc\u00b7cken", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "PPER", "ART", "NN", "APPRART", "NN", "$,"], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.4": {"text": "Sucht, wo er ruhen kann.", "tokens": ["Sucht", ",", "wo", "er", "ru\u00b7hen", "kann", "."], "token_info": ["word", "punct", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "$,", "PWAV", "PPER", "VVINF", "VMFIN", "$."], "meter": "+--+-+", "measure": "iambic.tri.invert"}}, "stanza.2": {"line.1": {"text": "Den Rock zieht er herunter,", "tokens": ["Den", "Rock", "zieht", "er", "her\u00b7un\u00b7ter", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VVFIN", "PPER", "PTKVZ", "$,"], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.2": {"text": "Deucht er ihm allzu schwer,", "tokens": ["Deucht", "er", "ihm", "all\u00b7zu", "schwer", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["NN", "PPER", "PPER", "PTKA", "ADJD", "$,"], "meter": "-+-+-+", "measure": "iambic.tri"}, "line.3": {"text": "Und gehet noch so munter", "tokens": ["Und", "ge\u00b7het", "noch", "so", "mun\u00b7ter"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["KON", "VVFIN", "ADV", "ADV", "ADJD"], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.4": {"text": "Im leichten Hemd einher.", "tokens": ["Im", "leich\u00b7ten", "Hemd", "ein\u00b7her", "."], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["APPRART", "ADJA", "NN", "PTKVZ", "$."], "meter": "-+-+-+", "measure": "iambic.tri"}}, "stanza.3": {"line.1": {"text": "Ablegen doch kann nimmer", "tokens": ["Ab\u00b7le\u00b7gen", "doch", "kann", "nim\u00b7mer"], "token_info": ["word", "word", "word", "word"], "pos": ["NN", "ADV", "VMFIN", "ADV"], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.2": {"text": "Der M\u00fcde ", "tokens": ["Der", "M\u00fc\u00b7de"], "token_info": ["word", "word"], "pos": ["ART", "NN"], "meter": "-+-", "measure": "amphibrach.single"}, "line.3": {"text": "Durch Berg und Tal ohn' Rast;", "tokens": ["Durch", "Berg", "und", "Tal", "ohn'", "Rast", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "NN", "KON", "NN", "APPR", "NN", "$."], "meter": "-+-+-+", "measure": "iambic.tri"}}, "stanza.4": {"line.1": {"text": "An seine Brust mit Schmerz:", "tokens": ["An", "sei\u00b7ne", "Brust", "mit", "Schmerz", ":"], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "PPOSAT", "NN", "APPR", "NN", "$."], "meter": "-+-+-+", "measure": "iambic.tri"}, "line.2": {"text": "Das ist in enger Kammer", "tokens": ["Das", "ist", "in", "en\u00b7ger", "Kam\u00b7mer"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["PDS", "VAFIN", "APPR", "ADJA", "NN"], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.3": {"text": "Das volle Menschenherz.", "tokens": ["Das", "vol\u00b7le", "Men\u00b7schen\u00b7herz", "."], "token_info": ["word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "$."], "meter": "-+-+-+", "measure": "iambic.tri"}}}}}