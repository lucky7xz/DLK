{"textgrid.poem.36750": {"metadata": {"author": {"name": "Waiblinger, Wilhelm", "birth": "N.A.", "death": "N.A."}, "title": "7. Christus und die Apostel", "genre": "verse", "period": "N.A.", "pub_year": 1817, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Hoh' und g\u00f6ttlich erscheint der Lehrer der Erde den J\u00fcngern,", "tokens": ["Hoh'", "und", "g\u00f6tt\u00b7lich", "er\u00b7scheint", "der", "Leh\u00b7rer", "der", "Er\u00b7de", "den", "J\u00fcn\u00b7gern", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["NE", "KON", "ADJD", "VVFIN", "ART", "NN", "ART", "NN", "ART", "NN", "$,"], "meter": "+-+--+-+--+--+-", "measure": "hexameter"}, "line.2": {"text": "Wie sie auch seien, du siehst immer den Einzigen an.", "tokens": ["Wie", "sie", "auch", "sei\u00b7en", ",", "du", "siehst", "im\u00b7mer", "den", "Ein\u00b7zi\u00b7gen", "an", "."], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PWAV", "PPER", "ADV", "VAFIN", "$,", "PPER", "VVFIN", "ADV", "ART", "NN", "PTKVZ", "$."], "meter": "-+-+--+-+-+--+", "measure": "iambic.hexa.relaxed"}, "line.3": {"text": "Also blendet den sterblichen Blick unsterbliche Gr\u00f6\u00dfe,", "tokens": ["Al\u00b7so", "blen\u00b7det", "den", "sterb\u00b7li\u00b7chen", "Blick", "uns\u00b7terb\u00b7li\u00b7che", "Gr\u00f6\u00b7\u00dfe", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VVFIN", "ART", "ADJA", "NN", "ADJA", "NN", "$,"], "meter": "+-+--+--+-+--+-", "measure": "hexameter"}, "line.4": {"text": "Also stehst du allein unter den J\u00fcngern auch da.", "tokens": ["Al\u00b7so", "stehst", "du", "al\u00b7lein", "un\u00b7ter", "den", "J\u00fcn\u00b7gern", "auch", "da", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VVFIN", "PPER", "ADV", "APPR", "ART", "NN", "ADV", "ADV", "$."], "meter": "+-+-+-+--+--+", "measure": "trochaic.hexa.relaxed"}}}}}