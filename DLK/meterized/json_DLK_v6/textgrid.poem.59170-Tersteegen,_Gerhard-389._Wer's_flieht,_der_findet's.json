{"textgrid.poem.59170": {"metadata": {"author": {"name": "Tersteegen, Gerhard", "birth": "N.A.", "death": "N.A."}, "title": "389. Wer's flieht, der findet's", "genre": "verse", "period": "N.A.", "pub_year": 1733, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Kreuz, wer dich sucht, dich nimmer hat;", "tokens": ["Kreuz", ",", "wer", "dich", "sucht", ",", "dich", "nim\u00b7mer", "hat", ";"], "token_info": ["word", "punct", "word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["NN", "$,", "PWS", "PPER", "VVFIN", "$,", "PPER", "ADV", "VAFIN", "$."], "meter": "+--+-+-+", "measure": "iambic.tetra.invert"}, "line.2": {"text": "Such' ich dich nicht, du l\u00e4\u00dft dich finden.", "tokens": ["Such'", "ich", "dich", "nicht", ",", "du", "l\u00e4\u00dft", "dich", "fin\u00b7den", "."], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "PPER", "PRF", "PTKNEG", "$,", "PPER", "VVFIN", "PPER", "VVINF", "$."], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.3": {"text": "Drum wei\u00df ich keinen bessern Rat,", "tokens": ["Drum", "wei\u00df", "ich", "kei\u00b7nen", "bes\u00b7sern", "Rat", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["PAV", "VVFIN", "PPER", "PIAT", "ADJA", "NN", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "Als mich mit dir fein willig zu verbinden.", "tokens": ["Als", "mich", "mit", "dir", "fein", "wil\u00b7lig", "zu", "ver\u00b7bin\u00b7den", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "PPER", "APPR", "PPER", "ADJD", "ADJD", "PTKZU", "VVINF", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}}}}