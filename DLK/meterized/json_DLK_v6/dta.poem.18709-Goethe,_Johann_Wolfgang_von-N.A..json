{"dta.poem.18709": {"metadata": {"author": {"name": "Goethe, Johann Wolfgang von", "birth": "N.A.", "death": "N.A."}, "title": "N.A.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1819", "urn": "urn:nbn:de:kobv:b4-200905191692", "language": ["de:0.99"], "booktitle": "Goethe, Johann Wolfgang von: West-\u00f6stlicher Divan. Stuttgart, 1819."}, "poem": {"stanza.1": {"line.1": {"text": "Befindet sich einer heiter und gut,", "tokens": ["Be\u00b7fin\u00b7det", "sich", "ei\u00b7ner", "hei\u00b7ter", "und", "gut", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "PRF", "ART", "ADJA", "KON", "ADJD", "$,"], "meter": "-+--+-+--+", "measure": "iambic.tetra.relaxed"}, "line.2": {"text": "Gleich will ihn der Nachbar peinigen;", "tokens": ["Gleich", "will", "ihn", "der", "Nach\u00b7bar", "pei\u00b7ni\u00b7gen", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VMFIN", "PPER", "ART", "NN", "VVINF", "$."], "meter": "-+--+--+-", "measure": "amphibrach.tri"}, "line.3": {"text": "So lang der T\u00fcchtige lebt und thut,", "tokens": ["So", "lang", "der", "T\u00fcch\u00b7ti\u00b7ge", "lebt", "und", "thut", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "ADJD", "ART", "NN", "VVFIN", "KON", "VVFIN", "$,"], "meter": "-+-+--+-+", "measure": "iambic.tetra.relaxed"}, "line.4": {"text": "M\u00f6chten sie ihn gerne steinigen.", "tokens": ["M\u00f6ch\u00b7ten", "sie", "ihn", "ger\u00b7ne", "stei\u00b7ni\u00b7gen", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["VMFIN", "PPER", "PPER", "ADV", "VVINF", "$."], "meter": "+-+-+-+-+", "measure": "trochaic.penta"}, "line.5": {"text": "Ist er hinterher aber todt,", "tokens": ["Ist", "er", "hin\u00b7ter\u00b7her", "a\u00b7ber", "todt", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["VAFIN", "PPER", "ADV", "ADV", "ADJD", "$,"], "meter": "+-+--+-+", "measure": "glykoneus"}, "line.6": {"text": "Gleich sammeln sie grosse Spenden", "tokens": ["Gleich", "sam\u00b7meln", "sie", "gros\u00b7se", "Spen\u00b7den"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["ADV", "VVFIN", "PPER", "ADJA", "NN"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.7": {"text": "Zu Ehren seiner Lebensnoth", "tokens": ["Zu", "Eh\u00b7ren", "sei\u00b7ner", "Le\u00b7bens\u00b7noth"], "token_info": ["word", "word", "word", "word"], "pos": ["APPR", "NN", "PPOSAT", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.8": {"text": "Ein Denkmal zu vollenden,", "tokens": ["Ein", "Denk\u00b7mal", "zu", "voll\u00b7en\u00b7den", ","], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "PTKZU", "VVINF", "$,"], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.9": {"text": "Doch ihren Vortheil sollte dann", "tokens": ["Doch", "ih\u00b7ren", "Vor\u00b7theil", "soll\u00b7te", "dann"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["KON", "PPOSAT", "NN", "VMFIN", "ADV"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.10": {"text": "Die Menge wohl ermessen,", "tokens": ["Die", "Men\u00b7ge", "wohl", "er\u00b7mes\u00b7sen", ","], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "ADV", "VVINF", "$,"], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.11": {"text": "Gescheiter w\u00e4r\u2019s den guten Mann", "tokens": ["Ge\u00b7schei\u00b7ter", "w\u00e4r's", "den", "gu\u00b7ten", "Mann"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["NN", "VAFIN", "ART", "ADJA", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.12": {"text": "Auf immerdar vergessen.", "tokens": ["Auf", "im\u00b7mer\u00b7dar", "ver\u00b7ges\u00b7sen", "."], "token_info": ["word", "word", "word", "punct"], "pos": ["APPR", "ADV", "VVPP", "$."], "meter": "-+-+-+-", "measure": "iambic.tri"}}}}}