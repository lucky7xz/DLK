{"textgrid.poem.52157": {"metadata": {"author": {"name": "Meyer, Conrad Ferdinand", "birth": "N.A.", "death": "N.A."}, "title": "Das bittere Tr\u00fcnklein", "genre": "verse", "period": "N.A.", "pub_year": 1890, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Ein betrogen M\u00e4gdlein irrt im Walde,", "tokens": ["Ein", "be\u00b7tro\u00b7gen", "M\u00e4gd\u00b7lein", "irrt", "im", "Wal\u00b7de", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "VVFIN", "APPRART", "NN", "$,"], "meter": "+-+-+-+-+-", "measure": "trochaic.penta"}, "line.2": {"text": "Flieht den harten Tag und sucht das Dunkel,", "tokens": ["Flieht", "den", "har\u00b7ten", "Tag", "und", "sucht", "das", "Dun\u00b7kel", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "ART", "ADJA", "NN", "KON", "VVFIN", "ART", "NN", "$,"], "meter": "+-+-+-+-+-", "measure": "trochaic.penta"}, "line.3": {"text": "Wirft auf eine Felsenbank sich nieder", "tokens": ["Wirft", "auf", "ei\u00b7ne", "Fel\u00b7sen\u00b7bank", "sich", "nie\u00b7der"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["VVFIN", "APPR", "ART", "NN", "PRF", "PTKVZ"], "meter": "+-+-+-+-+-", "measure": "trochaic.penta"}, "line.4": {"text": "Und beginnt zu weinen uners\u00e4ttlich.", "tokens": ["Und", "be\u00b7ginnt", "zu", "wei\u00b7nen", "un\u00b7er\u00b7s\u00e4tt\u00b7lich", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["KON", "VVFIN", "PTKZU", "VVINF", "ADJD", "$."], "meter": "+-+-+-+-+-", "measure": "trochaic.penta"}}, "stanza.2": {"line.1": {"text": "In den wetterm\u00fcrben Stein des Felsens", "tokens": ["In", "den", "wet\u00b7ter\u00b7m\u00fcr\u00b7ben", "Stein", "des", "Fel\u00b7sens"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["APPR", "ART", "ADJA", "NN", "ART", "NN"], "meter": "+-+-+-+-+-", "measure": "trochaic.penta"}, "line.2": {"text": "Ist gegraben eine kleine Schale \u2013", "tokens": ["Ist", "ge\u00b7gra\u00b7ben", "ei\u00b7ne", "klei\u00b7ne", "Scha\u00b7le", "\u2013"], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["VAFIN", "VVPP", "ART", "ADJA", "NN", "$("], "meter": "+-+-+-+-+-", "measure": "trochaic.penta"}, "line.3": {"text": "Da das M\u00e4gdlein sich erhebt zu wandern,", "tokens": ["Da", "das", "M\u00e4gd\u00b7lein", "sich", "er\u00b7hebt", "zu", "wan\u00b7dern", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "ART", "NN", "PRF", "VVFIN", "PTKZU", "VVFIN", "$,"], "meter": "+-+-+-+-+-", "measure": "trochaic.penta"}, "line.4": {"text": "Bleibt die Schale voller bittrer Z\u00e4hren.", "tokens": ["Bleibt", "die", "Scha\u00b7le", "vol\u00b7ler", "bit\u00b7trer", "Z\u00e4h\u00b7ren", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "ART", "NN", "ADJA", "ADJA", "NN", "$."], "meter": "+-+-+-+-+-", "measure": "trochaic.penta"}}, "stanza.3": {"line.1": {"text": "Abends kommt ein V\u00f6glein hergeflattert,", "tokens": ["A\u00b7bends", "kommt", "ein", "V\u00f6\u00b7glein", "her\u00b7ge\u00b7flat\u00b7tert", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VVFIN", "ART", "NN", "VVPP", "$,"], "meter": "+-+-+-+-+-", "measure": "trochaic.penta"}, "line.2": {"text": "Aus gewohntem Becherlein zu trinken,", "tokens": ["Aus", "ge\u00b7wohn\u00b7tem", "Be\u00b7cher\u00b7lein", "zu", "trin\u00b7ken", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "ADJA", "NN", "PTKZU", "VVINF", "$,"], "meter": "+-+-+-+-+-", "measure": "trochaic.penta"}, "line.3": {"text": "Wo sich ihm das Himmelswasser sammelt,", "tokens": ["Wo", "sich", "ihm", "das", "Him\u00b7mels\u00b7was\u00b7ser", "sam\u00b7melt", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["PWAV", "PRF", "PPER", "ART", "NN", "VVFIN", "$,"], "meter": "+-+-+-+-+-", "measure": "trochaic.penta"}, "line.4": {"text": "Schluckt und sch\u00fcttelt sich und fliegt von hinnen.", "tokens": ["Schluckt", "und", "sch\u00fct\u00b7telt", "sich", "und", "fliegt", "von", "hin\u00b7nen", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "KON", "VVFIN", "PRF", "KON", "VVFIN", "APPR", "ADV", "$."], "meter": "+-+-+-+-+-", "measure": "trochaic.penta"}}}}}