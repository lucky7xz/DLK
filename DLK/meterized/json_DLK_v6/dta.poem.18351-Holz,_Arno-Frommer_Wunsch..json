{"dta.poem.18351": {"metadata": {"author": {"name": "Holz, Arno", "birth": "N.A.", "death": "N.A."}, "title": "Frommer Wunsch.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1886", "urn": "urn:nbn:de:kobv:b4-200905192665", "language": ["de:0.99"], "booktitle": "Holz, Arno: Das Buch der Zeit. Lieder eines Modernen. Z\u00fcrich, 1886."}, "poem": {"stanza.1": {"line.1": {"text": "N\u00e4chtlich an unserm Lager Wacht,", "tokens": ["N\u00e4cht\u00b7lich", "an", "un\u00b7serm", "La\u00b7ger", "Wacht", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "APPR", "PPOSAT", "NN", "NN", "$,"], "meter": "+--+-+-+", "measure": "iambic.tetra.invert"}, "line.2": {"text": "Denn das griechische Herz hat vergeblich geschlagen", "tokens": ["Denn", "das", "grie\u00b7chi\u00b7sche", "Herz", "hat", "ver\u00b7geb\u00b7lich", "ge\u00b7schla\u00b7gen"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["KON", "ART", "ADJA", "NN", "VAFIN", "ADJD", "VVPP"], "meter": "--+--+--+--+-", "measure": "anapaest.tetra.plus"}, "line.3": {"text": "Und der griechische Geist hat umsonst gedacht.", "tokens": ["Und", "der", "grie\u00b7chi\u00b7sche", "Geist", "hat", "um\u00b7sonst", "ge\u00b7dacht", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "ART", "ADJA", "NN", "VAFIN", "ADV", "VVPP", "$."], "meter": "--+--+--+-+", "measure": "anapaest.tri.plus"}}, "stanza.2": {"line.1": {"text": "Die ", "tokens": ["Die"], "token_info": ["word"], "pos": ["ART"], "meter": "-", "measure": "single.down"}, "line.2": {"text": "Versperren die Aussicht uns weit und breit \u2014", "tokens": ["Ver\u00b7sper\u00b7ren", "die", "Aus\u00b7sicht", "uns", "weit", "und", "breit"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["NN", "ART", "NN", "PPER", "ADJD", "KON", "ADJD", "$("], "meter": "-+--+--+-+", "measure": "amphibrach.tri.plus"}, "line.3": {"text": "O, schl\u00fcge doch endlich ein heiliges Wetter", "tokens": ["O", ",", "schl\u00fc\u00b7ge", "doch", "end\u00b7lich", "ein", "hei\u00b7li\u00b7ges", "Wet\u00b7ter"], "token_info": ["word", "punct", "word", "word", "word", "word", "word", "word"], "pos": ["NE", "$,", "VVFIN", "ADV", "ADV", "ART", "ADJA", "NN"], "meter": "-+--+--+--+-", "measure": "amphibrach.tetra"}, "line.4": {"text": "In diese verfaulte Hallunkenzeit!", "tokens": ["In", "die\u00b7se", "ver\u00b7faul\u00b7te", "Hal\u00b7lun\u00b7ken\u00b7zeit", "!"], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["APPR", "PDAT", "ADJA", "NN", "$."], "meter": "-+--+--+-+", "measure": "amphibrach.tri.plus"}}}}}