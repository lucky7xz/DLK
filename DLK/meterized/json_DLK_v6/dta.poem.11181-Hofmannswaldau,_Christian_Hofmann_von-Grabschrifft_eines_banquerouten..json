{"dta.poem.11181": {"metadata": {"author": {"name": "Hofmannswaldau, Christian Hofmann von", "birth": "N.A.", "death": "N.A."}, "title": "Grabschrifft eines banquerouten.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1709", "urn": "urn:nbn:de:kobv:b4-20283-5", "language": ["de:0.99"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "Mein kauff hat, leider! sich in einen lauff verkehrt,", "tokens": ["Mein", "kauff", "hat", ",", "lei\u00b7der", "!", "sich", "in", "ei\u00b7nen", "lauff", "ver\u00b7kehrt", ","], "token_info": ["word", "word", "word", "punct", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["PPOSAT", "NN", "VAFIN", "$,", "ADV", "$.", "PRF", "APPR", "ART", "NN", "VVPP", "$,"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Vor tausend thaler reich, itzt keines hellers werth.", "tokens": ["Vor", "tau\u00b7send", "tha\u00b7ler", "reich", ",", "itzt", "kei\u00b7nes", "hel\u00b7lers", "werth", "."], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["APPR", "CARD", "NN", "ADJD", "$,", "ADV", "PIAT", "NN", "ADJD", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.3": {"text": "Nichts bleibt mir, als der trost, wo der den schmertz kan stillen:", "tokens": ["Nichts", "bleibt", "mir", ",", "als", "der", "trost", ",", "wo", "der", "den", "schmertz", "kan", "stil\u00b7len", ":"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PIS", "VVFIN", "PPER", "$,", "KOUS", "ART", "NN", "$,", "PWAV", "ART", "ART", "NN", "VMFIN", "VVINF", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.4": {"text": "Da\u00df ich vertrieben bin nur um des glaubens (credit) willen.", "tokens": ["Da\u00df", "ich", "ver\u00b7trie\u00b7ben", "bin", "nur", "um", "des", "glau\u00b7bens", "(", "cre\u00b7dit", ")", "wil\u00b7len", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct", "word", "punct", "word", "punct"], "pos": ["KOUS", "PPER", "VVPP", "VAFIN", "ADV", "APPR", "ART", "NN", "$(", "FM", "$(", "NN", "$."], "meter": "-+-+-+-+-+-+-+-", "measure": "iambic.septa"}}}}}