{"textgrid.poem.37087": {"metadata": {"author": {"name": "H\u00f6lty, Ludwig Christoph Heinrich", "birth": "N.A.", "death": "N.A."}, "title": "An meine Freunde", "genre": "verse", "period": "N.A.", "pub_year": 1762, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Mangelnd jedes Gef\u00fchls, welches die Freundschaft giebt,", "tokens": ["Man\u00b7gelnd", "je\u00b7des", "Ge\u00b7f\u00fchls", ",", "wel\u00b7ches", "die", "Freund\u00b7schaft", "giebt", ","], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["ADJD", "PIAT", "NN", "$,", "PRELS", "ART", "NN", "VVFIN", "$,"], "meter": "+-+--+---+-+", "measure": "trochaic.penta.relaxed"}, "line.2": {"text": "War mein Leben entflohn, als ich die Treuen fand,", "tokens": ["War", "mein", "Le\u00b7ben", "ent\u00b7flohn", ",", "als", "ich", "die", "Treu\u00b7en", "fand", ","], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["VAFIN", "PPOSAT", "NN", "PTKVZ", "$,", "KOUS", "PPER", "ART", "NN", "VVFIN", "$,"], "meter": "+-+--+-+-+-+", "measure": "trochaic.hexa.relaxed"}, "line.3": {"text": "Eurem offenen Arme,", "tokens": ["Eu\u00b7rem", "of\u00b7fe\u00b7nen", "Ar\u00b7me", ","], "token_info": ["word", "word", "word", "punct"], "pos": ["PPOSAT", "ADJA", "NN", "$,"], "meter": "+-+--+-", "measure": "pherekrateus"}, "line.4": {"text": "Bundesbr\u00fcder, entgegenflog.", "tokens": ["Bun\u00b7des\u00b7br\u00fc\u00b7der", ",", "ent\u00b7ge\u00b7gen\u00b7flog", "."], "token_info": ["word", "punct", "word", "punct"], "pos": ["NN", "$,", "VVFIN", "$."], "meter": "+-+--+-+", "measure": "glykoneus"}}, "stanza.2": {"line.1": {"text": "Jeder kommende Tag kn\u00fcpfte das Seelenband", "tokens": ["Je\u00b7der", "kom\u00b7men\u00b7de", "Tag", "kn\u00fcpf\u00b7te", "das", "See\u00b7len\u00b7band"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["PIAT", "ADJA", "NN", "VVFIN", "ART", "NN"], "meter": "+-+--+---+-+", "measure": "trochaic.penta.relaxed"}, "line.2": {"text": "Unaufl\u00f6slicher fest, geudete f\u00fcr und f\u00fcr,", "tokens": ["Un\u00b7auf\u00b7l\u00f6s\u00b7li\u00b7cher", "fest", ",", "geu\u00b7de\u00b7te", "f\u00fcr", "und", "f\u00fcr", ","], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["NN", "PTKVZ", "$,", "ADJA", "APPR", "KON", "APPR", "$,"], "meter": "+-+---+--+-+", "measure": "trochaic.penta.relaxed"}, "line.3": {"text": "Aus der goldenen Schaale,", "tokens": ["Aus", "der", "gol\u00b7de\u00b7nen", "Schaa\u00b7le", ","], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["APPR", "ART", "ADJA", "NN", "$,"], "meter": "--+--+-", "measure": "anapaest.di.plus"}, "line.4": {"text": "Neue Freuden auf uns herab.", "tokens": ["Neu\u00b7e", "Freu\u00b7den", "auf", "uns", "her\u00b7ab", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ADJA", "NN", "APPR", "PPER", "ADV", "$."], "meter": "+-+-+--+", "measure": "iambic.tetra.chol"}}, "stanza.3": {"line.1": {"text": "Selig w\u00e4ren wir, traun, selig wie keiner ist,", "tokens": ["Se\u00b7lig", "w\u00e4\u00b7ren", "wir", ",", "traun", ",", "se\u00b7lig", "wie", "kei\u00b7ner", "ist", ","], "token_info": ["word", "word", "word", "punct", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["NE", "VAFIN", "PPER", "$,", "VVINF", "$,", "ADJD", "KOKOM", "PIS", "VAFIN", "$,"], "meter": "+-+--+-+-+-+", "measure": "trochaic.hexa.relaxed"}, "line.2": {"text": "N\u00e4m ein friedliches Thal uns in die Blumen auf,", "tokens": ["N\u00e4m", "ein", "fried\u00b7li\u00b7ches", "Thal", "uns", "in", "die", "Blu\u00b7men", "auf", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "ART", "ADJA", "NN", "PPER", "APPR", "ART", "NN", "PTKVZ", "$,"], "meter": "+-+--+-+-+-+", "measure": "trochaic.hexa.relaxed"}, "line.3": {"text": "Frohe Sch\u00e4fer, ach fiele", "tokens": ["Fro\u00b7he", "Sch\u00e4\u00b7fer", ",", "ach", "fie\u00b7le"], "token_info": ["word", "word", "punct", "word", "word"], "pos": ["NE", "NE", "$,", "ITJ", "VVFIN"], "meter": "+-+--+-", "measure": "pherekrateus"}, "line.4": {"text": "Nie das eiserne Trennungsloos.", "tokens": ["Nie", "das", "ei\u00b7ser\u00b7ne", "Tren\u00b7nungs\u00b7loos", "."], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["ADV", "ART", "ADJA", "NN", "$."], "meter": "+-+--+-+", "measure": "glykoneus"}}}}}