{"dta.poem.19995": {"metadata": {"author": {"name": "Kerner, Justinus", "birth": "N.A.", "death": "N.A."}, "title": "2.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1826", "urn": "urn:nbn:de:kobv:b4-200905193111", "language": ["de:0.99"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "Du theurer Bruder! der durch's steilste Leben", "tokens": ["Du", "theu\u00b7rer", "Bru\u00b7der", "!", "der", "durch's", "steils\u00b7te", "Le\u00b7ben"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word"], "pos": ["PPER", "ADJA", "NN", "$.", "ART", "APPRART", "ADJA", "NN"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "Kraftvoll, ein Wandrer ohne Stab, gegangen!", "tokens": ["Kraft\u00b7voll", ",", "ein", "Wand\u00b7rer", "oh\u00b7ne", "Stab", ",", "ge\u00b7gan\u00b7gen", "!"], "token_info": ["word", "punct", "word", "word", "word", "word", "punct", "word", "punct"], "pos": ["ADJD", "$,", "ART", "NN", "APPR", "NN", "$,", "VVPP", "$."], "meter": "++-+-+-+-+-", "measure": "iambic.penta.spondeus"}, "line.3": {"text": "O k\u00f6nnt' auch ich die Herberg bald erlangen,", "tokens": ["O", "k\u00f6nnt'", "auch", "ich", "die", "Her\u00b7berg", "bald", "er\u00b7lan\u00b7gen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["NE", "VMFIN", "ADV", "PPER", "ART", "NN", "ADV", "VVINF", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.4": {"text": "Die dir der Tod, der letzte Wirth, gegeben!", "tokens": ["Die", "dir", "der", "Tod", ",", "der", "letz\u00b7te", "Wirth", ",", "ge\u00b7ge\u00b7ben", "!"], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "punct", "word", "punct"], "pos": ["ART", "PPER", "ART", "NN", "$,", "ART", "ADJA", "NN", "$,", "VVPP", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}, "stanza.2": {"line.1": {"text": "Nach hellem Trunk von heimatlichen Reben", "tokens": ["Nach", "hel\u00b7lem", "Trunk", "von", "hei\u00b7mat\u00b7li\u00b7chen", "Re\u00b7ben"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["APPR", "ADJA", "NN", "APPR", "ADJA", "NN"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "Trugst du im fernen Norden hei\u00df Verlangen;", "tokens": ["Trugst", "du", "im", "fer\u00b7nen", "Nor\u00b7den", "hei\u00df", "Ver\u00b7lan\u00b7gen", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "PPER", "APPRART", "ADJA", "NN", "ADJD", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "In dieser Herberg hast du ihn empfangen,", "tokens": ["In", "die\u00b7ser", "Her\u00b7berg", "hast", "du", "ihn", "emp\u00b7fan\u00b7gen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "PDAT", "NN", "VAFIN", "PPER", "PPER", "VVPP", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.4": {"text": "Liebend der Heimat Geister Dich umschweben.", "tokens": ["Lie\u00b7bend", "der", "Hei\u00b7mat", "Geis\u00b7ter", "Dich", "um\u00b7schwe\u00b7ben", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADJD", "ART", "NN", "NN", "PPER", "VVINF", "$."], "meter": "+--+-+-+-+-", "measure": "iambic.penta.invert"}}, "stanza.3": {"line.1": {"text": "Und nach dem Weg voll Unruh' und Beschwerde", "tokens": ["Und", "nach", "dem", "Weg", "voll", "Un\u00b7ruh'", "und", "Be\u00b7schwer\u00b7de"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word"], "pos": ["KON", "APPR", "ART", "NN", "ADJD", "NN", "KON", "NN"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "Wie ruhen s\u00fc\u00df nun deine m\u00fcden Glieder!", "tokens": ["Wie", "ru\u00b7hen", "s\u00fc\u00df", "nun", "dei\u00b7ne", "m\u00fc\u00b7den", "Glie\u00b7der", "!"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PWAV", "VVFIN", "ADJD", "ADV", "PPOSAT", "ADJA", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Wie ist dir's wohl im heimatlichen Bette!", "tokens": ["Wie", "ist", "dir's", "wohl", "im", "hei\u00b7mat\u00b7li\u00b7chen", "Bet\u00b7te", "!"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PWAV", "VAFIN", "PIS", "ADV", "APPRART", "ADJA", "NN", "$."], "meter": "-+-+-+---+-", "measure": "unknown.measure.tetra"}}, "stanza.4": {"line.1": {"text": "Noch tobet w\u00fcster Streit hier auf der Erde,", "tokens": ["Noch", "to\u00b7bet", "w\u00fcs\u00b7ter", "Streit", "hier", "auf", "der", "Er\u00b7de", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VVFIN", "ADJA", "NN", "ADV", "APPR", "ART", "NN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "Still blickt der Mond auf deinen H\u00fcgel nieder,", "tokens": ["Still", "blickt", "der", "Mond", "auf", "dei\u00b7nen", "H\u00fc\u00b7gel", "nie\u00b7der", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADJD", "VVFIN", "ART", "NN", "APPR", "PPOSAT", "NN", "PTKVZ", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Und Rosen sprossen friedsam an der St\u00e4tte.", "tokens": ["Und", "Ro\u00b7sen", "spros\u00b7sen", "fried\u00b7sam", "an", "der", "St\u00e4t\u00b7te", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "NN", "VVFIN", "ADJD", "APPR", "ART", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}}}}