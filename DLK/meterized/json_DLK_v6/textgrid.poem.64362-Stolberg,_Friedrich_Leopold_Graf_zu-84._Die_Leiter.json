{"textgrid.poem.64362": {"metadata": {"author": {"name": "Stolberg, Friedrich Leopold Graf zu", "birth": "N.A.", "death": "N.A."}, "title": "84. Die Leiter", "genre": "verse", "period": "N.A.", "pub_year": 1784, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Auf der Erde stehet die Leiter der Weisheit, und reichet", "tokens": ["Auf", "der", "Er\u00b7de", "ste\u00b7het", "die", "Lei\u00b7ter", "der", "Weis\u00b7heit", ",", "und", "rei\u00b7chet"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct", "word", "word"], "pos": ["APPR", "ART", "NN", "VVFIN", "ART", "NN", "ART", "NN", "$,", "KON", "VVFIN"], "meter": "--+-+--+--+--+-", "measure": "iambic.penta.relaxed"}, "line.2": {"text": "An den Himmel; wir sehn wenige Sprossen von ihr.", "tokens": ["An", "den", "Him\u00b7mel", ";", "wir", "sehn", "we\u00b7ni\u00b7ge", "Spros\u00b7sen", "von", "ihr", "."], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "ART", "NN", "$.", "PPER", "VVFIN", "PIAT", "NN", "APPR", "PPOSAT", "$."], "meter": "--+--++--+--+", "measure": "anapaest.di.plus"}, "line.3": {"text": "M\u00fchsam klimmt der Gelehrte hinan, und purzelt und klimmet", "tokens": ["M\u00fch\u00b7sam", "klimmt", "der", "Ge\u00b7lehr\u00b7te", "hi\u00b7nan", ",", "und", "pur\u00b7zelt", "und", "klim\u00b7met"], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word", "word"], "pos": ["NE", "VVFIN", "ART", "NN", "PTKVZ", "$,", "KON", "ADJD", "KON", "VVFIN"], "meter": "+-+--+-+--+--+-", "measure": "hexameter"}, "line.4": {"text": "Wieder hinan; und was hat der Gelehrte gesehn?", "tokens": ["Wie\u00b7der", "hi\u00b7nan", ";", "und", "was", "hat", "der", "Ge\u00b7lehr\u00b7te", "ge\u00b7sehn", "?"], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "PTKVZ", "$.", "KON", "PWS", "VAFIN", "ART", "NN", "VVPP", "$."], "meter": "--+---+--+--+", "measure": "iambic.tetra.relaxed"}, "line.5": {"text": "Unten schlummert der Dichter auf Moos, wie der Hirte von Kanan;", "tokens": ["Un\u00b7ten", "schlum\u00b7mert", "der", "Dich\u00b7ter", "auf", "Moos", ",", "wie", "der", "Hir\u00b7te", "von", "Ka\u00b7nan", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VVFIN", "ART", "NN", "APPR", "NN", "$,", "PWAV", "ART", "NN", "APPR", "NE", "$."], "meter": "+-+--+--+--+-+-+", "measure": "trochaic.septa.relaxed"}, "line.6": {"text": "Und es steigen zu ihm S\u00f6hne des Himmels herab.", "tokens": ["Und", "es", "stei\u00b7gen", "zu", "ihm", "S\u00f6h\u00b7ne", "des", "Him\u00b7mels", "her\u00b7ab", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "PPER", "VVFIN", "APPR", "PPER", "NN", "ART", "NN", "ADV", "$."], "meter": "--+-+-+--+--+", "measure": "iambic.penta.relaxed"}}}}}