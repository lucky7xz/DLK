{"textgrid.poem.54153": {"metadata": {"author": {"name": "Tucholsky, Kurt", "birth": "N.A.", "death": "N.A."}, "title": "Die Seri\u00f6sen", "genre": "verse", "period": "N.A.", "pub_year": 1912, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Wenn dir ein ernster Kaufmann spricht:", "tokens": ["Wenn", "dir", "ein", "erns\u00b7ter", "Kauf\u00b7mann", "spricht", ":"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "PPER", "ART", "ADJA", "NN", "VVFIN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "so h\u00f6r ihn nicht! so h\u00f6r ihn nicht!", "tokens": ["so", "h\u00f6r", "ihn", "nicht", "!", "so", "h\u00f6r", "ihn", "nicht", "!"], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VVFIN", "PPER", "PTKNEG", "$.", "ADV", "VVFIN", "PPER", "PTKNEG", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.3": {"text": "Er spricht dir von den schweren Zeiten,", "tokens": ["Er", "spricht", "dir", "von", "den", "schwe\u00b7ren", "Zei\u00b7ten", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "PPER", "APPR", "ART", "ADJA", "NN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.4": {"text": "von Wirtschaft und Notwendigkeiten . . .", "tokens": ["von", "Wirt\u00b7schaft", "und", "Not\u00b7wen\u00b7dig\u00b7kei\u00b7ten", ".", ".", "."], "token_info": ["word", "word", "word", "word", "punct", "punct", "punct"], "pos": ["APPR", "NN", "KON", "NN", "$.", "$.", "$."], "meter": "-+--+--+-", "measure": "amphibrach.tri"}, "line.5": {"text": "Erst wird er fachlich. Und dann kr\u00f6tig.", "tokens": ["Erst", "wird", "er", "fach\u00b7lich", ".", "Und", "dann", "kr\u00f6\u00b7tig", "."], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["ADV", "VAFIN", "PPER", "ADJD", "$.", "KON", "ADV", "ADJD", "$."], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.6": {"text": "Der hats n\u00f6tig \u2013!", "tokens": ["Der", "hats", "n\u00f6\u00b7tig", "\u2013", "!"], "token_info": ["word", "word", "word", "punct", "punct"], "pos": ["PDS", "VAFIN", "ADJD", "$(", "$."], "meter": "+-+-", "measure": "trochaic.di"}}, "stanza.2": {"line.1": {"text": "Ja, mit gepumptem Auslandsgeld,", "tokens": ["Ja", ",", "mit", "ge\u00b7pump\u00b7tem", "Aus\u00b7lands\u00b7geld", ","], "token_info": ["word", "punct", "word", "word", "word", "punct"], "pos": ["PTKANT", "$,", "APPR", "ADJA", "NN", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "da war sie sch\u00f6n, die deutsche Welt.", "tokens": ["da", "war", "sie", "sch\u00f6n", ",", "die", "deut\u00b7sche", "Welt", "."], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["ADV", "VAFIN", "PPER", "ADJD", "$,", "ART", "ADJA", "NN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.3": {"text": "Da rauchten wirbelnd alle Essen,", "tokens": ["Da", "rauch\u00b7ten", "wir\u00b7belnd", "al\u00b7le", "Es\u00b7sen", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VVFIN", "ADJD", "PIAT", "NN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.4": {"text": "da hatten sie die gro\u00dfen Fressen.", "tokens": ["da", "hat\u00b7ten", "sie", "die", "gro\u00b7\u00dfen", "Fres\u00b7sen", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VAFIN", "PPER", "ART", "ADJA", "NN", "$."], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.5": {"text": "Das Land war ihnen sehr erb\u00f6tig . . .", "tokens": ["Das", "Land", "war", "ih\u00b7nen", "sehr", "er\u00b7b\u00f6\u00b7tig", ".", ".", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct", "punct", "punct"], "pos": ["ART", "NN", "VAFIN", "PPER", "ADV", "ADJD", "$.", "$.", "$."], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.6": {"text": "Die habens n\u00f6tig.", "tokens": ["Die", "ha\u00b7bens", "n\u00f6\u00b7tig", "."], "token_info": ["word", "word", "word", "punct"], "pos": ["ART", "NE", "ADJD", "$."], "meter": "-+-+-", "measure": "iambic.di"}}, "stanza.3": {"line.1": {"text": "Das Geld ist hin. Die Arbeit knapp.", "tokens": ["Das", "Geld", "ist", "hin", ".", "Die", "Ar\u00b7beit", "knapp", "."], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VAFIN", "ADV", "$.", "ART", "NN", "ADJD", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Die Konjunktur sank tief herab . . .", "tokens": ["Die", "Kon\u00b7junk\u00b7tur", "sank", "tief", "her\u00b7ab", ".", ".", "."], "token_info": ["word", "word", "word", "word", "word", "punct", "punct", "punct"], "pos": ["ART", "NN", "VVFIN", "ADJD", "ADV", "$.", "$.", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.3": {"text": "Wer sich und uns derart verwirrt hat;", "tokens": ["Wer", "sich", "und", "uns", "der\u00b7art", "ver\u00b7wirrt", "hat", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PWS", "PRF", "KON", "PPER", "ADV", "ADJD", "VAFIN", "$."], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.4": {"text": "wer dauernd sich so oft geirrt hat;", "tokens": ["wer", "dau\u00b7ernd", "sich", "so", "oft", "ge\u00b7irrt", "hat", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PWS", "ADJD", "PRF", "ADV", "ADV", "VVPP", "VAFIN", "$."], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.5": {"text": "wer sich in allen schweren Tagen", "tokens": ["wer", "sich", "in", "al\u00b7len", "schwe\u00b7ren", "Ta\u00b7gen"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["PWS", "PRF", "APPR", "PIAT", "ADJA", "NN"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.6": {"text": "nur Pleiten holt und Niederlagen,", "tokens": ["nur", "Plei\u00b7ten", "holt", "und", "Nie\u00b7der\u00b7la\u00b7gen", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "NN", "VVFIN", "KON", "NN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.7": {"text": "ein Heros der Finanz-Etappe \u2013:", "tokens": ["ein", "He\u00b7ros", "der", "Fi\u00b7nanz\u00b7E\u00b7tap\u00b7pe", "\u2013", ":"], "token_info": ["word", "word", "word", "word", "punct", "punct"], "pos": ["ART", "NN", "ART", "NN", "$(", "$."], "meter": "-+--++-+", "measure": "iambic.tetra.relaxed"}, "line.8": {"text": "der erz\u00e4hle uns nichts, sondern halte die Klappe!", "tokens": ["der", "er\u00b7z\u00e4h\u00b7le", "uns", "nichts", ",", "son\u00b7dern", "hal\u00b7te", "die", "Klap\u00b7pe", "!"], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["ART", "VVFIN", "PPER", "PIS", "$,", "KON", "VVFIN", "ART", "NN", "$."], "meter": "+-+-+-+-+--+-", "measure": "hexameter"}, "line.9": {"text": "1, 2, 3 \u2013", "tokens": [",", "2", ",", "3", "\u2013"], "token_info": ["punct", "number", "punct", "number", "punct"], "pos": ["$,", "CARD", "$,", "CARD", "$("]}, "line.10": {"text": "am Zuchthaus glatt vorbei!", "tokens": ["am", "Zucht\u00b7haus", "glatt", "vor\u00b7bei", "!"], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["APPRART", "NN", "ADJD", "PTKVZ", "$."], "meter": "-+-+-+", "measure": "iambic.tri"}, "line.11": {"text": "3, 2, 1 \u2013", "tokens": [",", "2", ",", "1", "\u2013"], "token_info": ["punct", "number", "punct", "number", "punct"], "pos": ["$,", "CARD", "$,", "CARD", "$("]}, "line.12": {"text": "Was du dir nimmst, ist deins!", "tokens": ["Was", "du", "dir", "nimmst", ",", "ist", "deins", "!"], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "punct"], "pos": ["PWS", "PPER", "PPER", "VVFIN", "$,", "VAFIN", "NE", "$."], "meter": "-+-+-+", "measure": "iambic.tri"}, "line.13": {"text": "Von Tag zu Tag wird stets defekter", "tokens": ["Von", "Tag", "zu", "Tag", "wird", "stets", "de\u00b7fek\u00b7ter"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["APPR", "NN", "APPR", "NN", "VAFIN", "ADV", "NE"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.14": {"text": "der Ruf vom Generaldirekter.", "tokens": ["der", "Ruf", "vom", "Ge\u00b7ne\u00b7ral\u00b7di\u00b7rek\u00b7ter", "."], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "APPRART", "NN", "$."], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.15": {"text": "Was der uns predigt, darauf fl\u00f6t ich.", "tokens": ["Was", "der", "uns", "pre\u00b7digt", ",", "da\u00b7rauf", "fl\u00f6t", "ich", "."], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["PWS", "ART", "PPER", "VVFIN", "$,", "PAV", "VVFIN", "PPER", "$."], "meter": "-+-+--+-+", "measure": "iambic.tetra.relaxed"}, "line.16": {"text": "Der hats n\u00f6tig.", "tokens": ["Der", "hats", "n\u00f6\u00b7tig", "."], "token_info": ["word", "word", "word", "punct"], "pos": ["PDS", "VAFIN", "ADJD", "$."], "meter": "+-+-", "measure": "trochaic.di"}}}}}