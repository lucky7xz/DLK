{"textgrid.poem.35344": {"metadata": {"author": {"name": "Dranmor, (Schmid, Ludwig Ferdinand)", "birth": "N.A.", "death": "N.A."}, "title": "1L: Erbleiche, Sonne! wenn sich deine Macht", "genre": "verse", "period": "N.A.", "pub_year": 1855, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Erbleiche, Sonne! wenn sich deine Macht", "tokens": ["Er\u00b7blei\u00b7che", ",", "Son\u00b7ne", "!", "wenn", "sich", "dei\u00b7ne", "Macht"], "token_info": ["word", "punct", "word", "punct", "word", "word", "word", "word"], "pos": ["NN", "$,", "NN", "$.", "KOUS", "PRF", "PPOSAT", "NN"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.2": {"text": "Auch dort bew\u00e4hrt, wo unser Leib vernichtet,", "tokens": ["Auch", "dort", "be\u00b7w\u00e4hrt", ",", "wo", "un\u00b7ser", "Leib", "ver\u00b7nich\u00b7tet", ","], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["ADV", "ADV", "VVPP", "$,", "PWAV", "PPOSAT", "NN", "VVPP", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Dort, wo der Tod geschaltet und gerichtet,", "tokens": ["Dort", ",", "wo", "der", "Tod", "ge\u00b7schal\u00b7tet", "und", "ge\u00b7rich\u00b7tet", ","], "token_info": ["word", "punct", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "$,", "PWAV", "ART", "NN", "VVPP", "KON", "VVPP", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.4": {"text": "Dort, wo wir glauben, alles sei vollbracht.", "tokens": ["Dort", ",", "wo", "wir", "glau\u00b7ben", ",", "al\u00b7les", "sei", "voll\u00b7bracht", "."], "token_info": ["word", "punct", "word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["ADV", "$,", "PWAV", "PPER", "VVFIN", "$,", "PIS", "VAFIN", "VVPP", "$."], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}}, "stanza.2": {"line.1": {"text": "Den Lebenden des Himmels ganze Pracht;", "tokens": ["Den", "Le\u00b7ben\u00b7den", "des", "Him\u00b7mels", "gan\u00b7ze", "Pracht", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "ART", "NN", "ADJA", "NN", "$."], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.2": {"text": "Doch wenn auf immer unser Weg gelichtet,", "tokens": ["Doch", "wenn", "auf", "im\u00b7mer", "un\u00b7ser", "Weg", "ge\u00b7lich\u00b7tet", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "KOUS", "APPR", "ADV", "PPOSAT", "NN", "VVPP", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Dann sei uns keine R\u00fcckkehr angedichtet,", "tokens": ["Dann", "sei", "uns", "kei\u00b7ne", "R\u00fcck\u00b7kehr", "an\u00b7ge\u00b7dich\u00b7tet", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VAFIN", "PPER", "PIAT", "NN", "VVPP", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.4": {"text": "Von Menschenwahn und Menschenwitz erdacht.", "tokens": ["Von", "Men\u00b7schen\u00b7wahn", "und", "Men\u00b7schen\u00b7witz", "er\u00b7dacht", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "NN", "KON", "NN", "VVPP", "$."], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}}, "stanza.3": {"line.1": {"text": "Wenn unser Los in eines Gottes Hand,", "tokens": ["Wenn", "un\u00b7ser", "Los", "in", "ei\u00b7nes", "Got\u00b7tes", "Hand", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "PPOSAT", "NN", "APPR", "ART", "NN", "NN", "$,"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.2": {"text": "Auch dann sei unsre Rechnung abgeschlossen", "tokens": ["Auch", "dann", "sei", "uns\u00b7re", "Rech\u00b7nung", "ab\u00b7ge\u00b7schlos\u00b7sen"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["ADV", "ADV", "VAFIN", "PPOSAT", "NN", "VVPP"], "meter": "-+---+-+-+-", "measure": "dactylic.init"}, "line.3": {"text": "Mit dem, was wir gelitten und genossen.", "tokens": ["Mit", "dem", ",", "was", "wir", "ge\u00b7lit\u00b7ten", "und", "ge\u00b7nos\u00b7sen", "."], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "ART", "$,", "PRELS", "PPER", "VVPP", "KON", "VVPP", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}, "stanza.4": {"line.1": {"text": "Verb\u00fcndet sind Betrug und Unverstand;", "tokens": ["Ver\u00b7b\u00fcn\u00b7det", "sind", "Be\u00b7trug", "und", "Un\u00b7ver\u00b7stand", ";"], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["VVPP", "VAFIN", "NN", "KON", "NN", "$."], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.2": {"text": "Den Christusglauben sch\u00e4ndet roher Tand,", "tokens": ["Den", "Chris\u00b7tus\u00b7glau\u00b7ben", "sch\u00e4n\u00b7det", "ro\u00b7her", "Tand", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VVFIN", "ADJA", "NN", "$,"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.3": {"text": "Den Tod entweihen frevelhafte Possen.", "tokens": ["Den", "Tod", "ent\u00b7wei\u00b7hen", "fre\u00b7vel\u00b7haf\u00b7te", "Pos\u00b7sen", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "ADJA", "ADJA", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}}}}