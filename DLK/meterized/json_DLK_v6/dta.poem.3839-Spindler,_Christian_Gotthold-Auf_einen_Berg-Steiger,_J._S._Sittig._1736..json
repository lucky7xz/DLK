{"dta.poem.3839": {"metadata": {"author": {"name": "Spindler, Christian Gotthold", "birth": "N.A.", "death": "N.A."}, "title": "Auf einen Berg-Steiger,  \n  J. S. Sittig.  1736.", "genre": "Lyrik, Drama", "period": "N.A.", "pub_year": "1745", "urn": "urn:nbn:de:kobv:b4-20581-9", "language": ["de:0.99"], "booktitle": "Spindler, Christian Gotthold: Unschuldige Jugend-Fr\u00fcchte. Leipzig, 1745."}, "poem": {"stanza.1": {"line.1": {"text": "Gl\u00fcck auf! Wohlseliger! dein Stunden-Glas", "tokens": ["Gl\u00fcck", "auf", "!", "Wohl\u00b7se\u00b7li\u00b7ger", "!", "dein", "Stun\u00b7den\u00b7Glas"], "token_info": ["word", "word", "punct", "word", "punct", "word", "word"], "pos": ["NN", "PTKVZ", "$.", "NN", "$.", "PPOSAT", "NN"], "meter": "+-+--+-+-+", "measure": "trochaic.penta.relaxed"}, "line.2": {"text": "zerbricht,", "tokens": ["zer\u00b7bricht", ","], "token_info": ["word", "punct"], "pos": ["VVFIN", "$,"], "meter": "-+", "measure": "iambic.single"}, "line.3": {"text": "Du legst den Schlegel hin, du ruffst nunmehro:", "tokens": ["Du", "legst", "den", "Schle\u00b7gel", "hin", ",", "du", "ruffst", "nun\u00b7meh\u00b7ro", ":"], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "ART", "NN", "PTKVZ", "$,", "PPER", "VVFIN", "ADV", "$."], "meter": "-+-+-+-+--+", "measure": "iambic.penta.chol"}, "line.4": {"text": "Schicht!", "tokens": ["Schicht", "!"], "token_info": ["word", "punct"], "pos": ["NN", "$."], "meter": "+", "measure": "single.up"}, "line.5": {"text": "Du hast den d\u00fcstren Schacht der Todten-Grufft", "tokens": ["Du", "hast", "den", "d\u00fcst\u00b7ren", "Schacht", "der", "Tod\u00b7ten\u00b7G\u00b7rufft"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["PPER", "VAFIN", "ART", "ADJA", "NN", "ART", "NN"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.6": {"text": "gefahren,", "tokens": ["ge\u00b7fah\u00b7ren", ","], "token_info": ["word", "punct"], "pos": ["VVPP", "$,"], "meter": "-+-", "measure": "amphibrach.single"}, "line.7": {"text": "Den hier kein Sterblicher jemahls vermeiden kan.", "tokens": ["Den", "hier", "kein", "Sterb\u00b7li\u00b7cher", "je\u00b7mahls", "ver\u00b7mei\u00b7den", "kan", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADV", "PIAT", "NN", "ADV", "VVINF", "VMFIN", "$."], "meter": "+--+--+--+-+", "measure": "dactylic.tri.plus"}, "line.8": {"text": "Nun schlaffe, bis der HErr sich dir wird offenbaren,", "tokens": ["Nun", "schlaf\u00b7fe", ",", "bis", "der", "Herr", "sich", "dir", "wird", "of\u00b7fen\u00b7ba\u00b7ren", ","], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VVFIN", "$,", "APPR", "ART", "NN", "PRF", "PPER", "VAFIN", "VVINF", "$,"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.9": {"text": "Denn stimme dein Gl\u00fcck auf! dereinst im Him\u0303el an.", "tokens": ["Denn", "stim\u00b7me", "dein", "Gl\u00fcck", "auf", "!", "de\u00b7reinst", "im", "Him\u0303el", "an", "."], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["KON", "VVFIN", "PPOSAT", "NN", "PTKVZ", "$.", "ADV", "APPRART", "NN", "PTKVZ", "$."], "meter": "-+--+--+-+-", "measure": "amphibrach.tri.plus"}}}}}