{"textgrid.poem.56497": {"metadata": {"author": {"name": "Heym, Georg", "birth": "N.A.", "death": "N.A."}, "title": "1L: Gebannt in die Trauer der endlosen Horizonte,", "genre": "verse", "period": "N.A.", "pub_year": 1899, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Gebannt in die Trauer der endlosen Horizonte,", "tokens": ["Ge\u00b7bannt", "in", "die", "Trau\u00b7er", "der", "end\u00b7lo\u00b7sen", "Ho\u00b7ri\u00b7zon\u00b7te", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVPP", "APPR", "ART", "NN", "ART", "ADJA", "NN", "$,"], "meter": "-+--+-+-+-+-+-", "measure": "iambic.hexa.relaxed"}, "line.2": {"text": "Wo nur ein Baum sich wand unter Schmerz,", "tokens": ["Wo", "nur", "ein", "Baum", "sich", "wand", "un\u00b7ter", "Schmerz", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PWAV", "ADV", "ART", "NN", "PRF", "VVFIN", "APPR", "NN", "$,"], "meter": "-+-+-+--+", "measure": "iambic.tetra.chol"}, "line.3": {"text": "Sanken wir, Bergleuten gleich, in das Schweigen der Grube", "tokens": ["San\u00b7ken", "wir", ",", "Berg\u00b7leu\u00b7ten", "gleich", ",", "in", "das", "Schwei\u00b7gen", "der", "Gru\u00b7be"], "token_info": ["word", "word", "punct", "word", "word", "punct", "word", "word", "word", "word", "word"], "pos": ["VVFIN", "PPER", "$,", "NN", "ADV", "$,", "APPR", "ART", "NN", "ART", "NN"], "meter": "+--+--+--+--+-", "measure": "dactylic.penta"}, "line.4": {"text": "Unserer Qual. Und von Leere schwoll uns das Herz.", "tokens": ["Un\u00b7se\u00b7rer", "Qual", ".", "Und", "von", "Lee\u00b7re", "schwoll", "uns", "das", "Herz", "."], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPOSAT", "NN", "$.", "KON", "APPR", "NN", "VVFIN", "PPER", "ART", "NN", "$."], "meter": "+--+--+-+--+", "measure": "dactylic.di.plus"}}, "stanza.2": {"line.1": {"text": "Tr\u00fcb wie die Winde, im Schierling, bei B\u00fcschen und Weiden", "tokens": ["Tr\u00fcb", "wie", "die", "Win\u00b7de", ",", "im", "Schier\u00b7ling", ",", "bei", "B\u00fc\u00b7schen", "und", "Wei\u00b7den"], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "punct", "word", "word", "word", "word"], "pos": ["NN", "KOKOM", "ART", "NN", "$,", "APPRART", "NN", "$,", "APPR", "NN", "KON", "NN"], "meter": "+--+--+--+--+-", "measure": "dactylic.penta"}, "line.2": {"text": "Haben wir unsere H\u00e4nde im Dunkel gesenkt,", "tokens": ["Ha\u00b7ben", "wir", "un\u00b7se\u00b7re", "H\u00e4n\u00b7de", "im", "Dun\u00b7kel", "ge\u00b7senkt", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VAFIN", "PPER", "PPOSAT", "NN", "APPRART", "NN", "VVPP", "$,"], "meter": "+--+--+--+--+", "measure": "dactylic.penta"}, "line.3": {"text": "Und dann gingen wir l\u00e4ssig, und freuten uns unserer Leiden,", "tokens": ["Und", "dann", "gin\u00b7gen", "wir", "l\u00e4s\u00b7sig", ",", "und", "freu\u00b7ten", "uns", "un\u00b7se\u00b7rer", "Lei\u00b7den", ","], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "ADV", "VVFIN", "PPER", "ADJD", "$,", "KON", "VVFIN", "PPER", "PPOSAT", "NN", "$,"], "meter": "--+--+--+--+--+-", "measure": "anapaest.tetra.plus"}, "line.4": {"text": "Arme Spiegel, darin sich ein d\u00fcsterer Abend f\u00e4ngt.", "tokens": ["Ar\u00b7me", "Spie\u00b7gel", ",", "da\u00b7rin", "sich", "ein", "d\u00fcs\u00b7te\u00b7rer", "A\u00b7bend", "f\u00e4ngt", "."], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADJA", "NN", "$,", "PAV", "PRF", "ART", "ADJA", "NN", "VVFIN", "$."], "meter": "+-+--+--+--+-+", "measure": "trochaic.hexa.relaxed"}}, "stanza.3": {"line.1": {"text": "Nachtwandlern gleich, gejagt vom Entsetzen der Tr\u00e4ume,", "tokens": ["Nacht\u00b7wand\u00b7lern", "gleich", ",", "ge\u00b7jagt", "vom", "Ent\u00b7set\u00b7zen", "der", "Tr\u00e4u\u00b7me", ","], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["NN", "ADV", "$,", "VVPP", "APPRART", "NN", "ART", "NN", "$,"], "meter": "+--+-+--+--+-", "measure": "iambic.penta.invert"}, "line.2": {"text": "Die seufzend sich sto\u00dfen im Dunkel mit \u203ableicher\u2039 Hand,", "tokens": ["Die", "seuf\u00b7zend", "sich", "sto\u00b7\u00dfen", "im", "Dun\u00b7kel", "mit", "\u203a", "blei\u00b7cher", "\u2039", "Hand", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct", "word", "punct", "word", "punct"], "pos": ["ART", "ADJD", "PRF", "VVFIN", "APPRART", "NN", "APPR", "$(", "ADJD", "$(", "NN", "$,"], "meter": "-+--+--+--+-+", "measure": "amphibrach.tetra.plus"}, "line.3": {"text": "Also schwankten wir in des Herbstes verschwindende R\u00e4ume,", "tokens": ["Al\u00b7so", "schwank\u00b7ten", "wir", "in", "des", "Herbs\u00b7tes", "ver\u00b7schwin\u00b7den\u00b7de", "R\u00e4u\u00b7me", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VVFIN", "PPER", "APPR", "ART", "NN", "ADJA", "NN", "$,"], "meter": "--+-+--+--+--+-", "measure": "iambic.penta.relaxed"}, "line.4": {"text": "Der wie ein Riese sich hob in die Nacht und versank.", "tokens": ["Der", "wie", "ein", "Rie\u00b7se", "sich", "hob", "in", "die", "Nacht", "und", "ver\u00b7sank", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "KOKOM", "ART", "NN", "PRF", "VVFIN", "APPR", "ART", "NN", "KON", "VVFIN", "$."], "meter": "-+-+--+--+--+", "measure": "iambic.penta.relaxed"}}, "stanza.4": {"line.1": {"text": "Aber im Wolkenland, im Finstern, sahn wir die Schatten", "tokens": ["A\u00b7ber", "im", "Wol\u00b7ken\u00b7land", ",", "im", "Fins\u00b7tern", ",", "sahn", "wir", "die", "Schat\u00b7ten"], "token_info": ["word", "word", "word", "punct", "word", "word", "punct", "word", "word", "word", "word"], "pos": ["KON", "APPRART", "NN", "$,", "APPRART", "NN", "$,", "VVFIN", "PPER", "ART", "NN"], "meter": "+--+-+-+-+--+-", "measure": "hexameter"}, "line.2": {"text": "Schwarzer Reiher und h\u00f6rten den traurigen Flug,", "tokens": ["Schwar\u00b7zer", "Rei\u00b7her", "und", "h\u00f6r\u00b7ten", "den", "trau\u00b7ri\u00b7gen", "Flug", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADJA", "NN", "KON", "VVFIN", "ART", "ADJA", "NN", "$,"], "meter": "+-+--+--+--+", "measure": "trochaic.penta.relaxed"}, "line.3": {"text": "Und wir schwanden dahin in Schwermut und bittrem Ermatten,", "tokens": ["Und", "wir", "schwan\u00b7den", "da\u00b7hin", "in", "Schwer\u00b7mut", "und", "bitt\u00b7rem", "Er\u00b7mat\u00b7ten", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "PPER", "VVFIN", "PAV", "APPR", "NN", "KON", "ADJA", "NN", "$,"], "meter": "--+-++-+--+--+-", "measure": "iambic.hexa.relaxed"}, "line.4": {"text": "Blutleere Seele, die Lethe durch H\u00f6hlen voll Kummer trug.", "tokens": ["Blut\u00b7lee\u00b7re", "See\u00b7le", ",", "die", "Le\u00b7the", "durch", "H\u00f6h\u00b7len", "voll", "Kum\u00b7mer", "trug", "."], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADJA", "NN", "$,", "ART", "NN", "APPR", "NN", "ADJD", "NN", "VVFIN", "$."], "meter": "+--+--+--+--+-+", "measure": "diphilius"}}}}}