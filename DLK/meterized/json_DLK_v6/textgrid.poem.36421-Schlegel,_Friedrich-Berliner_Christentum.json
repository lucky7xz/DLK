{"textgrid.poem.36421": {"metadata": {"author": {"name": "Schlegel, Friedrich", "birth": "N.A.", "death": "N.A."}, "title": "Berliner Christentum", "genre": "verse", "period": "N.A.", "pub_year": 1800, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Wohl saure Arbeit ist es als Verk\u00fcnder", "tokens": ["Wohl", "sau\u00b7re", "Ar\u00b7beit", "ist", "es", "als", "Ver\u00b7k\u00fcn\u00b7der"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["ADV", "ADJA", "NN", "VAFIN", "PPER", "KOUS", "NN"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "Der innern sel'gen Klarheit zu den Lehren", "tokens": ["Der", "in\u00b7nern", "sel'\u00b7gen", "Klar\u00b7heit", "zu", "den", "Leh\u00b7ren"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["ART", "ADJA", "ADJA", "NN", "APPR", "ART", "NN"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Der Religion den Hochmut zu bekehren", "tokens": ["Der", "Re\u00b7li\u00b7gi\u00b7on", "den", "Hoch\u00b7mut", "zu", "be\u00b7keh\u00b7ren"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["ART", "NN", "ART", "NN", "PTKZU", "VVINF"], "meter": "-+-+--+-+-+-", "measure": "iambic.penta.relaxed"}, "line.4": {"text": "Dieser neutralen selbstzufriednen S\u00fcnder!", "tokens": ["Die\u00b7ser", "neut\u00b7ra\u00b7len", "selbst\u00b7zu\u00b7fried\u00b7nen", "S\u00fcn\u00b7der", "!"], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["PDAT", "ADJA", "ADJA", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}, "stanza.2": {"line.1": {"text": "Hoffend, den kleinen Funken wohl entz\u00fcnd' er,", "tokens": ["Hof\u00b7fend", ",", "den", "klei\u00b7nen", "Fun\u00b7ken", "wohl", "ent\u00b7z\u00fcnd'", "er", ","], "token_info": ["word", "punct", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVPP", "$,", "ART", "ADJA", "NN", "ADV", "VVFIN", "PPER", "$,"], "meter": "+--+-+-+-+-", "measure": "iambic.penta.invert"}, "line.2": {"text": "Will der Professor unterhaltend lehren,", "tokens": ["Will", "der", "Pro\u00b7fes\u00b7sor", "un\u00b7ter\u00b7hal\u00b7tend", "leh\u00b7ren", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["VMFIN", "ART", "NN", "VVPP", "VVINF", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Dem Pred'ger gleich den Hochmut recht noch mehren,", "tokens": ["Dem", "Pre\u00b7d'\u00b7ger", "gleich", "den", "Hoch\u00b7mut", "recht", "noch", "meh\u00b7ren", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "ADV", "ART", "NN", "ADV", "ADV", "VVINF", "$,"], "meter": "-+--+-+-+-+-", "measure": "iambic.penta.relaxed"}, "line.4": {"text": "So sichrer eines neuen Christentums Begr\u00fcnder.", "tokens": ["So", "sich\u00b7rer", "ei\u00b7nes", "neu\u00b7en", "Chris\u00b7ten\u00b7tums", "Be\u00b7gr\u00fcn\u00b7der", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "NN", "ART", "ADJA", "NN", "NN", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}}, "stanza.3": {"line.1": {"text": "Der kleine Funke wird sich schwerlich zeigen;", "tokens": ["Der", "klei\u00b7ne", "Fun\u00b7ke", "wird", "sich", "schwer\u00b7lich", "zei\u00b7gen", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "VAFIN", "PRF", "ADJD", "VVINF", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "Der Boden ist zu arm in den Bezirken", "tokens": ["Der", "Bo\u00b7den", "ist", "zu", "arm", "in", "den", "Be\u00b7zir\u00b7ken"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word"], "pos": ["ART", "NN", "VAFIN", "PTKA", "ADJD", "APPR", "ART", "NN"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Des Volks, das Scham und Treue abgeschworen:", "tokens": ["Des", "Volks", ",", "das", "Scham", "und", "Treu\u00b7e", "ab\u00b7ge\u00b7schwo\u00b7ren", ":"], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "$,", "ART", "NN", "KON", "NN", "VVPP", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}, "stanza.4": {"line.1": {"text": "K\u00fcnstelt denn dran als w\u00e4ren sie euch eigen;", "tokens": ["K\u00fcns\u00b7telt", "denn", "dran", "als", "w\u00e4\u00b7ren", "sie", "euch", "ei\u00b7gen", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["NN", "KON", "PAV", "KOKOM", "VAFIN", "PPER", "PPER", "ADJD", "$."], "meter": "+--+-+-+-+-", "measure": "iambic.penta.invert"}, "line.2": {"text": "Ihr m\u00f6gt vielleicht auf die euch Gleichen wirken,", "tokens": ["Ihr", "m\u00f6gt", "viel\u00b7leicht", "auf", "die", "euch", "Glei\u00b7chen", "wir\u00b7ken", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VMFIN", "ADV", "APPR", "PRELS", "PPER", "NN", "VVINF", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Sonst ist an diesem Holz nicht viel verloren.", "tokens": ["Sonst", "ist", "an", "die\u00b7sem", "Holz", "nicht", "viel", "ver\u00b7lo\u00b7ren", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VAFIN", "APPR", "PDAT", "NN", "PTKNEG", "ADV", "VVPP", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}}}}