{"textgrid.poem.55871": {"metadata": {"author": {"name": "Rilke, Rainer Maria", "birth": "N.A.", "death": "N.A."}, "title": "In der Certosa", "genre": "verse", "period": "N.A.", "pub_year": 1900, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Ein jeder aus der wei\u00dfen Bruderschaft", "tokens": ["Ein", "je\u00b7der", "aus", "der", "wei\u00b7\u00dfen", "Bru\u00b7der\u00b7schaft"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["ART", "PIS", "APPR", "ART", "ADJA", "NN"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.2": {"text": "vertraut sich pflanzend seinem kleinen Garten.", "tokens": ["ver\u00b7traut", "sich", "pflan\u00b7zend", "sei\u00b7nem", "klei\u00b7nen", "Gar\u00b7ten", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADJD", "PRF", "ADJD", "PPOSAT", "ADJA", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Auf jedem Beete steht, wer jeder sei.", "tokens": ["Auf", "je\u00b7dem", "Bee\u00b7te", "steht", ",", "wer", "je\u00b7der", "sei", "."], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["APPR", "PIAT", "NN", "VVFIN", "$,", "PWS", "PIS", "VAFIN", "$."], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.4": {"text": "Und Einer harrt in heimlichen Hoffahrten,", "tokens": ["Und", "Ei\u00b7ner", "harrt", "in", "heim\u00b7li\u00b7chen", "Hof\u00b7fahr\u00b7ten", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "PIS", "VVFIN", "APPR", "ADJA", "NN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.5": {"text": "da\u00df ihm im Mai", "tokens": ["da\u00df", "ihm", "im", "Mai"], "token_info": ["word", "word", "word", "word"], "pos": ["KOUS", "PPER", "APPRART", "NN"], "meter": "-+-+", "measure": "iambic.di"}, "line.6": {"text": "die ungest\u00fcmen Bl\u00fcten offenbarten", "tokens": ["die", "un\u00b7ge\u00b7st\u00fc\u00b7men", "Bl\u00fc\u00b7ten", "of\u00b7fen\u00b7bar\u00b7ten"], "token_info": ["word", "word", "word", "word"], "pos": ["ART", "ADJA", "NN", "VVFIN"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.7": {"text": "ein Bild von seiner unterdr\u00fcckten Kraft.", "tokens": ["ein", "Bild", "von", "sei\u00b7ner", "un\u00b7ter\u00b7dr\u00fcck\u00b7ten", "Kraft", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "APPR", "PPOSAT", "ADJA", "NN", "$."], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}}, "stanza.2": {"line.1": {"text": "Und seine H\u00e4nde halten, wie erschlafft,", "tokens": ["Und", "sei\u00b7ne", "H\u00e4n\u00b7de", "hal\u00b7ten", ",", "wie", "er\u00b7schlafft", ","], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "punct"], "pos": ["KON", "PPOSAT", "NN", "VVINF", "$,", "PWAV", "VVPP", "$,"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.2": {"text": "sein braunes Haupt, das schwer ist von den S\u00e4ften,", "tokens": ["sein", "brau\u00b7nes", "Haupt", ",", "das", "schwer", "ist", "von", "den", "S\u00e4f\u00b7ten", ","], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPOSAT", "ADJA", "NN", "$,", "PRELS", "ADJD", "VAFIN", "APPR", "ART", "NN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "die ungeduldig durch das Dunkel rollen,", "tokens": ["die", "un\u00b7ge\u00b7dul\u00b7dig", "durch", "das", "Dun\u00b7kel", "rol\u00b7len", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADJD", "APPR", "ART", "NN", "VVINF", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.4": {"text": "und sein Gewand, das faltig, voll und wollen,", "tokens": ["und", "sein", "Ge\u00b7wand", ",", "das", "fal\u00b7tig", ",", "voll", "und", "wol\u00b7len", ","], "token_info": ["word", "word", "word", "punct", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["KON", "PPOSAT", "NN", "$,", "PRELS", "ADJD", "$,", "ADJD", "KON", "VMFIN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.5": {"text": "zu seinen F\u00fc\u00dfen flie\u00dft, ist stramm gestrafft", "tokens": ["zu", "sei\u00b7nen", "F\u00fc\u00b7\u00dfen", "flie\u00dft", ",", "ist", "stramm", "ge\u00b7strafft"], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word"], "pos": ["APPR", "PPOSAT", "NN", "VVFIN", "$,", "VAFIN", "ADJD", "VVPP"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.6": {"text": "um seinen Armen, die, gleich starken Sch\u00e4ften,", "tokens": ["um", "sei\u00b7nen", "Ar\u00b7men", ",", "die", ",", "gleich", "star\u00b7ken", "Sch\u00e4f\u00b7ten", ","], "token_info": ["word", "word", "word", "punct", "word", "punct", "word", "word", "word", "punct"], "pos": ["APPR", "PPOSAT", "NN", "$,", "PRELS", "$,", "ADV", "ADJA", "NN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.7": {"text": "die H\u00e4nde tragen, welche tr\u00e4umen sollen.", "tokens": ["die", "H\u00e4n\u00b7de", "tra\u00b7gen", ",", "wel\u00b7che", "tr\u00e4u\u00b7men", "sol\u00b7len", "."], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VVINF", "$,", "PRELS", "VVINF", "VMFIN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}, "stanza.3": {"line.1": {"text": "Kein Miserere und kein Kyrie", "tokens": ["Kein", "Mi\u00b7se\u00b7re\u00b7re", "und", "kein", "Ky\u00b7rie"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["PIAT", "NN", "KON", "PIAT", "NN"], "meter": "-+-+--++-", "measure": "iambic.tetra.relaxed"}, "line.2": {"text": "will seine junge, runde Stimme ziehn,", "tokens": ["will", "sei\u00b7ne", "jun\u00b7ge", ",", "run\u00b7de", "Stim\u00b7me", "ziehn", ","], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["VMFIN", "PPOSAT", "ADJA", "$,", "ADJA", "NN", "VVINF", "$,"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.3": {"text": "vor keinem Fluche will sie fliehn:", "tokens": ["vor", "kei\u00b7nem", "Flu\u00b7che", "will", "sie", "fliehn", ":"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "PIAT", "NN", "VMFIN", "PPER", "VVINF", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "sie ist kein Reh.", "tokens": ["sie", "ist", "kein", "Reh", "."], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["PPER", "VAFIN", "PIAT", "NN", "$."], "meter": "-+-+", "measure": "iambic.di"}, "line.5": {"text": "Sie ist ein Ro\u00df und b\u00e4umt sich im Gebi\u00df,", "tokens": ["Sie", "ist", "ein", "Ro\u00df", "und", "b\u00e4umt", "sich", "im", "Ge\u00b7bi\u00df", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VAFIN", "ART", "NN", "KON", "VVFIN", "PRF", "APPRART", "NN", "$,"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.6": {"text": "und \u00fcber H\u00fcrde, Hang und Hindernis", "tokens": ["und", "\u00fc\u00b7ber", "H\u00fcr\u00b7de", ",", "Hang", "und", "Hin\u00b7der\u00b7nis"], "token_info": ["word", "word", "word", "punct", "word", "word", "word"], "pos": ["KON", "APPR", "NN", "$,", "NN", "KON", "NN"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.7": {"text": "will sie ihn tragen, weit und weggewi\u00df,", "tokens": ["will", "sie", "ihn", "tra\u00b7gen", ",", "weit", "und", "weg\u00b7ge\u00b7wi\u00df", ","], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["VMFIN", "PPER", "PPER", "VVINF", "$,", "ADJD", "KON", "ADV", "$,"], "meter": "+--+-+-+-+", "measure": "iambic.penta.invert"}, "line.8": {"text": "ganz ohne Sattel will sie tragen ihn.", "tokens": ["ganz", "oh\u00b7ne", "Sat\u00b7tel", "will", "sie", "tra\u00b7gen", "ihn", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "APPR", "NN", "VMFIN", "PPER", "VVFIN", "PPER", "$."], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}}, "stanza.4": {"line.1": {"text": "Er aber sitzt, und unter den Gedanken", "tokens": ["Er", "a\u00b7ber", "sitzt", ",", "und", "un\u00b7ter", "den", "Ge\u00b7dan\u00b7ken"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word"], "pos": ["PPER", "ADV", "VVFIN", "$,", "KON", "APPR", "ART", "NN"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "zerbrechen fast die breiten Handgelenke,", "tokens": ["zer\u00b7bre\u00b7chen", "fast", "die", "brei\u00b7ten", "Hand\u00b7ge\u00b7len\u00b7ke", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "ADV", "ART", "ADJA", "NN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "so schwer wird ihm der Sinn und immer schwerer.", "tokens": ["so", "schwer", "wird", "ihm", "der", "Sinn", "und", "im\u00b7mer", "schwe\u00b7rer", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "ADJD", "VAFIN", "PPER", "ART", "NN", "KON", "ADV", "ADJD", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}, "stanza.5": {"line.1": {"text": "Der Abend kommt, der sanfte Wiederkehrer,", "tokens": ["Der", "A\u00b7bend", "kommt", ",", "der", "sanf\u00b7te", "Wie\u00b7der\u00b7keh\u00b7rer", ","], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VVFIN", "$,", "ART", "ADJA", "NN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "ein Wind beginnt, die Wege werden leerer,", "tokens": ["ein", "Wind", "be\u00b7ginnt", ",", "die", "We\u00b7ge", "wer\u00b7den", "lee\u00b7rer", ","], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VVFIN", "$,", "ART", "NN", "VAFIN", "ADJD", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "und Schatten sammeln sich im Talgesenke.", "tokens": ["und", "Schat\u00b7ten", "sam\u00b7meln", "sich", "im", "Tal\u00b7ge\u00b7sen\u00b7ke", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "NN", "VVFIN", "PRF", "APPRART", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}, "stanza.6": {"line.1": {"text": "Und wie ein Kahn, der an der Kette schwankt,", "tokens": ["Und", "wie", "ein", "Kahn", ",", "der", "an", "der", "Ket\u00b7te", "schwankt", ","], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "PWAV", "ART", "NN", "$,", "PRELS", "APPR", "ART", "NN", "VVFIN", "$,"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.2": {"text": "so wird der Garten ungewi\u00df und hangt", "tokens": ["so", "wird", "der", "Gar\u00b7ten", "un\u00b7ge\u00b7wi\u00df", "und", "hangt"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["ADV", "VAFIN", "ART", "NN", "ADJD", "KON", "VVFIN"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.3": {"text": "wie windgewiegt auf lauter D\u00e4mmerung.", "tokens": ["wie", "wind\u00b7ge\u00b7wiegt", "auf", "lau\u00b7ter", "D\u00e4m\u00b7me\u00b7rung", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PWAV", "VVFIN", "APPR", "PIAT", "NN", "$."], "meter": "-+-+-+-+--", "measure": "unknown.measure.tetra"}, "line.4": {"text": "Wer l\u00f6st ihn los?...", "tokens": ["Wer", "l\u00f6st", "ihn", "los", "?", "..."], "token_info": ["word", "word", "word", "word", "punct", "punct"], "pos": ["PWS", "VVFIN", "PPER", "PTKVZ", "$.", "$("], "meter": "-+-+", "measure": "iambic.di"}}, "stanza.7": {"line.1": {"text": "Der Frate ist so jung,", "tokens": ["Der", "Fra\u00b7te", "ist", "so", "jung", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VAFIN", "ADV", "ADJD", "$,"], "meter": "-+-+-+", "measure": "iambic.tri"}, "line.2": {"text": "und langelang ist seine Mutter tot.", "tokens": ["und", "lan\u00b7ge\u00b7lang", "ist", "sei\u00b7ne", "Mut\u00b7ter", "tot", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "ADJD", "VAFIN", "PPOSAT", "NN", "ADJD", "$."], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.3": {"text": "Er wei\u00df von ihr: sie nannten sie ", "tokens": ["Er", "wei\u00df", "von", "ihr", ":", "sie", "nann\u00b7ten", "sie"], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word"], "pos": ["PPER", "VVFIN", "APPR", "PPOSAT", "$.", "PPER", "VVFIN", "PPER"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "sie war ein Glas, ganz zart und klar. Man bot", "tokens": ["sie", "war", "ein", "Glas", ",", "ganz", "zart", "und", "klar", ".", "Man", "bot"], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct", "word", "word"], "pos": ["PPER", "VAFIN", "ART", "NN", "$,", "ADV", "ADJD", "KON", "ADJD", "$.", "PIS", "VVFIN"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.5": {"text": "es einem, der es nach dem Trunk zerschlug", "tokens": ["es", "ei\u00b7nem", ",", "der", "es", "nach", "dem", "Trunk", "zer\u00b7schlug"], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "word"], "pos": ["PPER", "ART", "$,", "PRELS", "PPER", "APPR", "ART", "NN", "VVFIN"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.6": {"text": "wie einen Krug.", "tokens": ["wie", "ei\u00b7nen", "Krug", "."], "token_info": ["word", "word", "word", "punct"], "pos": ["PWAV", "ART", "NN", "$."], "meter": "-+-+", "measure": "iambic.di"}}, "stanza.8": {"line.1": {"text": "So ist der Vater.", "tokens": ["So", "ist", "der", "Va\u00b7ter", "."], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["ADV", "VAFIN", "ART", "NN", "$."], "meter": "-+-+-", "measure": "iambic.di"}, "line.2": {"text": "Und er hat sein Brot", "tokens": ["Und", "er", "hat", "sein", "Brot"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["KON", "PPER", "VAFIN", "PPOSAT", "NN"], "meter": "+-+-+", "measure": "trochaic.tri"}, "line.3": {"text": "als Meister in den roten Marmorbr\u00fcchen.", "tokens": ["als", "Meis\u00b7ter", "in", "den", "ro\u00b7ten", "Mar\u00b7mor\u00b7br\u00fc\u00b7chen", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "NN", "APPR", "ART", "ADJA", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.4": {"text": "Und jede W\u00f6chnerin in Pietrabianca", "tokens": ["Und", "je\u00b7de", "W\u00f6ch\u00b7ne\u00b7rin", "in", "Pie\u00b7tra\u00b7bi\u00b7an\u00b7ca"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["KON", "PIAT", "NN", "APPR", "NE"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.5": {"text": "hat Furcht, da\u00df er des Nachts mit seinen Fl\u00fcchen", "tokens": ["hat", "Furcht", ",", "da\u00df", "er", "des", "Nachts", "mit", "sei\u00b7nen", "Fl\u00fc\u00b7chen"], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "word", "word"], "pos": ["VAFIN", "NN", "$,", "KOUS", "PPER", "ART", "ADV", "APPR", "PPOSAT", "NN"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.6": {"text": "vorbei an ihrem Fenster kommt und droht.", "tokens": ["vor\u00b7bei", "an", "ih\u00b7rem", "Fens\u00b7ter", "kommt", "und", "droht", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "APPR", "PPOSAT", "NN", "VVFIN", "KON", "VVFIN", "$."], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}}, "stanza.9": {"line.1": {"text": "Sein Sohn, den er der Donna Dolorosa", "tokens": ["Sein", "Sohn", ",", "den", "er", "der", "Don\u00b7na", "Do\u00b7lo\u00b7ro\u00b7sa"], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word"], "pos": ["PPOSAT", "NN", "$,", "PRELS", "PPER", "ART", "NN", "NE"], "meter": "-+-+--+-+-+", "measure": "iambic.penta.relaxed"}, "line.2": {"text": "geweiht in einer Stunde wilder Not,", "tokens": ["ge\u00b7weiht", "in", "ei\u00b7ner", "Stun\u00b7de", "wil\u00b7der", "Not", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVPP", "APPR", "ART", "NN", "ADJA", "NN", "$,"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.3": {"text": "sinnt im Arkadenhofe der Certosa,", "tokens": ["sinnt", "im", "Ar\u00b7ka\u00b7den\u00b7ho\u00b7fe", "der", "Cer\u00b7to\u00b7sa", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "APPRART", "NN", "ART", "NN", "$,"], "meter": "+-+--+--+-+", "measure": "trochaic.penta.relaxed"}, "line.4": {"text": "sinnt, wie umrauscht von r\u00f6tlichen Ger\u00fcchen:", "tokens": ["sinnt", ",", "wie", "um\u00b7rauscht", "von", "r\u00f6t\u00b7li\u00b7chen", "Ge\u00b7r\u00fc\u00b7chen", ":"], "token_info": ["word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "$,", "PWAV", "VVPP", "APPR", "ADJA", "NN", "$."], "meter": "+--+-+-+-+-", "measure": "iambic.penta.invert"}, "line.5": {"text": "denn seine Blumen bl\u00fchen alle rot.", "tokens": ["denn", "sei\u00b7ne", "Blu\u00b7men", "bl\u00fc\u00b7hen", "al\u00b7le", "rot", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "PPOSAT", "NN", "VVFIN", "PIS", "ADJD", "$."], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}}}}}