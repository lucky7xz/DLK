{"textgrid.poem.49667": {"metadata": {"author": {"name": "Thoma, Ludwig", "birth": "N.A.", "death": "N.A."}, "title": "Ein altes Lied in neu-s\u00e4chsischer Form", "genre": "verse", "period": "N.A.", "pub_year": 1894, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "\u00dcb immer K\u00f6nigsfreundlichkeit", "tokens": ["\u00dcb", "im\u00b7mer", "K\u00f6\u00b7nigs\u00b7freund\u00b7lich\u00b7keit"], "token_info": ["word", "word", "word"], "pos": ["ADV", "ADV", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Bis an dein k\u00fchles Grab", "tokens": ["Bis", "an", "dein", "k\u00fch\u00b7les", "Grab"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["APPR", "APPR", "PPOSAT", "ADJA", "NN"], "meter": "-+-+-+", "measure": "iambic.tri"}, "line.3": {"text": "Und weiche keinen Finger breit", "tokens": ["Und", "wei\u00b7che", "kei\u00b7nen", "Fin\u00b7ger", "breit"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["KON", "ADJA", "PIAT", "NN", "ADJD"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "Von deinem K\u00f6nig ab!", "tokens": ["Von", "dei\u00b7nem", "K\u00f6\u00b7nig", "ab", "!"], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["APPR", "PPOSAT", "NN", "PTKVZ", "$."], "meter": "-+-+-+", "measure": "iambic.tri"}}, "stanza.2": {"line.1": {"text": "O lieb ihn recht in der Kasern'", "tokens": ["O", "lieb", "ihn", "recht", "in", "der", "Ka\u00b7sern'"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["NE", "ADJD", "PPER", "ADV", "APPR", "ART", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Und auch als Zivilist,", "tokens": ["Und", "auch", "als", "Zi\u00b7vi\u00b7list", ","], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["KON", "ADV", "KOUS", "NN", "$,"], "meter": "-+-+-+", "measure": "iambic.tri"}, "line.3": {"text": "Und hab ihn dann zuletzt noch gern,", "tokens": ["Und", "hab", "ihn", "dann", "zu\u00b7letzt", "noch", "gern", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "VAFIN", "PPER", "ADV", "ADV", "ADV", "ADV", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "Wenn du am Sterben bist.", "tokens": ["Wenn", "du", "am", "Ster\u00b7ben", "bist", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "PPER", "APPRART", "NN", "VAFIN", "$."], "meter": "-+-+-+", "measure": "iambic.tri"}}, "stanza.3": {"line.1": {"text": "Ja, trage willig deine Last", "tokens": ["Ja", ",", "tra\u00b7ge", "wil\u00b7lig", "dei\u00b7ne", "Last"], "token_info": ["word", "punct", "word", "word", "word", "word"], "pos": ["PTKANT", "$,", "VVFIN", "ADJD", "PPOSAT", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Getreu dem Fahneneid!", "tokens": ["Ge\u00b7treu", "dem", "Fah\u00b7ne\u00b7neid", "!"], "token_info": ["word", "word", "word", "punct"], "pos": ["ADJD", "ART", "NN", "$."], "meter": "-+-+-+", "measure": "iambic.tri"}, "line.3": {"text": "Und wenn du nichts zu fressen hast,", "tokens": ["Und", "wenn", "du", "nichts", "zu", "fres\u00b7sen", "hast", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "KOUS", "PPER", "PIS", "PTKZU", "VVINF", "VAFIN", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "So stirb in Ehrlichkeit!", "tokens": ["So", "stirb", "in", "Ehr\u00b7lich\u00b7keit", "!"], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["ADV", "VVFIN", "APPR", "NN", "$."], "meter": "-+-+-+", "measure": "iambic.tri"}}, "stanza.4": {"line.1": {"text": "Dann segnen Priester deine Gruft", "tokens": ["Dann", "seg\u00b7nen", "Pries\u00b7ter", "dei\u00b7ne", "Gruft"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["ADV", "ADJA", "NN", "PPOSAT", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "\u2013 Das hei\u00dft mit Vorbehalt \u2013", "tokens": ["\u2013", "Das", "hei\u00dft", "mit", "Vor\u00b7be\u00b7halt", "\u2013"], "token_info": ["punct", "word", "word", "word", "word", "punct"], "pos": ["$(", "PDS", "VVFIN", "APPR", "NN", "$("], "meter": "-+-+-+", "measure": "iambic.tri"}, "line.3": {"text": "Wenn jemand f\u00fcr dich armen Schuft", "tokens": ["Wenn", "je\u00b7mand", "f\u00fcr", "dich", "ar\u00b7men", "Schuft"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["KOUS", "PIS", "APPR", "PPER", "ADJA", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "Die Leichenkosten zahlt.", "tokens": ["Die", "Lei\u00b7chen\u00b7kos\u00b7ten", "zahlt", "."], "token_info": ["word", "word", "word", "punct"], "pos": ["ART", "NN", "VVFIN", "$."], "meter": "-+-+-+", "measure": "iambic.tri"}}}}}