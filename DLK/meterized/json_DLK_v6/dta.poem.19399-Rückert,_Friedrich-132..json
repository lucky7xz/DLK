{"dta.poem.19399": {"metadata": {"author": {"name": "R\u00fcckert, Friedrich", "birth": "N.A.", "death": "N.A."}, "title": "132.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1837", "urn": "urn:nbn:de:kobv:b4-200905195090", "language": ["de:0.99"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "Warum die Wahrheit wird so schwer an Mann gebracht?", "tokens": ["Wa\u00b7rum", "die", "Wahr\u00b7heit", "wird", "so", "schwer", "an", "Mann", "ge\u00b7bracht", "?"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PWAV", "ART", "NN", "VAFIN", "ADV", "ADJD", "APPR", "NN", "VVPP", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Weil sie den Menschen vor sich selbst zu Schanden macht.", "tokens": ["Weil", "sie", "den", "Men\u00b7schen", "vor", "sich", "selbst", "zu", "Schan\u00b7den", "macht", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "PPER", "ART", "NN", "APPR", "PRF", "ADV", "APPR", "NN", "VVFIN", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}}, "stanza.2": {"line.1": {"text": "Die Selbsucht, die dir schlie\u00dft vor unserm Rath das Ohr,", "tokens": ["Die", "Selb\u00b7sucht", ",", "die", "dir", "schlie\u00dft", "vor", "un\u00b7serm", "Rath", "das", "Ohr", ","], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "$,", "PRELS", "PPER", "VVFIN", "APPR", "PPOSAT", "NN", "ART", "NN", "$,"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Verschlie\u00dft auch selbst den Mund des Rathes uns zuvor.", "tokens": ["Ver\u00b7schlie\u00dft", "auch", "selbst", "den", "Mund", "des", "Ra\u00b7thes", "uns", "zu\u00b7vor", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "ADV", "ADV", "ART", "NN", "ART", "NN", "PPER", "ADV", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}}, "stanza.3": {"line.1": {"text": "Wenn du zu spenden hast und zu verweigern Gnaden,", "tokens": ["Wenn", "du", "zu", "spen\u00b7den", "hast", "und", "zu", "ver\u00b7wei\u00b7gern", "Gna\u00b7den", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "PPER", "PTKZU", "VVINF", "VAFIN", "KON", "APPR", "ADJA", "NN", "$,"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Wie sollten wir, um dir zu n\u00fctzen, selbst uns schaden?", "tokens": ["Wie", "soll\u00b7ten", "wir", ",", "um", "dir", "zu", "n\u00fct\u00b7zen", ",", "selbst", "uns", "scha\u00b7den", "?"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["PWAV", "VMFIN", "PPER", "$,", "KOUI", "PPER", "PTKZU", "VVINF", "$,", "ADV", "PPER", "VVINF", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}}, "stanza.4": {"line.1": {"text": "Wir werden wenigstens die Bitterkeit der Sachen", "tokens": ["Wir", "wer\u00b7den", "we\u00b7nigs\u00b7tens", "die", "Bit\u00b7ter\u00b7keit", "der", "Sa\u00b7chen"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["PPER", "VAFIN", "ADV", "ART", "NN", "ART", "NN"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Durch m\u00f6glichst s\u00fc\u00dfes Wort dir halb ertr\u00e4glich machen.", "tokens": ["Durch", "m\u00f6g\u00b7lichst", "s\u00fc\u00b7\u00dfes", "Wort", "dir", "halb", "er\u00b7tr\u00e4g\u00b7lich", "ma\u00b7chen", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "ADV", "ADJA", "NN", "PPER", "ADJD", "ADJD", "VVINF", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}}, "stanza.5": {"line.1": {"text": "Nur wenn von dir nichts ist zu f\u00fcrchten noch zu hoffen,", "tokens": ["Nur", "wenn", "von", "dir", "nichts", "ist", "zu", "f\u00fcrch\u00b7ten", "noch", "zu", "hof\u00b7fen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "KOUS", "APPR", "PPER", "PIS", "VAFIN", "PTKZU", "VVFIN", "ADV", "PTKZU", "VVINF", "$,"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Erwarte, da\u00df du h\u00f6rst die Wahrheit frei und offen.", "tokens": ["Er\u00b7war\u00b7te", ",", "da\u00df", "du", "h\u00f6rst", "die", "Wahr\u00b7heit", "frei", "und", "of\u00b7fen", "."], "token_info": ["word", "punct", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "$,", "KOUS", "PPER", "VVFIN", "ART", "NN", "ADJD", "KON", "ADJD", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}}, "stanza.6": {"line.1": {"text": "Drum ist am weitesten von ihr ein F\u00fcrst entfernt,", "tokens": ["Drum", "ist", "am", "wei\u00b7tes\u00b7ten", "von", "ihr", "ein", "F\u00fcrst", "ent\u00b7fernt", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PAV", "VAFIN", "APPRART", "ADJA", "APPR", "PPOSAT", "ART", "NN", "VVPP", "$,"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Da leicht ein Bettler sie auch wider Willen lernt.", "tokens": ["Da", "leicht", "ein", "Bett\u00b7ler", "sie", "auch", "wi\u00b7der", "Wil\u00b7len", "lernt", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "ADJD", "ART", "NN", "PPER", "ADV", "APPR", "NN", "VVFIN", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}}}}}