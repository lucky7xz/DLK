{"textgrid.poem.39511": {"metadata": {"author": {"name": "Schlegel, August Wilhelm", "birth": "N.A.", "death": "N.A."}, "title": "1L: Den schwarzen Sohn der sonnentflammten Zone", "genre": "verse", "period": "N.A.", "pub_year": 1806, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Den schwarzen Sohn der sonnentflammten Zone", "tokens": ["Den", "schwar\u00b7zen", "Sohn", "der", "son\u00b7nent\u00b7flamm\u00b7ten", "Zo\u00b7ne"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["ART", "ADJA", "NN", "ART", "ADJA", "NN"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "Entf\u00fchrt aus seinem Palmen-Vaterlande", "tokens": ["Ent\u00b7f\u00fchrt", "aus", "sei\u00b7nem", "Pal\u00b7men\u00b7Va\u00b7ter\u00b7lan\u00b7de"], "token_info": ["word", "word", "word", "word"], "pos": ["VVFIN", "APPR", "PPOSAT", "NN"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Europa's Geiz, da\u00df er an fernem Strande", "tokens": ["Eu\u00b7ro\u00b7pa's", "Geiz", ",", "da\u00df", "er", "an", "fer\u00b7nem", "Stran\u00b7de"], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word"], "pos": ["NE", "NE", "$,", "KOUS", "PPER", "APPR", "ADJA", "NN"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.4": {"text": "In hartem Sclavendienst verschmachtend frohne.", "tokens": ["In", "har\u00b7tem", "Scla\u00b7ven\u00b7dienst", "ver\u00b7schmach\u00b7tend", "froh\u00b7ne", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "ADJA", "NN", "VVPP", "VVFIN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}, "stanza.2": {"line.1": {"text": "Die Freiheit wird dem Armen erst zum Lohne.", "tokens": ["Die", "Frei\u00b7heit", "wird", "dem", "Ar\u00b7men", "erst", "zum", "Loh\u00b7ne", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VAFIN", "ART", "NN", "ADV", "APPRART", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "F\u00fcr seine Treu' entfallen ihm die Bande;", "tokens": ["F\u00fcr", "sei\u00b7ne", "Treu'", "ent\u00b7fal\u00b7len", "ihm", "die", "Ban\u00b7de", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "PPOSAT", "NN", "VVFIN", "PPER", "ART", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Er lernt, begl\u00fcckt in seinem niedern Stande,", "tokens": ["Er", "lernt", ",", "be\u00b7gl\u00fcckt", "in", "sei\u00b7nem", "nie\u00b7dern", "Stan\u00b7de", ","], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "$,", "VVFIN", "APPR", "PPOSAT", "ADJA", "NN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.4": {"text": "Da\u00df Mild' und Recht im Land der Wei\u00dfen wohne.", "tokens": ["Da\u00df", "Mild'", "und", "Recht", "im", "Land", "der", "Wei\u00b7\u00dfen", "woh\u00b7ne", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "NN", "KON", "NN", "APPRART", "NN", "ART", "NN", "VVFIN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}, "stanza.3": {"line.1": {"text": "Bald winken ihm zwei segnende Gestirne:", "tokens": ["Bald", "win\u00b7ken", "ihm", "zwei", "seg\u00b7nen\u00b7de", "Ge\u00b7stir\u00b7ne", ":"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VVFIN", "PPER", "CARD", "ADJA", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "Seht! Huld und Adel mit vereintem Triebe", "tokens": ["Seht", "!", "Huld", "und", "A\u00b7del", "mit", "ver\u00b7ein\u00b7tem", "Trie\u00b7be"], "token_info": ["word", "punct", "word", "word", "word", "word", "word", "word"], "pos": ["VVFIN", "$.", "NN", "KON", "NN", "APPR", "ADJA", "NN"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Geleiten ihn zum heil'gen Glaubensbade.", "tokens": ["Ge\u00b7lei\u00b7ten", "ihn", "zum", "heil'\u00b7gen", "Glau\u00b7bens\u00b7ba\u00b7de", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["NN", "PPER", "APPRART", "ADJA", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}, "stanza.4": {"line.1": {"text": "Ein Lichtstrahl f\u00e4llt auf seine dunkle Stirne,", "tokens": ["Ein", "Licht\u00b7strahl", "f\u00e4llt", "auf", "sei\u00b7ne", "dunk\u00b7le", "Stir\u00b7ne", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VVFIN", "APPR", "PPOSAT", "ADJA", "NN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "Ihm offenbart der Christen fromme Liebe", "tokens": ["Ihm", "of\u00b7fen\u00b7bart", "der", "Chris\u00b7ten", "from\u00b7me", "Lie\u00b7be"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["PPER", "VVFIN", "ART", "NN", "ADJA", "NN"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Das g\u00f6ttliche Geheimni\u00df ew'ger Gnade.", "tokens": ["Das", "g\u00f6tt\u00b7li\u00b7che", "Ge\u00b7heim\u00b7ni\u00df", "ew'\u00b7ger", "Gna\u00b7de", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "ADJA", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}}}}