{"textgrid.poem.64781": {"metadata": {"author": {"name": "K\u00e4stner, Abraham Gotthelf", "birth": "N.A.", "death": "N.A."}, "title": "3. Gedanken bey dem Grabe eines Mathematikverst\u00e4ndigen.", "genre": "verse", "period": "N.A.", "pub_year": 1751, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Geist, der des Mondes Last, der Sonne Zug gewogen,", "tokens": ["Geist", ",", "der", "des", "Mon\u00b7des", "Last", ",", "der", "Son\u00b7ne", "Zug", "ge\u00b7wo\u00b7gen", ","], "token_info": ["word", "punct", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["NN", "$,", "PRELS", "ART", "NN", "NE", "$,", "ART", "NN", "NN", "VVPP", "$,"], "meter": "+--+-+-+-+-+-", "measure": "iambic.hexa.invert"}, "line.2": {"text": "Der nie betrogen ward, und uns nie hat betrogen,", "tokens": ["Der", "nie", "be\u00b7tro\u00b7gen", "ward", ",", "und", "uns", "nie", "hat", "be\u00b7tro\u00b7gen", ","], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADV", "VVPP", "VAFIN", "$,", "KON", "PPER", "ADV", "VAFIN", "VVPP", "$,"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.3": {"text": "Sich in den tiefsten Schacht vom fernsten Stern gesenkt,", "tokens": ["Sich", "in", "den", "tiefs\u00b7ten", "Schacht", "vom", "ferns\u00b7ten", "Stern", "ge\u00b7senkt", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PRF", "APPR", "ART", "ADJA", "NN", "APPRART", "ADJA", "NN", "VVPP", "$,"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.4": {"text": "Sag' an, was ist der Lohn, den so viel Arbeit schenkt?", "tokens": ["Sag'", "an", ",", "was", "ist", "der", "Lohn", ",", "den", "so", "viel", "Ar\u00b7beit", "schenkt", "?"], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["NN", "PTKVZ", "$,", "PWS", "VAFIN", "ART", "NN", "$,", "PRELS", "ADV", "PIAT", "NN", "VVFIN", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}}, "stanza.2": {"line.1": {"text": "Ein kleines H\u00e4ufchen Sand deckt die verwesten Glieder,", "tokens": ["Ein", "klei\u00b7nes", "H\u00e4uf\u00b7chen", "Sand", "deckt", "die", "ver\u00b7wes\u00b7ten", "Glie\u00b7der", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "NN", "VVFIN", "ART", "ADJA", "NN", "$,"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Vergebens sucht man es nach zwanzig Jahren wieder;", "tokens": ["Ver\u00b7ge\u00b7bens", "sucht", "man", "es", "nach", "zwan\u00b7zig", "Jah\u00b7ren", "wie\u00b7der", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VVFIN", "PIS", "PPER", "APPR", "CARD", "NN", "ADV", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.3": {"text": "Da, wo ein Reicher fault, Porphyr die Enkel lehrt,", "tokens": ["Da", ",", "wo", "ein", "Rei\u00b7cher", "fault", ",", "Por\u00b7phyr", "die", "En\u00b7kel", "lehrt", ","], "token_info": ["word", "punct", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["ADV", "$,", "PWAV", "ART", "ADJA", "NN", "$,", "NN", "ART", "NN", "VVFIN", "$,"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.4": {"text": "Ein K\u00f6rper modre hier, der einst die Welt beschwert.", "tokens": ["Ein", "K\u00f6r\u00b7per", "mod\u00b7re", "hier", ",", "der", "einst", "die", "Welt", "be\u00b7schwert", "."], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VVFIN", "ADV", "$,", "PRELS", "ADV", "ART", "NN", "VVPP", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}}, "stanza.3": {"line.1": {"text": "Und stirbt stets als ein Kind, das kaum noch lernte lallen.", "tokens": ["Und", "stirbt", "stets", "als", "ein", "Kind", ",", "das", "kaum", "noch", "lern\u00b7te", "lal\u00b7len", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "VVFIN", "ADV", "KOUS", "ART", "NN", "$,", "PRELS", "ADV", "ADV", "VVFIN", "VVINF", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Auch ", "tokens": ["Auch"], "token_info": ["word"], "pos": ["ADV"], "meter": "+", "measure": "single.up"}, "line.3": {"text": "Macht nur bey Sterblichen ihn zum gelehrten Greis.", "tokens": ["Macht", "nur", "bey", "Sterb\u00b7li\u00b7chen", "ihn", "zum", "ge\u00b7lehr\u00b7ten", "Greis", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["NN", "ADV", "APPR", "NN", "PPER", "APPRART", "ADJA", "NN", "$."], "meter": "+--+-+-+-+-+", "measure": "iambic.hexa.invert"}}, "stanza.4": {"line.1": {"text": "Doch wisse, da\u00df der Mensch, der f\u00fcr die Wahrheit brennet,", "tokens": ["Doch", "wis\u00b7se", ",", "da\u00df", "der", "Mensch", ",", "der", "f\u00fcr", "die", "Wahr\u00b7heit", "bren\u00b7net", ","], "token_info": ["word", "word", "punct", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "VVFIN", "$,", "KOUS", "ART", "NN", "$,", "PRELS", "APPR", "ART", "NN", "VVFIN", "$,"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Dem Tode weiter nichts, als einen Leichnam g\u00f6nnet,", "tokens": ["Dem", "To\u00b7de", "wei\u00b7ter", "nichts", ",", "als", "ei\u00b7nen", "Leich\u00b7nam", "g\u00f6n\u00b7net", ","], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "ADV", "PIS", "$,", "KOUS", "ART", "NN", "VVFIN", "$,"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.3": {"text": "Und den befreyten Geist mit einer Wollust n\u00e4hrt,", "tokens": ["Und", "den", "be\u00b7frey\u00b7ten", "Geist", "mit", "ei\u00b7ner", "Wol\u00b7lust", "n\u00e4hrt", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "ART", "ADJA", "NN", "APPR", "ART", "NN", "VVFIN", "$,"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.4": {"text": "Die nie der grobe Sinn des Erdenwurms erf\u00e4hrt.", "tokens": ["Die", "nie", "der", "gro\u00b7be", "Sinn", "des", "Er\u00b7den\u00b7wurms", "er\u00b7f\u00e4hrt", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADV", "ART", "ADJA", "NN", "ART", "NN", "VVFIN", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}}, "stanza.5": {"line.1": {"text": "Denn Seelen, die bey euch, mit niedrigem Bestreben,", "tokens": ["Denn", "See\u00b7len", ",", "die", "bey", "euch", ",", "mit", "nied\u00b7ri\u00b7gem", "Be\u00b7stre\u00b7ben", ","], "token_info": ["word", "word", "punct", "word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["KON", "NN", "$,", "PRELS", "APPR", "PPER", "$,", "APPR", "ADJA", "NN", "$,"], "meter": "-+--+--+-+-+-", "measure": "amphibrach.tri.plus"}, "line.2": {"text": "Nichts wichtigers gesucht, als ihres Leichnams Leben,", "tokens": ["Nichts", "wich\u00b7ti\u00b7gers", "ge\u00b7sucht", ",", "als", "ih\u00b7res", "Leich\u00b7nams", "Le\u00b7ben", ","], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["PIS", "ADJA", "VVPP", "$,", "KOUS", "PPOSAT", "NN", "NN", "$,"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.3": {"text": "Sehn in der Geisterwelt, voll m\u00fc\u00dfigen Verdru\u00df,", "tokens": ["Sehn", "in", "der", "Geis\u00b7ter\u00b7welt", ",", "voll", "m\u00fc\u00b7\u00dfi\u00b7gen", "Ver\u00b7dru\u00df", ","], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["VVFIN", "APPR", "ART", "NN", "$,", "ADJD", "ADJA", "NN", "$,"], "meter": "+--+-+-+-+-+", "measure": "iambic.hexa.invert"}, "line.4": {"text": "Sich fern von ihrem Gl\u00fcck, das dort verwesen mu\u00df.", "tokens": ["Sich", "fern", "von", "ih\u00b7rem", "Gl\u00fcck", ",", "das", "dort", "ver\u00b7we\u00b7sen", "mu\u00df", "."], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["PRF", "ADJD", "APPR", "PPOSAT", "NN", "$,", "PRELS", "ADV", "VVINF", "VMFIN", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}}, "stanza.6": {"line.1": {"text": "Du aber, w\u00fcnschest du einst unsre Zahl zu mehren,", "tokens": ["Du", "a\u00b7ber", ",", "w\u00fcn\u00b7schest", "du", "einst", "uns\u00b7re", "Zahl", "zu", "meh\u00b7ren", ","], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "ADV", "$,", "VVFIN", "PPER", "ADV", "PPOSAT", "NN", "PTKZU", "VVINF", "$,"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "So nimm die letzte noch von deines Lehrers Lehren:", "tokens": ["So", "nimm", "die", "letz\u00b7te", "noch", "von", "dei\u00b7nes", "Leh\u00b7rers", "Leh\u00b7ren", ":"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VVIMP", "ART", "ADJA", "ADV", "APPR", "PPOSAT", "NN", "NN", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.3": {"text": "Bereite, weil du kannst, den forschenden Verstand", "tokens": ["Be\u00b7rei\u00b7te", ",", "weil", "du", "kannst", ",", "den", "for\u00b7schen\u00b7den", "Ver\u00b7stand"], "token_info": ["word", "punct", "word", "word", "word", "punct", "word", "word", "word"], "pos": ["NN", "$,", "KOUS", "PPER", "VMFIN", "$,", "ART", "ADJA", "NN"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.4": {"text": "F\u00fcr Wahrheit h\u00f6h'rer Art, als ", "tokens": ["F\u00fcr", "Wahr\u00b7heit", "h\u00f6h'\u00b7rer", "Art", ",", "als"], "token_info": ["word", "word", "word", "word", "punct", "word"], "pos": ["APPR", "NN", "ADJA", "NN", "$,", "KOUS"], "meter": "-+-+-+-", "measure": "iambic.tri"}}}}}