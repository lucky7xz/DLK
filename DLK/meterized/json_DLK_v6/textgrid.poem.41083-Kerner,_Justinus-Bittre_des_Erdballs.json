{"textgrid.poem.41083": {"metadata": {"author": {"name": "Kerner, Justinus", "birth": "N.A.", "death": "N.A."}, "title": "Bittre des Erdballs", "genre": "verse", "period": "N.A.", "pub_year": 1824, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Wollest S\u00fc\u00dfes nicht erwarten", "tokens": ["Wol\u00b7lest", "S\u00fc\u00b7\u00dfes", "nicht", "er\u00b7war\u00b7ten"], "token_info": ["word", "word", "word", "word"], "pos": ["ADV", "NN", "PTKNEG", "VVINF"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.2": {"text": "Von dem Balle dieser Welt,", "tokens": ["Von", "dem", "Bal\u00b7le", "die\u00b7ser", "Welt", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "ART", "NN", "PDAT", "NN", "$,"], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.3": {"text": "Wie vom Apfel, den im Garten", "tokens": ["Wie", "vom", "Ap\u00b7fel", ",", "den", "im", "Gar\u00b7ten"], "token_info": ["word", "word", "word", "punct", "word", "word", "word"], "pos": ["PWAV", "APPRART", "NN", "$,", "PRELS", "APPRART", "NN"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.4": {"text": "Dir der Baum entgegenh\u00e4lt.", "tokens": ["Dir", "der", "Baum", "ent\u00b7ge\u00b7gen\u00b7h\u00e4lt", "."], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["PPER", "ART", "NN", "VVFIN", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}}, "stanza.2": {"line.1": {"text": "W\u00fcrdest, ach! zu sehr erschrecken,", "tokens": ["W\u00fcr\u00b7dest", ",", "ach", "!", "zu", "sehr", "er\u00b7schre\u00b7cken", ","], "token_info": ["word", "punct", "word", "punct", "word", "word", "word", "punct"], "pos": ["VAFIN", "$,", "ITJ", "$.", "APPR", "ADV", "VVFIN", "$,"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.2": {"text": "Suchtest du hier S\u00fc\u00dfigkeit!", "tokens": ["Such\u00b7test", "du", "hier", "S\u00fc\u00b7\u00dfig\u00b7keit", "!"], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["VVFIN", "PPER", "ADV", "NN", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.3": {"text": "Lerne Bittres, Bittres schmecken!", "tokens": ["Ler\u00b7ne", "Bitt\u00b7res", ",", "Bitt\u00b7res", "schme\u00b7cken", "!"], "token_info": ["word", "word", "punct", "word", "word", "punct"], "pos": ["ADJA", "NN", "$,", "NN", "VVINF", "$."], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.4": {"text": "Solches der Erdapfel beut.", "tokens": ["Sol\u00b7ches", "der", "E\u00b7rdap\u00b7fel", "beut", "."], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["PIS", "ART", "NN", "VVFIN", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}}, "stanza.3": {"line.1": {"text": "H\u00fclle dich nur in den Mantel", "tokens": ["H\u00fcl\u00b7le", "dich", "nur", "in", "den", "Man\u00b7tel"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["NN", "PPER", "ADV", "APPR", "ART", "NN"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.2": {"text": "Und bedenke drin, mein Christ!", "tokens": ["Und", "be\u00b7den\u00b7ke", "drin", ",", "mein", "Christ", "!"], "token_info": ["word", "word", "word", "punct", "word", "word", "punct"], "pos": ["KON", "VVFIN", "PTKVZ", "$,", "PPOSAT", "NN", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.3": {"text": "Wie ", "tokens": ["Wie"], "token_info": ["word"], "pos": ["PWAV"], "meter": "+", "measure": "single.up"}, "line.4": {"text": "Sondern ein Gallapfel ist.", "tokens": ["Son\u00b7dern", "ein", "Ga\u00b7llap\u00b7fel", "ist", "."], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["KON", "ART", "NN", "VAFIN", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}}}}}