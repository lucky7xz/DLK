{"textgrid.poem.33534": {"metadata": {"author": {"name": "Lichtenstein, Alfred", "birth": "N.A.", "death": "N.A."}, "title": "4", "genre": "verse", "period": "N.A.", "pub_year": 1902, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Ich habe manchmal Angst: ein Jahr ist lang,", "tokens": ["Ich", "ha\u00b7be", "manch\u00b7mal", "Angst", ":", "ein", "Jahr", "ist", "lang", ","], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VAFIN", "ADV", "NN", "$.", "ART", "NN", "VAFIN", "ADJD", "$,"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.2": {"text": "Unendlich lang. Und ewig Beineschwingen ...", "tokens": ["Un\u00b7end\u00b7lich", "lang", ".", "Und", "e\u00b7wig", "Bei\u00b7ne\u00b7schwin\u00b7gen", "..."], "token_info": ["word", "word", "punct", "word", "word", "word", "punct"], "pos": ["ADJD", "ADJD", "$.", "KON", "ADJD", "NN", "$("], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Den ganzen lieben Tag beim K\u00f6rperkneten", "tokens": ["Den", "gan\u00b7zen", "lie\u00b7ben", "Tag", "beim", "K\u00f6r\u00b7per\u00b7kne\u00b7ten"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["ART", "ADJA", "ADJA", "NN", "APPRART", "NN"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.4": {"text": "Und beim Parademarsch, beim Platzpatronenschie\u00dfen", "tokens": ["Und", "beim", "Pa\u00b7ra\u00b7de\u00b7marsch", ",", "beim", "Platz\u00b7pat\u00b7ro\u00b7nen\u00b7schie\u00b7\u00dfen"], "token_info": ["word", "word", "word", "punct", "word", "word"], "pos": ["KON", "APPRART", "NN", "$,", "APPRART", "NN"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.5": {"text": "Die Welt vergessen m\u00fcssen ... da\u00df man noch am Abend", "tokens": ["Die", "Welt", "ver\u00b7ges\u00b7sen", "m\u00fcs\u00b7sen", "...", "da\u00df", "man", "noch", "am", "A\u00b7bend"], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "word"], "pos": ["ART", "NN", "VVINF", "VMFIN", "$(", "KOUS", "PIS", "ADV", "APPRART", "NN"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.6": {"text": "Beim Bier ganz dumpf ist, noch beim Schlafengehn", "tokens": ["Beim", "Bier", "ganz", "dumpf", "ist", ",", "noch", "beim", "Schla\u00b7fen\u00b7gehn"], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word"], "pos": ["APPRART", "NN", "ADV", "ADJD", "VAFIN", "$,", "ADV", "APPRART", "NN"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.7": {"text": "Den schweren Helm auf seiner Stirne sp\u00fcrt \u2013", "tokens": ["Den", "schwe\u00b7ren", "Helm", "auf", "sei\u00b7ner", "Stir\u00b7ne", "sp\u00fcrt", "\u2013"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "APPR", "PPOSAT", "NN", "VVFIN", "$("], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.8": {"text": "Und in der Nacht von den Sergeanten tr\u00e4umt \u2013 \u2013", "tokens": ["Und", "in", "der", "Nacht", "von", "den", "Ser\u00b7ge\u00b7an\u00b7ten", "tr\u00e4umt", "\u2013", "\u2013"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct", "punct"], "pos": ["KON", "APPR", "ART", "NN", "APPR", "ART", "NN", "VVFIN", "$(", "$("], "meter": "-+-+--+-+-+", "measure": "iambic.penta.relaxed"}}}}}