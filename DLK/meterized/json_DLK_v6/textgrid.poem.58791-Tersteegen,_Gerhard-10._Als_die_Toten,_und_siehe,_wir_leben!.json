{"textgrid.poem.58791": {"metadata": {"author": {"name": "Tersteegen, Gerhard", "birth": "N.A.", "death": "N.A."}, "title": "10. Als die Toten, und siehe, wir leben!", "genre": "verse", "period": "N.A.", "pub_year": 1733, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "In Gott sei deine Lust und Leben,", "tokens": ["In", "Gott", "sei", "dei\u00b7ne", "Lust", "und", "Le\u00b7ben", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "NN", "VAFIN", "PPOSAT", "NN", "KON", "NN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.2": {"text": "Bei ihm zu sein, an ihm zu kleben;", "tokens": ["Bei", "ihm", "zu", "sein", ",", "an", "ihm", "zu", "kle\u00b7ben", ";"], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["APPR", "PPER", "PTKZU", "VAINF", "$,", "APPR", "PPER", "PTKZU", "VVINF", "$."], "meter": "+---+--+-", "measure": "trochaic.tri.relaxed"}, "line.3": {"text": "Werd dir und allem andern tot,", "tokens": ["Werd", "dir", "und", "al\u00b7lem", "an\u00b7dern", "tot", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["VAFIN", "PPER", "KON", "PIS", "PIS", "ADJD", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "So r\u00fchret dich kein Sturm und Not!", "tokens": ["So", "r\u00fch\u00b7ret", "dich", "kein", "Sturm", "und", "Not", "!"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VVFIN", "PPER", "PIAT", "NN", "KON", "NN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}}}}}