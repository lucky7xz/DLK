{"textgrid.poem.58160": {"metadata": {"author": {"name": "Tersteegen, Gerhard", "birth": "N.A.", "death": "N.A."}, "title": "198. Heiterkeit des Gem\u00fcts", "genre": "verse", "period": "N.A.", "pub_year": 1733, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Gleichwie die Luft erscheint bei angenehmen Tagen,", "tokens": ["Gleich\u00b7wie", "die", "Luft", "er\u00b7scheint", "bei", "an\u00b7ge\u00b7neh\u00b7men", "Ta\u00b7gen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "ART", "NN", "VVFIN", "APPR", "ADJA", "NN", "$,"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "So heiter, rein und still soll dein Gem\u00fcte sein;", "tokens": ["So", "hei\u00b7ter", ",", "rein", "und", "still", "soll", "dein", "Ge\u00b7m\u00fc\u00b7te", "sein", ";"], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "ADJD", "$,", "ADJD", "KON", "ADJD", "VMFIN", "PPOSAT", "NN", "VAINF", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.3": {"text": "So schaust du Gott in dir und wirst auch ihm behagen,", "tokens": ["So", "schaust", "du", "Gott", "in", "dir", "und", "wirst", "auch", "ihm", "be\u00b7ha\u00b7gen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VVFIN", "PPER", "NN", "APPR", "PPER", "KON", "VAFIN", "ADV", "PPER", "VVFIN", "$,"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.4": {"text": "Sein wonnereiches Licht macht sich dem Geist gemein.", "tokens": ["Sein", "won\u00b7ne\u00b7rei\u00b7ches", "Licht", "macht", "sich", "dem", "Geist", "ge\u00b7mein", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPOSAT", "ADJA", "NN", "VVFIN", "PRF", "ART", "NN", "ADJD", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}}}}}