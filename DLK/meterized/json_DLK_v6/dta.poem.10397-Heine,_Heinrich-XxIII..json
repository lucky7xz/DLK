{"dta.poem.10397": {"metadata": {"author": {"name": "Heine, Heinrich", "birth": "N.A.", "death": "N.A."}, "title": "XxIII.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1827", "urn": "urn:nbn:de:kobv:b4-200905192211", "language": ["de:0.85", "af:0.14"], "booktitle": "Heine, Heinrich: Buch der Lieder. Hamburg, 1827."}, "poem": {"stanza.1": {"line.1": {"text": "Warum sind denn die Rosen so bla\u00df,", "tokens": ["Wa\u00b7rum", "sind", "denn", "die", "Ro\u00b7sen", "so", "bla\u00df", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PWAV", "VAFIN", "ADV", "ART", "NN", "ADV", "ADJD", "$,"], "meter": "-+-+-+--+", "measure": "iambic.tetra.chol"}, "line.2": {"text": "O sprich, mein Lieb, warum?", "tokens": ["O", "sprich", ",", "mein", "Lieb", ",", "wa\u00b7rum", "?"], "token_info": ["word", "word", "punct", "word", "word", "punct", "word", "punct"], "pos": ["NE", "VVFIN", "$,", "PPOSAT", "NN", "$,", "PWAV", "$."], "meter": "-+-+-+", "measure": "iambic.tri"}, "line.3": {"text": "Warum sind denn im gr\u00fcnen Gras", "tokens": ["Wa\u00b7rum", "sind", "denn", "im", "gr\u00fc\u00b7nen", "Gras"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["PWAV", "VAFIN", "ADV", "APPRART", "ADJA", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "Die blauen Veilchen so stumm?", "tokens": ["Die", "blau\u00b7en", "Veil\u00b7chen", "so", "stumm", "?"], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "ADV", "ADJD", "$."], "meter": "-+-+--+", "measure": "iambic.tri.chol"}}, "stanza.2": {"line.1": {"text": "Warum singt denn mit so kl\u00e4glichem Laut", "tokens": ["Wa\u00b7rum", "singt", "denn", "mit", "so", "kl\u00e4g\u00b7li\u00b7chem", "Laut"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["PWAV", "VVFIN", "ADV", "APPR", "ADV", "ADJA", "NN"], "meter": "+-+-+-+--+", "measure": "iambic.penta.chol"}, "line.2": {"text": "Die Lerche in der Luft?", "tokens": ["Die", "Ler\u00b7che", "in", "der", "Luft", "?"], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "APPR", "ART", "NN", "$."], "meter": "-+-+-+", "measure": "iambic.tri"}, "line.3": {"text": "Warum steigt denn aus dem Balsamkraut", "tokens": ["Wa\u00b7rum", "steigt", "denn", "aus", "dem", "Bal\u00b7sam\u00b7kraut"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["PWAV", "VVFIN", "ADV", "APPR", "ART", "NN"], "meter": "+-+-+-+-+", "measure": "trochaic.penta"}, "line.4": {"text": "Hervor ein Leichenduft?", "tokens": ["Her\u00b7vor", "ein", "Lei\u00b7chen\u00b7duft", "?"], "token_info": ["word", "word", "word", "punct"], "pos": ["ADV", "ART", "NN", "$."], "meter": "-+-+-+", "measure": "iambic.tri"}}, "stanza.3": {"line.1": {"text": "Warum scheint denn die Sonn' auf die Au'", "tokens": ["Wa\u00b7rum", "scheint", "denn", "die", "Sonn'", "auf", "die", "Au'"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word"], "pos": ["PWAV", "VVFIN", "ADV", "ART", "NN", "APPR", "ART", "NN"], "meter": "+-+--+--+", "measure": "trochaic.tetra.relaxed"}, "line.2": {"text": "So kalt und verdrie\u00dflich herab?", "tokens": ["So", "kalt", "und", "ver\u00b7drie\u00df\u00b7lich", "her\u00b7ab", "?"], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "ADJD", "KON", "ADJD", "ADV", "$."], "meter": "-+--+--+", "measure": "prosodiakos"}, "line.3": {"text": "Warum ist denn die Erde so grau", "tokens": ["Wa\u00b7rum", "ist", "denn", "die", "Er\u00b7de", "so", "grau"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["PWAV", "VAFIN", "ADV", "ART", "NN", "ADV", "ADJD"], "meter": "--+--+--+", "measure": "anapaest.tri.plus"}, "line.4": {"text": "Und \u00f6de wie ein Grab?", "tokens": ["Und", "\u00f6\u00b7de", "wie", "ein", "Grab", "?"], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["KON", "ADJD", "KOKOM", "ART", "NN", "$."], "meter": "-+-+-+", "measure": "iambic.tri"}}, "stanza.4": {"line.1": {"text": "Warum bin ich selbst so krank und so tr\u00fcb',", "tokens": ["Wa\u00b7rum", "bin", "ich", "selbst", "so", "krank", "und", "so", "tr\u00fcb'", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PWAV", "VAFIN", "PPER", "ADV", "ADV", "ADJD", "KON", "ADV", "VVFIN", "$,"], "meter": "+-+-+-+--+", "measure": "iambic.penta.chol"}, "line.2": {"text": "Mein liebes Liebchen, sprich?", "tokens": ["Mein", "lie\u00b7bes", "Lieb\u00b7chen", ",", "sprich", "?"], "token_info": ["word", "word", "word", "punct", "word", "punct"], "pos": ["PPOSAT", "ADJA", "NN", "$,", "ADJD", "$."], "meter": "-+-+-+", "measure": "iambic.tri"}, "line.3": {"text": "O sprich, mein herzallerliebstes Lieb,", "tokens": ["O", "sprich", ",", "mein", "her\u00b7zal\u00b7ler\u00b7liebs\u00b7tes", "Lieb", ","], "token_info": ["word", "word", "punct", "word", "word", "word", "punct"], "pos": ["NE", "VVFIN", "$,", "PPOSAT", "ADJA", "NN", "$,"], "meter": "+-+-+-+-+", "measure": "trochaic.penta"}, "line.4": {"text": "Warum verlie\u00dfest du mich?", "tokens": ["Wa\u00b7rum", "ver\u00b7lie\u00b7\u00dfest", "du", "mich", "?"], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["PWAV", "VVFIN", "PPER", "PRF", "$."], "meter": "-+-+--+", "measure": "iambic.tri.chol"}}}}}