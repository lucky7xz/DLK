{"textgrid.poem.63782": {"metadata": {"author": {"name": "Heyse, Paul", "birth": "N.A.", "death": "N.A."}, "title": "Pisa", "genre": "verse", "period": "N.A.", "pub_year": 1872, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Weich ist die Luft an deinem stillen Flu\u00df,", "tokens": ["Weich", "ist", "die", "Luft", "an", "dei\u00b7nem", "stil\u00b7len", "Flu\u00df", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADJD", "VAFIN", "ART", "NN", "APPR", "PPOSAT", "ADJA", "NN", "$,"], "meter": "+--+-+-+-+", "measure": "iambic.penta.invert"}, "line.2": {"text": "Und Heil und Lindrung suchen hier die Kranken.", "tokens": ["Und", "Heil", "und", "Lind\u00b7rung", "su\u00b7chen", "hier", "die", "Kran\u00b7ken", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "NN", "KON", "NN", "VVFIN", "ADV", "ART", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Wohl macht der schiefe Turm mit dem Gedanken", "tokens": ["Wohl", "macht", "der", "schie\u00b7fe", "Turm", "mit", "dem", "Ge\u00b7dan\u00b7ken"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word"], "pos": ["ADV", "VVFIN", "ART", "ADJA", "NN", "APPR", "ART", "NN"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.4": {"text": "Vertraut, da\u00df Irdisches zur Erde mu\u00df.", "tokens": ["Ver\u00b7traut", ",", "da\u00df", "Ir\u00b7di\u00b7sches", "zur", "Er\u00b7de", "mu\u00df", "."], "token_info": ["word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["VVPP", "$,", "KOUS", "PIS", "APPRART", "NN", "VMFIN", "$."], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}}, "stanza.2": {"line.1": {"text": "Hier fand einst Galileo, Schlu\u00df an Schlu\u00df", "tokens": ["Hier", "fand", "einst", "Ga\u00b7li\u00b7leo", ",", "Schlu\u00df", "an", "Schlu\u00df"], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word"], "pos": ["ADV", "VVFIN", "ADV", "NE", "$,", "NN", "APPR", "NN"], "meter": "-+-+--+-+", "measure": "iambic.tetra.relaxed"}, "line.2": {"text": "Tiefsinnig kettend, in der Ampel Schwanken", "tokens": ["Tief\u00b7sin\u00b7nig", "ket\u00b7tend", ",", "in", "der", "Am\u00b7pel", "Schwan\u00b7ken"], "token_info": ["word", "word", "punct", "word", "word", "word", "word"], "pos": ["ADJD", "VVPP", "$,", "APPR", "ART", "NN", "NN"], "meter": "+--+-+-+-+-", "measure": "iambic.penta.invert"}, "line.3": {"text": "Des Pendels Norm, und aus den Bl\u00fctenranken", "tokens": ["Des", "Pen\u00b7dels", "Norm", ",", "und", "aus", "den", "Bl\u00fc\u00b7ten\u00b7ran\u00b7ken"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word"], "pos": ["ART", "NN", "NE", "$,", "KON", "APPR", "ART", "NN"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.4": {"text": "Des Camposanto weht's wie Geistergru\u00df.", "tokens": ["Des", "Cam\u00b7po\u00b7san\u00b7to", "weht's", "wie", "Geis\u00b7ter\u00b7gru\u00df", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NE", "VVFIN", "KOKOM", "NN", "$."], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}}, "stanza.3": {"line.1": {"text": "Doch freudig, auch von Ernst und Tod umfangen,", "tokens": ["Doch", "freu\u00b7dig", ",", "auch", "von", "Ernst", "und", "Tod", "um\u00b7fan\u00b7gen", ","], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "ADJD", "$,", "ADV", "APPR", "NE", "KON", "NN", "VVPP", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "Bl\u00fcht junge Kraft. Hier war's, wo muntre Scharen", "tokens": ["Bl\u00fcht", "jun\u00b7ge", "Kraft", ".", "Hier", "wa\u00b7r's", ",", "wo", "mun\u00b7tre", "Scha\u00b7ren"], "token_info": ["word", "word", "word", "punct", "word", "word", "punct", "word", "word", "word"], "pos": ["VVFIN", "ADJA", "NN", "$.", "ADV", "VAFIN", "$,", "PWAV", "ADJA", "NN"], "meter": "-+-+--+-+-+-", "measure": "iambic.penta.relaxed"}, "line.3": {"text": "Beim \u00bbUssero\u00ab mit meinem Giusti schw\u00e4rmten;", "tokens": ["Beim", "\u00bb", "Us\u00b7se\u00b7ro", "\u00ab", "mit", "mei\u00b7nem", "Gius\u00b7ti", "schw\u00e4rm\u00b7ten", ";"], "token_info": ["word", "punct", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["APPRART", "$(", "NE", "$(", "APPR", "PPOSAT", "NN", "VVFIN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}, "stanza.4": {"line.1": {"text": "Wo sie das Lied von den drei Farben sangen", "tokens": ["Wo", "sie", "das", "Lied", "von", "den", "drei", "Far\u00b7ben", "san\u00b7gen"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word"], "pos": ["PWAV", "PPER", "ART", "NN", "APPR", "ART", "CARD", "NN", "VVINF"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "Und, wenn sie nachts voll s\u00fc\u00dfen Weines waren,", "tokens": ["Und", ",", "wenn", "sie", "nachts", "voll", "s\u00fc\u00b7\u00dfen", "Wei\u00b7nes", "wa\u00b7ren", ","], "token_info": ["word", "punct", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "$,", "KOUS", "PPER", "ADV", "ADJD", "ADJA", "NN", "VAFIN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "\u00bbselig die Toren!\u00ab durch die Gassen l\u00e4rmten.", "tokens": ["\u00bb", "se\u00b7lig", "die", "To\u00b7ren", "!", "\u00ab", "durch", "die", "Gas\u00b7sen", "l\u00e4rm\u00b7ten", "."], "token_info": ["punct", "word", "word", "word", "punct", "punct", "word", "word", "word", "word", "punct"], "pos": ["$(", "ADJD", "ART", "NN", "$.", "$(", "APPR", "ART", "NN", "VVFIN", "$."], "meter": "+--+-+-+-+-", "measure": "iambic.penta.invert"}}}}}