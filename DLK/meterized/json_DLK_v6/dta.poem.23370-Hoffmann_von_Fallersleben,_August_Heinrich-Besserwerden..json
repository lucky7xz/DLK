{"dta.poem.23370": {"metadata": {"author": {"name": "Hoffmann von Fallersleben, August Heinrich", "birth": "N.A.", "death": "N.A."}, "title": "Besserwerden.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1841", "urn": "urn:nbn:de:kobv:b4-200905192634", "language": ["de:0.99"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "Wir haben sch\u00f6ne Institute", "tokens": ["Wir", "ha\u00b7ben", "sch\u00f6\u00b7ne", "Ins\u00b7ti\u00b7tu\u00b7te"], "token_info": ["word", "word", "word", "word"], "pos": ["PPER", "VAFIN", "ADJA", "NN"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.2": {"text": "F\u00fcr jedes Alter, jeden Stand;", "tokens": ["F\u00fcr", "je\u00b7des", "Al\u00b7ter", ",", "je\u00b7den", "Stand", ";"], "token_info": ["word", "word", "word", "punct", "word", "word", "punct"], "pos": ["APPR", "PIAT", "NN", "$,", "PIAT", "NN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.3": {"text": "Wir haben Fessel, Peitsch' und Ruthe,", "tokens": ["Wir", "ha\u00b7ben", "Fes\u00b7sel", ",", "Peit\u00b7sch'", "und", "Ru\u00b7the", ","], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["PPER", "VAFIN", "NN", "$,", "NN", "KON", "NN", "$,"], "meter": "-+-+-+--+-", "measure": "iambic.tetra.relaxed"}, "line.4": {"text": "Wir haben Kett' und Ordensband.", "tokens": ["Wir", "ha\u00b7ben", "Kett'", "und", "Or\u00b7dens\u00b7band", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VAFIN", "NN", "KON", "NN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}}, "stanza.2": {"line.1": {"text": "Das Laster findet seine Wohnung", "tokens": ["Das", "Las\u00b7ter", "fin\u00b7det", "sei\u00b7ne", "Woh\u00b7nung"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["ART", "NN", "VVFIN", "PPOSAT", "NN"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.2": {"text": "Zu jeder Zeit, an jedem Ort,", "tokens": ["Zu", "je\u00b7der", "Zeit", ",", "an", "je\u00b7dem", "Ort", ","], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["APPR", "PIAT", "NN", "$,", "APPR", "PIAT", "NN", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.3": {"text": "Und f\u00fcr die Tugend sprie\u00dft Belohnung", "tokens": ["Und", "f\u00fcr", "die", "Tu\u00b7gend", "sprie\u00dft", "Be\u00b7loh\u00b7nung"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["KON", "APPR", "ART", "NN", "VVFIN", "NN"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.4": {"text": "Aus Gut und Geld, aus Schrift und Wort.", "tokens": ["Aus", "Gut", "und", "Geld", ",", "aus", "Schrift", "und", "Wort", "."], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["APPR", "NN", "KON", "NN", "$,", "APPR", "NN", "KON", "NN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}}, "stanza.3": {"line.1": {"text": "Ein Schul- und Zuchthaus ward das Leben", "tokens": ["Ein", "Schul", "und", "Zucht\u00b7haus", "ward", "das", "Le\u00b7ben"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["ART", "TRUNC", "KON", "NN", "VAFIN", "ART", "NN"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.2": {"text": "Voll Religion und Unterricht;", "tokens": ["Voll", "Re\u00b7li\u00b7gi\u00b7on", "und", "Un\u00b7ter\u00b7richt", ";"], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["ADJD", "NN", "KON", "NN", "$."], "meter": "-+--+-+-+", "measure": "iambic.tetra.relaxed"}, "line.3": {"text": "Auf's Bessre geht des Staates Streben,", "tokens": ["Auf's", "Bess\u00b7re", "geht", "des", "Staa\u00b7tes", "Stre\u00b7ben", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPRART", "NN", "VVFIN", "ART", "ADJA", "NN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.4": {"text": "Doch bessert er sich selber nicht.", "tokens": ["Doch", "bes\u00b7sert", "er", "sich", "sel\u00b7ber", "nicht", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "VVFIN", "PPER", "PRF", "ADV", "PTKNEG", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}}}}}