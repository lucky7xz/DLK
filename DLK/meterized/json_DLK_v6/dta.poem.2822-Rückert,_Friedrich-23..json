{"dta.poem.2822": {"metadata": {"author": {"name": "R\u00fcckert, Friedrich", "birth": "N.A.", "death": "N.A."}, "title": "23.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1838", "urn": "urn:nbn:de:kobv:b4-200905195108", "language": ["de:0.99"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "Wer einem Freunde klagt, erleichtert sich das Herz,", "tokens": ["Wer", "ei\u00b7nem", "Freun\u00b7de", "klagt", ",", "er\u00b7leich\u00b7tert", "sich", "das", "Herz", ","], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["PWS", "ART", "NN", "VVFIN", "$,", "VVFIN", "PRF", "ART", "NN", "$,"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Und wer vor Gott ihn sagt, vers\u00f6hnet seinen Schmerz.", "tokens": ["Und", "wer", "vor", "Gott", "ihn", "sagt", ",", "ver\u00b7s\u00f6h\u00b7net", "sei\u00b7nen", "Schmerz", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["KON", "PWS", "APPR", "NN", "PPER", "VVFIN", "$,", "VVFIN", "PPOSAT", "NN", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}}, "stanza.2": {"line.1": {"text": "Doch wer mit sanftem Laut ihn dem Gesang vertraut,", "tokens": ["Doch", "wer", "mit", "sanf\u00b7tem", "Laut", "ihn", "dem", "Ge\u00b7sang", "ver\u00b7traut", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "PWS", "APPR", "ADJA", "APPR", "PPER", "ART", "NN", "ADJD", "$,"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Ist auch davon zugleich getr\u00f6stet und erbaut.", "tokens": ["Ist", "auch", "da\u00b7von", "zu\u00b7gleich", "ge\u00b7tr\u00f6s\u00b7tet", "und", "er\u00b7baut", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VAFIN", "ADV", "PAV", "ADV", "VVPP", "KON", "VVPP", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}}, "stanza.3": {"line.1": {"text": "O wunderbares Bild, o Kraft des Seelenlichts!", "tokens": ["O", "wun\u00b7der\u00b7ba\u00b7res", "Bild", ",", "o", "Kraft", "des", "See\u00b7len\u00b7lichts", "!"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["NE", "ADJA", "NN", "$,", "FM", "NN", "ART", "NN", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Du siehest Herbes mild im Spiegel des Gedichts.", "tokens": ["Du", "sie\u00b7hest", "Her\u00b7bes", "mild", "im", "Spie\u00b7gel", "des", "Ge\u00b7dichts", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "NN", "ADJD", "APPRART", "NN", "ART", "NN", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}}, "stanza.4": {"line.1": {"text": "Und wie sich in dem Schein erblickt die Schreckerscheinung,", "tokens": ["Und", "wie", "sich", "in", "dem", "Schein", "er\u00b7blickt", "die", "Schre\u00b7cker\u00b7schei\u00b7nung", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "PWAV", "PRF", "APPR", "ART", "NN", "VVFIN", "ART", "NN", "$,"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Wird selber sie zu Stein, die dir gedroht Versteinung.", "tokens": ["Wird", "sel\u00b7ber", "sie", "zu", "Stein", ",", "die", "dir", "ge\u00b7droht", "Ver\u00b7stei\u00b7nung", "."], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["VAFIN", "ADV", "PPER", "APPR", "NN", "$,", "PRELS", "PPER", "VVPP", "NN", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}}}}}