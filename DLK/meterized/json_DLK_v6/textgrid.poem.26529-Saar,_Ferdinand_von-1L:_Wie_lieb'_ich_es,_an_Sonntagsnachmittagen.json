{"textgrid.poem.26529": {"metadata": {"author": {"name": "Saar, Ferdinand von", "birth": "N.A.", "death": "N.A."}, "title": "1L: Wie lieb' ich es, an Sonntagsnachmittagen", "genre": "verse", "period": "N.A.", "pub_year": 1869, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Wie lieb' ich es, an Sonntagsnachmittagen", "tokens": ["Wie", "lieb'", "ich", "es", ",", "an", "Sonn\u00b7tags\u00b7nach\u00b7mit\u00b7ta\u00b7gen"], "token_info": ["word", "word", "word", "word", "punct", "word", "word"], "pos": ["PWAV", "VVFIN", "PPER", "PPER", "$,", "APPR", "NN"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "Allein zu sitzen im vertrauten Zimmer;", "tokens": ["Al\u00b7lein", "zu", "sit\u00b7zen", "im", "ver\u00b7trau\u00b7ten", "Zim\u00b7mer", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "PTKZU", "VVINF", "APPRART", "ADJA", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Durch's Fenster bricht der Sonne heller Schimmer,", "tokens": ["Durch's", "Fens\u00b7ter", "bricht", "der", "Son\u00b7ne", "hel\u00b7ler", "Schim\u00b7mer", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPRART", "NN", "VVFIN", "ART", "NN", "ADJA", "NN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.4": {"text": "Das Buch vergoldend, das ich aufgeschlagen.", "tokens": ["Das", "Buch", "ver\u00b7gol\u00b7dend", ",", "das", "ich", "auf\u00b7ge\u00b7schla\u00b7gen", "."], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VVPP", "$,", "PRELS", "PPER", "VVINF", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}, "stanza.2": {"line.1": {"text": "Die Stra\u00dfen leer; es rollen keine Wagen;", "tokens": ["Die", "Stra\u00b7\u00dfen", "leer", ";", "es", "rol\u00b7len", "kei\u00b7ne", "Wa\u00b7gen", ";"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "ADJD", "$.", "PPER", "VVFIN", "PIAT", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "Des Marktes L\u00e4rm verstummt, als w\u00e4r's auf immer,", "tokens": ["Des", "Mark\u00b7tes", "L\u00e4rm", "ver\u00b7stummt", ",", "als", "w\u00e4r's", "auf", "im\u00b7mer", ","], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "VVFIN", "$,", "KOKOM", "VAFIN", "APPR", "ADV", "$,"], "meter": "-+-+-+--+--", "measure": "iambic.tetra.relaxed"}, "line.3": {"text": "Und all des Sonntagsstaates bunter Flimmer,", "tokens": ["Und", "all", "des", "Sonn\u00b7tags\u00b7staa\u00b7tes", "bun\u00b7ter", "Flim\u00b7mer", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "PIAT", "ART", "NN", "ADJD", "NN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.4": {"text": "Er ward hinaus in Wald und Flur getragen.", "tokens": ["Er", "ward", "hin\u00b7aus", "in", "Wald", "und", "Flur", "ge\u00b7tra\u00b7gen", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VAFIN", "ADV", "APPR", "NN", "KON", "NN", "VVPP", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}, "stanza.3": {"line.1": {"text": "Verlassen f\u00fchlt sich, wer zur\u00fcckgeblieben,", "tokens": ["Ver\u00b7las\u00b7sen", "f\u00fchlt", "sich", ",", "wer", "zu\u00b7r\u00fcck\u00b7ge\u00b7blie\u00b7ben", ","], "token_info": ["word", "word", "word", "punct", "word", "word", "punct"], "pos": ["NN", "VVFIN", "PRF", "$,", "PWS", "VVPP", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "Und manches sch\u00f6ne Auge blickt verdrossen,", "tokens": ["Und", "man\u00b7ches", "sch\u00f6\u00b7ne", "Au\u00b7ge", "blickt", "ver\u00b7dros\u00b7sen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "PIAT", "ADJA", "NN", "VVFIN", "VVPP", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Und manche W\u00fcnsche unerf\u00fcllt zerstieben.", "tokens": ["Und", "man\u00b7che", "W\u00fcn\u00b7sche", "un\u00b7er\u00b7f\u00fcllt", "zer\u00b7stie\u00b7ben", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["KON", "PIAT", "NN", "ADJD", "VVPP", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}, "stanza.4": {"line.1": {"text": "Es ruht das Leben, wie in sich zerflossen;", "tokens": ["Es", "ruht", "das", "Le\u00b7ben", ",", "wie", "in", "sich", "zer\u00b7flos\u00b7sen", ";"], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "ART", "NN", "$,", "PWAV", "APPR", "PRF", "VVPP", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "Doch still erf\u00fcllt sich auch geheimes Lieben,", "tokens": ["Doch", "still", "er\u00b7f\u00fcllt", "sich", "auch", "ge\u00b7hei\u00b7mes", "Lie\u00b7ben", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "ADJD", "VVFIN", "PRF", "ADV", "ADJA", "ADJA", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Und einsam wird des Geistes Gl\u00fcck genossen.", "tokens": ["Und", "ein\u00b7sam", "wird", "des", "Geis\u00b7tes", "Gl\u00fcck", "ge\u00b7nos\u00b7sen", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "ADJD", "VAFIN", "ART", "NN", "NN", "VVPP", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}}}}