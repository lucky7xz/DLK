{"textgrid.poem.36384": {"metadata": {"author": {"name": "Schlegel, Friedrich", "birth": "N.A.", "death": "N.A."}, "title": "13. Vom Mitleiden Mari\u00e4", "genre": "verse", "period": "N.A.", "pub_year": 1800, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Als bei dem Kreuz Maria stand,", "tokens": ["Als", "bei", "dem", "Kreuz", "Ma\u00b7ria", "stand", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "APPR", "ART", "NN", "NE", "VVFIN", "$,"], "meter": "-+-+--+", "measure": "iambic.tri.chol"}, "line.2": {"text": "Weh \u00fcber Weh ihr Herz empfand,", "tokens": ["Weh", "\u00fc\u00b7ber", "Weh", "ihr", "Herz", "emp\u00b7fand", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["NN", "APPR", "NN", "PPOSAT", "NN", "VVFIN", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.3": {"text": "Und Schmerzen \u00fcber Schmerzen:", "tokens": ["Und", "Schmer\u00b7zen", "\u00fc\u00b7ber", "Schmer\u00b7zen", ":"], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["KON", "NN", "APPR", "NN", "$."], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.4": {"text": "Das ganze Leiden Christi stand", "tokens": ["Das", "gan\u00b7ze", "Lei\u00b7den", "Chris\u00b7ti", "stand"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["ART", "ADJA", "NN", "NE", "VVFIN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.5": {"text": "Gedruckt in ihrem Herzen.", "tokens": ["Ge\u00b7druckt", "in", "ih\u00b7rem", "Her\u00b7zen", "."], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["VVPP", "APPR", "PPOSAT", "NN", "$."], "meter": "-+-+-+-", "measure": "iambic.tri"}}, "stanza.2": {"line.1": {"text": "Sie ihren Sohn mu\u00df bleich und tot,", "tokens": ["Sie", "ih\u00b7ren", "Sohn", "mu\u00df", "bleich", "und", "tot", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "PPOSAT", "NN", "VMFIN", "ADJD", "KON", "ADJD", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Und \u00fcberall von Wunden rot,", "tokens": ["Und", "\u00fc\u00b7be\u00b7rall", "von", "Wun\u00b7den", "rot", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["KON", "ADV", "APPR", "NN", "ADJD", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.3": {"text": "Am Kreuze leiden sehen.", "tokens": ["Am", "Kreu\u00b7ze", "lei\u00b7den", "se\u00b7hen", "."], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["APPRART", "NN", "VVINF", "VVINF", "$."], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.4": {"text": "Gedenk, wie dieser bittre Tod", "tokens": ["Ge\u00b7denk", ",", "wie", "die\u00b7ser", "bitt\u00b7re", "Tod"], "token_info": ["word", "punct", "word", "word", "word", "word"], "pos": ["NN", "$,", "PWAV", "PDAT", "ADJA", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.5": {"text": "Zu Herzen ihr mu\u00dft' gehen!", "tokens": ["Zu", "Her\u00b7zen", "ihr", "mu\u00dft'", "ge\u00b7hen", "!"], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "NN", "PPER", "VMFIN", "VVINF", "$."], "meter": "-+-+-+-", "measure": "iambic.tri"}}, "stanza.3": {"line.1": {"text": "In Christi Haupt durch Bein und Hirn,", "tokens": ["In", "Chris\u00b7ti", "Haupt", "durch", "Bein", "und", "Hirn", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "NE", "NN", "APPR", "NN", "KON", "NN", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Durch Augen, Ohren, durch die Stirn", "tokens": ["Durch", "Au\u00b7gen", ",", "Oh\u00b7ren", ",", "durch", "die", "Stirn"], "token_info": ["word", "word", "punct", "word", "punct", "word", "word", "word"], "pos": ["APPR", "NN", "$,", "NN", "$,", "APPR", "ART", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.3": {"text": "Viel scharfe Dornen stachen;", "tokens": ["Viel", "schar\u00b7fe", "Dor\u00b7nen", "sta\u00b7chen", ";"], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["PIAT", "ADJA", "NN", "VVFIN", "$."], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.4": {"text": "Dem Sohn die Dornen Haupt und Hirn,", "tokens": ["Dem", "Sohn", "die", "Dor\u00b7nen", "Haupt", "und", "Hirn", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "ART", "NN", "NN", "KON", "NN", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.5": {"text": "Das Herz der Mutter brachen.", "tokens": ["Das", "Herz", "der", "Mut\u00b7ter", "bra\u00b7chen", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "ART", "NN", "VVFIN", "$."], "meter": "-+-+-+-", "measure": "iambic.tri"}}}}}