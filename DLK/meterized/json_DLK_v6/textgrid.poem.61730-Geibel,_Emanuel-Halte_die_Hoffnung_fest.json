{"textgrid.poem.61730": {"metadata": {"author": {"name": "Geibel, Emanuel", "birth": "N.A.", "death": "N.A."}, "title": "Halte die Hoffnung fest", "genre": "verse", "period": "N.A.", "pub_year": 1833, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Wenn der Morgen, der heute tagt,", "tokens": ["Wenn", "der", "Mor\u00b7gen", ",", "der", "heu\u00b7te", "tagt", ","], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["KOUS", "ART", "NN", "$,", "PRELS", "ADV", "VVFIN", "$,"], "meter": "--+--+-+", "measure": "anapaest.di.plus"}, "line.2": {"text": "Nichts als Tr\u00fcmmer dich schauen l\u00e4\u00dft,", "tokens": ["Nichts", "als", "Tr\u00fcm\u00b7mer", "dich", "schau\u00b7en", "l\u00e4\u00dft", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["PIS", "KOKOM", "NN", "PPER", "VVINF", "VVFIN", "$,"], "meter": "+-+--+-+", "measure": "glykoneus"}, "line.3": {"text": "Unter Tr\u00fcmmern noch unverzagt", "tokens": ["Un\u00b7ter", "Tr\u00fcm\u00b7mern", "noch", "un\u00b7ver\u00b7zagt"], "token_info": ["word", "word", "word", "word"], "pos": ["APPR", "NN", "ADV", "ADJD"], "meter": "+-+--+-+", "measure": "glykoneus"}, "line.4": {"text": "Halt im Herzen die Hoffnung fest!", "tokens": ["Halt", "im", "Her\u00b7zen", "die", "Hoff\u00b7nung", "fest", "!"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["NN", "APPRART", "NN", "ART", "NN", "PTKVZ", "$."], "meter": "+-+--+-+", "measure": "glykoneus"}}, "stanza.2": {"line.1": {"text": "Mag dies irre Geschlecht mit Hohn", "tokens": ["Mag", "dies", "ir\u00b7re", "Ge\u00b7schlecht", "mit", "Hohn"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["VMFIN", "PDS", "ADJA", "NN", "APPR", "NN"], "meter": "--+--+-+", "measure": "anapaest.di.plus"}, "line.2": {"text": "Ihrer spotten, verzweifle nie,", "tokens": ["Ih\u00b7rer", "spot\u00b7ten", ",", "ver\u00b7zweif\u00b7le", "nie", ","], "token_info": ["word", "word", "punct", "word", "word", "punct"], "pos": ["PPOSAT", "ADJA", "$,", "VVFIN", "ADV", "$,"], "meter": "+-+--+-+", "measure": "glykoneus"}, "line.3": {"text": "Und im Sterben an deinen Sohn", "tokens": ["Und", "im", "Ster\u00b7ben", "an", "dei\u00b7nen", "Sohn"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["KON", "APPRART", "NN", "APPR", "PPOSAT", "NN"], "meter": "--+--+-+", "measure": "anapaest.di.plus"}, "line.4": {"text": "Als dein Kleinod vererbe sie;", "tokens": ["Als", "dein", "Klei\u00b7nod", "ver\u00b7er\u00b7be", "sie", ";"], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "PPOSAT", "NN", "VVFIN", "PPER", "$."], "meter": "--+--+-+", "measure": "anapaest.di.plus"}}, "stanza.3": {"line.1": {"text": "Da\u00df er harre wie du getreu", "tokens": ["Da\u00df", "er", "har\u00b7re", "wie", "du", "ge\u00b7treu"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["KOUS", "PPER", "VVFIN", "KOKOM", "PPER", "ADJD"], "meter": "--+-+--+", "measure": "iambic.tri.chol"}, "line.2": {"text": "Und ger\u00fcstet zu frischer Tat,", "tokens": ["Und", "ge\u00b7r\u00fcs\u00b7tet", "zu", "fri\u00b7scher", "Tat", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["KON", "VVPP", "PTKZU", "ADJA", "NN", "$,"], "meter": "--+--+-+", "measure": "anapaest.di.plus"}, "line.3": {"text": "Wenn zu scheiden vom Korn die Spreu", "tokens": ["Wenn", "zu", "schei\u00b7den", "vom", "Korn", "die", "Spreu"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["KOUS", "PTKA", "ADJD", "APPRART", "NN", "ART", "NN"], "meter": "--+--+-+", "measure": "anapaest.di.plus"}, "line.4": {"text": "Einst der Tag der Erf\u00fcllung naht,", "tokens": ["Einst", "der", "Tag", "der", "Er\u00b7f\u00fcl\u00b7lung", "naht", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "ART", "NN", "ART", "NN", "VVFIN", "$,"], "meter": "--+--+-+", "measure": "anapaest.di.plus"}}, "stanza.4": {"line.1": {"text": "Jener Morgen von Gott gesandt,", "tokens": ["Je\u00b7ner", "Mor\u00b7gen", "von", "Gott", "ge\u00b7sandt", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PDAT", "NN", "APPR", "NN", "VVPP", "$,"], "meter": "+-+--+-+", "measure": "glykoneus"}, "line.2": {"text": "Der bei klingendem Schwerterstreich", "tokens": ["Der", "bei", "klin\u00b7gen\u00b7dem", "Schwer\u00b7ter\u00b7streich"], "token_info": ["word", "word", "word", "word"], "pos": ["ART", "APPR", "ADJA", "NN"], "meter": "+-+--+-+", "measure": "glykoneus"}, "line.3": {"text": "Im zerst\u00fcckelten Vaterland", "tokens": ["Im", "zer\u00b7st\u00fc\u00b7ckel\u00b7ten", "Va\u00b7ter\u00b7land"], "token_info": ["word", "word", "word"], "pos": ["APPRART", "ADJA", "NN"], "meter": "+-+--+-+", "measure": "glykoneus"}, "line.4": {"text": "Neu aufrichtet das deutsche Reich.", "tokens": ["Neu", "auf\u00b7rich\u00b7tet", "das", "deut\u00b7sche", "Reich", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ADJD", "VVFIN", "ART", "ADJA", "NN", "$."], "meter": "--+--+-+", "measure": "anapaest.di.plus"}}}}}