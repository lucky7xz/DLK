{"textgrid.poem.47345": {"metadata": {"author": {"name": "R\u00fcckert, Friedrich", "birth": "N.A.", "death": "N.A."}, "title": "Lachens und Weinens Grund", "genre": "verse", "period": "N.A.", "pub_year": 1827, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Lachen und Weinen zu jeglicher Stunde", "tokens": ["La\u00b7chen", "und", "Wei\u00b7nen", "zu", "jeg\u00b7li\u00b7cher", "Stun\u00b7de"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["NN", "KON", "NN", "APPR", "PIAT", "NN"], "meter": "+--+--+--+-", "measure": "dactylic.tetra"}, "line.2": {"text": "Ruht bei der Lieb' auf so mancherlei Grunde.", "tokens": ["Ruht", "bei", "der", "Lieb'", "auf", "so", "man\u00b7cher\u00b7lei", "Grun\u00b7de", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "APPR", "ART", "NN", "APPR", "ADV", "PIAT", "NN", "$."], "meter": "+--+--+--+-", "measure": "dactylic.tetra"}, "line.3": {"text": "Morgens lacht' ich vor Lust;", "tokens": ["Mor\u00b7gens", "lacht'", "ich", "vor", "Lust", ";"], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VVFIN", "PPER", "APPR", "NN", "$."], "meter": "+-+--+", "measure": "iambic.tri.chol"}, "line.4": {"text": "Und warum ich nun weine", "tokens": ["Und", "wa\u00b7rum", "ich", "nun", "wei\u00b7ne"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["KON", "PWAV", "PPER", "ADV", "VVFIN"], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.5": {"text": "Bei des Abendes Scheine,", "tokens": ["Bei", "des", "A\u00b7ben\u00b7des", "Schei\u00b7ne", ","], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["APPR", "ART", "NN", "NN", "$,"], "meter": "+-+--+-", "measure": "pherekrateus"}, "line.6": {"text": "Ist mir selb nicht bewu\u00dft.", "tokens": ["Ist", "mir", "selb", "nicht", "be\u00b7wu\u00dft", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["VAFIN", "PPER", "ADJD", "PTKNEG", "ADJD", "$."], "meter": "+-+--+", "measure": "iambic.tri.chol"}}, "stanza.2": {"line.1": {"text": "Weinen und Lachen zu jeglicher Stunde", "tokens": ["Wei\u00b7nen", "und", "La\u00b7chen", "zu", "jeg\u00b7li\u00b7cher", "Stun\u00b7de"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["NN", "KON", "NN", "APPR", "PIAT", "NN"], "meter": "+--+--+--+-", "measure": "dactylic.tetra"}, "line.2": {"text": "Ruht bei der Lieb' auf so mancherlei Grunde.", "tokens": ["Ruht", "bei", "der", "Lieb'", "auf", "so", "man\u00b7cher\u00b7lei", "Grun\u00b7de", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "APPR", "ART", "NN", "APPR", "ADV", "PIAT", "NN", "$."], "meter": "+--+--+--+-", "measure": "dactylic.tetra"}, "line.3": {"text": "Abends weint' ich vor Schmerz;", "tokens": ["A\u00b7bends", "weint'", "ich", "vor", "Schmerz", ";"], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VVFIN", "PPER", "APPR", "NN", "$."], "meter": "---+-+", "measure": "unknown.measure.di"}, "line.4": {"text": "Und warum du erwachen", "tokens": ["Und", "wa\u00b7rum", "du", "er\u00b7wa\u00b7chen"], "token_info": ["word", "word", "word", "word"], "pos": ["KON", "PWAV", "PPER", "VVINF"], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.5": {"text": "Kannst am Morgen mit Lachen,", "tokens": ["Kannst", "am", "Mor\u00b7gen", "mit", "La\u00b7chen", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["VMFIN", "APPRART", "NN", "APPR", "NN", "$,"], "meter": "+-+--+-", "measure": "pherekrateus"}, "line.6": {"text": "Mu\u00df ich dich fragen, o Herz.", "tokens": ["Mu\u00df", "ich", "dich", "fra\u00b7gen", ",", "o", "Herz", "."], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "punct"], "pos": ["VMFIN", "PPER", "PRF", "VVINF", "$,", "FM", "NN", "$."], "meter": "+--+--+", "measure": "dactyl