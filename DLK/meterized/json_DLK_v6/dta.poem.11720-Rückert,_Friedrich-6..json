{"dta.poem.11720": {"metadata": {"author": {"name": "R\u00fcckert, Friedrich", "birth": "N.A.", "death": "N.A."}, "title": "6.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1839", "urn": "urn:nbn:de:kobv:b4-200905195119", "language": ["de:0.99"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "Mein Sohn! die Wahrheit ist in Wahrheit ganz nur Eine,", "tokens": ["Mein", "Sohn", "!", "die", "Wahr\u00b7heit", "ist", "in", "Wahr\u00b7heit", "ganz", "nur", "Ei\u00b7ne", ","], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPOSAT", "NN", "$.", "ART", "NN", "VAFIN", "APPR", "NN", "ADV", "ADV", "ART", "$,"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Bei Gott ist sie an sich, beim Menschen nur im Scheine.", "tokens": ["Bei", "Gott", "ist", "sie", "an", "sich", ",", "beim", "Men\u00b7schen", "nur", "im", "Schei\u00b7ne", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "NN", "VAFIN", "PPER", "APPR", "PRF", "$,", "APPRART", "NN", "ADV", "APPRART", "NN", "$."], "meter": "-+--+--+-+-+-", "measure": "amphibrach.tri.plus"}}, "stanza.2": {"line.1": {"text": "Und wenn der Mensch in sich will Gottes Wahrheit spiegeln,", "tokens": ["Und", "wenn", "der", "Mensch", "in", "sich", "will", "Got\u00b7tes", "Wahr\u00b7heit", "spie\u00b7geln", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "KOUS", "ART", "NN", "APPR", "PRF", "VMFIN", "NN", "NN", "VVINF", "$,"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "So mu\u00df er einen Schein mit ihrem Bild besiegeln.", "tokens": ["So", "mu\u00df", "er", "ei\u00b7nen", "Schein", "mit", "ih\u00b7rem", "Bild", "be\u00b7sie\u00b7geln", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VMFIN", "PPER", "ART", "NN", "APPR", "PPOSAT", "NN", "VVINF", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}}, "stanza.3": {"line.1": {"text": "Sieh einen Wahrheitsglanz in jedem Sch\u00f6nheitsschein,", "tokens": ["Sieh", "ei\u00b7nen", "Wahr\u00b7heits\u00b7glanz", "in", "je\u00b7dem", "Sch\u00f6n\u00b7heits\u00b7schein", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["NE", "ART", "NN", "APPR", "PIAT", "NN", "$,"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Nur bild' als Wahrheit ganz dir nie ein Einzles ein.", "tokens": ["Nur", "bild'", "als", "Wahr\u00b7heit", "ganz", "dir", "nie", "ein", "Einz\u00b7les", "ein", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VVFIN", "KOKOM", "NN", "ADV", "PPER", "ADV", "ART", "PIS", "PTKVZ", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}}, "stanza.4": {"line.1": {"text": "Mit diesem Blick sieh an die Welt und dieses Buch;", "tokens": ["Mit", "die\u00b7sem", "Blick", "sieh", "an", "die", "Welt", "und", "die\u00b7ses", "Buch", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "PDAT", "NN", "VVFIN", "APPR", "ART", "NN", "KON", "PDAT", "NN", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "In diesem Sinne l\u00f6st sich jeder Widerspruch.", "tokens": ["In", "die\u00b7sem", "Sin\u00b7ne", "l\u00f6st", "sich", "je\u00b7der", "Wi\u00b7der\u00b7spruch", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "PDAT", "NN", "VVFIN", "PRF", "PIAT", "NN", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}}}}}