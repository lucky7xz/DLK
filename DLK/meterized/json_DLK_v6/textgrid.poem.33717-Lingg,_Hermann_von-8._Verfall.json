{"textgrid.poem.33717": {"metadata": {"author": {"name": "Lingg, Hermann von", "birth": "N.A.", "death": "N.A."}, "title": "8. Verfall", "genre": "verse", "period": "N.A.", "pub_year": 1862, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Schwer ist der V\u00f6lker Schlaf, wenn eingeschlafen", "tokens": ["Schwer", "ist", "der", "V\u00f6l\u00b7ker", "Schlaf", ",", "wenn", "ein\u00b7ge\u00b7schla\u00b7fen"], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word"], "pos": ["ADJD", "VAFIN", "ART", "NN", "NN", "$,", "KOUS", "NN"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "Fern im Gebirg der Adler ihrer Taten,", "tokens": ["Fern", "im", "Ge\u00b7birg", "der", "Ad\u00b7ler", "ih\u00b7rer", "Ta\u00b7ten", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["NN", "APPRART", "NN", "ART", "NN", "PPOSAT", "NN", "$,"], "meter": "+--+-+-+-+-", "measure": "iambic.penta.invert"}, "line.3": {"text": "Wenn ihre Banner Fremde niedertraten,", "tokens": ["Wenn", "ih\u00b7re", "Ban\u00b7ner", "Frem\u00b7de", "nie\u00b7der\u00b7tra\u00b7ten", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "PPOSAT", "NN", "NN", "VVFIN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.4": {"text": "Wenn ihre Schiffe ruhn im seichten Hafen.", "tokens": ["Wenn", "ih\u00b7re", "Schif\u00b7fe", "ruhn", "im", "seich\u00b7ten", "Ha\u00b7fen", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "PPOSAT", "NN", "VVFIN", "APPRART", "ADJA", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}, "stanza.2": {"line.1": {"text": "Auf Tr\u00fcmmern bl\u00fchn Zypressen und Agaven,", "tokens": ["Auf", "Tr\u00fcm\u00b7mern", "bl\u00fchn", "Zyp\u00b7res\u00b7sen", "und", "A\u00b7ga\u00b7ven", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "NN", "VVFIN", "NE", "KON", "NN", "$,"], "meter": "-+--+---+--", "measure": "iambic.tri.relaxed"}, "line.2": {"text": "Und wo sonst Knaben schon um Waffen baten,", "tokens": ["Und", "wo", "sonst", "Kna\u00b7ben", "schon", "um", "Waf\u00b7fen", "ba\u00b7ten", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "PWAV", "ADV", "NN", "ADV", "APPR", "NN", "VVFIN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Stehn jetzt die letzten M\u00e4nner, stumm, verraten,", "tokens": ["Stehn", "jetzt", "die", "letz\u00b7ten", "M\u00e4n\u00b7ner", ",", "stumm", ",", "ver\u00b7ra\u00b7ten", ","], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "punct", "word", "punct"], "pos": ["VVFIN", "ADV", "ART", "ADJA", "NN", "$,", "ADJD", "$,", "VVFIN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.4": {"text": "Und sterben ruhmlos hin wie andre Sklaven.", "tokens": ["Und", "ster\u00b7ben", "ruh\u00b7mlos", "hin", "wie", "and\u00b7re", "Skla\u00b7ven", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "VVFIN", "ADJD", "PTKVZ", "KOKOM", "ADJA", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}, "stanza.3": {"line.1": {"text": "Die Sitten kranken, tot sind Ruhm und Ehre,", "tokens": ["Die", "Sit\u00b7ten", "kran\u00b7ken", ",", "tot", "sind", "Ruhm", "und", "Eh\u00b7re", ","], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VVINF", "$,", "ADJD", "VAFIN", "NN", "KON", "NN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "Die Kraft versiegt, man schl\u00e4gt die freie Wehre,", "tokens": ["Die", "Kraft", "ver\u00b7siegt", ",", "man", "schl\u00e4gt", "die", "frei\u00b7e", "Weh\u00b7re", ","], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VVPP", "$,", "PIS", "VVFIN", "ART", "ADJA", "NN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Man schl\u00e4gt voll Furcht das freie Wort in Bande.", "tokens": ["Man", "schl\u00e4gt", "voll", "Furcht", "das", "frei\u00b7e", "Wort", "in", "Ban\u00b7de", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PIS", "VVFIN", "ADJD", "NN", "ART", "ADJA", "NN", "APPR", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}, "stanza.4": {"line.1": {"text": "Entschleiert durch die Gassen wallt die Schande,", "tokens": ["Ent\u00b7schlei\u00b7ert", "durch", "die", "Gas\u00b7sen", "wallt", "die", "Schan\u00b7de", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "APPR", "ART", "NN", "VVFIN", "ART", "NN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "Der Sch\u00f6nheit Bl\u00fcte reift gemeinen L\u00fcsten,", "tokens": ["Der", "Sch\u00f6n\u00b7heit", "Bl\u00fc\u00b7te", "reift", "ge\u00b7mei\u00b7nen", "L\u00fcs\u00b7ten", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "NN", "VVFIN", "ADJA", "NN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Und schuldig ist das Kind schon an den Br\u00fcsten.", "tokens": ["Und", "schul\u00b7dig", "ist", "das", "Kind", "schon", "an", "den", "Br\u00fcs\u00b7ten", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "ADJD", "VAFIN", "ART", "NN", "ADV", "APPR", "ART", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}}}}