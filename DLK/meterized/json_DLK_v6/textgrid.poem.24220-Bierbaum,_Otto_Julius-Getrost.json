{"textgrid.poem.24220": {"metadata": {"author": {"name": "Bierbaum, Otto Julius", "birth": "N.A.", "death": "N.A."}, "title": "Getrost", "genre": "verse", "period": "N.A.", "pub_year": 1887, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Nein, mein Herz, so sollst du dich nicht plagen,", "tokens": ["Nein", ",", "mein", "Herz", ",", "so", "sollst", "du", "dich", "nicht", "pla\u00b7gen", ","], "token_info": ["word", "punct", "word", "word", "punct", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PTKANT", "$,", "PPOSAT", "NN", "$,", "ADV", "VMFIN", "PPER", "PRF", "PTKNEG", "VVFIN", "$,"], "meter": "+-+-+-+-+-", "measure": "trochaic.penta"}, "line.2": {"text": "Sei getrost und sieh die Sch\u00f6ne an,", "tokens": ["Sei", "ge\u00b7trost", "und", "sieh", "die", "Sch\u00f6\u00b7ne", "an", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VAIMP", "ADJD", "KON", "VVIMP", "ART", "NN", "PTKVZ", "$,"], "meter": "+-+-+-+-+", "measure": "trochaic.penta"}, "line.3": {"text": "Wie sie kinderfr\u00f6hlich lachen kann,", "tokens": ["Wie", "sie", "kin\u00b7der\u00b7fr\u00f6h\u00b7lich", "la\u00b7chen", "kann", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PWAV", "PPER", "ADJD", "VVINF", "VMFIN", "$,"], "meter": "+-+-+-+-+", "measure": "trochaic.penta"}, "line.4": {"text": "Und sie hat wohl auch ein Leid zu tragen.", "tokens": ["Und", "sie", "hat", "wohl", "auch", "ein", "Leid", "zu", "tra\u00b7gen", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "PPER", "VAFIN", "ADV", "ADV", "ART", "NN", "PTKZU", "VVINF", "$."], "meter": "+-+-+-+-+-", "measure": "trochaic.penta"}}, "stanza.2": {"line.1": {"text": "Doch sie ist zu stolz und stark zu klagen,", "tokens": ["Doch", "sie", "ist", "zu", "stolz", "und", "stark", "zu", "kla\u00b7gen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "PPER", "VAFIN", "PTKA", "ADJD", "KON", "ADJD", "PTKZU", "VVINF", "$,"], "meter": "+-+-+-+-+-", "measure": "trochaic.penta"}, "line.2": {"text": "Nur ein Blick verk\u00fcndet dann und wann,", "tokens": ["Nur", "ein", "Blick", "ver\u00b7k\u00fcn\u00b7det", "dann", "und", "wann", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "ART", "NN", "VVFIN", "ADV", "KON", "PWAV", "$,"], "meter": "+-+-+-+-+", "measure": "trochaic.penta"}, "line.3": {"text": "Da\u00df sie wei\u00df, was Leid ist. Doch in Bann", "tokens": ["Da\u00df", "sie", "wei\u00df", ",", "was", "Leid", "ist", ".", "Doch", "in", "Bann"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "punct", "word", "word", "word"], "pos": ["KOUS", "PPER", "VVFIN", "$,", "PWS", "NN", "VAFIN", "$.", "KON", "APPR", "NN"], "meter": "+-+-+-+-+", "measure": "trochaic.penta"}, "line.4": {"text": "L\u00e4\u00dft sie sich von K\u00fcmmernis nicht schlagen.", "tokens": ["L\u00e4\u00dft", "sie", "sich", "von", "K\u00fcm\u00b7mer\u00b7nis", "nicht", "schla\u00b7gen", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "PPER", "PRF", "APPR", "NN", "PTKNEG", "VVINF", "$."], "meter": "+-+-+-+-+-", "measure": "trochaic.penta"}}, "stanza.3": {"line.1": {"text": "Willst du, Herz, dich liebend zu ihr wenden,", "tokens": ["Willst", "du", ",", "Herz", ",", "dich", "lie\u00b7bend", "zu", "ihr", "wen\u00b7den", ","], "token_info": ["word", "word", "punct", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["VMFIN", "PPER", "$,", "NN", "$,", "PRF", "ADJD", "APPR", "PPER", "VVINF", "$,"], "meter": "+-+-+-+-+-", "measure": "trochaic.penta"}, "line.2": {"text": "Sollst du heiter sein, wie sie es ist,", "tokens": ["Sollst", "du", "hei\u00b7ter", "sein", ",", "wie", "sie", "es", "ist", ","], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["VMFIN", "PPER", "ADJD", "VAINF", "$,", "PWAV", "PPER", "PPER", "VAFIN", "$,"], "meter": "+-+-+-+-+", "measure": "trochaic.penta"}, "line.3": {"text": "Klar und lauter, stolz und stark. Erhebe", "tokens": ["Klar", "und", "lau\u00b7ter", ",", "stolz", "und", "stark", ".", "Er\u00b7he\u00b7be"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "punct", "word"], "pos": ["ADJD", "KON", "ADJD", "$,", "ADJD", "KON", "ADJD", "$.", "NN"], "meter": "+-+-+-+-+-", "measure": "trochaic.penta"}, "line.4": {"text": "Dich ins Reine zu der Reinen: lebe,", "tokens": ["Dich", "ins", "Rei\u00b7ne", "zu", "der", "Rei\u00b7nen", ":", "le\u00b7be", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct", "word", "punct"], "pos": ["PPER", "APPRART", "NN", "APPR", "ART", "NN", "$.", "VVFIN", "$,"], "meter": "+-+-+-+-+-", "measure": "trochaic.penta"}, "line.5": {"text": "Lebe auf, da du ihr w\u00fcrdig bist,", "tokens": ["Le\u00b7be", "auf", ",", "da", "du", "ihr", "w\u00fcr\u00b7dig", "bist", ","], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["VVIMP", "PTKVZ", "$,", "KOUS", "PPER", "PPER", "ADJD", "VAFIN", "$,"], "meter": "+-+-+-+-+", "measure": "trochaic.penta"}, "line.6": {"text": "Und es wird die Zeit des Jammers enden.", "tokens": ["Und", "es", "wird", "die", "Zeit", "des", "Jam\u00b7mers", "en\u00b7den", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "PPER", "VAFIN", "ART", "NN", "ART", "NN", "VVINF", "$."], "meter": "+-+-+-+-+-", "measure": "trochaic.penta"}}}}}