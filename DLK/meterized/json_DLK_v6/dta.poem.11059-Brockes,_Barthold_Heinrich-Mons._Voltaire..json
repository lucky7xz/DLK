{"dta.poem.11059": {"metadata": {"author": {"name": "Brockes, Barthold Heinrich", "birth": "N.A.", "death": "N.A."}, "title": "Mons. Voltaire.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1740", "urn": "urn:nbn:de:kobv:b4-200905198572", "language": ["de:0.99"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "Die unerme\u00dfliche Barmherzigkeit", "tokens": ["Die", "un\u00b7er\u00b7me\u00df\u00b7li\u00b7che", "Barm\u00b7her\u00b7zig\u00b7keit"], "token_info": ["word", "word", "word"], "pos": ["ART", "ADJA", "NN"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.2": {"text": "Des Sch\u00f6pfers, welcher uns befahl zu werden,", "tokens": ["Des", "Sch\u00f6p\u00b7fers", ",", "wel\u00b7cher", "uns", "be\u00b7fahl", "zu", "wer\u00b7den", ","], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "$,", "PRELS", "PPER", "VVFIN", "PTKZU", "VAINF", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Damit er m\u00e4\u00dfigte die Unvollkommenheit", "tokens": ["Da\u00b7mit", "er", "m\u00e4\u00b7\u00dfig\u00b7te", "die", "Un\u00b7voll\u00b7kom\u00b7men\u00b7heit"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["KOUS", "PPER", "VVFIN", "ART", "NN"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.4": {"text": "Des eitlen Lebens hier auf Erden;", "tokens": ["Des", "eit\u00b7len", "Le\u00b7bens", "hier", "auf", "Er\u00b7den", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "ADV", "APPR", "NN", "$."], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.5": {"text": "Hat zween Bewohner dieser Welt,", "tokens": ["Hat", "zween", "Be\u00b7woh\u00b7ner", "die\u00b7ser", "Welt", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["VAFIN", "VVFIN", "NN", "PDAT", "NN", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.6": {"text": "Zwey holde Wesen uns hierzu gesellt,", "tokens": ["Zwey", "hol\u00b7de", "We\u00b7sen", "uns", "hier\u00b7zu", "ge\u00b7sellt", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["CARD", "ADJA", "NN", "PPER", "PAV", "VVPP", "$,"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.7": {"text": "Die ", "tokens": ["Die"], "token_info": ["word"], "pos": ["ART"], "meter": "-", "measure": "single.down"}, "line.8": {"text": "Die wir, auch selbst im Schoo\u00df der Armuth, haben.", "tokens": ["Die", "wir", ",", "auch", "selbst", "im", "Schoo\u00df", "der", "Ar\u00b7muth", ",", "ha\u00b7ben", "."], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "word", "punct", "word", "punct"], "pos": ["ART", "PPER", "$,", "ADV", "ADV", "APPRART", "NN", "ART", "NN", "$,", "VAFIN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.9": {"text": "Der holde Schlaf begr\u00e4bt im Schlummer unsre Schmerzen,", "tokens": ["Der", "hol\u00b7de", "Schlaf", "be\u00b7gr\u00e4bt", "im", "Schlum\u00b7mer", "uns\u00b7re", "Schmer\u00b7zen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "VVFIN", "APPRART", "NN", "PPOSAT", "NN", "$,"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.10": {"text": "Die Hoffnung st\u00fctzt die Lust, begeistert unsre Herzen.", "tokens": ["Die", "Hoff\u00b7nung", "st\u00fctzt", "die", "Lust", ",", "be\u00b7geis\u00b7tert", "uns\u00b7re", "Her\u00b7zen", "."], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VVFIN", "ART", "NN", "$,", "VVFIN", "PPOSAT", "NN", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}}}}}