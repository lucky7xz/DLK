{"textgrid.poem.48918": {"metadata": {"author": {"name": "Kleist, Ewald Christian von", "birth": "N.A.", "death": "N.A."}, "title": "Auf den Tod eines gro\u00dfen Mannes", "genre": "verse", "period": "N.A.", "pub_year": 1757, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Als j\u00fcngst des Todes Pfeil, o \u2013 dich getroffen,", "tokens": ["Als", "j\u00fcngst", "des", "To\u00b7des", "Pfeil", ",", "o", "\u2013", "dich", "ge\u00b7trof\u00b7fen", ","], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "punct", "word", "word", "punct"], "pos": ["KOUS", "ADV", "ART", "NN", "NN", "$,", "FM", "$(", "PPER", "VVPP", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "Klagt ich und weint und sah den Himmel pl\u00f6tzlich offen,", "tokens": ["Klagt", "ich", "und", "weint", "und", "sah", "den", "Him\u00b7mel", "pl\u00f6tz\u00b7lich", "of\u00b7fen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "PPER", "KON", "VVFIN", "KON", "VVFIN", "ART", "NN", "ADJD", "PTKVZ", "$,"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.3": {"text": "Auch den belebten Raum der weiten Welt sah ich;", "tokens": ["Auch", "den", "be\u00b7leb\u00b7ten", "Raum", "der", "wei\u00b7ten", "Welt", "sah", "ich", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "ART", "ADJA", "NN", "ART", "ADJA", "NN", "VVFIN", "PPER", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.4": {"text": "Die Erde weinete, der Himmel freute sich.", "tokens": ["Die", "Er\u00b7de", "wei\u00b7ne\u00b7te", ",", "der", "Him\u00b7mel", "freu\u00b7te", "sich", "."], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VVFIN", "$,", "ART", "NN", "VVFIN", "PRF", "$."],