{"dta.poem.23742": {"metadata": {"author": {"name": "Wei\u00dfe, Christian Felix", "birth": "N.A.", "death": "N.A."}, "title": "Der wahre Reichthum.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1767", "urn": "urn:nbn:de:kobv:b4-20643-5", "language": ["de:0.99"], "booktitle": "Wei\u00dfe, Christian Felix: Lieder f\u00fcr Kinder. Leipzig, 1767."}, "poem": {"stanza.1": {"line.1": {"text": "Warum durchirrt nach Gut und Geld", "tokens": ["Wa\u00b7rum", "durch\u00b7irrt", "nach", "Gut", "und", "Geld"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["PWAV", "VVFIN", "APPR", "NN", "KON", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Der Mensch die fernsten Meere,", "tokens": ["Der", "Mensch", "die", "ferns\u00b7ten", "Mee\u00b7re", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "ART", "ADJA", "NN", "$,"], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.3": {"text": "Als ob f\u00fcr ihn nicht eine Welt", "tokens": ["Als", "ob", "f\u00fcr", "ihn", "nicht", "ei\u00b7ne", "Welt"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["KOUS", "KOUS", "APPR", "PPER", "PTKNEG", "ART", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "Schon gro\u00df genug w\u00e4re?", "tokens": ["Schon", "gro\u00df", "ge\u00b7nug", "w\u00e4\u00b7re", "?"], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["ADV", "ADJD", "ADV", "VAFIN", "$."], "meter": "-+----", "measure": "dactylic.init"}, "line.5": {"text": "Doch, wenn er, was er w\u00fcnscht, besitzt,", "tokens": ["Doch", ",", "wenn", "er", ",", "was", "er", "w\u00fcnscht", ",", "be\u00b7sitzt", ","], "token_info": ["word", "punct", "word", "word", "punct", "word", "word", "word", "punct", "word", "punct"], "pos": ["KON", "$,", "KOUS", "PPER", "$,", "PWS", "PPER", "VVFIN", "$,", "VVFIN", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.6": {"text": "So stirbt er, ohne da\u00df ers n\u00fctzt.", "tokens": ["So", "stirbt", "er", ",", "oh\u00b7ne", "da\u00df", "ers", "n\u00fctzt", "."], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VVFIN", "PPER", "$,", "KOUI", "KOUS", "PIS", "VVFIN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}}, "stanza.2": {"line.1": {"text": "Die\u00df k\u00f6nnen nicht die G\u00fcter seyn,", "tokens": ["Die\u00df", "k\u00f6n\u00b7nen", "nicht", "die", "G\u00fc\u00b7ter", "seyn", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["PDS", "VMFIN", "PTKNEG", "ART", "NN", "VAINF", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Die man sich soll erwerben.", "tokens": ["Die", "man", "sich", "soll", "er\u00b7wer\u00b7ben", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ART", "PIS", "PRF", "VMFIN", "VVINF", "$."], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.3": {"text": "Ein Weiser sammlet Sch\u00e4tze ein,", "tokens": ["Ein", "Wei\u00b7ser", "samm\u00b7let", "Sch\u00e4t\u00b7ze", "ein", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VVFIN", "NN", "PTKVZ", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "Die nie mit ihm sterben.", "tokens": ["Die", "nie", "mit", "ihm", "ster\u00b7ben", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADV", "APPR", "PPER", "VVINF", "$."], "meter": "-+--+-", "measure": "amphibrach.di.relaxed"}, "line.5": {"text": "Die Tugend ists; nach dieser Zeit", "tokens": ["Die", "Tu\u00b7gend", "ists", ";", "nach", "die\u00b7ser", "Zeit"], "token_info": ["word", "word", "word", "punct", "word", "word", "word"], "pos": ["ART", "NN", "VAFIN", "$.", "APPR", "PDAT", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.6": {"text": "Folgt sie ihm in die Ewigkeit.", "tokens": ["Folgt", "sie", "ihm", "in", "die", "E\u00b7wig\u00b7keit", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "PPER", "PPER", "APPR", "ART", "NN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}}}}}