{"textgrid.poem.58284": {"metadata": {"author": {"name": "Tersteegen, Gerhard", "birth": "N.A.", "death": "N.A."}, "title": "322. Der selige Einsiedler", "genre": "verse", "period": "N.A.", "pub_year": 1733, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Die ganze Welt, das Sch\u00f6nste und das S\u00fc\u00df'ste,", "tokens": ["Die", "gan\u00b7ze", "Welt", ",", "das", "Sch\u00f6ns\u00b7te", "und", "das", "S\u00fc\u00df'\u00b7ste", ","], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "$,", "ART", "NN", "KON", "ART", "NN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "Sei deinem Geist wie eine fremde W\u00fcste;", "tokens": ["Sei", "dei\u00b7nem", "Geist", "wie", "ei\u00b7ne", "frem\u00b7de", "W\u00fcs\u00b7te", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VAFIN", "PPOSAT", "NN", "KOKOM", "ART", "ADJA", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Dein Herz la\u00df dir ein heimlich H\u00fcttchen sein,", "tokens": ["Dein", "Herz", "la\u00df", "dir", "ein", "heim\u00b7lich", "H\u00fctt\u00b7chen", "sein", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPOSAT", "NN", "VVIMP", "PPER", "ART", "ADJD", "NN", "VAINF", "$,"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.4": {"text": "Da retirier dich stets in Gott hinein!", "tokens": ["Da", "re\u00b7ti\u00b7rier", "dich", "stets", "in", "Gott", "hin\u00b7ein", "!"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "ADV", "PPER", "ADV", "APPR", "NN", "PTKVZ", "$."], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}}}}}