{"textgrid.poem.26282": {"metadata": {"author": {"name": "Dauthendey, Max", "birth": "N.A.", "death": "N.A."}, "title": "Nacht vor dem Haus", "genre": "verse", "period": "N.A.", "pub_year": 1892, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Dort in der rauschenden Nacht, schlafender Mandelbaum,", "tokens": ["Dort", "in", "der", "rau\u00b7schen\u00b7den", "Nacht", ",", "schla\u00b7fen\u00b7der", "Man\u00b7del\u00b7baum", ","], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "punct"], "pos": ["ADV", "APPR", "ART", "ADJA", "NN", "$,", "ADJA", "NN", "$,"], "meter": "-+-+--+---+-+", "measure": "iambic.penta.relaxed"}, "line.2": {"text": "Meine Lampe bescheint dich streichelnd im finsteren Raum.", "tokens": ["Mei\u00b7ne", "Lam\u00b7pe", "be\u00b7scheint", "dich", "strei\u00b7chelnd", "im", "fins\u00b7te\u00b7ren", "Raum", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPOSAT", "NN", "VVFIN", "PPER", "ADJD", "APPRART", "ADJA", "NN", "$."], "meter": "+-+--+-+--+--+", "measure": "trochaic.hexa.relaxed"}}, "stanza.2": {"line.1": {"text": "Heute am Tage, da spielten Schmetterlinge bei dir,", "tokens": ["Heu\u00b7te", "am", "Ta\u00b7ge", ",", "da", "spiel\u00b7ten", "Schmet\u00b7ter\u00b7lin\u00b7ge", "bei", "dir", ","], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "APPRART", "NN", "$,", "KOUS", "ADJA", "NN", "APPR", "PPER", "$,"], "meter": "+--+--+-+-+--+", "measure": "dactylic.di.plus"}, "line.2": {"text": "Jetzt in der Nacht da stehst du, ach, so verlassen still hier.", "tokens": ["Jetzt", "in", "der", "Nacht", "da", "stehst", "du", ",", "ach", ",", "so", "ver\u00b7las\u00b7sen", "still", "hier", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["ADV", "APPR", "ART", "NN", "ADV", "VVFIN", "PPER", "$,", "ITJ", "$,", "ADV", "VVINF", "VMFIN", "ADV", "$."], "meter": "-+-+-+-+--+-+-", "measure": "iambic.hexa.relaxed"}}, "stanza.3": {"line.1": {"text": "Dir kehrt die Freundin, die Sonne, morgen zur\u00fcck ins Ge\u00e4st,", "tokens": ["Dir", "kehrt", "die", "Freun\u00b7din", ",", "die", "Son\u00b7ne", ",", "mor\u00b7gen", "zu\u00b7r\u00fcck", "ins", "Ge\u00b7\u00e4st", ","], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "ART", "NN", "$,", "ART", "NN", "$,", "ADV", "PTKVZ", "APPRART", "NN", "$,"], "meter": "-+-+--+-+--+--+", "measure": "iambic.hexa.relaxed"}, "line.2": {"text": "Morgen, da feiert ihr wieder begeistertes Bl\u00fctenlustfest.", "tokens": ["Mor\u00b7gen", ",", "da", "fei\u00b7ert", "ihr", "wie\u00b7der", "be\u00b7geis\u00b7ter\u00b7tes", "Bl\u00fc\u00b7ten\u00b7lust\u00b7fest", "."], "token_info": ["word", "punct", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["NN", "$,", "ADV", "VVFIN", "PPER", "ADV", "ADJA", "NN", "$."], "meter": "+--+--+--+--+-+-", "measure": "dactylic.tetra.plus"}}, "stanza.4": {"line.1": {"text": "Doch ach, zu mir Verlassenem kommen die Stunden nur leer,", "tokens": ["Doch", "ach", ",", "zu", "mir", "Ver\u00b7las\u00b7se\u00b7nem", "kom\u00b7men", "die", "Stun\u00b7den", "nur", "leer", ","], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "XY", "$,", "APPR", "PPER", "NN", "VVFIN", "ART", "NN", "ADV", "ADJD", "$,"], "meter": "-+-+-+--+--+--+", "measure": "iambic.hexa.relaxed"}, "line.2": {"text": "Licht ward zur Dornenkrone, t\u00e4glich dr\u00fcckt sie mich mehr.", "tokens": ["Licht", "ward", "zur", "Dor\u00b7nen\u00b7kro\u00b7ne", ",", "t\u00e4g\u00b7lich", "dr\u00fcckt", "sie", "mich", "mehr", "."], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["NN", "VAFIN", "APPRART", "NN", "$,", "ADJD", "VVFIN", "PPER", "PRF", "ADV", "$."], "meter": "+--+-+-+-+--+", "measure": "iambic.hexa.invert"}}}}}