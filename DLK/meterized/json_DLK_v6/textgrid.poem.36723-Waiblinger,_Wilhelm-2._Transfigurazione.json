{"textgrid.poem.36723": {"metadata": {"author": {"name": "Waiblinger, Wilhelm", "birth": "N.A.", "death": "N.A."}, "title": "2. Transfigurazione", "genre": "verse", "period": "N.A.", "pub_year": 1817, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "In die gl\u00e4nzenden Himmel in \u00fcberschw\u00e4nglicher Glorie", "tokens": ["In", "die", "gl\u00e4n\u00b7zen\u00b7den", "Him\u00b7mel", "in", "\u00fc\u00b7bersc\u00b7hw\u00e4ng\u00b7li\u00b7cher", "Glo\u00b7rie"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["APPR", "ART", "ADJA", "NN", "APPR", "ADJA", "NN"], "meter": "--+--+--+-+--+-", "measure": "anapaest.tri.plus"}, "line.2": {"text": "Hebt sich der Heiland der Welt \u00fcber den Tabor empor.", "tokens": ["Hebt", "sich", "der", "Hei\u00b7land", "der", "Welt", "\u00fc\u00b7ber", "den", "Ta\u00b7bor", "em\u00b7por", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "PRF", "ART", "NN", "ART", "NN", "APPR", "ART", "NN", "PTKVZ", "$."], "meter": "+--+--++--+--+", "measure": "dactylic.di.plus"}, "line.3": {"text": "Wie er im Lichte zumal der enth\u00fcllten Herrlichkeit Gottes,", "tokens": ["Wie", "er", "im", "Lich\u00b7te", "zu\u00b7mal", "der", "ent\u00b7h\u00fcll\u00b7ten", "Herr\u00b7lich\u00b7keit", "Got\u00b7tes", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PWAV", "PPER", "APPRART", "NN", "ADV", "ART", "ADJA", "NN", "NN", "$,"], "meter": "-+-+--+--+-+--+-", "measure": "iambic.hexa.relaxed"}, "line.4": {"text": "Nicht als den Menschen, wie er Menschen erschienen, sich zeigt,", "tokens": ["Nicht", "als", "den", "Men\u00b7schen", ",", "wie", "er", "Men\u00b7schen", "er\u00b7schie\u00b7nen", ",", "sich", "zeigt", ","], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct", "word", "word", "punct"], "pos": ["PTKNEG", "KOUS", "ART", "NN", "$,", "PWAV", "PPER", "NN", "VVINF", "$,", "PRF", "VVFIN", "$,"], "meter": "-+-+-+-+--+--+", "measure": "iambic.hexa.relaxed"}, "line.5": {"text": "Also d\u00fcnkt mich, hat auch in seiner vollendeten Hoheit", "tokens": ["Al\u00b7so", "d\u00fcnkt", "mich", ",", "hat", "auch", "in", "sei\u00b7ner", "voll\u00b7en\u00b7de\u00b7ten", "Ho\u00b7heit"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word", "word", "word"], "pos": ["ADV", "VVFIN", "PPER", "$,", "VAFIN", "ADV", "APPR", "PPOSAT", "ADJA", "NN"], "meter": "+-+--+-+--+--+-", "measure": "hexameter"}, "line.6": {"text": "Raffaels Genius sich unseren Augen verkl\u00e4rt.", "tokens": ["Raf\u00b7faels", "Ge\u00b7nius", "sich", "un\u00b7se\u00b7ren", "Au\u00b7gen", "ver\u00b7kl\u00e4rt", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["NE", "NE", "PRF", "PPOSAT", "NN", "VVPP", "$."], "meter": "+--+-+--+--+", "measure": "iambic.penta.invert"}}}}}