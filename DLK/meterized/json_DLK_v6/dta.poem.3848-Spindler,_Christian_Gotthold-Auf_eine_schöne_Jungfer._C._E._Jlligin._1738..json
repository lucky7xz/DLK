{"dta.poem.3848": {"metadata": {"author": {"name": "Spindler, Christian Gotthold", "birth": "N.A.", "death": "N.A."}, "title": "Auf eine sch\u00f6ne Jungfer.  \n  C. E. Jlligin.  1738.", "genre": "Lyrik, Drama", "period": "N.A.", "pub_year": "1745", "urn": "urn:nbn:de:kobv:b4-20581-9", "language": ["de:0.57", "af:0.42"], "booktitle": "Spindler, Christian Gotthold: Unschuldige Jugend-Fr\u00fcchte. Leipzig, 1745."}, "poem": {"stanza.1": {"line.1": {"text": "Leser! steh ein wenig stille, hier in diesem Schlaf-", "tokens": ["Le\u00b7ser", "!", "steh", "ein", "we\u00b7nig", "stil\u00b7le", ",", "hier", "in", "die\u00b7sem", "Schlaf"], "token_info": ["word", "punct", "word", "word", "word", "word", "punct", "word", "word", "word", "word"], "pos": ["NN", "$.", "VVFIN", "ART", "PIS", "VVFIN", "$,", "ADV", "APPR", "PDAT", "NN"], "meter": "+-+-+-+-+-+-+", "measure": "trochaic.septa"}, "line.2": {"text": "Gemach", "tokens": ["Ge\u00b7mach"], "token_info": ["word"], "pos": ["NN"], "meter": "-+", "measure": "iambic.single"}, "line.3": {"text": "Lieget eine sch\u00f6ne Rose, die der Tod zu zeitig brach.", "tokens": ["Lie\u00b7get", "ei\u00b7ne", "sch\u00f6\u00b7ne", "Ro\u00b7se", ",", "die", "der", "Tod", "zu", "zei\u00b7tig", "brach", "."], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "ART", "ADJA", "NN", "$,", "PRELS", "ART", "NN", "PTKA", "ADJD", "VVFIN", "$."], "meter": "+-+-+-+-+-+-+-+", "measure": "trochaic.octa.plus"}, "line.4": {"text": "Eine Jungfer ruhet hier, ein Bild Anmuths-voller", "tokens": ["Ei\u00b7ne", "Jung\u00b7fer", "ru\u00b7het", "hier", ",", "ein", "Bild", "An\u00b7muths\u00b7vol\u00b7ler"], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word"], "pos": ["ART", "NN", "VVFIN", "ADV", "$,", "ART", "NN", "NN"], "meter": "+-+-+-+-++-+-", "measure": "unknown.measure.septa"}, "line.5": {"text": "Gaben,", "tokens": ["Ga\u00b7ben", ","], "token_info": ["word", "punct"], "pos": ["NN", "$,"], "meter": "+-", "measure": "trochaic.single"}, "line.6": {"text": "Eine Zierde unsrer Stadt liegt in dieser Grufft be-", "tokens": ["Ei\u00b7ne", "Zier\u00b7de", "uns\u00b7rer", "Stadt", "liegt", "in", "die\u00b7ser", "Grufft", "be"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word"], "pos": ["ART", "NN", "PPOSAT", "NN", "VVFIN", "APPR", "PDAT", "NN", "TRUNC"], "meter": "+-+-+-+--+-+-", "measure": "trochaic.hexa.relaxed"}, "line.7": {"text": "graben.", "tokens": ["gra\u00b7ben", "."], "token_info": ["word", "punct"], "pos": ["VVINF", "$."], "meter": "+-", "measure": "trochaic.single"}, "line.8": {"text": "Diese bl\u00fchend sch\u00f6ne Jugend von so reitzender Ge-", "tokens": ["Die\u00b7se", "bl\u00fc\u00b7hend", "sch\u00f6\u00b7ne", "Ju\u00b7gend", "von", "so", "reit\u00b7zen\u00b7der", "Ge"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word"], "pos": ["PDAT", "ADJD", "ADJA", "NN", "APPR", "ADV", "ADJA", "NN"], "meter": "+-+-+-+-+-+-+-", "measure": "trochaic.septa"}, "line.9": {"text": "stalt,", "tokens": ["stalt", ","], "token_info": ["word", "punct"], "pos": ["VVFIN", "$,"], "meter": "+", "measure": "single.up"}, "line.10": {"text": "Ist, eh man es kaum gemeinet, todt, erstorben,", "tokens": ["Ist", ",", "eh", "man", "es", "kaum", "ge\u00b7mei\u00b7net", ",", "todt", ",", "ers\u00b7tor\u00b7ben", ","], "token_info": ["word", "punct", "word", "word", "word", "word", "word", "punct", "word", "punct", "word", "punct"], "pos": ["VAFIN", "$,", "KOUS", "PIS", "PPER", "ADV", "VVPP", "$,", "ADJD", "$,", "VVPP", "$,"], "meter": "+-+-+-+-+-+-", "measure": "trochaic.hexa"}, "line.11": {"text": "welck und kalt,", "tokens": ["welck", "und", "kalt", ","], "token_info": ["word", "word", "word", "punct"], "pos": ["VVIMP", "KON", "ADJD", "$,"], "meter": "+-+", "measure": "trochaic.di"}, "line.12": {"text": "Doch zu gantz besondern Troste stehet diese Grab-", "tokens": ["Doch", "zu", "gantz", "be\u00b7son\u00b7dern", "Tros\u00b7te", "ste\u00b7het", "die\u00b7se", "Grab"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word"], "pos": ["KON", "APPR", "ADV", "ADJA", "NN", "VVFIN", "PDAT", "TRUNC"], "meter": "+-+-+-+-+-+-+", "measure": "trochaic.septa"}, "line.13": {"text": "Schrifft drauf:", "tokens": ["Schrifft", "drauf", ":"], "token_info": ["word", "word", "punct"], "pos": ["NN", "PTKVZ", "$."], "meter": "+-", "measure": "trochaic.single"}, "line.14": {"text": "Die zur\u00fcck gegangne Sonne gehet endlich wie-", "tokens": ["Die", "zu\u00b7r\u00fcck", "ge\u00b7gang\u00b7ne", "Son\u00b7ne", "ge\u00b7het", "end\u00b7lich", "wie"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["ART", "ADV", "ADJA", "NN", "VVFIN", "ADV", "TRUNC"], "meter": "+-+-+-+-+-+-+", "measure": "trochaic.septa"}, "line.15": {"text": "der auf.", "tokens": ["der", "auf", "."], "token_info": ["word", "word", "punct"], "pos": ["ART", "PTKVZ", "$."], "meter": "-+", "measure": "iambic.single"}}}}}