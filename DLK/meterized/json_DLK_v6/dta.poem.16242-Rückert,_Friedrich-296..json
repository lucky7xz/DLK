{"dta.poem.16242": {"metadata": {"author": {"name": "R\u00fcckert, Friedrich", "birth": "N.A.", "death": "N.A."}, "title": "296.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1837", "urn": "urn:nbn:de:kobv:b4-200905195088", "language": ["de:0.99"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "Sprachkunde, lieber Sohn, ist Grundlag' allem Wissen;", "tokens": ["Sprach\u00b7kun\u00b7de", ",", "lie\u00b7ber", "Sohn", ",", "ist", "Grund\u00b7lag'", "al\u00b7lem", "Wis\u00b7sen", ";"], "token_info": ["word", "punct", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["NN", "$,", "ADV", "NN", "$,", "VAFIN", "NN", "PIS", "NN", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Derselben sei zuerst und sei zuletzt beflissen!", "tokens": ["Der\u00b7sel\u00b7ben", "sei", "zu\u00b7erst", "und", "sei", "zu\u00b7letzt", "be\u00b7flis\u00b7sen", "!"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PDS", "VAFIN", "ADV", "KON", "VAFIN", "ADV", "VVPP", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}}, "stanza.2": {"line.1": {"text": "Einleitung nicht allein und eine Vorbereitung", "tokens": ["Ein\u00b7lei\u00b7tung", "nicht", "al\u00b7lein", "und", "ei\u00b7ne", "Vor\u00b7be\u00b7rei\u00b7tung"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["NN", "PTKNEG", "ADV", "KON", "ART", "NN"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Zur Wissenschaft ist sie, und Mittel zur Bestreitung;", "tokens": ["Zur", "Wis\u00b7sen\u00b7schaft", "ist", "sie", ",", "und", "Mit\u00b7tel", "zur", "Be\u00b7strei\u00b7tung", ";"], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["APPRART", "NN", "VAFIN", "PPER", "$,", "KON", "NN", "APPRART", "NN", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}}, "stanza.3": {"line.1": {"text": "Vor\u00fcbung nicht der Kraft, um sie geschickt zu machen,", "tokens": ["Vor\u00b7\u00fc\u00b7bung", "nicht", "der", "Kraft", ",", "um", "sie", "ge\u00b7schickt", "zu", "ma\u00b7chen", ","], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["NN", "PTKNEG", "ART", "NN", "$,", "KOUI", "PPER", "VVPP", "PTKZU", "VVINF", "$,"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Durch Ringen mit dem Wort, zum Kampfe mit den Sachen:", "tokens": ["Durch", "Rin\u00b7gen", "mit", "dem", "Wort", ",", "zum", "Kamp\u00b7fe", "mit", "den", "Sa\u00b7chen", ":"], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "NN", "APPR", "ART", "NN", "$,", "APPRART", "NN", "APPR", "ART", "NN", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}}, "stanza.4": {"line.1": {"text": "Sie ist die Sache selbst im weitsten Wissenskreise,", "tokens": ["Sie", "ist", "die", "Sa\u00b7che", "selbst", "im", "weits\u00b7ten", "Wis\u00b7sen\u00b7skrei\u00b7se", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VAFIN", "ART", "NN", "ADV", "APPRART", "ADJA", "NN", "$,"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Der Aufschlu\u00df \u00fcber Geist und Menschendenkungsweise.", "tokens": ["Der", "Auf\u00b7schlu\u00df", "\u00fc\u00b7ber", "Geist", "und", "Men\u00b7schen\u00b7den\u00b7kungs\u00b7wei\u00b7se", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "APPR", "NN", "KON", "NN", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}}, "stanza.5": {"line.1": {"text": "In jeder r\u00e4umlichen und zeitlichen Entfernung", "tokens": ["In", "je\u00b7der", "r\u00e4um\u00b7li\u00b7chen", "und", "zeit\u00b7li\u00b7chen", "Ent\u00b7fer\u00b7nung"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["APPR", "PIAT", "ADJA", "KON", "ADJA", "NN"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Den Menschen zu verstehn, dient seiner Sprach' Erlernung.", "tokens": ["Den", "Men\u00b7schen", "zu", "ver\u00b7stehn", ",", "dient", "sei\u00b7ner", "Sprach'", "Er\u00b7ler\u00b7nung", "."], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "PTKZU", "VVINF", "$,", "VVFIN", "PPOSAT", "NN", "NN", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}}, "stanza.6": {"line.1": {"text": "Nur Sprachenkunde f\u00fchrt zur Weltverst\u00e4ndigung;", "tokens": ["Nur", "Spra\u00b7chen\u00b7kun\u00b7de", "f\u00fchrt", "zur", "Welt\u00b7ver\u00b7st\u00e4n\u00b7di\u00b7gung", ";"], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "NN", "VVFIN", "APPRART", "NN", "$."], "meter": "-+-+-+-+-+--", "measure": "unknown.measure.penta"}, "line.2": {"text": "Drum sinne sp\u00e4t und fr\u00fch auf Sprachenb\u00e4ndigung!", "tokens": ["Drum", "sin\u00b7ne", "sp\u00e4t", "und", "fr\u00fch", "auf", "Spra\u00b7chen\u00b7b\u00e4n\u00b7di\u00b7gung", "!"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PAV", "VVFIN", "ADJD", "KON", "ADJD", "APPR", "NN", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}}}}}