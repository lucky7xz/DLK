{"dta.poem.2169": {"metadata": {"author": {"name": "Brockes, Barthold Heinrich", "birth": "N.A.", "death": "N.A."}, "title": "Die Geizigen.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1748", "urn": "urn:nbn:de:kobv:b4-200905198553", "language": ["de:0.99"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "Wenn doch die Geizh\u00e4ls' eine Zeit in ihrem Leben fe-", "tokens": ["Wenn", "doch", "die", "Geiz\u00b7h\u00e4ls'", "ei\u00b7ne", "Zeit", "in", "ih\u00b7rem", "Le\u00b7ben", "fe"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "word"], "pos": ["KOUS", "ADV", "ART", "NN", "ART", "NN", "APPR", "PPOSAT", "NN", "TRUNC"], "meter": "-+-+-+-+-+-+--", "measure": "unknown.measure.hexa"}, "line.2": {"text": "ste setzten,", "tokens": ["ste", "setz\u00b7ten", ","], "token_info": ["word", "word", "punct"], "pos": ["ADJA", "VVFIN", "$,"], "meter": "-+-", "measure": "amphibrach.single"}, "line.3": {"text": "In welcher sie", "tokens": ["In", "wel\u00b7cher", "sie"], "token_info": ["word", "word", "word"], "pos": ["APPR", "PRELS", "PPER"], "meter": "-+-+", "measure": "iambic.di"}, "line.4": {"text": "Das mit so vieler Sorg und M\u00fch", "tokens": ["Das", "mit", "so", "vie\u00b7ler", "Sorg", "und", "M\u00fch"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["PDS", "APPR", "ADV", "PIAT", "NN", "KON", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.5": {"text": "Erscharrte Geld zu brauchen d\u00e4chten, und mit der Hoff-", "tokens": ["Er\u00b7scharr\u00b7te", "Geld", "zu", "brau\u00b7chen", "d\u00e4ch\u00b7ten", ",", "und", "mit", "der", "Hoff"], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word", "word"], "pos": ["ADJA", "NN", "PTKZU", "VVINF", "VVFIN", "$,", "KON", "APPR", "ART", "TRUNC"], "meter": "-+-+-+-+--+-+", "measure": "iambic.hexa.relaxed"}, "line.6": {"text": "nung sich ergetzten,", "tokens": ["nung", "sich", "er\u00b7getz\u00b7ten", ","], "token_info": ["word", "word", "word", "punct"], "pos": ["ADV", "PRF", "VVFIN", "$,"], "meter": "-+-+-", "measure": "iambic.di"}, "line.7": {"text": "Des Schatzes einmal zu genie\u00dfen; w\u00e4r ihre Thorheit", "tokens": ["Des", "Schat\u00b7zes", "ein\u00b7mal", "zu", "ge\u00b7nie\u00b7\u00dfen", ";", "w\u00e4r", "ih\u00b7re", "Thor\u00b7heit"], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word"], "pos": ["ART", "NN", "ADV", "PTKZU", "VVINF", "$.", "VAFIN", "PPOSAT", "NN"], "meter": "-+-+-+-+-+--+-", "measure": "iambic.hexa.relaxed"}, "line.8": {"text": "minder klein:", "tokens": ["min\u00b7der", "klein", ":"], "token_info": ["word", "word", "punct"], "pos": ["ADV", "ADJD", "$."], "meter": "+-+", "measure": "trochaic.di"}, "line.9": {"text": "So aber sieht man ihr Gespar", "tokens": ["So", "a\u00b7ber", "sieht", "man", "ihr", "Ge\u00b7spar"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["ADV", "ADV", "VVFIN", "PIS", "PPOSAT", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.10": {"text": "Bis an die schwarze Todtenbahr", "tokens": ["Bis", "an", "die", "schwar\u00b7ze", "Tod\u00b7ten\u00b7bahr"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["APPR", "APPR", "ART", "ADJA", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.11": {"text": "Ununterbrochen sich erstrecken.", "tokens": ["Un\u00b7un\u00b7ter\u00b7bro\u00b7chen", "sich", "er\u00b7stre\u00b7cken", "."], "token_info": ["word", "word", "word", "punct"], "pos": ["NN", "PRF", "VVINF", "$."], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.12": {"text": "Doch halt! mich deucht, in ihrer Thorheit doch etwas", "tokens": ["Doch", "halt", "!", "mich", "deucht", ",", "in", "ih\u00b7rer", "Thor\u00b7heit", "doch", "et\u00b7was"], "token_info": ["word", "word", "punct", "word", "word", "punct", "word", "word", "word", "word", "word"], "pos": ["KON", "VVFIN", "$.", "PPER", "VVFIN", "$,", "APPR", "PPOSAT", "NN", "ADV", "PIS"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.13": {"text": "Gutes zu entdecken,", "tokens": ["Gu\u00b7tes", "zu", "ent\u00b7de\u00b7cken", ","], "token_info": ["word", "word", "word", "punct"], "pos": ["NN", "PTKZU", "VVINF", "$,"], "meter": "+-+-+-", "measure": "trochaic.tri"}, "line.14": {"text": "Wenn sie nach der Vernunft verf\u00fchren; so w\u00fcrden \u00f6fters", "tokens": ["Wenn", "sie", "nach", "der", "Ver\u00b7nunft", "ver\u00b7f\u00fch\u00b7ren", ";", "so", "w\u00fcr\u00b7den", "\u00f6f\u00b7ters"], "token_info": ["word", "word", "word", "word", "word", "word", "punct", "word", "word", "word"], "pos": ["KOUS", "PPER", "APPR", "ART", "NN", "VVINF", "$.", "ADV", "VAFIN", "ADV"], "meter": "--+--+-+--+-+-", "measure": "anapaest.di.plus"}, "line.15": {"text": "ihre Erben,", "tokens": ["ih\u00b7re", "Er\u00b7ben", ","], "token_info": ["word", "word", "punct"], "pos": ["PPOSAT", "NN", "$,"], "meter": "+-+-", "measure": "trochaic.di"}, "line.16": {"text": "An ihrer statt, f\u00fcr Hunger sterben.", "tokens": ["An", "ih\u00b7rer", "statt", ",", "f\u00fcr", "Hun\u00b7ger", "ster\u00b7ben", "."], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["APPR", "PPOSAT", "NN", "$,", "APPR", "NN", "VVINF", "$."], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}}}}}