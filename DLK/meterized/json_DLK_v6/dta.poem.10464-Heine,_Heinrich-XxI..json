{"dta.poem.10464": {"metadata": {"author": {"name": "Heine, Heinrich", "birth": "N.A.", "death": "N.A."}, "title": "XxI.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1827", "urn": "urn:nbn:de:kobv:b4-200905192211", "language": ["de:0.99"], "booktitle": "Heine, Heinrich: Buch der Lieder. Hamburg, 1827."}, "poem": {"stanza.1": {"line.1": {"text": "Wie kannst du ruhig schlafen,", "tokens": ["Wie", "kannst", "du", "ru\u00b7hig", "schla\u00b7fen", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PWAV", "VMFIN", "PPER", "ADJD", "VVINF", "$,"], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.2": {"text": "Und wei\u00dft, ich lebe noch?", "tokens": ["Und", "wei\u00dft", ",", "ich", "le\u00b7be", "noch", "?"], "token_info": ["word", "word", "punct", "word", "word", "word", "punct"], "pos": ["KON", "VVFIN", "$,", "PPER", "VVFIN", "ADV", "$."], "meter": "-+-+-+", "measure": "iambic.tri"}, "line.3": {"text": "Der alte Zorn kommt wieder,", "tokens": ["Der", "al\u00b7te", "Zorn", "kommt", "wie\u00b7der", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "VVFIN", "ADV", "$,"], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.4": {"text": "Und dann zerbrech' ich mein Joch.", "tokens": ["Und", "dann", "zer\u00b7brech'", "ich", "mein", "Joch", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "ADV", "VVFIN", "PPER", "PPOSAT", "NN", "$."], "meter": "-+-+--+", "measure": "iambic.tri.chol"}}, "stanza.2": {"line.1": {"text": "Kennst du das alte Liedchen:", "tokens": ["Kennst", "du", "das", "al\u00b7te", "Lied\u00b7chen", ":"], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "PPER", "ART", "ADJA", "NN", "$."], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.2": {"text": "Wie einst ein todter Knab'", "tokens": ["Wie", "einst", "ein", "tod\u00b7ter", "Knab'"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["PWAV", "ADV", "ART", "ADJA", "NN"], "meter": "-+-+-+", "measure": "iambic.tri"}, "line.3": {"text": "Um Mitternacht die Geliebte", "tokens": ["Um", "Mit\u00b7ter\u00b7nacht", "die", "Ge\u00b7lieb\u00b7te"], "token_info": ["word", "word", "word", "word"], "pos": ["KOUI", "NN", "ART", "NN"], "meter": "-+-+--+-", "measure": "iambic.tri.relaxed"}, "line.4": {"text": "Zu sich geholt in's Grab?", "tokens": ["Zu", "sich", "ge\u00b7holt", "in's", "Grab", "?"], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "PRF", "VVPP", "APPRART", "NN", "$."], "meter": "-+-+-+", "measure": "iambic.tri"}}, "stanza.3": {"line.1": {"text": "Glaub' mir, du wundersch\u00f6nes,", "tokens": ["Glaub'", "mir", ",", "du", "wun\u00b7der\u00b7sch\u00f6\u00b7nes", ","], "token_info": ["word", "word", "punct", "word", "word", "punct"], "pos": ["VVFIN", "PPER", "$,", "PPER", "ADJA", "$,"], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.2": {"text": "Du wunderholdes Kind,", "tokens": ["Du", "wun\u00b7der\u00b7hol\u00b7des", "Kind", ","], "token_info": ["word", "word", "word", "punct"], "pos": ["PPER", "ADJA", "NN", "$,"], "meter": "-+-+-+", "measure": "iambic.tri"}, "line.3": {"text": "Ich lebe und bin noch st\u00e4rker", "tokens": ["Ich", "le\u00b7be", "und", "bin", "noch", "st\u00e4r\u00b7ker"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["PPER", "VVFIN", "KON", "VAFIN", "ADV", "ADJD"], "meter": "-+--+-+-", "measure": "iambic.tri.relaxed"}, "line.4": {"text": "Als alle Todten sind!", "tokens": ["Als", "al\u00b7le", "Tod\u00b7ten", "sind", "!"], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["KOUS", "PIAT", "NN", "VAFIN", "$."], "meter": "-+-+-+", "measure": "iambic.tri"}}}}}