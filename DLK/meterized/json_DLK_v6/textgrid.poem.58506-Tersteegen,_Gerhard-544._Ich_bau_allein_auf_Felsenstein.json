{"textgrid.poem.58506": {"metadata": {"author": {"name": "Tersteegen, Gerhard", "birth": "N.A.", "death": "N.A."}, "title": "544. Ich bau allein auf Felsenstein", "genre": "verse", "period": "N.A.", "pub_year": 1733, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Wie still, behutsam geht ein Kind des Lichts im Dunkeln", "tokens": ["Wie", "still", ",", "be\u00b7hut\u00b7sam", "geht", "ein", "Kind", "des", "Lichts", "im", "Dun\u00b7keln"], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "word", "word", "word"], "pos": ["PWAV", "ADJD", "$,", "ADJD", "VVFIN", "ART", "NN", "ART", "NN", "APPRART", "NN"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Und lehnt sich st\u00fctzenlos auf seinen Freund allein!", "tokens": ["Und", "lehnt", "sich", "st\u00fct\u00b7zen\u00b7los", "auf", "sei\u00b7nen", "Freund", "al\u00b7lein", "!"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "VVFIN", "PRF", "ADJD", "APPR", "PPOSAT", "NN", "ADV", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.3": {"text": "Geh hin, Versicherter, in deines Lichtes Funkeln,", "tokens": ["Geh", "hin", ",", "Ver\u00b7si\u00b7cher\u00b7ter", ",", "in", "dei\u00b7nes", "Lich\u00b7tes", "Fun\u00b7keln", ","], "token_info": ["word", "word", "punct", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["NE", "PTKVZ", "$,", "NN", "$,", "APPR", "PPOSAT", "NN", "NN", "$,"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.4": {"text": "Heut stehst du wie ein Held, liegst morgen wohl in Pein!", "tokens": ["Heut", "stehst", "du", "wie", "ein", "Held", ",", "liegst", "mor\u00b7gen", "wohl", "in", "Pein", "!"], "token_info": ["word", "word", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VVFIN", "PPER", "KOKOM", "ART", "NN", "$,", "VVFIN", "ADV", "ADV", "APPR", "NN", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.5": {"text": "Licht und Gef\u00fchl sind sch\u00f6n, doch Bl\u00fcmlein, die verwehen;", "tokens": ["Licht", "und", "Ge\u00b7f\u00fchl", "sind", "sch\u00f6n", ",", "doch", "Bl\u00fcm\u00b7lein", ",", "die", "ver\u00b7we\u00b7hen", ";"], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "punct", "word", "word", "punct"], "pos": ["NN", "KON", "NN", "VAFIN", "ADJD", "$,", "KON", "NN", "$,", "PRELS", "VVINF", "$."], "meter": "+--+-+-+-+-+-", "measure": "iambic.hexa.invert"}, "line.6": {"text": "Nur Gott und Glaube selbst unwankelbar bestehen.", "tokens": ["Nur", "Gott", "und", "Glau\u00b7be", "selbst", "un\u00b7wan\u00b7kel\u00b7bar", "be\u00b7ste\u00b7hen", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "NN", "KON", "NN", "ADV", "ADJD", "VVINF", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}}}}}