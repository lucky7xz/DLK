{"dta.poem.6304": {"metadata": {"author": {"name": "Brockes, Barthold Heinrich", "birth": "N.A.", "death": "N.A."}, "title": "Von der Hitze und von der K\u00e4lte.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1730", "urn": "urn:nbn:de:kobv:b4-20087-5", "language": ["de:0.99"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "Man spottete vor dem gewisser Weisen Lehre,", "tokens": ["Man", "spot\u00b7te\u00b7te", "vor", "dem", "ge\u00b7wis\u00b7ser", "Wei\u00b7sen", "Leh\u00b7re", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PIS", "VVFIN", "APPR", "ART", "ADJA", "NN", "NN", "$,"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Die sagten, da\u00df der Schnee nicht wei\u00df:", "tokens": ["Die", "sag\u00b7ten", ",", "da\u00df", "der", "Schnee", "nicht", "wei\u00df", ":"], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["PDS", "VVFIN", "$,", "KOUS", "ART", "NN", "PTKNEG", "VVFIN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.3": {"text": "Ingleichen w\u00e4re", "tokens": ["In\u00b7glei\u00b7chen", "w\u00e4\u00b7re"], "token_info": ["word", "word"], "pos": ["ADV", "VAFIN"], "meter": "-+-+-", "measure": "iambic.di"}, "line.4": {"text": "Das Feuer auch nicht hei\u00df.", "tokens": ["Das", "Feu\u00b7er", "auch", "nicht", "hei\u00df", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "ADV", "PTKNEG", "ADJD", "$."], "meter": "-+-+-+", "measure": "iambic.tri"}, "line.5": {"text": "Allein die Meinungen, die ein gemeiner Geist", "tokens": ["Al\u00b7lein", "die", "Mei\u00b7nun\u00b7gen", ",", "die", "ein", "ge\u00b7mei\u00b7ner", "Geist"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word"], "pos": ["ADV", "ART", "NN", "$,", "PRELS", "ART", "ADJA", "NN"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.6": {"text": "Verwegen, l\u00e4cherlich, und th\u00f6richt heisst,", "tokens": ["Ver\u00b7we\u00b7gen", ",", "l\u00e4\u00b7cher\u00b7lich", ",", "und", "th\u00f6\u00b7richt", "heisst", ","], "token_info": ["word", "punct", "word", "punct", "word", "word", "word", "punct"], "pos": ["NN", "$,", "ADJD", "$,", "KON", "ADJD", "VVFIN", "$,"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.7": {"text": "Wenn wir dieselben recht erwegen,", "tokens": ["Wenn", "wir", "die\u00b7sel\u00b7ben", "recht", "er\u00b7we\u00b7gen", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "PPER", "PDAT", "ADJD", "VVFIN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.8": {"text": "Erweisen, da\u00df sie offt die Wahrheit in sich hegen.", "tokens": ["Er\u00b7wei\u00b7sen", ",", "da\u00df", "sie", "offt", "die", "Wahr\u00b7heit", "in", "sich", "he\u00b7gen", "."], "token_info": ["word", "punct", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVPP", "$,", "KOUS", "PPER", "ADV", "ART", "NN", "APPR", "PRF", "VVINF", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}}}}}