{"dta.poem.23758": {"metadata": {"author": {"name": "Wei\u00dfe, Christian Felix", "birth": "N.A.", "death": "N.A."}, "title": "Der arme Mann.  \n  Bruder und Schwester.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1767", "urn": "urn:nbn:de:kobv:b4-20643-5", "language": ["de:0.99"], "booktitle": "Wei\u00dfe, Christian Felix: Lieder f\u00fcr Kinder. Leipzig, 1767."}, "poem": {"stanza.1": {"line.1": {"text": "Bruder! sieh den armen Mann", "tokens": ["Bru\u00b7der", "!", "sieh", "den", "ar\u00b7men", "Mann"], "token_info": ["word", "punct", "word", "word", "word", "word"], "pos": ["NN", "$.", "VVIMP", "ART", "ADJA", "NN"], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.2": {"text": "Doch nicht in der N\u00e4h so an!", "tokens": ["Doch", "nicht", "in", "der", "N\u00e4h", "so", "an", "!"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "PTKNEG", "APPR", "ART", "NN", "ADV", "PTKVZ", "$."], "meter": "-+--+-+", "measure": "iambic.tri.relaxed"}, "line.3": {"text": "Wie verhungert! wie zerrissen!", "tokens": ["Wie", "ver\u00b7hun\u00b7gert", "!", "wie", "zer\u00b7ris\u00b7sen", "!"], "token_info": ["word", "word", "punct", "word", "word", "punct"], "pos": ["PWAV", "VVPP", "$.", "PWAV", "VVPP", "$."], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.4": {"text": "Nein, mich schaudert hinzugehn! \u2014", "tokens": ["Nein", ",", "mich", "schau\u00b7dert", "hin\u00b7zu\u00b7gehn", "!"], "token_info": ["word", "punct", "word", "word", "word", "punct", "punct"], "pos": ["PTKANT", "$,", "PPER", "VVFIN", "VVINF", "$.", "$("], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.5": {"text": "Aber du? \u2014 so m\u00f6cht ich wissen,", "tokens": ["A\u00b7ber", "du", "?", "so", "m\u00f6cht", "ich", "wis\u00b7sen", ","], "token_info": ["word", "word", "punct", "punct", "word", "word", "word", "word", "punct"], "pos": ["KON", "PPER", "$.", "$(", "ADV", "VMFIN", "PPER", "VVINF", "$,"], "meter": "+--+-+-+", "measure": "iambic.tetra.invert"}, "line.6": {"text": "Was du willst an ihm ersehn!", "tokens": ["Was", "du", "willst", "an", "ihm", "er\u00b7sehn", "!"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["PWS", "PPER", "VMFIN", "APPR", "PPER", "VVINF", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}}, "stanza.2": {"line.1": {"text": "La\u00df mich immer n\u00e4her gehn,", "tokens": ["La\u00df", "mich", "im\u00b7mer", "n\u00e4\u00b7her", "gehn", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["VVIMP", "PPER", "ADV", "ADJD", "VVINF", "$,"], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.2": {"text": "Und sein ganzes Elend sehn!", "tokens": ["Und", "sein", "gan\u00b7zes", "E\u00b7lend", "sehn", "!"], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["KON", "PPOSAT", "ADJA", "NN", "VVINF", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.3": {"text": "Man lernt nie sein Gl\u00fcck erkennen,", "tokens": ["Man", "lernt", "nie", "sein", "Gl\u00fcck", "er\u00b7ken\u00b7nen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["PIS", "VVFIN", "ADV", "PPOSAT", "NN", "VVINF", "$,"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.4": {"text": "Wenn man nicht das Elend kennt,", "tokens": ["Wenn", "man", "nicht", "das", "E\u00b7lend", "kennt", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "PIS", "PTKNEG", "ART", "NN", "VVFIN", "$,"], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.5": {"text": "Noch f\u00fcr den voll Dank entbrennen,", "tokens": ["Noch", "f\u00fcr", "den", "voll", "Dank", "ent\u00b7bren\u00b7nen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "APPR", "ART", "ADJD", "NN", "VVINF", "$,"], "meter": "-+--+-+-", "measure": "iambic.tri.relaxed"}, "line.6": {"text": "Der uns dieses Gl\u00fcck geg\u00f6nnt.", "tokens": ["Der", "uns", "die\u00b7ses", "Gl\u00fcck", "ge\u00b7g\u00f6nnt", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ART", "PPER", "PDAT", "NN", "VVPP", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}}}}}