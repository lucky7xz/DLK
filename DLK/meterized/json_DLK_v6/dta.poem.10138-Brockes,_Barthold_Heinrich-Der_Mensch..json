{"dta.poem.10138": {"metadata": {"author": {"name": "Brockes, Barthold Heinrich", "birth": "N.A.", "death": "N.A."}, "title": "Der Mensch.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1735", "urn": "urn:nbn:de:kobv:b4-20086-0", "language": ["de:0.99"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "Wann willst du, armer Mensch, von dieser Sucht ge-", "tokens": ["Wann", "willst", "du", ",", "ar\u00b7mer", "Mensch", ",", "von", "die\u00b7ser", "Sucht", "ge"], "token_info": ["word", "word", "word", "punct", "word", "word", "punct", "word", "word", "word", "word"], "pos": ["PWAV", "VMFIN", "PPER", "$,", "ADJA", "NN", "$,", "APPR", "PDAT", "NN", "TRUNC"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "nesen,", "tokens": ["ne\u00b7sen", ","], "token_info": ["word", "punct"], "pos": ["VVFIN", "$,"], "meter": "--", "measure": "unknown.measure.zero"}, "line.3": {"text": "Von dem Gewohnheits-Staar, von diesem Seelen-Gift?", "tokens": ["Von", "dem", "Ge\u00b7wohn\u00b7heits\u00b7Staar", ",", "von", "die\u00b7sem", "See\u00b7len\u00b7Gift", "?"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["APPR", "ART", "NN", "$,", "APPR", "PDAT", "NN", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.4": {"text": "Jm Buch der Welt verlangt fast gar kein Mensch zu lesen,", "tokens": ["Jm", "Buch", "der", "Welt", "ver\u00b7langt", "fast", "gar", "kein", "Mensch", "zu", "le\u00b7sen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPRART", "NN", "ART", "NN", "VVFIN", "ADV", "ADV", "PIAT", "NN", "PTKZU", "VVINF", "$,"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.5": {"text": "Wie sch\u00f6n der Inhalt gleich, wie herrlich seine Schrift.", "tokens": ["Wie", "sch\u00f6n", "der", "In\u00b7halt", "gleich", ",", "wie", "herr\u00b7lich", "sei\u00b7ne", "Schrift", "."], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["PWAV", "ADJD", "ART", "NN", "ADV", "$,", "PWAV", "ADJD", "PPOSAT", "NN", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.6": {"text": "Durch Gold-Staub, womit hier und dort die Schrift be", "tokens": ["Durch", "Gold\u00b7Staub", ",", "wo\u00b7mit", "hier", "und", "dort", "die", "Schrift", "be"], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "word", "word"], "pos": ["APPR", "NN", "$,", "PWAV", "ADV", "KON", "ADV", "ART", "NN", "VVFIN"], "meter": "--+--+-+-+-", "measure": "anapaest.di.plus"}, "line.7": {"text": "streuet,", "tokens": ["streu\u00b7et", ","], "token_info": ["word", "punct"], "pos": ["VVFIN", "$,"], "meter": "+-", "measure": "trochaic.single"}, "line.8": {"text": "Wird er, der eitle Thor, nicht durch die Schrift, erfreuet.", "tokens": ["Wird", "er", ",", "der", "eit\u00b7le", "Thor", ",", "nicht", "durch", "die", "Schrift", ",", "er\u00b7freu\u00b7et", "."], "token_info": ["word", "word", "punct", "word", "word", "word", "punct", "word", "word", "word", "word", "punct", "word", "punct"], "pos": ["VAFIN", "PPER", "$,", "ART", "ADJA", "NN", "$,", "PTKNEG", "APPR", "ART", "NN", "$,", "VVFIN", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.9": {"text": "Die\u00df, wie ein th\u00f6richt Kind, sucht er nur abzuschaben,", "tokens": ["Die\u00df", ",", "wie", "ein", "th\u00f6\u00b7richt", "Kind", ",", "sucht", "er", "nur", "ab\u00b7zu\u00b7scha\u00b7ben", ","], "token_info": ["word", "punct", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["PDS", "$,", "PWAV", "ART", "ADJD", "NN", "$,", "VVFIN", "PPER", "ADV", "VVIZU", "$,"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.10": {"text": "Nur hiervon will er viel in seinem Beutel haben:", "tokens": ["Nur", "hier\u00b7von", "will", "er", "viel", "in", "sei\u00b7nem", "Beu\u00b7tel", "ha\u00b7ben", ":"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "PAV", "VMFIN", "PPER", "ADV", "APPR", "PPOSAT", "NN", "VAFIN", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.11": {"text": "Und GOTTES Herrlichkeit, Licht, Liebe, Weisheit,", "tokens": ["Und", "GoT\u00b7TES", "Herr\u00b7lich\u00b7keit", ",", "Licht", ",", "Lie\u00b7be", ",", "Weis\u00b7heit", ","], "token_info": ["word", "word", "word", "punct", "word", "punct", "word", "punct", "word", "punct"], "pos": ["KON", "NE", "NN", "$,", "NN", "$,", "NN", "$,", "NN", "$,"], "meter": "-+-+--++-+-", "measure": "iambic.penta.relaxed"}, "line.12": {"text": "Macht,", "tokens": ["Macht", ","], "token_info": ["word", "punct"], "pos": ["NN", "$,"], "meter": "+", "measure": "single.up"}, "line.13": {"text": "Wovon das Welt-Buch zeugt, das l\u00e4sst er aus der Acht.", "tokens": ["Wo\u00b7von", "das", "Welt\u00b7Buch", "zeugt", ",", "das", "l\u00e4sst", "er", "aus", "der", "Acht", "."], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PWAV", "ART", "NN", "VVFIN", "$,", "PDS", "VVFIN", "PPER", "APPR", "ART", "CARD", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}}}}}