{"textgrid.poem.58088": {"metadata": {"author": {"name": "Tersteegen, Gerhard", "birth": "N.A.", "death": "N.A."}, "title": "126. Im Mittelpunkt bleibt man still", "genre": "verse", "period": "N.A.", "pub_year": 1733, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Die Welt ist nur ein Rad, ein immer drehend Rund,", "tokens": ["Die", "Welt", "ist", "nur", "ein", "Rad", ",", "ein", "im\u00b7mer", "dre\u00b7hend", "Rund", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VAFIN", "ADV", "ART", "NN", "$,", "ART", "ADV", "ADJD", "ADJD", "$,"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Gehst du mit Lust hinein, so kommst du mit ans Treiben.", "tokens": ["Gehst", "du", "mit", "Lust", "hin\u00b7ein", ",", "so", "kommst", "du", "mit", "ans", "Trei\u00b7ben", "."], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "PPER", "APPR", "NN", "PTKVZ", "$,", "ADV", "VVFIN", "PPER", "APPR", "APPRART", "NN", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.3": {"text": "Gott ist der Mittelpunkt; kehr ein in 'n Seelengrund!", "tokens": ["Gott", "ist", "der", "Mit\u00b7tel\u00b7punkt", ";", "kehr", "ein", "in", "'n", "See\u00b7len\u00b7grund", "!"], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["NN", "VAFIN", "ART", "NN", "$.", "ADV", "ART", "APPR", "ART", "NN", "$."], "meter": "+--+-+--+-+-+", "measure": "iambic.hexa.invert"}, "line.4": {"text": "Wer da gesammelt ist, kann still und ruhig bleiben.", "tokens": ["Wer", "da", "ge\u00b7sam\u00b7melt", "ist", ",", "kann", "still", "und", "ru\u00b7hig", "blei\u00b7ben", "."], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["PWS", "ADV", "VVPP", "VAFIN", "$,", "VMFIN", "ADJD", "KON", "ADJD", "VVINF", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}}}}}