{"textgrid.poem.43641": {"metadata": {"author": {"name": "Hoffmann von Fallersleben, August Heinrich", "birth": "N.A.", "death": "N.A."}, "title": "1L: O Sommermorgen, wie bist du so sch\u00f6n,", "genre": "verse", "period": "N.A.", "pub_year": 1836, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "O Sommermorgen, wie bist du so sch\u00f6n,", "tokens": ["O", "Som\u00b7mer\u00b7mor\u00b7gen", ",", "wie", "bist", "du", "so", "sch\u00f6n", ","], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["NE", "NN", "$,", "PWAV", "VAFIN", "PPER", "ADV", "ADJD", "$,"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.2": {"text": "So sch\u00f6n im Thal und auf den H\u00f6hn!", "tokens": ["So", "sch\u00f6n", "im", "Thal", "und", "auf", "den", "H\u00f6hn", "!"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "ADJD", "APPRART", "NN", "KON", "APPR", "ART", "NN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}}, "stanza.2": {"line.1": {"text": "Wenn's Morgenroth aus Osten strahlt", "tokens": ["Wenn's", "Mor\u00b7gen\u00b7roth", "aus", "Os\u00b7ten", "strahlt"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["KOUS", "NN", "APPR", "NN", "VVFIN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Und golden den Saum der Wolken malt,", "tokens": ["Und", "gol\u00b7den", "den", "Saum", "der", "Wol\u00b7ken", "malt", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "ADJD", "ART", "NN", "ART", "NN", "VVFIN", "$,"], "meter": "-+--+-+-+", "measure": "iambic.tetra.relaxed"}}, "stanza.3": {"line.1": {"text": "Und mit immer gl\u00e4nzend r\u00f6therer Glut", "tokens": ["Und", "mit", "im\u00b7mer", "gl\u00e4n\u00b7zend", "r\u00f6\u00b7the\u00b7rer", "Glut"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["KON", "APPR", "ADV", "ADJD", "ADJA", "NN"], "meter": "--+-+-+--+", "measure": "iambic.tetra.chol"}, "line.2": {"text": "Auf den Wipfeln der dunkelen W\u00e4lder ruht;", "tokens": ["Auf", "den", "Wip\u00b7feln", "der", "dun\u00b7ke\u00b7len", "W\u00e4l\u00b7der", "ruht", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "ART", "NN", "ART", "ADJA", "NN", "VVFIN", "$."], "meter": "--+--+--+-+", "measure": "anapaest.tri.plus"}}, "stanza.4": {"line.1": {"text": "Wenn Halm' und Blumen in Flur und Au", "tokens": ["Wenn", "Halm'", "und", "Blu\u00b7men", "in", "Flur", "und", "Au"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word"], "pos": ["KOUS", "NN", "KON", "NN", "APPR", "NN", "KON", "NN"], "meter": "-+-+--+-+", "measure": "iambic.tetra.relaxed"}, "line.2": {"text": "Frisch duften im k\u00fchlen Morgenthau;", "tokens": ["Frisch", "duf\u00b7ten", "im", "k\u00fch\u00b7len", "Mor\u00b7gent\u00b7hau", ";"], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["NE", "VVFIN", "APPRART", "ADJA", "NN", "$."], "meter": "-+--+-+-+", "measure": "iambic.tetra.relaxed"}}, "stanza.5": {"line.1": {"text": "Wenn durch des Waldes Stille der Quell", "tokens": ["Wenn", "durch", "des", "Wal\u00b7des", "Stil\u00b7le", "der", "Quell"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["KOUS", "APPR", "ART", "NN", "NN", "ART", "NN"], "meter": "+--+-+--+", "measure": "iambic.tetra.invert"}, "line.2": {"text": "Vor\u00fcber rieselt silberhell;", "tokens": ["Vor\u00b7\u00fc\u00b7ber", "rie\u00b7selt", "sil\u00b7ber\u00b7hell", ";"], "token_info": ["word", "word", "word", "punct"], "pos": ["ADV", "VVFIN", "ADJD", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}}, "stanza.6": {"line.1": {"text": "Wenn durch die Bl\u00e4tter s\u00e4uselt der Wind", "tokens": ["Wenn", "durch", "die", "Bl\u00e4t\u00b7ter", "s\u00e4u\u00b7selt", "der", "Wind"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["KOUS", "APPR", "ART", "NN", "VVFIN", "ART", "NN"], "meter": "-+-+-+--+", "measure": "iambic.tetra.chol"}, "line.2": {"text": "Und im Felde die Lerch' ihr Lied beginnt:", "tokens": ["Und", "im", "Fel\u00b7de", "die", "Ler\u00b7ch'", "ihr", "Lied", "be\u00b7ginnt", ":"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "APPRART", "NN", "ART", "NN", "PPOSAT", "NN", "VVFIN", "$."], "meter": "--+-+-+-+-+", "measure": "anapaest.init"}}, "stanza.7": {"line.1": {"text": "Dann mu\u00df das Herz in Andacht beben", "tokens": ["Dann", "mu\u00df", "das", "Herz", "in", "An\u00b7dacht", "be\u00b7ben"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["ADV", "VMFIN", "ART", "NN", "APPR", "NN", "VVINF"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.2": {"text": "Und auch gen Himmel sein Lied erheben.", "tokens": ["Und", "auch", "gen", "Him\u00b7mel", "sein", "Lied", "er\u00b7he\u00b7ben", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "ADV", "APPR", "NN", "PPOSAT", "NN", "VVINF", "$."], "meter": "-+-+--+-+-", "measure": "iambic.tetra.relaxed"}}}}}