{"textgrid.poem.60942": {"metadata": {"author": {"name": "Platen, August von", "birth": "N.A.", "death": "N.A."}, "title": "1L: Einst, wie die Sage berichtet, beschiffte der heilige Markus", "genre": "verse", "period": "N.A.", "pub_year": 1815, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Einst, wie die Sage berichtet, beschiffte der heilige Markus", "tokens": ["Einst", ",", "wie", "die", "Sa\u00b7ge", "be\u00b7rich\u00b7tet", ",", "be\u00b7schiff\u00b7te", "der", "hei\u00b7li\u00b7ge", "Mar\u00b7kus"], "token_info": ["word", "punct", "word", "word", "word", "word", "punct", "word", "word", "word", "word"], "pos": ["ADV", "$,", "PWAV", "ART", "NN", "VVFIN", "$,", "VVFIN", "ART", "ADJA", "NE"], "meter": "+--+--+--+--+--+-", "measure": "hexameter"}, "line.2": {"text": "Diese Lagunen und ward hier von der Nacht \u00fcbereilt:", "tokens": ["Die\u00b7se", "La\u00b7gu\u00b7nen", "und", "ward", "hier", "von", "der", "Nacht", "\u00fc\u00b7be\u00b7reilt", ":"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PDAT", "NN", "KON", "VAFIN", "ADV", "APPR", "ART", "NN", "VVPP", "$."], "meter": "+--+--+-+-+--+", "measure": "dactylic.di.plus"}, "line.3": {"text": "Sieh, und es band sein Schiffchen an einen verlassenen Pfahl er", "tokens": ["Sieh", ",", "und", "es", "band", "sein", "Schiff\u00b7chen", "an", "ei\u00b7nen", "ver\u00b7las\u00b7se\u00b7nen", "Pfahl", "er"], "token_info": ["word", "punct", "word", "word", "word", "word", "word", "word", "word", "word", "word", "word"], "pos": ["NE", "$,", "KON", "PPER", "VVFIN", "PPOSAT", "NN", "APPR", "ART", "ADJA", "NN", "PPER"], "meter": "-+-+-+--+--+--+-", "measure": "iambic.hexa.relaxed"}, "line.4": {"text": "Fest und entschlief. Da erschien ihm der Gesandte des Herrn:", "tokens": ["Fest", "und", "ent\u00b7schlief", ".", "Da", "er\u00b7schien", "ihm", "der", "Ge\u00b7sand\u00b7te", "des", "Herrn", ":"], "