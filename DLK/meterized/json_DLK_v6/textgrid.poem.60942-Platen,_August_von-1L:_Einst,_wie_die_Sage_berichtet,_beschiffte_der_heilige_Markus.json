"von", "Mar\u00b7mor", "er\u00b7baut", ":"], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["VAFIN", "PRF", "APPR", "PPER", "VVINF", "$,", "ADJD", "KON", "APPR", "NN", "VVPP", "$."], "meter": "+-+-+-+--+--+", "measure": "trochaic.hexa.relaxed"}, "line.9": {"text": "Ihr sei Losungswort dein Name dereinst, es geziemt dir,", "tokens": ["Ihr", "sei", "Lo\u00b7sungs\u00b7wort", "dein", "Na\u00b7me", "de\u00b7reinst", ",", "es", "ge\u00b7ziemt", "dir", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["PPER", "VAFIN", "NN", "PPOSAT", "NN", "ADV", "$,", "PPER", "VVFIN", "PPER", "$,"], "meter": "-+-+-+-+-+--+-", "measure": "iambic.hexa.relaxed"}, "line.10": {"text": "Jener umfluteten Stadt Gonfaloniere zu sein!", "tokens": ["Je\u00b7ner", "um\u00b7flu\u00b7te\u00b7ten", "Stadt", "Gon\u00b7fa\u00b7lo\u00b7nie\u00b7re", "zu", "sein", "!"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["PDAT", "ADJA", "NN", "NE", "PTKZU", "VAINF", "$."], "meter": "+--+--++--+--+", "measure": "dactylic.di.plus"}}}}}