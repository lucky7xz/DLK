{"textgrid.poem.60736": {"metadata": {"author": {"name": "Platen, August von", "birth": "N.A.", "death": "N.A."}, "title": "Luca Signorelli", "genre": "verse", "period": "N.A.", "pub_year": 1830, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Die Abendstille kam herbei,", "tokens": ["Die", "A\u00b7bend\u00b7stil\u00b7le", "kam", "her\u00b7bei", ","], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VVFIN", "PTKVZ", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Der Meister folgt dem allgemeinen Triebe;", "tokens": ["Der", "Meis\u00b7ter", "folgt", "dem", "all\u00b7ge\u00b7mei\u00b7nen", "Trie\u00b7be", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VVFIN", "ART", "ADJA", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Verlassend seine Staffelei,", "tokens": ["Ver\u00b7las\u00b7send", "sei\u00b7ne", "Staf\u00b7fe\u00b7lei", ","], "token_info": ["word", "word", "word", "punct"], "pos": ["VVPP", "PPOSAT", "NN", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "Blickt er das Bild noch einmal an mit Liebe.", "tokens": ["Blickt", "er", "das", "Bild", "noch", "ein\u00b7mal", "an", "mit", "Lie\u00b7be", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "PPER", "ART", "NN", "ADV", "ADV", "APPR", "APPR", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}, "stanza.2": {"line.1": {"text": "Da pocht es voll Tumult am Haus,", "tokens": ["Da", "pocht", "es", "voll", "Tu\u00b7mult", "am", "Haus", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VVFIN", "PPER", "ADJD", "NN", "APPRART", "NN", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Und ehe Luca f\u00e4hig ist zu fragen,", "tokens": ["Und", "e\u00b7he", "Lu\u00b7ca", "f\u00e4\u00b7hig", "ist", "zu", "fra\u00b7gen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "KOUS", "NE", "ADJD", "VAFIN", "PTKZU", "VVINF", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Ruft einer seiner Sch\u00fcler aus:", "tokens": ["Ruft", "ei\u00b7ner", "sei\u00b7ner", "Sch\u00fc\u00b7ler", "aus", ":"], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "ART", "PPOSAT", "NN", "PTKVZ", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "Dein einziger Sohn, o Meister, ist erschlagen!", "tokens": ["Dein", "ein\u00b7zi\u00b7ger", "Sohn", ",", "o", "Meis\u00b7ter", ",", "ist", "er\u00b7schla\u00b7gen", "!"], "token_info": ["word", "word", "word", "punct", "word", "word", "punct", "word", "word", "punct"], "pos": ["PPOSAT", "ADJA", "NN", "$,", "FM", "NN", "$,", "VAFIN", "VVPP", "$."], "meter": "-+--+-+-+-+-", "measure": "iambic.penta.relaxed"}}, "stanza.3": {"line.1": {"text": "In holder Bl\u00fcte sank dahin", "tokens": ["In", "hol\u00b7der", "Bl\u00fc\u00b7te", "sank", "da\u00b7hin"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["APPR", "ADJA", "NN", "VVFIN", "PAV"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Der sch\u00f6nste J\u00fcngling, den die Welt erblickte:", "tokens": ["Der", "sch\u00f6ns\u00b7te", "J\u00fcng\u00b7ling", ",", "den", "die", "Welt", "er\u00b7blick\u00b7te", ":"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "$,", "PRELS", "ART", "NN", "VVFIN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Es war die Sch\u00f6nheit sein Ruin,", "tokens": ["Es", "war", "die", "Sch\u00f6n\u00b7heit", "sein", "Ru\u00b7in", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VAFIN", "ART", "NN", "PPOSAT", "NN", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "Die oft in Liebesh\u00e4ndel ihn verstrickte.", "tokens": ["Die", "oft", "in", "Lie\u00b7bes\u00b7h\u00e4n\u00b7del", "ihn", "ver\u00b7strick\u00b7te", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADV", "APPR", "NN", "PPER", "VVFIN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}, "stanza.4": {"line.1": {"text": "Vor eines Nebenbuhlers Kraft", "tokens": ["Vor", "ei\u00b7nes", "Ne\u00b7ben\u00b7buh\u00b7lers", "Kraft"], "token_info": ["word", "word", "word", "word"], "pos": ["APPR", "ART", "NN", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Sank er zu Boden, fast in unsrer Mitte;", "tokens": ["Sank", "er", "zu", "Bo\u00b7den", ",", "fast", "in", "uns\u00b7rer", "Mit\u00b7te", ";"], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "PPER", "APPR", "NN", "$,", "ADV", "APPR", "PPOSAT", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Ihn tr\u00e4gt bereits die Br\u00fcderschaft", "tokens": ["Ihn", "tr\u00e4gt", "be\u00b7reits", "die", "Br\u00fc\u00b7der\u00b7schaft"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["PPER", "VVFIN", "ADV", "ART", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "Zur Totenkirche, wie es heischt die Sitte.", "tokens": ["Zur", "To\u00b7ten\u00b7kir\u00b7che", ",", "wie", "es", "heischt", "die", "Sit\u00b7te", "."], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["APPRART", "NN", "$,", "PWAV", "PPER", "VVFIN", "ART", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}, "stanza.5": {"line.1": {"text": "Und Luca spricht: O mein Geschick!", "tokens": ["Und", "Lu\u00b7ca", "spricht", ":", "O", "mein", "Ge\u00b7schick", "!"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["KON", "NE", "VVFIN", "$.", "NE", "PPOSAT", "NN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "So lebt ich denn, so strebt ich denn vergebens?", "tokens": ["So", "lebt", "ich", "denn", ",", "so", "strebt", "ich", "denn", "ver\u00b7ge\u00b7bens", "?"], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VVFIN", "PPER", "ADV", "$,", "ADV", "VVFIN", "PPER", "ADV", "ADV", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Zunichte macht ein Augenblick", "tokens": ["Zu\u00b7nich\u00b7te", "macht", "ein", "Au\u00b7gen\u00b7blick"], "token_info": ["word", "word", "word", "word"], "pos": ["NN", "VVFIN", "ART", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "Die ganze Folge meines reichen Lebens!", "tokens": ["Die", "gan\u00b7ze", "Fol\u00b7ge", "mei\u00b7nes", "rei\u00b7chen", "Le\u00b7bens", "!"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "PPOSAT", "ADJA", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}, "stanza.6": {"line.1": {"text": "Was half es, da\u00df in Farb und Licht", "tokens": ["Was", "half", "es", ",", "da\u00df", "in", "Farb", "und", "Licht"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word", "word"], "pos": ["PWS", "VVFIN", "PPER", "$,", "KOUS", "APPR", "NN", "KON", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Als Meister ich Cortonas Volk entz\u00fcckte,", "tokens": ["Als", "Meis\u00b7ter", "ich", "Cor\u00b7to\u00b7nas", "Volk", "ent\u00b7z\u00fcck\u00b7te", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "NN", "PPER", "NE", "NN", "VVFIN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Mit meinem j\u00fcngsten Weltgericht", "tokens": ["Mit", "mei\u00b7nem", "j\u00fcng\u00b7sten", "Welt\u00b7ge\u00b7richt"], "token_info": ["word", "word", "word", "word"], "pos": ["APPR", "PPOSAT", "ADJA", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "Orvietos hohe Tempelhallen schm\u00fcckte?", "tokens": ["Or\u00b7vi\u00b7e\u00b7tos", "ho\u00b7he", "Tem\u00b7pel\u00b7hal\u00b7len", "schm\u00fcck\u00b7te", "?"], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["NE", "ADJA", "NN", "VVFIN", "$."], "meter": "+-+-+-+-+-+-", "measure": "trochaic.hexa"}}, "stanza.7": {"line.1": {"text": "Nicht Ruhm und nicht der Menschen Gunst", "tokens": ["Nicht", "Ruhm", "und", "nicht", "der", "Men\u00b7schen", "Gunst"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["PTKNEG", "NN", "KON", "PTKNEG", "ART", "NN", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Besch\u00fctzte mich und nicht des Geistes Feuer:", "tokens": ["Be\u00b7sch\u00fctz\u00b7te", "mich", "und", "nicht", "des", "Geis\u00b7tes", "Feu\u00b7er", ":"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "PPER", "KON", "PTKNEG", "ART", "NN", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Nun ruf ich erst, geliebte Kunst,", "tokens": ["Nun", "ruf", "ich", "erst", ",", "ge\u00b7lieb\u00b7te", "Kunst", ","], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "punct"], "pos": ["ADV", "VVFIN", "PPER", "ADV", "$,", "ADJA", "NN", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "Nun ruf ich dich, du warst mir nie so teuer!", "tokens": ["Nun", "ruf", "ich", "dich", ",", "du", "warst", "mir", "nie", "so", "teu\u00b7er", "!"], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VVFIN", "PPER", "PRF", "$,", "PPER", "VAFIN", "PPER", "ADV", "ADV", "ADJD", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}, "stanza.8": {"line.1": {"text": "Er spricht's, und seinen Schmerz verr\u00e4t", "tokens": ["Er", "spricht's", ",", "und", "sei\u00b7nen", "Schmerz", "ver\u00b7r\u00e4t"], "token_info": ["word", "word", "punct", "word", "word", "word", "word"], "pos": ["PPER", "VVFIN", "$,", "KON", "PPOSAT", "NN", "VVFIN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Kein andres Wort. Rasch eilt er zur Kapelle,", "tokens": ["Kein", "and\u00b7res", "Wort", ".", "Rasch", "eilt", "er", "zur", "Ka\u00b7pel\u00b7le", ","], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["PIAT", "ADJA", "NN", "$.", "NN", "VVFIN", "PPER", "APPRART", "NN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Indem er noch das Malger\u00e4t", "tokens": ["In\u00b7dem", "er", "noch", "das", "Mal\u00b7ge\u00b7r\u00e4t"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["KOUS", "PPER", "ADV", "ART", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "Den Sch\u00fclern reicht, und diese folgen schnelle.", "tokens": ["Den", "Sch\u00fc\u00b7lern", "reicht", ",", "und", "die\u00b7se", "fol\u00b7gen", "schnel\u00b7le", "."], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VVFIN", "$,", "KON", "PDS", "VVINF", "VVFIN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}, "stanza.9": {"line.1": {"text": "Zur Kirche tritt der Greis hinein,", "tokens": ["Zur", "Kir\u00b7che", "tritt", "der", "Greis", "hin\u00b7ein", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPRART", "NN", "VVFIN", "ART", "NN", "PTKVZ", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Wo seine Bilder ihm entgegentreten,", "tokens": ["Wo", "sei\u00b7ne", "Bil\u00b7der", "ihm", "ent\u00b7ge\u00b7gen\u00b7tre\u00b7ten", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PWAV", "PPOSAT", "NN", "PPER", "VVFIN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Und bei der ewigen Lampe Schein", "tokens": ["Und", "bei", "der", "e\u00b7wi\u00b7gen", "Lam\u00b7pe", "Schein"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["KON", "APPR", "ART", "ADJA", "NN", "NN"], "meter": "-+-+--+-+", "measure": "iambic.tetra.relaxed"}, "line.4": {"text": "Sieht er den Sohn, um den die M\u00f6nche beten.", "tokens": ["Sieht", "er", "den", "Sohn", ",", "um", "den", "die", "M\u00f6n\u00b7che", "be\u00b7ten", "."], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "PPER", "ART", "NN", "$,", "KOUI", "ART", "ART", "NN", "VVINF", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}, "stanza.10": {"line.1": {"text": "Nicht klagt er oder st\u00f6hnt und schreit,", "tokens": ["Nicht", "klagt", "er", "o\u00b7der", "st\u00f6hnt", "und", "schreit", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PTKNEG", "VVFIN", "PPER", "KON", "VVFIN", "KON", "ADJD", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Kein Seufzer wird zum leeren Spiel des Windes,", "tokens": ["Kein", "Seuf\u00b7zer", "wird", "zum", "lee\u00b7ren", "Spiel", "des", "Win\u00b7des", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PIAT", "NN", "VAFIN", "APPRART", "ADJA", "NN", "ART", "NN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Er setzt sich hin und konterfeit", "tokens": ["Er", "setzt", "sich", "hin", "und", "kon\u00b7ter\u00b7feit"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["PPER", "VVFIN", "PRF", "PTKVZ", "KON", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "Den sch\u00f6nen Leib des vielgeliebten Kindes.", "tokens": ["Den", "sch\u00f6\u00b7nen", "Leib", "des", "viel\u00b7ge\u00b7lieb\u00b7ten", "Kin\u00b7des", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "ART", "ADJA", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}, "stanza.11": {"line.1": {"text": "Und als er ihn so Zug f\u00fcr Zug", "tokens": ["Und", "als", "er", "ihn", "so", "Zug", "f\u00fcr", "Zug"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word"], "pos": ["KON", "KOUS", "PPER", "PPER", "ADV", "NN", "APPR", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Gebildet, spricht er gegen seine Knaben:", "tokens": ["Ge\u00b7bil\u00b7det", ",", "spricht", "er", "ge\u00b7gen", "sei\u00b7ne", "Kna\u00b7ben", ":"], "token_info": ["word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["VVPP", "$,", "VVFIN", "PPER", "APPR", "PPOSAT", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Der Morgen graut, es ist genug,", "tokens": ["Der", "Mor\u00b7gen", "graut", ",", "es", "ist", "ge\u00b7nug", ","], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VVFIN", "$,", "PPER", "VAFIN", "ADV", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "Die Priester m\u00f6gen meinen Sohn begraben.", "tokens": ["Die", "Pries\u00b7ter", "m\u00f6\u00b7gen", "mei\u00b7nen", "Sohn", "be\u00b7gra\u00b7ben", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VMFIN", "PPOSAT", "NN", "VVPP", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}}}}