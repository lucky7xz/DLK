{"dta.poem.19516": {"metadata": {"author": {"name": "Meyer, Conrad Ferdinand", "birth": "N.A.", "death": "N.A."}, "title": "Gespenster.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1882", "urn": "urn:nbn:de:kobv:b4-200905193933", "language": ["de:0.99"], "booktitle": "Meyer, Conrad Ferdinand: Gedichte. Leipzig, 1882."}, "poem": {"stanza.1": {"line.1": {"text": "Am Horizonte glomm des Abends Feuer;", "tokens": ["Am", "Ho\u00b7ri\u00b7zon\u00b7te", "glomm", "des", "A\u00b7bends", "Feu\u00b7er", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPRART", "NN", "VVFIN", "ART", "NN", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "Ich stieg, inde\u00df die Purpurglut verblich,", "tokens": ["Ich", "stieg", ",", "in\u00b7de\u00df", "die", "Pur\u00b7pur\u00b7glut", "ver\u00b7blich", ","], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "$,", "ADV", "ART", "NN", "ADJD", "$,"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.3": {"text": "Zum R\u00f6merthurm empor und lehnte mich", "tokens": ["Zum", "R\u00f6\u00b7mer\u00b7thurm", "em\u00b7por", "und", "lehn\u00b7te", "mich"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["APPRART", "NN", "PTKVZ", "KON", "VVFIN", "PPER"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.4": {"text": "Rand\u00fcber auf das dunkelnde Gem\u00e4uer \u2014", "tokens": ["Rand\u00b7\u00fc\u00b7ber", "auf", "das", "dun\u00b7keln\u00b7de", "Ge\u00b7m\u00e4u\u00b7er"], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["NN", "APPR", "ART", "ADJA", "NN", "$("], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}, "stanza.2": {"line.1": {"text": "Und sah, wie sich am Hange scheu und scheuer", "tokens": ["Und", "sah", ",", "wie", "sich", "am", "Han\u00b7ge", "scheu", "und", "scheu\u00b7er"], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "word", "word"], "pos": ["KON", "VVFIN", "$,", "PWAV", "PRF", "APPRART", "NN", "ADJD", "KON", "ADJA"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "Die Beerenleserin vor\u00fcberschlich.", "tokens": ["Die", "Bee\u00b7ren\u00b7le\u00b7se\u00b7rin", "vor\u00b7\u00fc\u00b7berschlich", "."], "token_info": ["word", "word", "word", "punct"], "pos": ["ART", "NN", "ADJD", "$."], "meter": "-+--+--+-", "measure": "amphibrach.tri"}, "line.3": {"text": "Das arme Weibchen dr\u00fcckt' und duckte sich,", "tokens": ["Das", "ar\u00b7me", "Weib\u00b7chen", "dr\u00fcckt'", "und", "duck\u00b7te", "sich", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "VVFIN", "KON", "VVFIN", "PRF", "$,"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.4": {"text": "Und schlug ein Kreuz: ihr war es nicht geheuer . . . .", "tokens": ["Und", "schlug", "ein", "Kreuz", ":", "ihr", "war", "es", "nicht", "ge\u00b7heu\u00b7er", ".", ".", ".", "."], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct", "punct", "punct", "punct"], "pos": ["KON", "VVFIN", "ART", "NN", "$.", "PPER", "VAFIN", "PPER", "PTKNEG", "ADJD", "$.", "$.", "$.", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}, "stanza.3": {"line.1": {"text": "Mich flog ein L\u00e4cheln an. Im Eppich neben", "tokens": ["Mich", "flog", "ein", "L\u00e4\u00b7cheln", "an", ".", "Im", "Ep\u00b7pich", "ne\u00b7ben"], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word"], "pos": ["PPER", "VVFIN", "ART", "NN", "PTKVZ", "$.", "APPRART", "NN", "APPR"], "meter": "-+-+-+-++--", "measure": "unknown.measure.penta"}, "line.2": {"text": "Der Br\u00fcstung fl\u00fcstert's: \u201eFreund, in deinem Leben", "tokens": ["Der", "Br\u00fcs\u00b7tung", "fl\u00fcs\u00b7tert's", ":", "\u201e", "Freund", ",", "in", "dei\u00b7nem", "Le\u00b7ben"], "token_info": ["word", "word", "word", "punct", "punct", "word", "punct", "word", "word", "word"], "pos": ["ART", "NN", "VVFIN", "$.", "$(", "NN", "$,", "APPR", "PPOSAT", "NN"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Ist auch ein Ort, wo die Gespenster schweben!", "tokens": ["Ist", "auch", "ein", "Ort", ",", "wo", "die", "Ge\u00b7spens\u00b7ter", "schwe\u00b7ben", "!"], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["VAFIN", "ADV", "ART", "NN", "$,", "PWAV", "ART", "NN", "VVINF", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}, "stanza.4": {"line.1": {"text": "F\u00fchrt dich Erinn'rung dem zerst\u00f6rten Ort", "tokens": ["F\u00fchrt", "dich", "Er\u00b7inn'\u00b7rung", "dem", "zer\u00b7st\u00f6r\u00b7ten", "Ort"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["VVFIN", "PPER", "NN", "ART", "ADJA", "NN"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.2": {"text": "Vorbei, du huschest noch geschwinder fort,", "tokens": ["Vor\u00b7bei", ",", "du", "hu\u00b7schest", "noch", "ge\u00b7schwin\u00b7der", "fort", ","], "token_info": ["word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "$,", "PPER", "VVFIN", "ADV", "ADJD", "PTKVZ", "$,"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.3": {"text": "Als das von Graun gepackte Weibchen dort.\u201c", "tokens": ["Als", "das", "von", "Graun", "ge\u00b7pack\u00b7te", "Weib\u00b7chen", "dort", ".", "\u201c"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct", "punct"], "pos": ["KOUS", "ART", "APPR", "NE", "ADJA", "NN", "ADV", "$.", "$("], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}}}}}