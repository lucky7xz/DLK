{"dta.poem.22792": {"metadata": {"author": {"name": "Silesius, Angelus", "birth": "N.A.", "death": "N.A."}, "title": "98. Von den Lilgen.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1657", "urn": "urn:nbn:de:kobv:b4-200905198292", "language": ["de:0.99"], "booktitle": "Silesius, Angelus: Geistreiche Sinn- vnd Schlussrime. Wien, 1657."}, "poem": {"stanza.1": {"line.1": {"text": "So offt ich Lilgen seh/ so offt empfind\u2019 ich Pein/", "tokens": ["So", "offt", "ich", "Lil\u00b7gen", "seh", "/", "so", "offt", "emp\u00b7find'", "ich", "Pein", "/"], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "ADV", "PPER", "NN", "VVFIN", "$(", "ADV", "ADV", "VVFIN", "PPER", "NN", "$("], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Und mu\u00df auch bald zugleich so offt voll Freuden seyn.", "tokens": ["Und", "mu\u00df", "auch", "bald", "zu\u00b7gleich", "so", "offt", "voll", "Freu\u00b7den", "seyn", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "VMFIN", "ADV", "ADV", "ADV", "ADV", "ADV", "ADJD", "NN", "VAINF", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.3": {"text": "Die Pein enstehet mir/ weil ich die Ziehr verlohren/", "tokens": ["Die", "Pein", "en\u00b7ste\u00b7het", "mir", "/", "weil", "ich", "die", "Ziehr", "ver\u00b7loh\u00b7ren", "/"], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VVFIN", "PPER", "$(", "KOUS", "PPER", "ART", "NN", "VVPP", "$("], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.4": {"text": "Die ich im Paradi\u00df von anbegin gehabt.", "tokens": ["Die", "ich", "im", "Pa\u00b7ra\u00b7di\u00df", "von", "an\u00b7be\u00b7gin", "ge\u00b7habt", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "PPER", "APPRART", "NN", "APPR", "NN", "VAPP", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.5": {"text": "Die Frewde kombt daher/ weil JEsus ist gebohren", "tokens": ["Die", "Frew\u00b7de", "kombt", "da\u00b7her", "/", "weil", "Je\u00b7sus", "ist", "ge\u00b7boh\u00b7ren"], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word"], "pos": ["ART", "NN", "VVFIN", "PAV", "$(", "KOUS", "NE", "VAFIN", "VVPP"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.6": {"text": "Der mich nu widerumb mit jhr aufs neu begabt.", "tokens": ["Der", "mich", "nu", "wi\u00b7de\u00b7rumb", "mit", "jhr", "aufs", "neu", "be\u00b7gabt", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "PPER", "ADV", "ADV", "APPR", "PPOSAT", "APPRART", "ADJD", "ADJD", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}}}}}