{"dta.poem.23467": {"metadata": {"author": {"name": "Hoffmann von Fallersleben, August Heinrich", "birth": "N.A.", "death": "N.A."}, "title": "Nahen des j\u00fcngsten Tages.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1841", "urn": "urn:nbn:de:kobv:b4-200905192634", "language": ["de:0.99"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "Nun wachet All'! Es naht der Tag,", "tokens": ["Nun", "wa\u00b7chet", "All'", "!", "Es", "naht", "der", "Tag", ","], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VVFIN", "PIS", "$.", "PPER", "VVFIN", "ART", "NN", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Vor dem die Welt erzittern mag,", "tokens": ["Vor", "dem", "die", "Welt", "er\u00b7zit\u00b7tern", "mag", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "ART", "ART", "NN", "VVINF", "VMFIN", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.3": {"text": "Die Christenheit, die Juden und die Heiden.", "tokens": ["Die", "Chris\u00b7ten\u00b7heit", ",", "die", "Ju\u00b7den", "und", "die", "Hei\u00b7den", "."], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "$,", "ART", "NN", "KON", "ART", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.4": {"text": "Viel Zeichen wurden ausgesandt,", "tokens": ["Viel", "Zei\u00b7chen", "wur\u00b7den", "aus\u00b7ge\u00b7sandt", ","], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["PIAT", "NN", "VAFIN", "VVPP", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.5": {"text": "Daran wir seine N\u00e4h' erkannt,", "tokens": ["Da\u00b7ran", "wir", "sei\u00b7ne", "N\u00e4h'", "er\u00b7kannt", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PAV", "PPER", "PPOSAT", "NN", "VVPP", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.6": {"text": "Wie uns die Schrift untr\u00fcglich kann bescheiden.", "tokens": ["Wie", "uns", "die", "Schrift", "un\u00b7tr\u00fcg\u00b7lich", "kann", "be\u00b7schei\u00b7den", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PWAV", "PPER", "ART", "NN", "ADJD", "VMFIN", "VVINF", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.7": {"text": "Die Sonne hat den Schein verkehret,", "tokens": ["Die", "Son\u00b7ne", "hat", "den", "Schein", "ver\u00b7keh\u00b7ret", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VAFIN", "ART", "NN", "VVFIN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.8": {"text": "Untreu' den Samen ausgeleeret", "tokens": ["Un\u00b7treu'", "den", "Sa\u00b7men", "aus\u00b7ge\u00b7lee\u00b7ret"], "token_info": ["word", "word", "word", "word"], "pos": ["APPR", "ART", "NN", "VVFIN"], "meter": "+--+-+-+-", "measure": "iambic.tetra.invert"}, "line.9": {"text": "Allw\u00e4rts \u00fcber Feld und Rain.", "tokens": ["All\u00b7w\u00e4rts", "\u00fc\u00b7ber", "Feld", "und", "Rain", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "APPR", "NN", "KON", "NN", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.10": {"text": "Der Vater bei dem Kind Untreue findet,", "tokens": ["Der", "Va\u00b7ter", "bei", "dem", "Kind", "Un\u00b7treu\u00b7e", "fin\u00b7det", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "APPR", "ART", "NN", "NN", "VVFIN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.11": {"text": "Der Bruder seinem Bruder l\u00fcget,", "tokens": ["Der", "Bru\u00b7der", "sei\u00b7nem", "Bru\u00b7der", "l\u00fc\u00b7get", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "PPOSAT", "NN", "VVFIN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.12": {"text": "Die Geistlichkeit in Kutten tr\u00fcget,", "tokens": ["Die", "Geist\u00b7lich\u00b7keit", "in", "Kut\u00b7ten", "tr\u00fc\u00b7get", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "APPR", "NN", "VVFIN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.13": {"text": "Statt Gott der Menschen Herz zu weihn.", "tokens": ["Statt", "Gott", "der", "Men\u00b7schen", "Herz", "zu", "weihn", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["NN", "NN", "ART", "NN", "NN", "PTKZU", "VVINF", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.14": {"text": "Gewalt siegt ob, des Rechtes Ansehn schwindet:", "tokens": ["Ge\u00b7walt", "siegt", "ob", ",", "des", "Rech\u00b7tes", "An\u00b7sehn", "schwin\u00b7det", ":"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["NN", "VVFIN", "KOUS", "$,", "ART", "ADJA", "NN", "VVFIN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.15": {"text": "Wohlauf! hier frommt nicht m\u00fcssig sein.", "tokens": ["Wohl\u00b7auf", "!", "hier", "frommt", "nicht", "m\u00fcs\u00b7sig", "sein", "."], "token_info": ["word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "$.", "ADV", "VVFIN", "PTKNEG", "ADJD", "VAINF", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}}}}}