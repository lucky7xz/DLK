{"dta.poem.23459": {"metadata": {"author": {"name": "Hoffmann von Fallersleben, August Heinrich", "birth": "N.A.", "death": "N.A."}, "title": "Geheime Fonds.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1841", "urn": "urn:nbn:de:kobv:b4-200905192634", "language": ["de:0.99"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "Wozu dienen die geheimen Summen?", "tokens": ["Wo\u00b7zu", "die\u00b7nen", "die", "ge\u00b7hei\u00b7men", "Sum\u00b7men", "?"], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PWAV", "VVFIN", "ART", "ADJA", "NN", "$."], "meter": "+-+-+-+-+-", "measure": "trochaic.penta"}, "line.2": {"text": "F\u00fcr die Maul- und Herzensperr' allein:", "tokens": ["F\u00fcr", "die", "Maul", "und", "Her\u00b7zen\u00b7sperr'", "al\u00b7lein", ":"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "ART", "TRUNC", "KON", "NN", "ADV", "$."], "meter": "+-+-+-+-+", "measure": "trochaic.penta"}, "line.3": {"text": "Schweigen soll das Volk, es soll verstummen,", "tokens": ["Schwei\u00b7gen", "soll", "das", "Volk", ",", "es", "soll", "ver\u00b7stum\u00b7men", ","], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["NN", "VMFIN", "ART", "NN", "$,", "PPER", "VMFIN", "VVINF", "$,"], "meter": "+-+-+-+-+-", "measure": "trochaic.penta"}, "line.4": {"text": "Niemals denken, nur gehorsam sein.", "tokens": ["Nie\u00b7mals", "den\u00b7ken", ",", "nur", "ge\u00b7hor\u00b7sam", "sein", "."], "token_info": ["word", "word", "punct", "word", "word", "word", "punct"], "pos": ["ADV", "VVINF", "$,", "ADV", "ADJD", "VAINF", "$."], "meter": "+-+-+-+-+", "measure": "trochaic.penta"}, "line.5": {"text": "Schweigt dann das Volk, so sagt man gleich warum:", "tokens": ["Schweigt", "dann", "das", "Volk", ",", "so", "sagt", "man", "gleich", "wa\u00b7rum", ":"], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "ADV", "ART", "NN", "$,", "ADV", "VVFIN", "PIS", "ADV", "PWAV", "$."], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.6": {"text": "Alles wahre Erdengl\u00fcck ist immer stumm.", "tokens": ["Al\u00b7les", "wah\u00b7re", "Er\u00b7den\u00b7gl\u00fcck", "ist", "im\u00b7mer", "stumm", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["PIAT", "ADJA", "NN", "VAFIN", "ADV", "ADJD", "$."], "meter": "+-+-+-+-+-+", "measure": "trochaic.hexa"}}, "stanza.2": {"line.1": {"text": "Millionen gute brave Christen", "tokens": ["Mil\u00b7lion\u00b7en", "gu\u00b7te", "bra\u00b7ve", "Chris\u00b7ten"], "token_info": ["word", "word", "word", "word"], "pos": ["NN", "ADJA", "ADJA", "NN"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.2": {"text": "Schweigen, weil es Einem so gef\u00e4llt,", "tokens": ["Schwei\u00b7gen", ",", "weil", "es", "Ei\u00b7nem", "so", "ge\u00b7f\u00e4llt", ","], "token_info": ["word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["NN", "$,", "KOUS", "PPER", "PIS", "ADV", "VVPP", "$,"], "meter": "+-+-+-+-+", "measure": "trochaic.penta"}, "line.3": {"text": "Ihm allein und seinen Polizisten,", "tokens": ["Ihm", "al\u00b7lein", "und", "sei\u00b7nen", "Po\u00b7li\u00b7zis\u00b7ten", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "ADV", "KON", "PPOSAT", "NN", "$,"], "meter": "+-+-+-+-+-", "measure": "trochaic.penta"}, "line.4": {"text": "Die er nur um seinetwillen h\u00e4lt.", "tokens": ["Die", "er", "nur", "um", "sei\u00b7net\u00b7wil\u00b7len", "h\u00e4lt", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "PPER", "ADV", "APPR", "ADV", "VVFIN", "$."], "meter": "+-+-+-+-+", "measure": "trochaic.penta"}, "line.5": {"text": "Millionen, wagt's und sprechet frei!", "tokens": ["Mil\u00b7lion\u00b7en", ",", "wagt's", "und", "spre\u00b7chet", "frei", "!"], "token_info": ["word", "punct", "word", "word", "word", "word", "punct"], "pos": ["NN", "$,", "VVFIN", "KON", "VVFIN", "PTKVZ", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.6": {"text": "Ihr verdienet Millionen noch dabei.", "tokens": ["Ihr", "ver\u00b7die\u00b7net", "Mil\u00b7lion\u00b7en", "noch", "da\u00b7bei", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "NN", "ADV", "PAV", "$."], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}}}}}