{"dta.poem.23564": {"metadata": {"author": {"name": "Hoffmann von Fallersleben, August Heinrich", "birth": "N.A.", "death": "N.A."}, "title": "Die theologischen Daguerrotype.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1840", "urn": "urn:nbn:de:kobv:b4-200905192626", "language": ["de:0.99"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "Ihr wollt im Licht und in der Wahrheit leben,", "tokens": ["Ihr", "wollt", "im", "Licht", "und", "in", "der", "Wahr\u00b7heit", "le\u00b7ben", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VMFIN", "APPRART", "NN", "KON", "APPR", "ART", "NN", "VVINF", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "Auf Licht und Klarheit geht nur euer Streben;", "tokens": ["Auf", "Licht", "und", "Klar\u00b7heit", "geht", "nur", "eu\u00b7er", "Stre\u00b7ben", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "NN", "KON", "NN", "VVFIN", "ADV", "PPOSAT", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Licht soll das Wesen aller Dinge sein,", "tokens": ["Licht", "soll", "das", "We\u00b7sen", "al\u00b7ler", "Din\u00b7ge", "sein", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["NN", "VMFIN", "ART", "NN", "PIAT", "NN", "VAINF", "$,"], "meter": "+--+-+-+-+", "measure": "iambic.penta.invert"}, "line.4": {"text": "Und alles andre ist euch Trug und Schein.", "tokens": ["Und", "al\u00b7les", "and\u00b7re", "ist", "euch", "Trug", "und", "Schein", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "PIS", "PIS", "VAFIN", "PPER", "NN", "KON", "NN", "$."], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}}, "stanza.2": {"line.1": {"text": "Ihr seid in eures Geistes voller Klarheit", "tokens": ["Ihr", "seid", "in", "eu\u00b7res", "Geis\u00b7tes", "vol\u00b7ler", "Klar\u00b7heit"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["PPER", "VAFIN", "APPR", "PPOSAT", "NN", "ADJA", "NN"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "Ein Lichtbild nur, ihr seid nur halbe Wahrheit:", "tokens": ["Ein", "Licht\u00b7bild", "nur", ",", "ihr", "seid", "nur", "hal\u00b7be", "Wahr\u00b7heit", ":"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "ADV", "$,", "PPER", "VAFIN", "ADV", "ADJA", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Licht ist Verstand, und Farbe das Gem\u00fcth \u2014", "tokens": ["Licht", "ist", "Ver\u00b7stand", ",", "und", "Far\u00b7be", "das", "Ge\u00b7m\u00fcth"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["NN", "VAFIN", "NN", "$,", "KON", "NN", "ART", "NN", "$("], "meter": "++-+-+-+-+", "measure": "iambic.penta.spondeus"}, "line.4": {"text": "Euch fehlt worin das Leben erst erbl\u00fcht.", "tokens": ["Euch", "fehlt", "wo\u00b7rin", "das", "Le\u00b7ben", "erst", "er\u00b7bl\u00fcht", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "PWAV", "ART", "NN", "ADV", "VVPP", "$."], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}}}}}