{"dta.poem.6497": {"metadata": {"author": {"name": "Brockes, Barthold Heinrich", "birth": "N.A.", "death": "N.A."}, "title": "Von dem Licht.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1730", "urn": "urn:nbn:de:kobv:b4-20087-5", "language": ["de:0.99"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "Auf! auf! ihr forschenden Gedancken,", "tokens": ["Auf", "!", "auf", "!", "ihr", "for\u00b7schen\u00b7den", "Ge\u00b7dan\u00b7cken", ","], "token_info": ["word", "punct", "word", "punct", "word", "word", "word", "punct"], "pos": ["APPR", "$.", "PTKVZ", "$.", "PPOSAT", "ADJA", "NN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.2": {"text": "W\u00e4hlt itzt weit edlere, weit gr\u00f6ssre Schrancken.", "tokens": ["W\u00e4hlt", "itzt", "weit", "ed\u00b7le\u00b7re", ",", "weit", "gr\u00f6ss\u00b7re", "Schran\u00b7cken", "."], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["VVFIN", "ADV", "ADJD", "ADJA", "$,", "ADJD", "ADJA", "NN", "$."], "meter": "+-+---++-+-", "measure": "unknown.measure.penta"}, "line.3": {"text": "Bestrebet euch, und sucht die Wahrheit", "tokens": ["Be\u00b7stre\u00b7bet", "euch", ",", "und", "sucht", "die", "Wahr\u00b7heit"], "token_info": ["word", "word", "punct", "word", "word", "word", "word"], "pos": ["VVFIN", "PPER", "$,", "KON", "VVFIN", "ART", "NN"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.4": {"text": "In der gl\u00fcckseel\u2019gen Klarheit,", "tokens": ["In", "der", "gl\u00fcck\u00b7seel'\u00b7gen", "Klar\u00b7heit", ","], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["APPR", "ART", "ADJA", "NN", "$,"], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.5": {"text": "Auf nehmt zu eurem Zweck des Lichtes Schein,", "tokens": ["Auf", "nehmt", "zu", "eu\u00b7rem", "Zweck", "des", "Lich\u00b7tes", "Schein", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "VVFIN", "APPR", "PPOSAT", "NN", "ART", "ADJA", "NN", "$,"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.6": {"text": "Das weniger ein Stoff und C\u00f6rper scheint zu seyn,", "tokens": ["Das", "we\u00b7ni\u00b7ger", "ein", "Stoff", "und", "C\u00f6r\u00b7per", "scheint", "zu", "seyn", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PDS", "ADV", "ART", "NN", "KON", "NN", "VVFIN", "PTKZU", "VAINF", "$,"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.7": {"text": "Als wie ein Geist, der unsrer Erden Pracht", "tokens": ["Als", "wie", "ein", "Geist", ",", "der", "uns\u00b7rer", "Er\u00b7den", "Pracht"], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word"], "pos": ["KOUS", "KOKOM", "ART", "NN", "$,", "PRELS", "PPOSAT", "NN", "NN"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.8": {"text": "Beseelet und lebendig macht.", "tokens": ["Be\u00b7see\u00b7let", "und", "le\u00b7ben\u00b7dig", "macht", "."], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["VVFIN", "KON", "ADJD", "VVFIN", "$."], "meter": "-+--++-+", "measure": "iambic.tetra.relaxed"}, "line.9": {"text": "Ein Glantz der Welt, ein Neitz der Augen,", "tokens": ["Ein", "Glantz", "der", "Welt", ",", "ein", "Neitz", "der", "Au\u00b7gen", ","], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "ART", "NN", "$,", "ART", "NN", "ART", "NN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.10": {"text": "Den unsre Augen selbst, wenn sie durch ihn entz\u00fcckt,", "tokens": ["Den", "uns\u00b7re", "Au\u00b7gen", "selbst", ",", "wenn", "sie", "durch", "ihn", "ent\u00b7z\u00fcckt", ","], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "PPOSAT", "NN", "ADV", "$,", "KOUS", "PPER", "APPR", "PPER", "VVPP", "$,"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.11": {"text": "Nicht einsten zu erkennen taugen,", "tokens": ["Nicht", "eins\u00b7ten", "zu", "er\u00b7ken\u00b7nen", "tau\u00b7gen", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PTKNEG", "VVINF", "PTKZU", "VVINF", "VVFIN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.12": {"text": "Auch dann, wenn alles wird allein dadurch erblickt.", "tokens": ["Auch", "dann", ",", "wenn", "al\u00b7les", "wird", "al\u00b7lein", "da\u00b7durch", "er\u00b7blickt", "."], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "ADV", "$,", "KOUS", "PIS", "VAFIN", "ADV", "PAV", "VVPP", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.13": {"text": "Wie gl\u00fccklich h\u00e4tten wir gedacht,", "tokens": ["Wie", "gl\u00fcck\u00b7lich", "h\u00e4t\u00b7ten", "wir", "ge\u00b7dacht", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PWAV", "ADJD", "VAFIN", "PPER", "VVPP", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.14": {"text": "Wann seine helle Wunder-Pracht", "tokens": ["Wann", "sei\u00b7ne", "hel\u00b7le", "Wun\u00b7der\u00b7Pracht"], "token_info": ["word", "word", "word", "word"], "pos": ["PWAV", "PPOSAT", "ADJA", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.15": {"text": "Den Geist, durch das, so wir itzt auf Papier gebracht,", "tokens": ["Den", "Geist", ",", "durch", "das", ",", "so", "wir", "itzt", "auf", "Pa\u00b7pier", "ge\u00b7bracht", ","], "token_info": ["word", "word", "punct", "word", "word", "punct", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "$,", "APPR", "PDS", "$,", "ADV", "PPER", "ADV", "APPR", "NN", "VVPP", "$,"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.16": {"text": "W\u00e4r\u2019 etwas deutlicher gemacht!", "tokens": ["W\u00e4r'", "et\u00b7was", "deut\u00b7li\u00b7cher", "ge\u00b7macht", "!"], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["VAFIN", "ADV", "ADJD", "VVPP", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}}}}}