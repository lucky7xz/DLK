{"textgrid.poem.42098": {"metadata": {"author": {"name": "Weissmann, Maria Luise", "birth": "N.A.", "death": "N.A."}, "title": "Der Einsiedler", "genre": "verse", "period": "N.A.", "pub_year": 1914, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Er hatte seit Jahren nicht mehr ges\u00e4t", "tokens": ["Er", "hat\u00b7te", "seit", "Jah\u00b7ren", "nicht", "mehr", "ge\u00b7s\u00e4t"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["PPER", "VAFIN", "APPR", "NN", "PTKNEG", "ADV", "VVPP"], "meter": "-+--+--+-+", "measure": "amphibrach.tri.plus"}, "line.2": {"text": "Verstreut noch reifte ihm das Getreide", "tokens": ["Ver\u00b7streut", "noch", "reif\u00b7te", "ihm", "das", "Ge\u00b7trei\u00b7de"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["VVFIN", "ADV", "VVFIN", "PPER", "ART", "NN"], "meter": "-+-+--+-+-", "measure": "iambic.tetra.relaxed"}, "line.3": {"text": "Zuletzt lie\u00df er den Hafer ungem\u00e4ht", "tokens": ["Zu\u00b7letzt", "lie\u00df", "er", "den", "Ha\u00b7fer", "un\u00b7ge\u00b7m\u00e4ht"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["ADV", "VVFIN", "PPER", "ART", "NN", "ADJD"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.4": {"text": "Sein Pferd verlor sich auf der Weide.", "tokens": ["Sein", "Pferd", "ver\u00b7lor", "sich", "auf", "der", "Wei\u00b7de", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPOSAT", "NN", "VVFIN", "PRF", "APPR", "ART", "NN", "$."], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}}, "stanza.2": {"line.1": {"text": "Er brach eine Zeit noch Beeren vom Ast", "tokens": ["Er", "brach", "ei\u00b7ne", "Zeit", "noch", "Bee\u00b7ren", "vom", "Ast"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word"], "pos": ["PPER", "VVFIN", "ART", "NN", "ADV", "NN", "APPRART", "NN"], "meter": "-+--+-+--+", "measure": "iambic.tetra.relaxed"}, "line.2": {"text": "Als m\u00fc\u00dfte er einen Hunger stillen,", "tokens": ["Als", "m\u00fc\u00df\u00b7te", "er", "ei\u00b7nen", "Hun\u00b7ger", "stil\u00b7len", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "VMFIN", "PPER", "ART", "NN", "VVINF", "$,"], "meter": "-+--+-+-+-", "measure": "iambic.tetra.relaxed"}, "line.3": {"text": "Dann verga\u00df er auch diese letzte Last", "tokens": ["Dann", "ver\u00b7ga\u00df", "er", "auch", "die\u00b7se", "letz\u00b7te", "Last"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["ADV", "VVFIN", "PPER", "ADV", "PDAT", "ADJA", "NN"], "meter": "--+--+-+-+", "measure": "anapaest.di.plus"}, "line.4": {"text": "Um seiner tieferen Ruhe willen.", "tokens": ["Um", "sei\u00b7ner", "tie\u00b7fe\u00b7ren", "Ru\u00b7he", "wil\u00b7len", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["KOUI", "PPOSAT", "ADJA", "NN", "NN", "$."], "meter": "-+-+--+-+-", "measure": "iambic.tetra.relaxed"}}, "stanza.3": {"line.1": {"text": "Er sa\u00df vor der H\u00fctte bei Tag und Nacht", "tokens": ["Er", "sa\u00df", "vor", "der", "H\u00fct\u00b7te", "bei", "Tag", "und", "Nacht"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word"], "pos": ["PPER", "VVFIN", "APPR", "ART", "NN", "APPR", "NN", "KON", "NN"], "meter": "-+--+--+-+", "measure": "amphibrach.tri.plus"}, "line.2": {"text": "Die H\u00fctte verfiel in Wind und Regen", "tokens": ["Die", "H\u00fct\u00b7te", "ver\u00b7fiel", "in", "Wind", "und", "Re\u00b7gen"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["ART", "NN", "VVFIN", "APPR", "NN", "KON", "NN"], "meter": "-+--+-+-+-", "measure": "iambic.tetra.relaxed"}, "line.3": {"text": "Allm\u00e4hlich wuchsen die Gr\u00e4ser sacht", "tokens": ["All\u00b7m\u00e4h\u00b7lich", "wuch\u00b7sen", "die", "Gr\u00e4\u00b7ser", "sacht"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["ADJD", "VVFIN", "ART", "NN", "VVFIN"], "meter": "-+-+--+-+", "measure": "iambic.tetra.relaxed"}, "line.4": {"text": "Seinen F\u00fc\u00dfen und Knien entgegen", "tokens": ["Sei\u00b7nen", "F\u00fc\u00b7\u00dfen", "und", "Kni\u00b7en", "ent\u00b7ge\u00b7gen"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["PPOSAT", "NN", "KON", "NN", "PTKVZ"], "meter": "+-+--+--+-", "measure": "trochaic.tetra.relaxed"}}, "stanza.4": {"line.1": {"text": "Und wuchsen langsam durch seine Hand.", "tokens": ["Und", "wuch\u00b7sen", "lang\u00b7sam", "durch", "sei\u00b7ne", "Hand", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "VVFIN", "ADJD", "APPR", "PPOSAT", "NN", "$."], "meter": "-+-+--+-+", "measure": "iambic.tetra.relaxed"}, "line.2": {"text": "Er ward wie ein Sieb, ohne Au\u00dfen und Innen.", "tokens": ["Er", "ward", "wie", "ein", "Sieb", ",", "oh\u00b7ne", "Au\u00b7\u00dfen", "und", "In\u00b7nen", "."], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VAFIN", "KOKOM", "ART", "NN", "$,", "KOUI", "NN", "KON", "NN", "$."], "meter": "-+--+--+--+-", "measure": "amphibrach.tetra"}, "line.3": {"text": "Gleichm\u00e4\u00dfig und ganz ohne Widerstand", "tokens": ["Gleich\u00b7m\u00e4\u00b7\u00dfig", "und", "ganz", "oh\u00b7ne", "Wi\u00b7der\u00b7stand"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["ADJD", "KON", "ADV", "APPR", "NN"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.4": {"text": "Konnten die Jahre durch ihn rinnen.", "tokens": ["Konn\u00b7ten", "die", "Jah\u00b7re", "durch", "ihn", "rin\u00b7nen", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["VMFIN", "ART", "NN", "APPR", "PPER", "VVINF", "$."], "meter": "+--+-+-+-", "measure": "iambic.tetra.invert"}}}}}