{"textgrid.poem.26515": {"metadata": {"author": {"name": "Saar, Ferdinand von", "birth": "N.A.", "death": "N.A."}, "title": "1L: Ich kenne einen Menschen, der als Anachoret,", "genre": "verse", "period": "N.A.", "pub_year": 1869, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Ich kenne einen Menschen, der als Anachoret,", "tokens": ["Ich", "ken\u00b7ne", "ei\u00b7nen", "Men\u00b7schen", ",", "der", "als", "A\u00b7nac\u00b7ho\u00b7ret", ","], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "ART", "NN", "$,", "PRELS", "KOUS", "NN", "$,"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Wie einst die heil'gen B\u00fc\u00dfer, auf hoher S\u00e4ule steht.", "tokens": ["Wie", "einst", "die", "heil'\u00b7gen", "B\u00fc\u00b7\u00dfer", ",", "auf", "ho\u00b7her", "S\u00e4u\u00b7le", "steht", "."], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["PWAV", "ADV", "ART", "ADJA", "NN", "$,", "APPR", "ADJA", "NN", "VVFIN", "$."], "meter": "-+-+-+--+-+-+", "measure": "iambic.hexa.relaxed"}}, "stanza.2": {"line.1": {"text": "Im Sommer brennt hernieder versengend hei\u00dfer Strahl,", "tokens": ["Im", "Som\u00b7mer", "brennt", "her\u00b7nie\u00b7der", "ver\u00b7sen\u00b7gend", "hei\u00b7\u00dfer", "Strahl", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPRART", "NN", "VVFIN", "ADV", "ADJD", "ADJA", "NN", "$,"], "meter": "-+-+-+--+-+-+", "measure": "iambic.hexa.relaxed"}, "line.2": {"text": "Im Winter mu\u00df er dulden des Frostes starre Qual.", "tokens": ["Im", "Win\u00b7ter", "mu\u00df", "er", "dul\u00b7den", "des", "Fros\u00b7tes", "star\u00b7re", "Qual", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPRART", "NN", "VMFIN", "PPER", "VVINF", "ART", "ADJA", "ADJA", "NN", "$."], "meter": "-+-+-+--+-+-+", "measure": "iambic.hexa.relaxed"}}, "stanza.3": {"line.1": {"text": "Der Glieder freies Regen, es ist ihm, ach, verwehrt;", "tokens": ["Der", "Glie\u00b7der", "frei\u00b7es", "Re\u00b7gen", ",", "es", "ist", "ihm", ",", "ach", ",", "ver\u00b7wehrt", ";"], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "punct", "word", "punct", "word", "punct"], "pos": ["ART", "NN", "ADJA", "NN", "$,", "PPER", "VAFIN", "PPER", "$,", "ITJ", "$,", "VVPP", "$."], "meter": "-+-+-+--+-+-+", "measure": "iambic.hexa.relaxed"}, "line.2": {"text": "Von Ferne mu\u00df er schauen, was tief sein Herz begehrt.", "tokens": ["Von", "Fer\u00b7ne", "mu\u00df", "er", "schau\u00b7en", ",", "was", "tief", "sein", "Herz", "be\u00b7gehrt", "."], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "NN", "VMFIN", "PPER", "VVINF", "$,", "PRELS", "ADJD", "PPOSAT", "NN", "VVPP", "$."], "meter": "-+-+-+--+-+-+", "measure": "iambic.hexa.relaxed"}}, "stanza.4": {"line.1": {"text": "Stumm geht die Welt vor\u00fcber und reicht ihm k\u00fchl hinan,", "tokens": ["Stumm", "geht", "die", "Welt", "vor\u00b7\u00fc\u00b7ber", "und", "reicht", "ihm", "k\u00fchl", "hi\u00b7nan", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADJD", "VVFIN", "ART", "NN", "PTKVZ", "KON", "VVFIN", "PPER", "ADJD", "PTKVZ", "$,"], "meter": "-+-+-+--+-+-+", "measure": "iambic.hexa.relaxed"}, "line.2": {"text": "Was seine Pein verl\u00e4ngern, doch sie nicht lindern kann.", "tokens": ["Was", "sei\u00b7ne", "Pein", "ver\u00b7l\u00e4n\u00b7gern", ",", "doch", "sie", "nicht", "lin\u00b7dern", "kann", "."], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["PWS", "PPOSAT", "NN", "VVINF", "$,", "KON", "PPER", "PTKNEG", "VVINF", "VMFIN", "$."], "meter": "-+-+-+--+-+-+", "measure": "iambic.hexa.relaxed"}}, "stanza.5": {"line.1": {"text": "So steht er viele Jahre \u2013 gern st\u00fcrzt er sich hinab,", "tokens": ["So", "steht", "er", "vie\u00b7le", "Jah\u00b7re", "\u2013", "gern", "st\u00fcrzt", "er", "sich", "hin\u00b7ab", ","], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VVFIN", "PPER", "PIAT", "NN", "$(", "ADV", "VVFIN", "PPER", "PRF", "PTKVZ", "$,"], "meter": "-+-+-+--+-+-+", "measure": "iambic.hexa.relaxed"}, "line.2": {"text": "Doch schaudert ihm noch immer vor'm Sprung in's tiefe Grab.", "tokens": ["Doch", "schau\u00b7dert", "ihm", "noch", "im\u00b7mer", "vor'm", "Sprung", "in's", "tie\u00b7fe", "Grab", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "VVFIN", "PPER", "ADV", "ADV", "APPRART", "NN", "APPRART", "ADJA", "NN", "$."], "meter": "-+--+-+-+-+-+", "measure": "iambic.hexa.relaxed"}}, "stanza.6": {"line.1": {"text": "Man wird ihn seh'n dort oben, bis einst sein Hauch entwich:", "tokens": ["Man", "wird", "ihn", "seh'n", "dort", "o\u00b7ben", ",", "bis", "einst", "sein", "Hauch", "ent\u00b7wich", ":"], "token_info": ["word", "word", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["PIS", "VAFIN", "PPER", "VVFIN", "ADV", "ADV", "$,", "KOUS", "ADV", "PPOSAT", "NN", "ADJD", "$."], "meter": "-+-+-+--+-+-+", "measure": "iambic.hexa.relaxed"}, "line.2": {"text": "Die S\u00e4ule ist das Leben \u2013 der Mensch jedoch bin ich.", "tokens": ["Die", "S\u00e4u\u00b7le", "ist", "das", "Le\u00b7ben", "\u2013", "der", "Mensch", "je\u00b7doch", "bin", "ich", "."], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VAFIN", "ART", "NN", "$(", "ART", "NN", "ADV", "VAFIN", "PPER", "$."], "meter": "-+-+-+--++-+-", "measure": "iambic.hexa.relaxed"}}}}}