{"dta.poem.895": {"metadata": {"author": {"name": "Trakl, Georg", "birth": "N.A.", "death": "N.A."}, "title": "Zu ABEND MEIN HERZ", "genre": "Lyrik", "period": "N.A.", "pub_year": "1913", "urn": "urn:nbn:de:kobv:b4-30357-9", "language": ["de:0.99"], "booktitle": "Trakl, Georg: Gedichte. Leipzig, 1913."}, "poem": {"stanza.1": {"line.1": {"text": "Am Abend h\u00f6rt man den Schrei der Flederm\u00e4use.", "tokens": ["Am", "A\u00b7bend", "h\u00f6rt", "man", "den", "Schrei", "der", "Fle\u00b7der\u00b7m\u00e4u\u00b7se", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPRART", "NN", "VVFIN", "PIS", "ART", "NN", "ART", "NN", "$."], "meter": "-+-+--+-+-+-", "measure": "iambic.penta.relaxed"}, "line.2": {"text": "Zwei Rappen springen auf der Wiese.", "tokens": ["Zwei", "Rap\u00b7pen", "sprin\u00b7gen", "auf", "der", "Wie\u00b7se", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["CARD", "NN", "VVFIN", "APPR", "ART", "NN", "$."], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.3": {"text": "Der rote Ahorn rauscht.", "tokens": ["Der", "ro\u00b7te", "A\u00b7horn", "rauscht", "."], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "VVFIN", "$."], "meter": "-+-+-+", "measure": "iambic.tri"}, "line.4": {"text": "Dem Wanderer erscheint die kleine Schenke am Weg.", "tokens": ["Dem", "Wan\u00b7de\u00b7rer", "er\u00b7scheint", "die", "klei\u00b7ne", "Schen\u00b7ke", "am", "Weg", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VVFIN", "ART", "ADJA", "NN", "APPRART", "NN", "$."], "meter": "-+-+-+-+-+--+", "measure": "iambic.hexa.chol.strict"}, "line.5": {"text": "Herrlich schmecken junger Wein und N\u00fcsse.", "tokens": ["Herr\u00b7lich", "schme\u00b7cken", "jun\u00b7ger", "Wein", "und", "N\u00fcs\u00b7se", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADJD", "VVFIN", "ADJA", "NN", "KON", "NN", "$."], "meter": "+-+-+-+-+-", "measure": "trochaic.penta"}, "line.6": {"text": "Herrlich: betrunken zu taumeln in d\u00e4mmernden Wald.", "tokens": ["Herr\u00b7lich", ":", "be\u00b7trun\u00b7ken", "zu", "tau\u00b7meln", "in", "d\u00e4m\u00b7mern\u00b7den", "Wald", "."], "token_info": ["word", "punct", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADJD", "$.", "ADJD", "PTKZU", "VVINF", "APPR", "ADJA", "NN", "$."], "meter": "+--+--+--+--+", "measure": "dactylic.penta"}, "line.7": {"text": "Durch schwarzes Ge\u00e4st t\u00f6nen schmerzliche Glocken.", "tokens": ["Durch", "schwar\u00b7zes", "Ge\u00b7\u00e4st", "t\u00f6\u00b7nen", "schmerz\u00b7li\u00b7che", "Glo\u00b7cken", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "ADJA", "NN", "ADJA", "ADJA", "NN", "$."], "meter": "-+--+--+--+-", "measure": "amphibrach.tetra"}, "line.8": {"text": "Auf das Gesicht tropft Tau.", "tokens": ["Auf", "das", "Ge\u00b7sicht", "tropft", "Tau", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "ART", "NN", "VVFIN", "NN", "$."], "meter": "+--+-+", "measure": "iambic.tri.invert"}}}}}