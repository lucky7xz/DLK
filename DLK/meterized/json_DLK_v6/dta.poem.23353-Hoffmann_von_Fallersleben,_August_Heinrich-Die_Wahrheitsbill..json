{"dta.poem.23353": {"metadata": {"author": {"name": "Hoffmann von Fallersleben, August Heinrich", "birth": "N.A.", "death": "N.A."}, "title": "Die Wahrheitsbill.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1841", "urn": "urn:nbn:de:kobv:b4-200905192634", "language": ["de:0.99"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "Es geschah in alten Tagen,", "tokens": ["Es", "ge\u00b7schah", "in", "al\u00b7ten", "Ta\u00b7gen", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "APPR", "ADJA", "NN", "$,"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.2": {"text": "Da\u00df der liebe Gott befahl:", "tokens": ["Da\u00df", "der", "lie\u00b7be", "Gott", "be\u00b7fahl", ":"], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "ART", "ADJA", "NN", "VVFIN", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.3": {"text": "\u201ewer nicht will die Wahrheit sagen,", "tokens": ["\u201e", "wer", "nicht", "will", "die", "Wahr\u00b7heit", "sa\u00b7gen", ","], "token_info": ["punct", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["$(", "PWS", "PTKNEG", "VMFIN", "ART", "NN", "VVINF", "$,"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.4": {"text": "Wird ein Stottrer allzumal.\u201c", "tokens": ["Wird", "ein", "Stott\u00b7rer", "all\u00b7zu\u00b7mal", ".", "\u201c"], "token_info": ["word", "word", "word", "word", "punct", "punct"], "pos": ["VAFIN", "ART", "NN", "ADV", "$.", "$("], "meter": "+-+-+-+", "measure": "trochaic.tetra"}}, "stanza.2": {"line.1": {"text": "Wie bei Greisen, M\u00e4nnern, Buben", "tokens": ["Wie", "bei", "Grei\u00b7sen", ",", "M\u00e4n\u00b7nern", ",", "Bu\u00b7ben"], "token_info": ["word", "word", "word", "punct", "word", "punct", "word"], "pos": ["PWAV", "APPR", "NE", "$,", "NN", "$,", "NN"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.2": {"text": "Da die Stotterei begann!", "tokens": ["Da", "die", "Stot\u00b7te\u00b7rei", "be\u00b7gann", "!"], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["KOUS", "ART", "NN", "VVFIN", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.3": {"text": "Auch die Officianten huben", "tokens": ["Auch", "die", "Of\u00b7fi\u00b7ci\u00b7an\u00b7ten", "hu\u00b7ben"], "token_info": ["word", "word", "word", "word"], "pos": ["ADV", "ART", "NN", "VVINF"], "meter": "+-+--+-+-", "measure": "trochaic.tetra.relaxed"}, "line.4": {"text": "Alle gleich zu stottern an.", "tokens": ["Al\u00b7le", "gleich", "zu", "stot\u00b7tern", "an", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PIS", "ADV", "PTKA", "ADJD", "PTKVZ", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}}, "stanza.3": {"line.1": {"text": "Als nun Gott der Herr gesehen,", "tokens": ["Als", "nun", "Gott", "der", "Herr", "ge\u00b7se\u00b7hen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "ADV", "NN", "ART", "NN", "VVPP", "$,"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.2": {"text": "Da\u00df der Mensch zur Wahrheit will", "tokens": ["Da\u00df", "der", "Mensch", "zur", "Wahr\u00b7heit", "will"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["KOUS", "ART", "NN", "APPRART", "NN", "VMFIN"], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.3": {"text": "Schlechterdings sich nicht verstehen,", "tokens": ["Schlech\u00b7ter\u00b7dings", "sich", "nicht", "ver\u00b7ste\u00b7hen", ","], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["NE", "PRF", "PTKNEG", "VVINF", "$,"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.4": {"text": "Hob er auf die strenge Bill.", "tokens": ["Hob", "er", "auf", "die", "stren\u00b7ge", "Bill", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "PPER", "APPR", "ART", "ADJA", "NN", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}}, "stanza.4": {"line.1": {"text": "Und so stottern auch noch lange", "tokens": ["Und", "so", "stot\u00b7tern", "auch", "noch", "lan\u00b7ge"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["KON", "ADV", "VVFIN", "ADV", "ADV", "ADV"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.2": {"text": "Unsre Officianten nicht,", "tokens": ["Uns\u00b7re", "Of\u00b7fi\u00b7ci\u00b7an\u00b7ten", "nicht", ","], "token_info": ["word", "word", "word", "punct"], "pos": ["PPOSAT", "NN", "PTKNEG", "$,"], "meter": "+-+--+-+", "measure": "glykoneus"}, "line.3": {"text": "Doch weil ihnen davor bange,", "tokens": ["Doch", "weil", "ih\u00b7nen", "da\u00b7vor", "ban\u00b7ge", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["KON", "KOUS", "PPER", "PAV", "ADJD", "$,"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.4": {"text": "Geben schriftlich sie Bericht.", "tokens": ["Ge\u00b7ben", "schrift\u00b7lich", "sie", "Be\u00b7richt", "."], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["NN", "ADJD", "PPER", "NN", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}}}}}