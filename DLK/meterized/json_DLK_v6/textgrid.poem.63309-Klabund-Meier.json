{"textgrid.poem.63309": {"metadata": {"author": {"name": "Klabund", "birth": "N.A.", "death": "N.A."}, "title": "Meier", "genre": "verse", "period": "N.A.", "pub_year": 1909, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Ein junger Mann mit Namen Meier", "tokens": ["Ein", "jun\u00b7ger", "Mann", "mit", "Na\u00b7men", "Mei\u00b7er"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["ART", "ADJA", "NN", "APPR", "NN", "NN"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.2": {"text": "Lief t\u00e4glich vor ihr auf und ab.", "tokens": ["Lief", "t\u00e4g\u00b7lich", "vor", "ihr", "auf", "und", "ab", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "ADJD", "APPR", "PPER", "PTKVZ", "KON", "PTKVZ", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.3": {"text": "Er gab ihr f\u00fcnfundzwanzig Dreier,", "tokens": ["Er", "gab", "ihr", "f\u00fcn\u00b7fund\u00b7zwan\u00b7zig", "Drei\u00b7er", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "PPER", "CARD", "NN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.4": {"text": "Da\u00df sie ihm ihre Liebe gab.", "tokens": ["Da\u00df", "sie", "ihm", "ih\u00b7re", "Lie\u00b7be", "gab", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "PPER", "PPER", "PPOSAT", "NN", "VVFIN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}}, "stanza.2": {"line.1": {"text": "Sie z\u00e4hlte sehr besorgt die Pfennige", "tokens": ["Sie", "z\u00e4hl\u00b7te", "sehr", "be\u00b7sorgt", "die", "Pfen\u00b7ni\u00b7ge"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["PPER", "VVFIN", "ADV", "ADJD", "ART", "NN"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.2": {"text": "Und legte sie in einen Schrank.", "tokens": ["Und", "leg\u00b7te", "sie", "in", "ei\u00b7nen", "Schrank", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "VVFIN", "PPER", "APPR", "ART", "NN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.3": {"text": "Allein es schienen ihr zu wenige,", "tokens": ["Al\u00b7lein", "es", "schie\u00b7nen", "ihr", "zu", "we\u00b7ni\u00b7ge", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "PPER", "VVFIN", "PPER", "APPR", "PIS", "$,"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.4": {"text": "Sie w\u00fcnschte etwas Silber mang.", "tokens": ["Sie", "w\u00fcnschte", "et\u00b7was", "Sil\u00b7ber", "mang", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "PIAT", "NN", "VVFIN", "$."], "meter": "-+--+-+", "measure": "iambic.tri.relaxed"}}, "stanza.3": {"line.1": {"text": "Er dachte an die Ladenkasse.", "tokens": ["Er", "dach\u00b7te", "an", "die", "La\u00b7den\u00b7kas\u00b7se", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "APPR", "ART", "NN", "$."], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.2": {"text": "Und eines Tages ward bekannt,", "tokens": ["Und", "ei\u00b7nes", "Ta\u00b7ges", "ward", "be\u00b7kannt", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["KON", "ART", "NN", "VAFIN", "ADJD", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.3": {"text": "Da\u00df Rosa sich betreffs befasse,", "tokens": ["Da\u00df", "Ro\u00b7sa", "sich", "be\u00b7treffs", "be\u00b7fas\u00b7se", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "NE", "PRF", "NE", "VVFIN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.4": {"text": "Doch Meier sich in Haft befand.", "tokens": ["Doch", "Mei\u00b7er", "sich", "in", "Haft", "be\u00b7fand", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "PPER", "PRF", "APPR", "NN", "VVFIN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}}, "stanza.4": {"line.1": {"text": "So geht es in der Welt zuweilen:", "tokens": ["So", "geht", "es", "in", "der", "Welt", "zu\u00b7wei\u00b7len", ":"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VVFIN", "PPER", "APPR", "ART", "NN", "VVINF", "$."], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.2": {"text": "Der erste mu\u00df die Klinke zieh'n \u2013", "tokens": ["Der", "ers\u00b7te", "mu\u00df", "die", "Klin\u00b7ke", "zieh'n", "\u2013"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "VMFIN", "ART", "NN", "VVFIN", "$("], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.3": {"text": "Der zweite soll sich nur beeilen,", "tokens": ["Der", "zwei\u00b7te", "soll", "sich", "nur", "be\u00b7ei\u00b7len", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "VMFIN", "PRF", "ADV", "VVINF", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.4": {"text": "Das Fr\u00e4ulein wartet schon auf ihn.", "tokens": ["Das", "Fr\u00e4u\u00b7lein", "war\u00b7tet", "schon", "auf", "ihn", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VVFIN", "ADV", "APPR", "PPER", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}}}}}