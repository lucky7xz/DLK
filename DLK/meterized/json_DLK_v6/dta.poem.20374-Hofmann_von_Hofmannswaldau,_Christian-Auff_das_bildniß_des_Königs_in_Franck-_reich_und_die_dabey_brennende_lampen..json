{"dta.poem.20374": {"metadata": {"author": {"name": "Hofmann von Hofmannswaldau, Christian", "birth": "N.A.", "death": "N.A."}, "title": "Auff das bildni\u00df des K\u00f6nigs in Franck-  \n reich/ und die dabey brennende lampen.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1695", "urn": "urn:nbn:de:kobv:b4-200905197751", "language": ["de:0.85", "id:0.14"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "Es sah einst ein soldat des k\u00f6nigs bildni\u00df an/", "tokens": ["Es", "sah", "einst", "ein", "sol\u00b7dat", "des", "k\u00f6\u00b7nigs", "bild\u00b7ni\u00df", "an", "/"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "ADV", "ART", "NN", "ART", "ADJA", "NN", "PTKVZ", "$("], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Auff dem die schmeichler ihn so hoch heraus gestrichen.", "tokens": ["Auff", "dem", "die", "schmeich\u00b7ler", "ihn", "so", "hoch", "he\u00b7raus", "ge\u00b7stri\u00b7chen", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "ART", "ART", "ADJA", "PPER", "ADV", "ADJD", "ADV", "VVPP", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.3": {"text": "Er merckt\u2019 und schalt zugleich den thorheits-vollen wahn/", "tokens": ["Er", "mer\u00b7ckt'", "und", "schalt", "zu\u00b7gleich", "den", "thor\u00b7heits\u00b7vol\u00b7len", "wahn", "/"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "KON", "VVFIN", "ADV", "ART", "ADJA", "NN", "$("], "meter": "+-+-+-+-+-+-+", "measure": "trochaic.septa"}, "line.4": {"text": "Da\u00df Ludwig durch und durch der sonne war verglichen.", "tokens": ["Da\u00df", "Lud\u00b7wig", "durch", "und", "durch", "der", "son\u00b7ne", "war", "ver\u00b7gli\u00b7chen", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "NE", "APPR", "KON", "APPR", "ART", "NN", "VAFIN", "VVPP", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.5": {"text": "Und endlich sah\u2019 er auch der lampen hellen schein/", "tokens": ["Und", "end\u00b7lich", "sah'", "er", "auch", "der", "lam\u00b7pen", "hel\u00b7len", "schein", "/"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "ADV", "VVFIN", "PPER", "ADV", "ART", "NN", "ADJA", "NN", "$("], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.6": {"text": "Die um die s\u00e4ule stehn: Ha! sprach er/ voller lachen/", "tokens": ["Die", "um", "die", "s\u00e4u\u00b7le", "stehn", ":", "Ha", "!", "sprach", "er", "/", "vol\u00b7ler", "la\u00b7chen", "/"], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "punct", "word", "word", "punct", "word", "word", "punct"], "pos": ["ART", "APPR", "ART", "NN", "VVINF", "$.", "ITJ", "$.", "VVFIN", "PPER", "$(", "ADJA", "VVINF", "$("], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.7": {"text": "Wenn unser k\u00f6nig ja will eine sonne seyn/", "tokens": ["Wenn", "un\u00b7ser", "k\u00f6\u00b7nig", "ja", "will", "ei\u00b7ne", "son\u00b7ne", "seyn", "/"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "PPOSAT", "ADJD", "ADV", "VMFIN", "ART", "NN", "VAINF", "$("], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.8": {"text": "Was soll die sonne denn bey den laternen machen?", "tokens": ["Was", "soll", "die", "son\u00b7ne", "denn", "bey", "den", "la\u00b7ter\u00b7nen", "ma\u00b7chen", "?"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PWS", "VMFIN", "ART", "NN", "KON", "APPR", "ART", "ADJA", "VVINF", "$."], "meter": "-+-+--+-+--+-", "measure": "iambic.penta.relaxed"}}}}}