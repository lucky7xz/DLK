{"dta.poem.2938": {"metadata": {"author": {"name": "R\u00fcckert, Friedrich", "birth": "N.A.", "death": "N.A."}, "title": "137.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1838", "urn": "urn:nbn:de:kobv:b4-200905195108", "language": ["de:0.99"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "Wenn sich ein Lehrer m\u00fcht, um etwas dir begreiflich", "tokens": ["Wenn", "sich", "ein", "Leh\u00b7rer", "m\u00fcht", ",", "um", "et\u00b7was", "dir", "be\u00b7greif\u00b7lich"], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word", "word"], "pos": ["KOUS", "PRF", "ART", "NN", "VVFIN", "$,", "KOUI", "ADV", "PPER", "ADJD"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Zu machen durch Beweis, erw\u00e4gst du alles reiflich;", "tokens": ["Zu", "ma\u00b7chen", "durch", "Be\u00b7weis", ",", "er\u00b7w\u00e4gst", "du", "al\u00b7les", "reif\u00b7lich", ";"], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["PTKZU", "VVINF", "APPR", "NN", "$,", "VVFIN", "PPER", "PIS", "ADJD", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}}, "stanza.2": {"line.1": {"text": "Auf der Gedankenfart suchst du ihm nachzuschiffen,", "tokens": ["Auf", "der", "Ge\u00b7dan\u00b7ken\u00b7fart", "suchst", "du", "ihm", "nach\u00b7zu\u00b7schif\u00b7fen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "ART", "NN", "VVFIN", "PPER", "PPER", "VVIZU", "$,"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Und endlich glaubest du, du habest es begriffen.", "tokens": ["Und", "end\u00b7lich", "glau\u00b7best", "du", ",", "du", "ha\u00b7best", "es", "be\u00b7grif\u00b7fen", "."], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["KON", "ADV", "VVFIN", "PPER", "$,", "PPER", "VAFIN", "PPER", "VVPP", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}}, "stanza.3": {"line.1": {"text": "Hast du die Sache dann begriffen? Nur die Art", "tokens": ["Hast", "du", "die", "Sa\u00b7che", "dann", "be\u00b7grif\u00b7fen", "?", "Nur", "die", "Art"], "token_info": ["word", "word", "word", "word", "word", "word", "punct", "word", "word", "word"], "pos": ["VAFIN", "PPER", "ART", "NN", "ADV", "VVPP", "$.", "ADV", "ART", "NN"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Hast du begriffen, wie der Lehrer sie gewahrt;", "tokens": ["Hast", "du", "be\u00b7grif\u00b7fen", ",", "wie", "der", "Leh\u00b7rer", "sie", "ge\u00b7wahrt", ";"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["VAFIN", "PPER", "VVPP", "$,", "PWAV", "ART", "NN", "PPER", "VVPP", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}}, "stanza.4": {"line.1": {"text": "Bis dir begreiflich wird, da\u00df, um sie zu gewahren", "tokens": ["Bis", "dir", "be\u00b7greif\u00b7lich", "wird", ",", "da\u00df", ",", "um", "sie", "zu", "ge\u00b7wah\u00b7ren"], "token_info": ["word", "word", "word", "word", "punct", "word", "punct", "word", "word", "word", "word"], "pos": ["APPR", "PPER", "ADJD", "VAFIN", "$,", "KOUS", "$,", "KOUI", "PPER", "PTKZU", "VVINF"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Auf deine Art, du selbst ganz anders mu\u00dft verfahren.", "tokens": ["Auf", "dei\u00b7ne", "Art", ",", "du", "selbst", "ganz", "an\u00b7ders", "mu\u00dft", "ver\u00b7fah\u00b7ren", "."], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "PPOSAT", "NN", "$,", "PPER", "ADV", "ADV", "ADV", "VMFIN", "VVINF", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}}}}}