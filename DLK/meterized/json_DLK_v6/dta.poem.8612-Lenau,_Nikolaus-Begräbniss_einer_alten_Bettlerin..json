{"dta.poem.8612": {"metadata": {"author": {"name": "Lenau, Nikolaus", "birth": "N.A.", "death": "N.A."}, "title": "Begr\u00e4bniss einer alten Bettlerin.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1832", "urn": "urn:nbn:de:kobv:b4-200905193572", "language": ["de:0.99"], "booktitle": "Lenau, Nikolaus: Gedichte. Stuttgart, 1832."}, "poem": {"stanza.1": {"line.1": {"text": "Vier M\u00e4nner dort, in schwarzem Kleid,", "tokens": ["Vier", "M\u00e4n\u00b7ner", "dort", ",", "in", "schwar\u00b7zem", "Kleid", ","], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["CARD", "NN", "ADV", "$,", "APPR", "ADJA", "NN", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Die tragen auf der Bahre,", "tokens": ["Die", "tra\u00b7gen", "auf", "der", "Bah\u00b7re", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PDS", "VVFIN", "APPR", "ART", "NN", "$,"], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.3": {"text": "Lasttr\u00e4ger, ohne Lust und Leid,", "tokens": ["Last\u00b7tr\u00e4\u00b7ger", ",", "oh\u00b7ne", "Lust", "und", "Leid", ","], "token_info": ["word", "punct", "word", "word", "word", "word", "punct"], "pos": ["NE", "$,", "KOUI", "NN", "KON", "NN", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "Des Todes kalte Waare.", "tokens": ["Des", "To\u00b7des", "kal\u00b7te", "Waa\u00b7re", "."], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "ADJA", "NN", "$."], "meter": "-+-+-+-", "measure": "iambic.tri"}}, "stanza.2": {"line.1": {"text": "Sie eilen mit dem todten Leib", "tokens": ["Sie", "ei\u00b7len", "mit", "dem", "tod\u00b7ten", "Leib"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["PPER", "VVFIN", "APPR", "ART", "ADJA", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Hinaus zum Ort der Ruhe.", "tokens": ["Hin\u00b7aus", "zum", "Ort", "der", "Ru\u00b7he", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "APPRART", "NN", "ART", "NN", "$."], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.3": {"text": "Schlaf wohl, du armes Bettelweib,", "tokens": ["Schlaf", "wohl", ",", "du", "ar\u00b7mes", "Bet\u00b7tel\u00b7weib", ","], "token_info": ["word", "word", "punct", "word", "word", "word", "punct"], "pos": ["NN", "ADV", "$,", "PPER", "ADJA", "NN", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "In deiner morschen Truhe.", "tokens": ["In", "dei\u00b7ner", "mor\u00b7schen", "Tru\u00b7he", "."], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["APPR", "PPOSAT", "ADJA", "NN", "$."], "meter": "-+-+-+-", "measure": "iambic.tri"}}, "stanza.3": {"line.1": {"text": "Dir folgt kein Mensch zum Glockenklang", "tokens": ["Dir", "folgt", "kein", "Mensch", "zum", "Glo\u00b7cken\u00b7klang"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["PPER", "VVFIN", "PIAT", "NN", "APPRART", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Mit weinenden Geberden;", "tokens": ["Mit", "wei\u00b7nen\u00b7den", "Ge\u00b7ber\u00b7den", ";"], "token_info": ["word", "word", "word", "punct"], "pos": ["APPR", "ADJA", "NN", "$."], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.3": {"text": "Die Noth nur blieb dir treu, so lang", "tokens": ["Die", "Noth", "nur", "blieb", "dir", "treu", ",", "so", "lang"], "token_info": ["word", "word", "word", "word", "word", "word", "punct", "word", "word"], "pos": ["ART", "NN", "ADV", "VVFIN", "PPER", "ADJD", "$,", "ADV", "ADJD"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "Von dir noch was auf Erden.", "tokens": ["Von", "dir", "noch", "was", "auf", "Er\u00b7den", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "PPER", "ADV", "PWS", "APPR", "NN", "$."], "meter": "-+-+-+-", "measure": "iambic.tri"}}, "stanza.4": {"line.1": {"text": "Dir gab der Menschen schn\u00f6der Geiz", "tokens": ["Dir", "gab", "der", "Men\u00b7schen", "schn\u00f6\u00b7der", "Geiz"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["PPER", "VVFIN", "ART", "NN", "ADJA", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Ein Leichentuch, zerfetzet,", "tokens": ["Ein", "Lei\u00b7chen\u00b7tuch", ",", "zer\u00b7fet\u00b7zet", ","], "token_info": ["word", "word", "punct", "word", "punct"], "pos": ["ART", "NN", "$,", "VVFIN", "$,"], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.3": {"text": "Hat ein verst\u00fcmmelt Christuskreuz", "tokens": ["Hat", "ein", "ver\u00b7st\u00fcm\u00b7melt", "Chris\u00b7tus\u00b7kreuz"], "token_info": ["word", "word", "word", "word"], "pos": ["VAFIN", "ART", "VVPP", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "Dir auf den Sarg gesetzet;", "tokens": ["Dir", "auf", "den", "Sarg", "ge\u00b7set\u00b7zet", ";"], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "APPR", "ART", "NN", "VVPP", "$."], "meter": "-+-+-+-", "measure": "iambic.tri"}}, "stanza.5": {"line.1": {"text": "Doch kr\u00e4nkt dich nicht der bittre Spott", "tokens": ["Doch", "kr\u00e4nkt", "dich", "nicht", "der", "bitt\u00b7re", "Spott"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["KON", "VVFIN", "PPER", "PTKNEG", "ART", "ADJA", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "In deinem tiefen Frieden,", "tokens": ["In", "dei\u00b7nem", "tie\u00b7fen", "Frie\u00b7den", ","], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["APPR", "PPOSAT", "ADJA", "NN", "$,"], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.3": {"text": "Da\u00df man selbst einen schlechtern Gott", "tokens": ["Da\u00df", "man", "selbst", "ei\u00b7nen", "schlech\u00b7tern", "Gott"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["KOUS", "PIS", "ADV", "ART", "ADJA", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "Dir auf den Weg beschieden.", "tokens": ["Dir", "auf", "den", "Weg", "be\u00b7schie\u00b7den", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "APPR", "ART", "NN", "VVPP", "$."], "meter": "-+-+-+-", "measure": "iambic.tri"}}, "stanza.6": {"line.1": {"text": "Einst bl\u00fchtest du im Jugendglanz,", "tokens": ["Einst", "bl\u00fch\u00b7test", "du", "im", "Ju\u00b7gend\u00b7glanz", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VVFIN", "PPER", "APPRART", "NN", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Vom ganzen Dorf gepriesen", "tokens": ["Vom", "gan\u00b7zen", "Dorf", "ge\u00b7prie\u00b7sen"], "token_info": ["word", "word", "word", "word"], "pos": ["APPRART", "ADJA", "NN", "VVPP"], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.3": {"text": "Die sch\u00f6nste Maid am Erntetanz", "tokens": ["Die", "sch\u00f6ns\u00b7te", "Maid", "am", "Ern\u00b7te\u00b7tanz"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["ART", "ADJA", "NN", "APPRART", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "Dort unten auf der Wiesen.", "tokens": ["Dort", "un\u00b7ten", "auf", "der", "Wie\u00b7sen", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "ADV", "APPR", "ART", "NN", "$."], "meter": "-+-+-+-", "measure": "iambic.tri"}}, "stanza.7": {"line.1": {"text": "Folgt keiner dir der Bursche nach,", "tokens": ["Folgt", "kei\u00b7ner", "dir", "der", "Bur\u00b7sche", "nach", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "PIS", "PPER", "ART", "NN", "PTKVZ", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Die dort mit dir gesprungen?", "tokens": ["Die", "dort", "mit", "dir", "ge\u00b7sprun\u00b7gen", "?"], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADV", "APPR", "PPER", "VVPP", "$."], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.3": {"text": "Wohl l\u00e4ngst die muntre Fidel brach,", "tokens": ["Wohl", "l\u00e4ngst", "die", "mun\u00b7tre", "Fi\u00b7del", "brach", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "ADV", "ART", "ADJA", "NN", "VVFIN", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "Die dort so hell geklungen!", "tokens": ["Die", "dort", "so", "hell", "ge\u00b7klun\u00b7gen", "!"], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADV", "ADV", "ADJD", "VVPP", "$."], "meter": "-+-+-+-", "measure": "iambic.tri"}}}}}