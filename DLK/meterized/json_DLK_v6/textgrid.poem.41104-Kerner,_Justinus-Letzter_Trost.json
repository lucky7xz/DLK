{"textgrid.poem.41104": {"metadata": {"author": {"name": "Kerner, Justinus", "birth": "N.A.", "death": "N.A."}, "title": "Letzter Trost", "genre": "verse", "period": "N.A.", "pub_year": 1824, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Wenn im Sarg der letzte Freund,", "tokens": ["Wenn", "im", "Sarg", "der", "letz\u00b7te", "Freund", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "APPRART", "NN", "ART", "ADJA", "NN", "$,"], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.2": {"text": "Wenn das letzte Herz nicht mehr,", "tokens": ["Wenn", "das", "letz\u00b7te", "Herz", "nicht", "mehr", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "ART", "ADJA", "NN", "PTKNEG", "ADV", "$,"], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.3": {"text": "Das mit dir es gut gemeint,", "tokens": ["Das", "mit", "dir", "es", "gut", "ge\u00b7meint", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["PDS", "APPR", "PPER", "PPER", "ADJD", "VVPP", "$,"], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.4": {"text": "Klage nicht, o Herz! so sehr!", "tokens": ["Kla\u00b7ge", "nicht", ",", "o", "Herz", "!", "so", "sehr", "!"], "token_info": ["word", "word", "punct", "word", "word", "punct", "word", "word", "punct"], "pos": ["NN", "PTKNEG", "$,", "FM", "NN", "$.", "ADV", "ADV", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}}, "stanza.2": {"line.1": {"text": "Denn wenn so die Welt dir tot,", "tokens": ["Denn", "wenn", "so", "die", "Welt", "dir", "tot", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "KOUS", "ADV", "ART", "NN", "PPER", "ADJD", "$,"], "meter": "-+--+-+", "measure": "iambic.tri.relaxed"}, "line.2": {"text": "Einsam ganz dein Pilgerlauf,", "tokens": ["Ein\u00b7sam", "ganz", "dein", "Pil\u00b7ger\u00b7lauf", ","], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["ADJD", "ADV", "PPOSAT", "NN", "$,"], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.3": {"text": "Baut sich dir im Morgenrot", "tokens": ["Baut", "sich", "dir", "im", "Mor\u00b7gen\u00b7rot"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["VVFIN", "PRF", "PPER", "APPRART", "NN"], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.4": {"text": "Eine neue Heimat auf.", "tokens": ["Ei\u00b7ne", "neu\u00b7e", "Hei\u00b7mat", "auf", "."], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "PTKVZ", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}}, "stanza.3": {"line.1": {"text": "Sehnsucht nur ist dann dein Schmerz", "tokens": ["Sehn\u00b7sucht", "nur", "ist", "dann", "dein", "Schmerz"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["VVFIN", "ADV", "VAFIN", "ADV", "PPOSAT", "NN"], "meter": "+---+-+", "measure": "dactylic.init"}, "line.2": {"text": "Nach der neuen Heimat Licht,", "tokens": ["Nach", "der", "neu\u00b7en", "Hei\u00b7mat", "Licht", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "ART", "ADJA", "NN", "NN", "$,"], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.3": {"text": "Bis auch dir, verla\u00dfnes Herz!", "tokens": ["Bis", "auch", "dir", ",", "ver\u00b7la\u00df\u00b7nes", "Herz", "!"], "token_info": ["word", "word", "word", "punct", "word", "word", "punct"], "pos": ["APPR", "ADV", "PPER", "$,", "ADJA", "NN", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.4": {"text": "Deine Haft der Tod zerbricht.", "tokens": ["Dei\u00b7ne", "Haft", "der", "Tod", "zer\u00b7bricht", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PPOSAT", "NN", "ART", "NN", "VVFIN", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}}}}}