{"dta.poem.20026": {"metadata": {"author": {"name": "Kerner, Justinus", "birth": "N.A.", "death": "N.A."}, "title": "Letzter Trost .", "genre": "Lyrik", "period": "N.A.", "pub_year": "1826", "urn": "urn:nbn:de:kobv:b4-200905193111", "language": ["de:0.99"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "Die kleinen Lieder, die dem Herzen", "tokens": ["Die", "klei\u00b7nen", "Lie\u00b7der", ",", "die", "dem", "Her\u00b7zen"], "token_info": ["word", "word", "word", "punct", "word", "word", "word"], "pos": ["ART", "ADJA", "NN", "$,", "PRELS", "ART", "NN"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.2": {"text": "Entspringen mit dem Thr\u00e4nenquell,", "tokens": ["Ent\u00b7sprin\u00b7gen", "mit", "dem", "Thr\u00e4\u00b7nen\u00b7quell", ","], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["NN", "APPR", "ART", "NN", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.3": {"text": "Sterne der Thr\u00e4nen mild und hell,", "tokens": ["Ster\u00b7ne", "der", "Thr\u00e4\u00b7nen", "mild", "und", "hell", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["NN", "ART", "NN", "ADJD", "KON", "ADJD", "$,"], "meter": "+--+-+-+", "measure": "iambic.tetra.invert"}, "line.4": {"text": "Geben noch Lind'rung meinen Schmerzen,", "tokens": ["Ge\u00b7ben", "noch", "Lin\u00b7d'\u00b7rung", "mei\u00b7nen", "Schmer\u00b7zen", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["NN", "ADV", "NN", "PPOSAT", "NN", "$,"], "meter": "+--++-+-+-", "measure": "dactylic.init"}, "line.5": {"text": "Schimmern durch meine N\u00e4chte hell.", "tokens": ["Schim\u00b7mern", "durch", "mei\u00b7ne", "N\u00e4ch\u00b7te", "hell", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["NN", "APPR", "PPOSAT", "NN", "ADJD", "$."], "meter": "+--+-+-+", "measure": "iambic.tetra.invert"}}, "stanza.2": {"line.1": {"text": "Auch diesen Born seh ich bald trocken,", "tokens": ["Auch", "die\u00b7sen", "Born", "seh", "ich", "bald", "tro\u00b7cken", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "PDAT", "NN", "VVFIN", "PPER", "ADV", "ADJD", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.2": {"text": "Kalt und erstorben bald den Blick,", "tokens": ["Kalt", "und", "ers\u00b7tor\u00b7ben", "bald", "den", "Blick", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["NN", "KON", "VVFIN", "ADV", "ART", "NN", "$,"], "meter": "+-++-+-+", "measure": "unknown.measure.penta"}, "line.3": {"text": "So Lied als Thr\u00e4ne bleibt zur\u00fcck,", "tokens": ["So", "Lied", "als", "Thr\u00e4\u00b7ne", "bleibt", "zu\u00b7r\u00fcck", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "NN", "KOUS", "NN", "VVFIN", "PTKVZ", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "Im Herzen, dessen Pulse stocken,", "tokens": ["Im", "Her\u00b7zen", ",", "des\u00b7sen", "Pul\u00b7se", "sto\u00b7cken", ","], "token_info": ["word", "word", "punct", "word", "word", "word", "punct"], "pos": ["APPRART", "NN", "$,", "PRELAT", "NN", "VVINF", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.5": {"text": "Und todt ist auch das letzte Gl\u00fcck.", "tokens": ["Und", "todt", "ist", "auch", "das", "letz\u00b7te", "Gl\u00fcck", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "ADJD", "VAFIN", "ADV", "ART", "ADJA", "NN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}}, "stanza.3": {"line.1": {"text": "Grabt dieses Herz, mi\u00dfkannt, verlassen", "tokens": ["Grabt", "die\u00b7ses", "Herz", ",", "mi\u00df\u00b7kannt", ",", "ver\u00b7las\u00b7sen"], "token_info": ["word", "word", "word", "punct", "word", "punct", "word"], "pos": ["NE", "PDAT", "NN", "$,", "VVFIN", "$,", "VVINF"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.2": {"text": "Hin, wo noch ", "tokens": ["Hin", ",", "wo", "noch"], "token_info": ["word", "punct", "word", "word"], "pos": ["NN", "$,", "PWAV", "ADV"], "meter": "+-+", "measure": "trochaic.di"}, "line.3": {"text": "Ein Vogel durch die L\u00fcfte zieht,", "tokens": ["Ein", "Vo\u00b7gel", "durch", "die", "L\u00fcf\u00b7te", "zieht", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "APPR", "ART", "NN", "VVFIN", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "Die Blume wird die\u00df Herz nicht hassen,", "tokens": ["Die", "Blu\u00b7me", "wird", "die\u00df", "Herz", "nicht", "has\u00b7sen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VAFIN", "PDS", "NN", "PTKNEG", "VVINF", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.5": {"text": "Der Vogel singt ihm noch ein Lied.", "tokens": ["Der", "Vo\u00b7gel", "singt", "ihm", "noch", "ein", "Lied", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NE", "VVFIN", "PPER", "ADV", "ART", "NN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}}}}}