{"dta.poem.19446": {"metadata": {"author": {"name": "Meyer, Conrad Ferdinand", "birth": "N.A.", "death": "N.A."}, "title": "Das heilige Feuer.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1882", "urn": "urn:nbn:de:kobv:b4-200905193933", "language": ["de:0.99"], "booktitle": "Meyer, Conrad Ferdinand: Gedichte. Leipzig, 1882."}, "poem": {"stanza.1": {"line.1": {"text": "Auf das Feuer mit dem goldnen Strahle", "tokens": ["Auf", "das", "Feu\u00b7er", "mit", "dem", "gold\u00b7nen", "Strah\u00b7le"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["APPR", "ART", "NN", "APPR", "ART", "ADJA", "NN"], "meter": "+-+-+-+-+-", "measure": "trochaic.penta"}, "line.2": {"text": "Heftet sich in tiefer Mitternacht", "tokens": ["Hef\u00b7tet", "sich", "in", "tie\u00b7fer", "Mit\u00b7ter\u00b7nacht"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["VVFIN", "PRF", "APPR", "ADJA", "NN"], "meter": "+-+-+-+-+", "measure": "trochaic.penta"}, "line.3": {"text": "Schlummerlos das Auge der Vestale,", "tokens": ["Schlum\u00b7mer\u00b7los", "das", "Au\u00b7ge", "der", "Ves\u00b7ta\u00b7le", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ADJD", "ART", "NN", "ART", "NN", "$,"], "meter": "+-+-+-+-+-", "measure": "trochaic.penta"}, "line.4": {"text": "Die der G\u00f6ttin ewig Licht bewacht.", "tokens": ["Die", "der", "G\u00f6t\u00b7tin", "e\u00b7wig", "Licht", "be\u00b7wacht", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ART", "NN", "ADJD", "NN", "VVPP", "$."], "meter": "+-+-+-+-+", "measure": "trochaic.penta"}}, "stanza.2": {"line.1": {"text": "Wenn sie schlummerte, wenn sie entschliefe,", "tokens": ["Wenn", "sie", "schlum\u00b7mer\u00b7te", ",", "wenn", "sie", "ent\u00b7schlie\u00b7fe", ","], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["KOUS", "PPER", "VVFIN", "$,", "KOUS", "PPER", "VVFIN", "$,"], "meter": "+-+-+-+-+-", "measure": "trochaic.penta"}, "line.2": {"text": "Wenn erst\u00fcrbe die vers\u00e4umte Glut,", "tokens": ["Wenn", "er\u00b7st\u00fcr\u00b7be", "die", "ver\u00b7s\u00e4um\u00b7te", "Glut", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "ADJA", "ART", "ADJA", "NN", "$,"], "meter": "+-+-+-+-+", "measure": "trochaic.penta"}, "line.3": {"text": "Eingesargt in Gruft und Grabestiefe", "tokens": ["Ein\u00b7ge\u00b7sargt", "in", "Gruft", "und", "Gra\u00b7bes\u00b7tie\u00b7fe"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["ADJD", "APPR", "NN", "KON", "NN"], "meter": "+-+-+-+-+-", "measure": "trochaic.penta"}, "line.4": {"text": "W\u00fcrde sie, wo Staub und Moder ruht!", "tokens": ["W\u00fcr\u00b7de", "sie", ",", "wo", "Staub", "und", "Mo\u00b7der", "ruht", "!"], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["VAFIN", "PPER", "$,", "PWAV", "NN", "KON", "NN", "VVFIN", "$."], "meter": "+-+-+-+-+", "measure": "trochaic.penta"}}, "stanza.3": {"line.1": {"text": "Eine Flamme zittert mir im Busen,", "tokens": ["Ei\u00b7ne", "Flam\u00b7me", "zit\u00b7tert", "mir", "im", "Bu\u00b7sen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VVFIN", "PPER", "APPRART", "NN", "$,"], "meter": "+-+-+-+-+-", "measure": "trochaic.penta"}, "line.2": {"text": "Lodert warm zu jeder Zeit und Frist,", "tokens": ["Lo\u00b7dert", "warm", "zu", "je\u00b7der", "Zeit", "und", "Frist", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["NE", "ADJD", "APPR", "PIAT", "NN", "KON", "NN", "$,"], "meter": "+-+-+-+-+", "measure": "trochaic.penta"}, "line.3": {"text": "Die entz\u00fcndet durch den Hauch der Musen", "tokens": ["Die", "ent\u00b7z\u00fcn\u00b7det", "durch", "den", "Hauch", "der", "Mu\u00b7sen"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["PDS", "VVFIN", "APPR", "ART", "NN", "ART", "NN"], "meter": "+-+-+-+-+-", "measure": "trochaic.penta"}, "line.4": {"text": "Ihnen ein best\u00e4ndig Opfer ist", "tokens": ["Ih\u00b7nen", "ein", "be\u00b7st\u00e4n\u00b7dig", "Op\u00b7fer", "ist"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["PPER", "ART", "ADJD", "NN", "VAFIN"], "meter": "+-+-+-+-+", "measure": "trochaic.penta"}}, "stanza.4": {"line.1": {"text": "Und ich h\u00fcte sie mit heil'ger Scheue,", "tokens": ["Und", "ich", "h\u00fc\u00b7te", "sie", "mit", "heil'\u00b7ger", "Scheu\u00b7e", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "PPER", "VVFIN", "PPER", "APPR", "ADJA", "NN", "$,"], "meter": "--+-+-+-+-", "measure": "anapaest.init"}, "line.2": {"text": "Da\u00df sie brenne rein und ungekr\u00e4nkt;", "tokens": ["Da\u00df", "sie", "bren\u00b7ne", "rein", "und", "un\u00b7ge\u00b7kr\u00e4nkt", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "PPER", "VVFIN", "ADJD", "KON", "ADJD", "$."], "meter": "+-+-+-+-+", "measure": "trochaic.penta"}, "line.3": {"text": "Denn ich wei\u00df, es wird der ungetreue", "tokens": ["Denn", "ich", "wei\u00df", ",", "es", "wird", "der", "un\u00b7ge\u00b7treu\u00b7e"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word"], "pos": ["KON", "PPER", "VVFIN", "$,", "PPER", "VAFIN", "ART", "ADJA"], "meter": "+-+-+-+-+-", "measure": "trochaic.penta"}, "line.4": {"text": "W\u00e4chter lebend in die Gruft versenkt.", "tokens": ["W\u00e4ch\u00b7ter", "le\u00b7bend", "in", "die", "Gruft", "ver\u00b7senkt", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["NE", "ADJD", "APPR", "ART", "NN", "VVFIN", "$."], "meter": "+-+-+-+-+", "measure": "trochaic.penta"}}}}}