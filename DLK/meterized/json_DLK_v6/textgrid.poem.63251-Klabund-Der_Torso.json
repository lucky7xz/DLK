{"textgrid.poem.63251": {"metadata": {"author": {"name": "Klabund", "birth": "N.A.", "death": "N.A."}, "title": "Der Torso", "genre": "verse", "period": "N.A.", "pub_year": 1909, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Es beugt sich eine Statue, beh\u00e4ngt", "tokens": ["Es", "beugt", "sich", "ei\u00b7ne", "Sta\u00b7tue", ",", "be\u00b7h\u00e4ngt"], "token_info": ["word", "word", "word", "word", "word", "punct", "word"], "pos": ["PPER", "VVFIN", "PRF", "ART", "NN", "$,", "VVFIN"], "meter": "-+-+-+--+", "measure": "iambic.tetra.chol"}, "line.2": {"text": "Mit einem Schleier schamentbl\u00f6sster Blicke.", "tokens": ["Mit", "ei\u00b7nem", "Schlei\u00b7er", "scha\u00b7ment\u00b7bl\u00f6s\u00b7ster", "Bli\u00b7cke", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "ART", "NN", "ADJA", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Ein Knabenantlitz, das sich Sonnen f\u00e4ngt.", "tokens": ["Ein", "Kna\u00b7ben\u00b7ant\u00b7litz", ",", "das", "sich", "Son\u00b7nen", "f\u00e4ngt", "."], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "$,", "PRELS", "PRF", "NN", "VVFIN", "$."], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.4": {"text": "Ein M\u00e4dchenl\u00e4cheln, zahm wie eine Ricke.", "tokens": ["Ein", "M\u00e4d\u00b7chen\u00b7l\u00e4\u00b7cheln", ",", "zahm", "wie", "ei\u00b7ne", "Ri\u00b7cke", "."], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "$,", "ADJD", "KOKOM", "ART", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}, "stanza.2": {"line.1": {"text": "Hier eine Unvollendete: sie hofft", "tokens": ["Hier", "ei\u00b7ne", "Un\u00b7voll\u00b7en\u00b7de\u00b7te", ":", "sie", "hofft"], "token_info": ["word", "word", "word", "punct", "word", "word"], "pos": ["ADV", "ART", "NN", "$.", "PPER", "VVFIN"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.2": {"text": "Noch feucht im Ton Lebendiges zu wagen.", "tokens": ["Noch", "feucht", "im", "Ton", "Le\u00b7ben\u00b7di\u00b7ges", "zu", "wa\u00b7gen", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "ADJD", "APPRART", "NN", "NN", "PTKZU", "VVINF", "$."], "meter": "-+-+---+-+-", "measure": "unknown.measure.tetra"}, "line.3": {"text": "An diesen sch\u00f6nen Br\u00fcsten ruhet oft", "tokens": ["An", "die\u00b7sen", "sch\u00f6\u00b7nen", "Br\u00fcs\u00b7ten", "ru\u00b7het", "oft"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["APPR", "PDAT", "ADJA", "NN", "VVFIN", "ADV"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.4": {"text": "Der Meister, wenn der Marmor ihn erschlagen.", "tokens": ["Der", "Meis\u00b7ter", ",", "wenn", "der", "Mar\u00b7mor", "ihn", "er\u00b7schla\u00b7gen", "."], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "$,", "KOUS", "ART", "NN", "PPER", "VVPP", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}}}}