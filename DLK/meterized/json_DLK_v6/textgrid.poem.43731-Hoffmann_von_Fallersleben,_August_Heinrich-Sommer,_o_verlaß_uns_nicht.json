{"textgrid.poem.43731": {"metadata": {"author": {"name": "Hoffmann von Fallersleben, August Heinrich", "birth": "N.A.", "death": "N.A."}, "title": "Sommer, o verla\u00df uns nicht", "genre": "verse", "period": "N.A.", "pub_year": 1836, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Will der Sommer wieder scheiden,", "tokens": ["Will", "der", "Som\u00b7mer", "wie\u00b7der", "schei\u00b7den", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["VMFIN", "ART", "NN", "ADV", "VVINF", "$,"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.2": {"text": "Blickt er auf die \u00f6den Haiden,", "tokens": ["Blickt", "er", "auf", "die", "\u00f6\u00b7den", "Hai\u00b7den", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "PPER", "APPR", "ART", "ADJA", "NN", "$,"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.3": {"text": "Und da l\u00e4cheln ihm im Nu", "tokens": ["Und", "da", "l\u00e4\u00b7cheln", "ihm", "im", "Nu"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["KON", "ADV", "VVFIN", "PPER", "APPRART", "NN"], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.4": {"text": "Haidebl\u00fcmchen freundlich zu.", "tokens": ["Hai\u00b7de\u00b7bl\u00fcm\u00b7chen", "freund\u00b7lich", "zu", "."], "token_info": ["word", "word", "word", "punct"], "pos": ["NN", "ADJD", "PTKVZ", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.5": {"text": "Hell umgl\u00e4nzt vom Strahl der Sonne", "tokens": ["Hell", "um\u00b7gl\u00e4nzt", "vom", "Strahl", "der", "Son\u00b7ne"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["NE", "VVPP", "APPRART", "NN", "ART", "NN"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.6": {"text": "Freu'n sie sich der Sommerwonne,", "tokens": ["Freu'n", "sie", "sich", "der", "Som\u00b7mer\u00b7won\u00b7ne", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["NN", "PPER", "PRF", "ART", "NN", "$,"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.7": {"text": "Und ein jedes Bl\u00fcmchen spricht:", "tokens": ["Und", "ein", "je\u00b7des", "Bl\u00fcm\u00b7chen", "spricht", ":"], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["KON", "ART", "PIAT", "NN", "VVFIN", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.8": {"text": "Sommer, o verla\u00df uns nicht!", "tokens": ["Som\u00b7mer", ",", "o", "ver\u00b7la\u00df", "uns", "nicht", "!"], "token_info": ["word", "punct", "word", "word", "word", "word", "punct"], "pos": ["NN", "$,", "FM", "VVIMP", "PPER", "PTKNEG", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}}, "stanza.2": {"line.1": {"text": "Doch den Blumen ist hienieden", "tokens": ["Doch", "den", "Blu\u00b7men", "ist", "hien\u00b7ie\u00b7den"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["KON", "ART", "NN", "VAFIN", "ADV"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.2": {"text": "Ach! Ein Sommer nur beschieden:", "tokens": ["Ach", "!", "Ein", "Som\u00b7mer", "nur", "be\u00b7schie\u00b7den", ":"], "token_info": ["word", "punct", "word", "word", "word", "word", "punct"], "pos": ["ITJ", "$.", "ART", "NN", "ADV", "VVINF", "$."], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.3": {"text": "Mitten in der Freudenzeit", "tokens": ["Mit\u00b7ten", "in", "der", "Freu\u00b7den\u00b7zeit"], "token_info": ["word", "word", "word", "word"], "pos": ["ADV", "APPR", "ART", "NN"], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.4": {"text": "Trifft sie oft das Winterleid.", "tokens": ["Trifft", "sie", "oft", "das", "Win\u00b7ter\u00b7leid", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "PPER", "ADV", "ART", "NN", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.5": {"text": "Sommer, sieh noch einmal wieder", "tokens": ["Som\u00b7mer", ",", "sieh", "noch", "ein\u00b7mal", "wie\u00b7der"], "token_info": ["word", "punct", "word", "word", "word", "word"], "pos": ["NN", "$,", "VVIMP", "ADV", "ADV", "ADV"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.6": {"text": "Von dem blauen Himmel nieder!", "tokens": ["Von", "dem", "blau\u00b7en", "Him\u00b7mel", "nie\u00b7der", "!"], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "ART", "ADJA", "NN", "PTKVZ", "$."], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.7": {"text": "Send' uns doch dein mildes Licht!", "tokens": ["Send'", "uns", "doch", "dein", "mil\u00b7des", "Licht", "!"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "PPER", "ADV", "PPOSAT", "ADJA", "NN", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.8": {"text": "Sommer, o verla\u00df uns nicht!", "tokens": ["Som\u00b7mer", ",", "o", "ver\u00b7la\u00df", "uns", "nicht", "!"], "token_info": ["word", "punct", "word", "word", "word", "word", "punct"], "pos": ["NN", "$,", "FM", "VVIMP", "PPER", "PTKNEG", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}}, "stanza.3": {"line.1": {"text": "Sommer h\u00f6rt's und k\u00e4me gerne,", "tokens": ["Som\u00b7mer", "h\u00f6rt's", "und", "k\u00e4\u00b7me", "ger\u00b7ne", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["NN", "VVFIN", "KON", "VVFIN", "ADV", "$,"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.2": {"text": "Doch er kann aus weiter Ferne", "tokens": ["Doch", "er", "kann", "aus", "wei\u00b7ter", "Fer\u00b7ne"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["KON", "PPER", "VMFIN", "APPR", "ADV", "NN"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.3": {"text": "Einen Scheidegru\u00df allein", "tokens": ["Ei\u00b7nen", "Schei\u00b7de\u00b7gru\u00df", "al\u00b7lein"], "token_info": ["word", "word", "word"], "pos": ["ART", "NN", "ADV"], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.4": {"text": "Senden seinen Bl\u00fcmelein.", "tokens": ["Sen\u00b7den", "sei\u00b7nen", "Bl\u00fc\u00b7me\u00b7lein", "."], "token_info": ["word", "word", "word", "punct"], "pos": ["NN", "PPOSAT", "NN", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.5": {"text": "Und die armen Blumen wagen", "tokens": ["Und", "die", "ar\u00b7men", "Blu\u00b7men", "wa\u00b7gen"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["KON", "ART", "ADJA", "NN", "VVINF"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.6": {"text": "Kaum die Augen aufzuschlagen,", "tokens": ["Kaum", "die", "Au\u00b7gen", "auf\u00b7zu\u00b7schla\u00b7gen", ","], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["ADV", "ART", "NN", "VVIZU", "$,"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.7": {"text": "Rufen, bis ihr Herze bricht:", "tokens": ["Ru\u00b7fen", ",", "bis", "ihr", "Her\u00b7ze", "bricht", ":"], "token_info": ["word", "punct", "word", "word", "word", "word", "punct"], "pos": ["NN", "$,", "KOUS", "PPER", "VVFIN", "VVFIN", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.8": {"text": "Sommer, o verla\u00df uns nicht!", "tokens": ["Som\u00b7mer", ",", "o", "ver\u00b7la\u00df", "uns", "nicht", "!"], "token_info": ["word", "punct", "word", "word", "word", "word", "punct"], "pos": ["NN", "$,", "FM", "VVIMP", "PPER", "PTKNEG", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}}}}}