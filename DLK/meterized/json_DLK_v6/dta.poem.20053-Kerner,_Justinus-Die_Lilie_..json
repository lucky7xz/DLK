{"dta.poem.20053": {"metadata": {"author": {"name": "Kerner, Justinus", "birth": "N.A.", "death": "N.A."}, "title": "Die Lilie .", "genre": "Lyrik", "period": "N.A.", "pub_year": "1826", "urn": "urn:nbn:de:kobv:b4-200905193111", "language": ["de:0.99"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "Viel Blumen bl\u00fchten einst auf einem Grabe,", "tokens": ["Viel", "Blu\u00b7men", "bl\u00fch\u00b7ten", "einst", "auf", "ei\u00b7nem", "Gra\u00b7be", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PIAT", "NN", "VVFIN", "ADV", "APPR", "ART", "NN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "Hie\u00dfen sich R\u00f6slein, Veilchen, Hiacinthe.", "tokens": ["Hie\u00b7\u00dfen", "sich", "R\u00f6s\u00b7lein", ",", "Veil\u00b7chen", ",", "Hia\u00b7cin\u00b7the", "."], "token_info": ["word", "word", "word", "punct", "word", "punct", "word", "punct"], "pos": ["ADV", "PRF", "NN", "$,", "NN", "$,", "NE", "$."], "meter": "+--+-+-+--", "measure": "iambic.tetra.invert"}, "line.3": {"text": "Winter erschien, da giengen all' die Blumen,", "tokens": ["Win\u00b7ter", "er\u00b7schien", ",", "da", "gien\u00b7gen", "all'", "die", "Blu\u00b7men", ","], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["NN", "VVFIN", "$,", "ADV", "VVFIN", "PIS", "ART", "NN", "$,"], "meter": "+--+-+-+-+-", "measure": "iambic.penta.invert"}, "line.4": {"text": "Kamen auch nimmer auf den stillen H\u00fcgel.", "tokens": ["Ka\u00b7men", "auch", "nim\u00b7mer", "auf", "den", "stil\u00b7len", "H\u00fc\u00b7gel", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "ADV", "ADV", "APPR", "ART", "ADJA", "NN", "$."], "meter": "+--+-+-+-+-", "measure": "iambic.penta.invert"}}, "stanza.2": {"line.1": {"text": "Doch eine Blume, Lilie gehei\u00dfen,", "tokens": ["Doch", "ei\u00b7ne", "Blu\u00b7me", ",", "Li\u00b7lie", "ge\u00b7hei\u00b7\u00dfen", ","], "token_info": ["word", "word", "word", "punct", "word", "word", "punct"], "pos": ["KON", "ART", "NN", "$,", "NE", "VVPP", "$,"], "meter": "-+-+-+--+-", "measure": "iambic.tetra.relaxed"}, "line.2": {"text": "Griff ein mit starker Wurzel in die Erde,", "tokens": ["Griff", "ein", "mit", "star\u00b7ker", "Wur\u00b7zel", "in", "die", "Er\u00b7de", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["NN", "ART", "APPR", "ADJA", "NN", "APPR", "ART", "NN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Jahre vergiengen, und sie stund noch herrlich.", "tokens": ["Jah\u00b7re", "ver\u00b7gien\u00b7gen", ",", "und", "sie", "stund", "noch", "herr\u00b7lich", "."], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["NN", "VVPP", "$,", "KON", "PPER", "VVFIN", "ADV", "ADJD", "$."], "meter": "+--+-+-+-+-", "measure": "iambic.penta.invert"}}, "stanza.3": {"line.1": {"text": "Kam ein G\u00e4rtner auf den Grabesh\u00fcgel", "tokens": ["Kam", "ein", "G\u00e4rt\u00b7ner", "auf", "den", "Gra\u00b7bes\u00b7h\u00fc\u00b7gel"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["NE", "ART", "NN", "APPR", "ART", "NN"], "meter": "+-+-+-+-+-", "measure": "trochaic.penta"}, "line.2": {"text": "Sah die Sch\u00f6ne, dacht in einen Lustwald", "tokens": ["Sah", "die", "Sch\u00f6\u00b7ne", ",", "dacht", "in", "ei\u00b7nen", "Lust\u00b7wald"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word"], "pos": ["VVFIN", "ART", "NN", "$,", "VVFIN", "APPR", "ART", "NN"], "meter": "+-+-+-+-+-", "measure": "trochaic.penta"}, "line.3": {"text": "Vom verlass'nen Orte sie zu pflanzen,", "tokens": ["Vom", "ver\u00b7lass'\u00b7nen", "Or\u00b7te", "sie", "zu", "pflan\u00b7zen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPRART", "ADJA", "NN", "PPER", "PTKZU", "VVINF", "$,"], "meter": "+-+-+-+-+-", "measure": "trochaic.penta"}, "line.4": {"text": "Ri\u00df sie aus, doch wehe! aus dem Grabe", "tokens": ["Ri\u00df", "sie", "aus", ",", "doch", "we\u00b7he", "!", "aus", "dem", "Gra\u00b7be"], "token_info": ["word", "word", "word", "punct", "word", "word", "punct", "word", "word", "word"], "pos": ["NN", "PPER", "PTKVZ", "$,", "ADV", "ADJD", "$.", "APPR", "ART", "NN"], "meter": "+-+-+-+-+-", "measure": "trochaic.penta"}, "line.5": {"text": "Ri\u00df ein Herz er, das sie fest umschlungen.", "tokens": ["Ri\u00df", "ein", "Herz", "er", ",", "das", "sie", "fest", "um\u00b7schlun\u00b7gen", "."], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["NN", "ART", "NN", "PPER", "$,", "PRELS", "PPER", "ADJD", "VVINF", "$."], "meter": "+-+-+-+-+-", "measure": "trochaic.penta"}}}}}