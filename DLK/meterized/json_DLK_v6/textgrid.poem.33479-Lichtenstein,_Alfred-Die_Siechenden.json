{"textgrid.poem.33479": {"metadata": {"author": {"name": "Lichtenstein, Alfred", "birth": "N.A.", "death": "N.A."}, "title": "Die Siechenden", "genre": "verse", "period": "N.A.", "pub_year": 1912, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Versch\u00fcttet ist unser Sterbegesicht", "tokens": ["Ver\u00b7sch\u00fct\u00b7tet", "ist", "un\u00b7ser", "Ster\u00b7be\u00b7ge\u00b7sicht"], "token_info": ["word", "word", "word", "word"], "pos": ["VVPP", "VAFIN", "PPOSAT", "NN"], "meter": "-+-++-+--+", "measure": "iambic.penta.chol"}, "line.2": {"text": "Von Abend und Schmerzen und Lampenlicht.", "tokens": ["Von", "A\u00b7bend", "und", "Schmer\u00b7zen", "und", "Lam\u00b7pen\u00b7licht", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "NN", "KON", "NN", "KON", "NN", "$."], "meter": "-+--+--+-+", "measure": "amphibrach.tri.plus"}}, "stanza.2": {"line.1": {"text": "Wir sitzen am Fenster und sinken hinaus,", "tokens": ["Wir", "sit\u00b7zen", "am", "Fens\u00b7ter", "und", "sin\u00b7ken", "hin\u00b7aus", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "APPRART", "NN", "KON", "VVFIN", "PTKVZ", "$,"], "meter": "-+--+--+--+", "measure": "amphibrach.tetra"}, "line.2": {"text": "Fern schielt noch Tag auf ein graues Haus.", "tokens": ["Fern", "schielt", "noch", "Tag", "auf", "ein", "grau\u00b7es", "Haus", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["NN", "VVFIN", "ADV", "NN", "APPR", "ART", "ADJA", "NN", "$."], "meter": "+--+--+-+", "measure": "dactylic.di.plus"}}, "stanza.3": {"line.1": {"text": "Unser Leben sp\u00fcren wir kaum ...", "tokens": ["Un\u00b7ser", "Le\u00b7ben", "sp\u00fc\u00b7ren", "wir", "kaum", "..."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PPOSAT", "NN", "VVFIN", "PPER", "ADV", "$("], "meter": "+-+-+--+", "measure": "iambic.tetra.chol"}, "line.2": {"text": "Und die Welt ist ein Morphiumtraum ...", "tokens": ["Und", "die", "Welt", "ist", "ein", "Mor\u00b7phi\u00b7um\u00b7traum", "..."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "ART", "NN", "VAFIN", "ART", "NN", "$("], "meter": "--+--+--+", "measure": "anapaest.tri.plus"}}, "stanza.4": {"line.1": {"text": "Der Himmel senkt sich nebelblind.", "tokens": ["Der", "Him\u00b7mel", "senkt", "sich", "ne\u00b7bel\u00b7blind", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VVFIN", "PRF", "ADJD", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Der Garten erlischt im dunklen Wind \u2013", "tokens": ["Der", "Gar\u00b7ten", "er\u00b7lischt", "im", "dunk\u00b7len", "Wind", "\u2013"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VVFIN", "APPRART", "ADJA", "NN", "$("], "meter": "-+--+-+-+", "measure": "iambic.tetra.relaxed"}}, "stanza.5": {"line.1": {"text": "Kommen die W\u00e4chter herein,", "tokens": ["Kom\u00b7men", "die", "W\u00e4ch\u00b7ter", "her\u00b7ein", ","], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["NN", "ART", "NE", "PTKVZ", "$,"], "meter": "+--+--+", "measure": "dactylic.tri"}, "line.2": {"text": "Heben uns in die Betten hinein,", "tokens": ["He\u00b7ben", "uns", "in", "die", "Bet\u00b7ten", "hin\u00b7ein", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "PPER", "APPR", "ART", "NN", "PTKVZ", "$,"], "meter": "+-+--+--+", "measure": "trochaic.tetra.relaxed"}}, "stanza.6": {"line.1": {"text": "Stechen uns Gifte ein,", "tokens": ["Ste\u00b7chen", "uns", "Gif\u00b7te", "ein", ","], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["VVFIN", "PPER", "NN", "PTKVZ", "$,"], "meter": "+--+-+", "measure": "iambic.tri.invert"}, "line.2": {"text": "T\u00f6ten den Lampenschein.", "tokens": ["T\u00f6\u00b7ten", "den", "Lam\u00b7pen\u00b7schein", "."], "token_info": ["word", "word", "word", "punct"], "pos": ["NN", "ART", "NN", "$."], "meter": "+--+-+", "measure": "iambic.tri.invert"}}, "stanza.7": {"line.1": {"text": "H\u00e4ngen Gardinen vor die Nacht ...", "tokens": ["H\u00e4n\u00b7gen", "Gar\u00b7di\u00b7nen", "vor", "die", "Nacht", "..."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["NN", "NN", "APPR", "ART", "NN", "$("], "meter": "+--+-+-+", "measure": "iambic.tetra.invert"}, "line.2": {"text": "Sind verschwunden sanft und sacht \u2013 \u2013 \u2013", "tokens": ["Sind", "ver\u00b7schwun\u00b7den", "sanft", "und", "sacht", "\u2013", "\u2013", "\u2013"], "token_info": ["word", "word", "word", "word", "word", "punct", "punct", "punct"], "pos": ["VAFIN", "VVPP", "ADJD", "KON", "VVFIN", "$(", "$(", "$("], "meter": "+-+-+-+", "measure": "trochaic.tetra"}}, "stanza.8": {"line.1": {"text": "Manche st\u00f6hnen, doch keiner spricht,", "tokens": ["Man\u00b7che", "st\u00f6h\u00b7nen", ",", "doch", "kei\u00b7ner", "spricht", ","], "token_info": ["word", "word", "punct", "word", "word", "word", "punct"], "pos": ["PIS", "VVINF", "$,", "ADV", "PIS", "VVFIN", "$,"], "meter": "+-+--+-+", "measure": "glykoneus"}, "line.2": {"text": "Schlaf versargt uns das Gesicht.", "tokens": ["Schlaf", "ver\u00b7sargt", "uns", "das", "Ge\u00b7sicht", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["NN", "VVFIN", "PPER", "ART", "NN", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}}}}}