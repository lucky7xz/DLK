{"dta.poem.2199": {"metadata": {"author": {"name": "Brockes, Barthold Heinrich", "birth": "N.A.", "death": "N.A."}, "title": "Die Armuth.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1748", "urn": "urn:nbn:de:kobv:b4-200905198553", "language": ["de:0.99"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "Die Ferne des Zuk\u00fcnftigen versch\u00f6nert es und macht", "tokens": ["Die", "Fer\u00b7ne", "des", "Zu\u00b7k\u00fcnf\u00b7ti\u00b7gen", "ver\u00b7sch\u00f6\u00b7nert", "es", "und", "macht"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word"], "pos": ["ART", "NN", "ART", "NN", "VVFIN", "PPER", "KON", "VVFIN"], "meter": "-+-+-+-+-+-+-+", "measure": "iambic.septa"}, "line.2": {"text": "es schlimmer,", "tokens": ["es", "schlim\u00b7mer", ","], "token_info": ["word", "word", "punct"], "pos": ["PPER", "ADJD", "$,"], "meter": "-+-", "measure": "amphibrach.single"}, "line.3": {"text": "Als wie es in der Wahrheit ist. Wenn selbes gegenw\u00e4rtig", "tokens": ["Als", "wie", "es", "in", "der", "Wahr\u00b7heit", "ist", ".", "Wenn", "sel\u00b7bes", "ge\u00b7gen\u00b7w\u00e4r\u00b7tig"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct", "word", "word", "word"], "pos": ["KOUS", "PWAV", "PPER", "APPR", "ART", "NN", "VAFIN", "$.", "KOUS", "ADJA", "ADJD"], "meter": "-+-+-+-+-+-+-+-", "measure": "iambic.septa"}, "line.4": {"text": "wird,", "tokens": ["wird", ","], "token_info": ["word", "punct"], "pos": ["VAFIN", "$,"], "meter": "-", "measure": "single.down"}, "line.5": {"text": "Und da\u00df es eine Zeitlang w\u00e4hrt, (weil man beym An-", "tokens": ["Und", "da\u00df", "es", "ei\u00b7ne", "Zeit\u00b7lang", "w\u00e4hrt", ",", "(", "weil", "man", "beym", "An"], "token_info": ["word", "word", "word", "word", "word", "word", "punct", "punct", "word", "word", "word", "word"], "pos": ["KON", "KOUS", "PPER", "ART", "NN", "VVFIN", "$,", "$(", "KOUS", "PIS", "APPRART", "TRUNC"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.6": {"text": "fang auch sich irrt)", "tokens": ["fang", "auch", "sich", "irrt", ")"], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["VVFIN", "ADV", "PRF", "VVFIN", "$("], "meter": "+--+", "measure": "iambic.di.chol"}, "line.7": {"text": "Befindet man sodann fast immer,", "tokens": ["Be\u00b7fin\u00b7det", "man", "so\u00b7dann", "fast", "im\u00b7mer", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "PIS", "ADV", "ADV", "ADV", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.8": {"text": "Da\u00df es sich dem Vergangnen gleicht.", "tokens": ["Da\u00df", "es", "sich", "dem", "Ver\u00b7gang\u00b7nen", "gleicht", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "PPER", "PRF", "ART", "NN", "VVFIN", "$."], "meter": "+-+--+-+", "measure": "glykoneus"}}}}}