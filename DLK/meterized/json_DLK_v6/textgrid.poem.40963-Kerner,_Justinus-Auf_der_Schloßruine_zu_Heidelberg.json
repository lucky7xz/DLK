{"textgrid.poem.40963": {"metadata": {"author": {"name": "Kerner, Justinus", "birth": "N.A.", "death": "N.A."}, "title": "Auf der Schlo\u00dfruine zu Heidelberg", "genre": "verse", "period": "N.A.", "pub_year": 1824, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Es steht in alten Schlo\u00dfruinen,", "tokens": ["Es", "steht", "in", "al\u00b7ten", "Schlo\u00df\u00b7ru\u00b7i\u00b7nen", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "APPR", "ADJA", "NN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.2": {"text": "Halb Tr\u00fcmmer, Themis' Steinbild noch,", "tokens": ["Halb", "Tr\u00fcm\u00b7mer", ",", "The\u00b7mi\u00b7s'", "Stein\u00b7bild", "noch", ","], "token_info": ["word", "word", "punct", "word", "word", "word", "punct"], "pos": ["ADJD", "NN", "$,", "NE", "NN", "ADV", "$,"], "meter": "-+-+--+-+", "measure": "iambic.tetra.relaxed"}, "line.3": {"text": "Ich sah es, wie ein Stern geschienen", "tokens": ["Ich", "sah", "es", ",", "wie", "ein", "Stern", "ge\u00b7schie\u00b7nen"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word"], "pos": ["PPER", "VVFIN", "PPER", "$,", "PWAV", "ART", "NN", "VVINF"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.4": {"text": "Durch der zerri\u00dfnen Wage Loch.", "tokens": ["Durch", "der", "zer\u00b7ri\u00df\u00b7nen", "Wa\u00b7ge", "Loch", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "ART", "ADJA", "NN", "NN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}}, "stanza.2": {"line.1": {"text": "Da dacht' ich: ist auch hier zertr\u00fcmmert", "tokens": ["Da", "dacht'", "ich", ":", "ist", "auch", "hier", "zer\u00b7tr\u00fcm\u00b7mert"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word"], "pos": ["ADV", "VVFIN", "PPER", "$.", "VAFIN", "ADV", "ADV", "VVPP"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.2": {"text": "Die Wage der Gerechtigkeit,", "tokens": ["Die", "Wa\u00b7ge", "der", "Ge\u00b7rech\u00b7tig\u00b7keit", ","], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "ART", "NN", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.3": {"text": "Der Stern, der durch den Ri\u00df dort schimmert,", "tokens": ["Der", "Stern", ",", "der", "durch", "den", "Ri\u00df", "dort", "schim\u00b7mert", ","], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "$,", "PRELS", "APPR", "ART", "NN", "ADV", "VVFIN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.4": {"text": "Der sieht und w\u00e4gt, o Mensch! dein Leid.", "tokens": ["Der", "sieht", "und", "w\u00e4gt", ",", "o", "Mensch", "!", "dein", "Leid", "."], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "punct", "word", "word", "punct"], "pos": ["PDS", "VVFIN", "KON", "VVFIN", "$,", "FM", "NN", "$.", "PPOSAT", "NN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}}}}}