{"textgrid.poem.49480": {"metadata": {"author": {"name": "Verlaine, Paul-Marie", "birth": "N.A.", "death": "N.A."}, "title": "1L: Am Kirchhof steht ein Baum alleine", "genre": "verse", "period": "N.A.", "pub_year": 1870, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Am Kirchhof steht ein Baum alleine", "tokens": ["Am", "Kirch\u00b7hof", "steht", "ein", "Baum", "al\u00b7lei\u00b7ne"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["APPRART", "NN", "VVFIN", "ART", "NN", "ADV"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.2": {"text": "In einer jungen Herrlichkeit.", "tokens": ["In", "ei\u00b7ner", "jun\u00b7gen", "Herr\u00b7lich\u00b7keit", "."], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["APPR", "ART", "ADJA", "NN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.3": {"text": "Ihn pflanzt kein hergebrachtes Leid, \u2013", "tokens": ["Ihn", "pflanzt", "kein", "her\u00b7ge\u00b7brach\u00b7tes", "Leid", ",", "\u2013"], "token_info": ["word", "word", "word", "word", "word", "punct", "punct"], "pos": ["PPER", "VVFIN", "PIAT", "ADJA", "NN", "$,", "$("], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "Sanft neigt er sich dem schlichten Steine.", "tokens": ["Sanft", "neigt", "er", "sich", "dem", "schlich\u00b7ten", "Stei\u00b7ne", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["NN", "VVFIN", "PPER", "PRF", "ART", "ADJA", "NN", "$."], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}}, "stanza.2": {"line.1": {"text": "Im Sommer wie im Winter singt", "tokens": ["Im", "Som\u00b7mer", "wie", "im", "Win\u00b7ter", "singt"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["APPRART", "NN", "KOKOM", "APPRART", "NN", "VVFIN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Ein V\u00f6glein auf dem Baum, wie klingt", "tokens": ["Ein", "V\u00f6\u00b7glein", "auf", "dem", "Baum", ",", "wie", "klingt"], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word"], "pos": ["ART", "NN", "APPR", "ART", "NN", "$,", "PWAV", "VVFIN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.3": {"text": "So zart der Schmerz der treuen T\u00f6ne.", "tokens": ["So", "zart", "der", "Schmerz", "der", "treu\u00b7en", "T\u00f6\u00b7ne", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "ADJD", "ART", "NN", "ART", "ADJA", "NN", "$."], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}}, "stanza.3": {"line.1": {"text": "Der Vogel und der Baum sind wir,", "tokens": ["Der", "Vo\u00b7gel", "und", "der", "Baum", "sind", "wir", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "KON", "ART", "NN", "VAFIN", "PPER", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Du das Gedenken, ich die Ferne.", "tokens": ["Du", "das", "Ge\u00b7den\u00b7ken", ",", "ich", "die", "Fer\u00b7ne", "."], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["PPER", "ART", "NN", "$,", "PPER", "ART", "NN", "$."], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.3": {"text": "Der einst'gen Tage, mild wie Sterne \u2013", "tokens": ["Der", "einst'\u00b7gen", "Ta\u00b7ge", ",", "mild", "wie", "Ster\u00b7ne", "\u2013"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "$,", "ADJD", "KOKOM", "NN", "$("], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.4": {"text": "Ach lebt ich noch zu F\u00fcssen dir!", "tokens": ["Ach", "lebt", "ich", "noch", "zu", "F\u00fcs\u00b7sen", "dir", "!"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ITJ", "VVFIN", "PPER", "ADV", "APPR", "NN", "PPER", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}}, "stanza.4": {"line.1": {"text": "Ach leben, leben! Meine Sch\u00f6ne,", "tokens": ["Ach", "le\u00b7ben", ",", "le\u00b7ben", "!", "Mei\u00b7ne", "Sch\u00f6\u00b7ne", ","], "token_info": ["word", "word", "punct", "word", "punct", "word", "word", "punct"], "pos": ["ITJ", "VVFIN", "$,", "VVINF", "$.", "PPOSAT", "NN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.2": {"text": "Das kalte Nichts besiegte mich,", "tokens": ["Das", "kal\u00b7te", "Nichts", "be\u00b7sieg\u00b7te", "mich", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "VVFIN", "PPER", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.3": {"text": "Doch leb ich dir im Herzen? Sprich!", "tokens": ["Doch", "leb", "ich", "dir", "im", "Her\u00b7zen", "?", "Sprich", "!"], "token_info": ["word", "word", "word", "word", "word", "word", "punct", "word", "punct"], "pos": ["KON", "VVFIN", "PPER", "PPER", "APPRART", "NN", "$.", "VVIMP", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}}}}}