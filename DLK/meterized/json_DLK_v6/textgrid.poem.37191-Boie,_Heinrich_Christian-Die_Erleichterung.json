{"textgrid.poem.37191": {"metadata": {"author": {"name": "Boie, Heinrich Christian", "birth": "N.A.", "death": "N.A."}, "title": "Die Erleichterung", "genre": "verse", "period": "N.A.", "pub_year": 1775, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Im Sturme suchte sich der S\u00fcnden", "tokens": ["Im", "Stur\u00b7me", "such\u00b7te", "sich", "der", "S\u00fcn\u00b7den"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["APPRART", "NN", "VVFIN", "PRF", "ART", "NN"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.2": {"text": "Zuerst das Schiffsvolk zu entbinden,", "tokens": ["Zu\u00b7erst", "das", "Schiffs\u00b7volk", "zu", "ent\u00b7bin\u00b7den", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "ART", "NN", "PTKZU", "VVINF", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.3": {"text": "Bekannte sie und hatte schon", "tokens": ["Be\u00b7kann\u00b7te", "sie", "und", "hat\u00b7te", "schon"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["VVFIN", "PPER", "KON", "VAFIN", "ADV"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "Vom Priester Absolution,", "tokens": ["Vom", "Pries\u00b7ter", "Ab\u00b7so\u00b7lu\u00b7ti\u00b7on", ","], "token_info": ["word", "word", "word", "punct"], "pos": ["APPRART", "ADJA", "NN", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.5": {"text": "Als an den zweiten Punct man dachte,", "tokens": ["Als", "an", "den", "zwei\u00b7ten", "Punct", "man", "dach\u00b7te", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "APPR", "ART", "ADJA", "NN", "PIS", "VVFIN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.6": {"text": "Und was denn zur Erleichtrung nun", "tokens": ["Und", "was", "denn", "zur", "Er\u00b7leich\u00b7trung", "nun"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["KON", "PWS", "ADV", "APPRART", "NN", "ADV"], "meter": "-+---+-+", "measure": "dactylic.init"}, "line.7": {"text": "Des schwerbeladnen Schiffs zu thun,", "tokens": ["Des", "schwer\u00b7be\u00b7lad\u00b7nen", "Schiffs", "zu", "thun", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "PTKZU", "VVINF", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.8": {"text": "Zur ernsteren Erw\u00e4gung brachte.", "tokens": ["Zur", "erns\u00b7te\u00b7ren", "Er\u00b7w\u00e4\u00b7gung", "brach\u00b7te", "."], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["APPRART", "ADJA", "NN", "VVFIN", "$."], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.9": {"text": "Der Steuermann rief: \u00bbDen dicken dort,", "tokens": ["Der", "Steu\u00b7er\u00b7mann", "rief", ":", "\u00bb", "Den", "di\u00b7cken", "dort", ","], "token_info": ["word", "word", "word", "punct", "punct", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VVFIN", "$.", "$(", "ART", "ADJA", "ADV", "$,"], "meter": "-+--+-+-+", "measure": "iambic.tetra.relaxed"}, "line.10": {"text": "Mit unsern S\u00fcnden schwer beladen,", "tokens": ["Mit", "un\u00b7sern", "S\u00fcn\u00b7den", "schwer", "be\u00b7la\u00b7den", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "PPOSAT", "NN", "ADJD", "VVPP", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.11": {"text": "Voran zu schicken, kann nicht schaden!\u00ab \u2013", "tokens": ["Vo\u00b7ran", "zu", "schi\u00b7cken", ",", "kann", "nicht", "scha\u00b7den", "!", "\u00ab", "\u2013"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "punct", "punct", "punct"], "pos": ["ADV", "PTKZU", "VVINF", "$,", "VMFIN", "PTKNEG", "VVINF", "$.", "$(", "$("], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.12": {"text": "Plumps, flog das Pf\u00e4fflein \u00fcber Bord.", "tokens": ["Plumps", ",", "flog", "das", "Pf\u00e4f\u00b7flein", "\u00fc\u00b7ber", "Bord", "."], "token_info": ["word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["NE", "$,", "VVFIN", "ART", "NN", "APPR", "NN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}}}}}