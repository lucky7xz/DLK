{"textgrid.poem.44570": {"metadata": {"author": {"name": "Grillparzer, Franz", "birth": "N.A.", "death": "N.A."}, "title": "1L: Erst wenn der Mensch aus diesem Leben scheidet,", "genre": "verse", "period": "N.A.", "pub_year": 1849, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Erst wenn der Mensch aus diesem Leben scheidet,", "tokens": ["Erst", "wenn", "der", "Mensch", "aus", "die\u00b7sem", "Le\u00b7ben", "schei\u00b7det", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "KOUS", "ART", "NN", "APPR", "PDAT", "NN", "VVFIN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "Wird ihm gerecht das Urteil dieser Welt;", "tokens": ["Wird", "ihm", "ge\u00b7recht", "das", "Ur\u00b7teil", "die\u00b7ser", "Welt", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VAFIN", "PPER", "ADJD", "ART", "NN", "PDAT", "NN", "$."], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.3": {"text": "Nicht angefeindet mehr und nicht beneidet,", "tokens": ["Nicht", "an\u00b7ge\u00b7fein\u00b7det", "mehr", "und", "nicht", "be\u00b7nei\u00b7det", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["PTKNEG", "VVPP", "ADV", "KON", "PTKNEG", "VVPP", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.4": {"text": "Steht fest die Hand, die unsre Wage h\u00e4lt.", "tokens": ["Steht", "fest", "die", "Hand", ",", "die", "uns\u00b7re", "Wa\u00b7ge", "h\u00e4lt", "."], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "ADJD", "ART", "NN", "$,", "PRELS", "PPOSAT", "NN", "VVFIN", "$."], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}}, "stanza.2": {"line.1": {"text": "Du bist, o Herr, schon vor der Zeit geschieden,", "tokens": ["Du", "bist", ",", "o", "Herr", ",", "schon", "vor", "der", "Zeit", "ge\u00b7schie\u00b7den", ","], "token_info": ["word", "word", "punct", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VAFIN", "$,", "FM", "NN", "$,", "ADV", "APPR", "ART", "NN", "VVPP", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "H\u00f6rst lebend noch der Nachwelt Richterspruch,", "tokens": ["H\u00f6rst", "le\u00b7bend", "noch", "der", "Nach\u00b7welt", "Rich\u00b7ter\u00b7spruch", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "ADJD", "ADV", "ART", "NN", "NN", "$,"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.3": {"text": "Die dich den G\u00fctgen nennt, dein Werk den Frieden,", "tokens": ["Die", "dich", "den", "G\u00fct\u00b7gen", "nennt", ",", "dein", "Werk", "den", "Frie\u00b7den", ","], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["ART", "PPER", "ART", "NN", "VVFIN", "$,", "PPOSAT", "NN", "ART", "NN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.4": {"text": "Dich einschreibt in der Zukunft goldnes Buch.", "tokens": ["Dich", "ein\u00b7schreibt", "in", "der", "Zu\u00b7kunft", "gold\u00b7nes", "Buch", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "APPR", "ART", "NN", "ADJA", "NN", "$."], "meter": "+-+--+-+-+", "measure": "trochaic.penta.relaxed"}}, "stanza.3": {"line.1": {"text": "Zu fern gestellt, das Bittre zu vers\u00fc\u00dfen,", "tokens": ["Zu", "fern", "ge\u00b7stellt", ",", "das", "Bitt\u00b7re", "zu", "ver\u00b7s\u00fc\u00b7\u00dfen", ","], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["PTKA", "ADJD", "VVPP", "$,", "ART", "NN", "PTKZU", "VVINF", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "Das Kopf und Brust denn etwa doch beschleicht,", "tokens": ["Das", "Kopf", "und", "Brust", "denn", "et\u00b7wa", "doch", "be\u00b7schleicht", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "KON", "NN", "KON", "ADV", "ADV", "VVPP", "$,"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.3": {"text": "La\u00df uns den Teppich breiten dir zu F\u00fc\u00dfen,", "tokens": ["La\u00df", "uns", "den", "Tep\u00b7pich", "brei\u00b7ten", "dir", "zu", "F\u00fc\u00b7\u00dfen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVIMP", "PPER", "ART", "NN", "VVFIN", "PPER", "APPR", "NN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.4": {"text": "Auf da\u00df dein Schritt, nach so viel schweren, leicht.", "tokens": ["Auf", "da\u00df", "dein", "Schritt", ",", "nach", "so", "viel", "schwe\u00b7ren", ",", "leicht", "."], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct", "word", "punct"], "pos": ["APPR", "KOUS", "PPOSAT", "NN", "$,", "APPR", "ADV", "ADV", "VVINF", "$,", "ADJD", "$."], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}}}}}