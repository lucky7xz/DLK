{"textgrid.poem.33531": {"metadata": {"author": {"name": "Lichtenstein, Alfred", "birth": "N.A.", "death": "N.A."}, "title": "1", "genre": "verse", "period": "N.A.", "pub_year": 1914, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Gut ist und sch\u00f6n, ein Jahr Soldat zu sein.", "tokens": ["Gut", "ist", "und", "sch\u00f6n", ",", "ein", "Jahr", "Sol\u00b7dat", "zu", "sein", "."], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["ADJD", "VAFIN", "KON", "ADJD", "$,", "ART", "NN", "NN", "PTKZU", "VAINF", "$."], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.2": {"text": "Man lebt so l\u00e4nger. Und man freut sich doch", "tokens": ["Man", "lebt", "so", "l\u00e4n\u00b7ger", ".", "Und", "man", "freut", "sich", "doch"], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "word"], "pos": ["PIS", "VVFIN", "ADV", "ADJD", "$.", "KON", "PIS", "VVFIN", "PRF", "ADV"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.3": {"text": "Mit jedem Funken Zeit, den man dem Tod entrei\u00dft.", "tokens": ["Mit", "je\u00b7dem", "Fun\u00b7ken", "Zeit", ",", "den", "man", "dem", "Tod", "ent\u00b7rei\u00dft", "."], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "PIAT", "NN", "NN", "$,", "PRELS", "PIS", "ART", "NN", "VVFIN", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.4": {"text": "Dies arme Hirn, zerfetzt von St\u00e4dtersehnsucht,", "tokens": ["Dies", "ar\u00b7me", "Hirn", ",", "zer\u00b7fetzt", "von", "St\u00e4d\u00b7ter\u00b7sehn\u00b7sucht", ","], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["PDS", "ADJA", "NN", "$,", "VVPP", "APPR", "NN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.5": {"text": "Blutig von B\u00fcchern, Leibern, Abenden,", "tokens": ["Blu\u00b7tig", "von", "B\u00fc\u00b7chern", ",", "Lei\u00b7bern", ",", "A\u00b7ben\u00b7den", ","], "token_info": ["word", "word", "word", "punct", "word", "punct", "word", "punct"], "pos": ["ADJD", "APPR", "NN", "$,", "NN", "$,", "NN", "$,"], "meter": "+--+-+-+--", "measure": "iambic.tetra.invert"}, "line.6": {"text": "Trostlos betr\u00fcbt und aller S\u00fcnden voll,", "tokens": ["Trost\u00b7los", "be\u00b7tr\u00fcbt", "und", "al\u00b7ler", "S\u00fcn\u00b7den", "voll", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADJD", "VVPP", "KON", "PIAT", "NN", "ADJD", "$,"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.7": {"text": "Dreiviertel schon zerst\u00f6rt \u2013 kann nun", "tokens": ["Drei\u00b7vier\u00b7tel", "schon", "zer\u00b7st\u00f6rt", "\u2013", "kann", "nun"], "token_info": ["word", "word", "word", "punct", "word", "word"], "pos": ["NE", "ADV", "VVPP", "$(", "VMFIN", "ADV"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.8": {"text": "Beim Stillestehen und beim Aufmarschieren,", "tokens": ["Beim", "Stil\u00b7les\u00b7te\u00b7hen", "und", "beim", "Auf\u00b7mar\u00b7schie\u00b7ren", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["APPRART", "NN", "KON", "APPRART", "NN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.9": {"text": "Beim Armerollen und beim Beineschwingen", "tokens": ["Beim", "Ar\u00b7me\u00b7rol\u00b7len", "und", "beim", "Bei\u00b7ne\u00b7schwin\u00b7gen"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["APPRART", "NN", "KON", "APPRART", "NN"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.10": {"text": "In einer Ecke des Sch\u00e4dels sanft verrosten.", "tokens": ["In", "ei\u00b7ner", "E\u00b7cke", "des", "Sch\u00e4\u00b7dels", "sanft", "ver\u00b7ros\u00b7ten", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "ART", "NN", "ART", "NN", "ADJD", "VVFIN", "$."], "meter": "-+-+--+-+-+-", "measure": "iambic.penta.relaxed"}}, "stanza.2": {"line.1": {"text": "O, der Gestank in einer Marschkolonne.", "tokens": ["O", ",", "der", "Ge\u00b7stank", "in", "ei\u00b7ner", "Marschko\u00b7lon\u00b7ne", "."], "token_info": ["word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["NE", "$,", "ART", "NN", "APPR", "ART", "NN", "$."], "meter": "+--+-+--+-", "measure": "iambic.tetra.invert"}, "line.2": {"text": "O, Laufschritt \u00fcber holdes Fr\u00fchlingsland.", "tokens": ["O", ",", "Lauf\u00b7schritt", "\u00fc\u00b7ber", "hol\u00b7des", "Fr\u00fch\u00b7lings\u00b7land", "."], "token_info": ["word", "punct", "word", "word", "word", "word", "punct"], "pos": ["NE", "$,", "NN", "APPR", "ADJA", "NN", "$."], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}}}}}