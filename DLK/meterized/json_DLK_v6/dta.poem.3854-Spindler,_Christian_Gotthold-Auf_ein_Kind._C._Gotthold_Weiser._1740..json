{"dta.poem.3854": {"metadata": {"author": {"name": "Spindler, Christian Gotthold", "birth": "N.A.", "death": "N.A."}, "title": "Auf ein Kind.  \n  C. Gotthold Weiser.  1740.", "genre": "Lyrik, Drama", "period": "N.A.", "pub_year": "1745", "urn": "urn:nbn:de:kobv:b4-20581-9", "language": ["de:0.99"], "booktitle": "Spindler, Christian Gotthold: Unschuldige Jugend-Fr\u00fcchte. Leipzig, 1745."}, "poem": {"stanza.1": {"line.1": {"text": "Wandrer! suchst du einen Gotthold, der GOtt", "tokens": ["Wand\u00b7rer", "!", "suchst", "du", "ei\u00b7nen", "Got\u00b7thold", ",", "der", "Gott"], "token_info": ["word", "punct", "word", "word", "word", "word", "punct", "word", "word"], "pos": ["NN", "$.", "VVFIN", "PPER", "ART", "NN", "$,", "ART", "NN"], "meter": "+-+-+--+-+", "measure": "trochaic.penta.relaxed"}, "line.2": {"text": "hold und lieb gewesen,", "tokens": ["hold", "und", "lieb", "ge\u00b7we\u00b7sen", ","], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["ADJD", "KON", "ADJD", "VAPP", "$,"], "meter": "+-+-+-", "measure": "trochaic.tri"}, "line.3": {"text": "Hier liegt sein erbla\u00dfter Leichnam; Gottholds", "tokens": ["Hier", "liegt", "sein", "er\u00b7bla\u00df\u00b7ter", "Leich\u00b7nam", ";", "Got\u00b7tholds"], "token_info": ["word", "word", "word", "word", "word", "punct", "word"], "pos": ["ADV", "VVFIN", "PPOSAT", "ADJA", "NN", "$.", "NN"], "meter": "-+--+-+--+", "measure": "iambic.tetra.relaxed"}, "line.4": {"text": "Seele ist genesen.", "tokens": ["See\u00b7le", "ist", "ge\u00b7ne\u00b7sen", "."], "token_info": ["word", "word", "word", "punct"], "pos": ["NN", "VAFIN", "VVPP", "$."], "meter": "+-+-+-", "measure": "trochaic.tri"}, "line.5": {"text": "Gottes Huld nahm Gottholds Geist bald ins hol-", "tokens": ["Got\u00b7tes", "Huld", "nahm", "Got\u00b7tholds", "Geist", "bald", "ins", "hol"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word"], "pos": ["NN", "NN", "VVFIN", "NE", "NN", "ADV", "APPRART", "TRUNC"], "meter": "+-+-+-+--+", "measure": "iambic.penta.chol"}, "line.6": {"text": "de Vaterland,", "tokens": ["de", "Va\u00b7ter\u00b7land", ","], "token_info": ["word", "word", "punct"], "pos": ["NE", "NN", "$,"], "meter": "-+-+", "measure": "iambic.di"}, "line.7": {"text": "Eltern, Freunde und Geschwister, alle die ihr ihm", "tokens": ["El\u00b7tern", ",", "Freun\u00b7de", "und", "Ge\u00b7schwis\u00b7ter", ",", "al\u00b7le", "die", "ihr", "ihm"], "token_info": ["word", "punct", "word", "word", "word", "punct", "word", "word", "word", "word"], "pos": ["NN", "$,", "NN", "KON", "NN", "$,", "PIAT", "PRELS", "PPER", "PPER"], "meter": "+-+-+-+-+-+-+", "measure": "trochaic.septa"}, "line.8": {"text": "verwandt,", "tokens": ["ver\u00b7wandt", ","], "token_info": ["word", "punct"], "pos": ["VVPP", "$,"], "meter": "-+", "measure": "iambic.single"}, "line.9": {"text": "Hemmt den sonst gerechten Schmertz, stillt die", "tokens": ["Hemmt", "den", "sonst", "ge\u00b7rech\u00b7ten", "Schmertz", ",", "stillt", "die"], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word"], "pos": ["VVFIN", "ART", "ADV", "ADJA", "NN", "$,", "VVFIN", "ART"], "meter": "+-+-+-+-+", "measure": "trochaic.penta"}, "line.10": {"text": "bangen Klage-Lieder,", "tokens": ["ban\u00b7gen", "Kla\u00b7ge\u00b7Lie\u00b7der", ","], "token_info": ["word", "word", "punct"], "pos": ["ADJA", "NN", "$,"], "meter": "+-+-+-", "measure": "trochaic.tri"}, "line.11": {"text": "Wenn euch GOttes Huld l\u00e4st sterben, seht ihr eu-", "tokens": ["Wenn", "euch", "Got\u00b7tes", "Huld", "l\u00e4st", "ster\u00b7ben", ",", "seht", "ihr", "eu"], "token_info": ["word", "word", "word", "word", "word", "word", "punct", "word", "word", "word"], "pos": ["KOUS", "PPER", "NN", "NN", "ADJD", "VVINF", "$,", "VVFIN", "PPOSAT", "TRUNC"], "meter": "+-+-+-+-+-+", "measure": "trochaic.hexa"}, "line.12": {"text": "ren Gotthold wieder.", "tokens": ["ren", "Got\u00b7thold", "wie\u00b7der", "."], "token_info": ["word", "word", "word", "punct"], "pos": ["VVFIN", "NE", "ADV", "$."], "meter": "-+-+-", "measure": "iambic.di"}}}}}