{"dta.poem.23772": {"metadata": {"author": {"name": "Wei\u00dfe, Christian Felix", "birth": "N.A.", "death": "N.A."}, "title": "Ein kleines Unrecht.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1767", "urn": "urn:nbn:de:kobv:b4-20643-5", "language": ["de:0.99"], "booktitle": "Wei\u00dfe, Christian Felix: Lieder f\u00fcr Kinder. Leipzig, 1767."}, "poem": {"stanza.1": {"line.1": {"text": "Meinen Vetter Christian", "tokens": ["Mei\u00b7nen", "Vet\u00b7ter", "Chris\u00b7ti\u00b7an"], "token_info": ["word", "word", "word"], "pos": ["PPOSAT", "NN", "NE"], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.2": {"text": "Wagts ein Bienchen einst zu stechen:", "tokens": ["Wagts", "ein", "Bien\u00b7chen", "einst", "zu", "ste\u00b7chen", ":"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["NE", "ART", "NN", "ADV", "PTKZU", "VVINF", "$."], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.3": {"text": "Zornig sprach der kleine Mann,", "tokens": ["Zor\u00b7nig", "sprach", "der", "klei\u00b7ne", "Mann", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["NN", "VVFIN", "ART", "ADJA", "NN", "$,"], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.4": {"text": "Wart, nur wart, ich will mich r\u00e4chen!", "tokens": ["Wart", ",", "nur", "wart", ",", "ich", "will", "mich", "r\u00e4\u00b7chen", "!"], "token_info": ["word", "punct", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["VAFIN", "$,", "ADV", "VVFIN", "$,", "PPER", "VMFIN", "PRF", "VVINF", "$."], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}}, "stanza.2": {"line.1": {"text": "Pl\u00f6tzlich brach mit k\u00fchner Hand,", "tokens": ["Pl\u00f6tz\u00b7lich", "brach", "mit", "k\u00fch\u00b7ner", "Hand", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ADJD", "VVFIN", "APPR", "ADJA", "NN", "$,"], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.2": {"text": "Er vom n\u00e4chsten Busche Reiser,", "tokens": ["Er", "vom", "n\u00e4chs\u00b7ten", "Bu\u00b7sche", "Rei\u00b7ser", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "APPRART", "ADJA", "NN", "NN", "$,"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.3": {"text": "Schlug, und warf mit unter Sand", "tokens": ["Schlug", ",", "und", "warf", "mit", "un\u00b7ter", "Sand"], "token_info": ["word", "punct", "word", "word", "word", "word", "word"], "pos": ["VVFIN", "$,", "KON", "VVFIN", "APPR", "APPR", "NN"], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.4": {"text": "An der armen Bienen H\u00e4user.", "tokens": ["An", "der", "ar\u00b7men", "Bie\u00b7nen", "H\u00e4u\u00b7ser", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "ART", "ADJA", "NN", "NN", "$."], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}}, "stanza.3": {"line.1": {"text": "Doch der kleinen V\u00f6gel Heer", "tokens": ["Doch", "der", "klei\u00b7nen", "V\u00f6\u00b7gel", "Heer"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["KON", "ART", "ADJA", "NN", "NN"], "meter": "--+-+-+", "measure": "anapaest.init"}, "line.2": {"text": "Lie\u00df die Schmach nicht ungerochen,", "tokens": ["Lie\u00df", "die", "Schmach", "nicht", "un\u00b7ge\u00b7ro\u00b7chen", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "ART", "NN", "PTKNEG", "ADJD", "$,"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.3": {"text": "Alles fiel ihn an, und er", "tokens": ["Al\u00b7les", "fiel", "ihn", "an", ",", "und", "er"], "token_info": ["word", "word", "word", "word", "punct", "word", "word"], "pos": ["PIS", "VVFIN", "PPER", "PTKVZ", "$,", "KON", "PPER"], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.4": {"text": "Wurde j\u00e4mmerlich zerstochen.", "tokens": ["Wur\u00b7de", "j\u00e4m\u00b7mer\u00b7lich", "zer\u00b7sto\u00b7chen", "."], "token_info": ["word", "word", "word", "punct"], "pos": ["VAFIN", "ADJD", "VVINF", "$."], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}}, "stanza.4": {"line.1": {"text": "\u201e", "tokens": ["\u201e"], "token_info": ["punct"], "pos": ["$("]}, "line.2": {"text": "&q;Wird mein Informator sagen:", "tokens": ["&", "q", ";", "Wird", "mein", "In\u00b7for\u00b7ma\u00b7tor", "sa\u00b7gen", ":"], "token_info": ["punct", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["$(", "FM.la", "$.", "VAFIN", "PPOSAT", "NN", "VVINF", "$."], "meter": "+-+--+-+-", "measure": "trochaic.tetra.relaxed"}, "line.3": {"text": "&q;Lerne k\u00fcnftig in Geduld", "tokens": ["&", "q", ";", "Ler\u00b7ne", "k\u00fcnf\u00b7tig", "in", "Ge\u00b7duld"], "token_info": ["punct", "word", "punct", "word", "word", "word", "word"], "pos": ["$(", "FM.la", "$.", "NN", "ADJD", "APPR", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "&q;Ein geringes Unrecht tragen!\u201e", "tokens": ["&", "q", ";", "Ein", "ge\u00b7rin\u00b7ges", "Un\u00b7recht", "tra\u00b7gen", "!", "\u201e"], "token_info": ["punct", "word", "punct", "word", "word", "word", "word", "punct", "punct"], "pos": ["$(", "FM.la", "$.", "ART", "ADJA", "NN", "VVINF", "$.", "$("], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}}}}}