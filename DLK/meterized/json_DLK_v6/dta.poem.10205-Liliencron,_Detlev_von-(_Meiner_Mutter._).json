{"dta.poem.10205": {"metadata": {"author": {"name": "Liliencron, Detlev von", "birth": "N.A.", "death": "N.A."}, "title": "( Meiner Mutter. )", "genre": "Lyrik", "period": "N.A.", "pub_year": "1883", "urn": "urn:nbn:de:kobv:b4-200905197184", "language": ["de:0.99"], "booktitle": "Liliencron, Detlev von: Adjutantenritte und andere Gedichte. Leipzig, [1883]."}, "poem": {"stanza.1": {"line.1": {"text": "Wie oft sah ich die blassen H\u00e4nde n\u00e4hen,", "tokens": ["Wie", "oft", "sah", "ich", "die", "blas\u00b7sen", "H\u00e4n\u00b7de", "n\u00e4\u00b7hen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PWAV", "ADV", "VVFIN", "PPER", "ART", "ADJA", "NN", "VVFIN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "Ein St\u00fcck f\u00fcr mich \u2014 wie liebevoll du sorgtest.", "tokens": ["Ein", "St\u00fcck", "f\u00fcr", "mich", "wie", "lie\u00b7be\u00b7voll", "du", "sorg\u00b7test", "."], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "APPR", "PPER", "$(", "PWAV", "ADJD", "PPER", "VVFIN", "$."], "meter": "+-+-+-+-+-+", "measure": "trochaic.hexa"}, "line.3": {"text": "Ich sah zum Himmel deine Augen flehen,", "tokens": ["Ich", "sah", "zum", "Him\u00b7mel", "dei\u00b7ne", "Au\u00b7gen", "fle\u00b7hen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "APPRART", "NN", "PPOSAT", "NN", "VVINF", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.4": {"text": "Ein Wunsch f\u00fcr mich \u2014 wie liebevoll du sorgtest.", "tokens": ["Ein", "Wunsch", "f\u00fcr", "mich", "wie", "lie\u00b7be\u00b7voll", "du", "sorg\u00b7test", "."], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "APPR", "PPER", "$(", "PWAV", "ADJD", "PPER", "VVFIN", "$."], "meter": "+-+-+-+-+-+", "measure": "trochaic.hexa"}, "line.5": {"text": "Und an mein Bett kamst du mit leisen Zehen,", "tokens": ["Und", "an", "mein", "Bett", "kamst", "du", "mit", "lei\u00b7sen", "Ze\u00b7hen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "APPR", "PPOSAT", "NN", "VVFIN", "PPER", "APPR", "ADJA", "NN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.6": {"text": "Ein Schutz f\u00fcr mich \u2014 wie sorgenvoll du horchtest.", "tokens": ["Ein", "Schutz", "f\u00fcr", "mich", "wie", "sor\u00b7gen\u00b7voll", "du", "horch\u00b7test", "."], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "APPR", "PPER", "$(", "PWAV", "ADJD", "PPER", "VVFIN", "$."], "meter": "-+--+-+-+-+", "measure": "iambic.penta.relaxed"}, "line.7": {"text": "Schon l\u00e4ngst dein Grab die Winde \u00fcberwehen,", "tokens": ["Schon", "l\u00e4ngst", "dein", "Grab", "die", "Win\u00b7de", "\u00fc\u00b7berw\u00b7e\u00b7hen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "ADV", "PPOSAT", "NN", "ART", "NN", "VVINF", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.8": {"text": "Ein Gru\u00df f\u00fcr mich \u2014 wie liebevoll du sorgtest.", "tokens": ["Ein", "Gru\u00df", "f\u00fcr", "mich", "wie", "lie\u00b7be\u00b7voll", "du", "sorg\u00b7test", "."], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "APPR", "PPER", "$(", "PWAV", "ADJD", "PPER", "VVFIN", "$."], "meter": "++--+-+-+-+", "measure": "trochaic.hexa.relaxed"}}}}}