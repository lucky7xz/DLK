{"textgrid.poem.35181": {"metadata": {"author": {"name": "May, Karl", "birth": "N.A.", "death": "N.A."}, "title": "Trost", "genre": "verse", "period": "N.A.", "pub_year": 1877, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Siehst du ein Menschenkind in Thr\u00e4nen,", "tokens": ["Siehst", "du", "ein", "Men\u00b7schen\u00b7kind", "in", "Thr\u00e4\u00b7nen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "PPER", "ART", "NN", "APPR", "NN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.2": {"text": "Verhaltnes Schluchzen in der Brust,", "tokens": ["Ver\u00b7halt\u00b7nes", "Schluch\u00b7zen", "in", "der", "Brust", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ADJA", "NN", "APPR", "ART", "NN", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.3": {"text": "So wolle ja nicht, ja nicht w\u00e4hnen,", "tokens": ["So", "wol\u00b7le", "ja", "nicht", ",", "ja", "nicht", "w\u00e4h\u00b7nen", ","], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["ADV", "VMFIN", "ADV", "PTKNEG", "$,", "ADV", "PTKNEG", "VVINF", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.4": {"text": "Da\u00df du mit Worten tr\u00f6sten mu\u00dft.", "tokens": ["Da\u00df", "du", "mit", "Wor\u00b7ten", "tr\u00f6s\u00b7ten", "mu\u00dft", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "PPER", "APPR", "NN", "VVINF", "VMFIN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}}, "stanza.2": {"line.1": {"text": "Vermeide es, ihn zu berathen;", "tokens": ["Ver\u00b7mei\u00b7de", "es", ",", "ihn", "zu", "be\u00b7ra\u00b7then", ";"], "token_info": ["word", "word", "punct", "word", "word", "word", "punct"], "pos": ["VVFIN", "PPER", "$,", "PPER", "PTKZU", "VVINF", "$."], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.2": {"text": "Geh weiter, aber sende dann", "tokens": ["Geh", "wei\u00b7ter", ",", "a\u00b7ber", "sen\u00b7de", "dann"], "token_info": ["word", "word", "punct", "word", "word", "word"], "pos": ["NE", "PTKVZ", "$,", "ADV", "VVFIN", "ADV"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.3": {"text": "Die Liebe, die in stillen Thaten", "tokens": ["Die", "Lie\u00b7be", ",", "die", "in", "stil\u00b7len", "Tha\u00b7ten"], "token_info": ["word", "word", "punct", "word", "word", "word", "word"], "pos": ["ART", "NN", "$,", "PRELS", "APPR", "ADJA", "NN"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.4": {"text": "Ihm heimlich, heimlich helfen kann.", "tokens": ["Ihm", "heim\u00b7lich", ",", "heim\u00b7lich", "hel\u00b7fen", "kann", "."], "token_info": ["word", "word", "punct", "word", "word", "word", "punct"], "pos": ["PPER", "ADJD", "$,", "ADJD", "VVINF", "VMFIN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}}, "stanza.3": {"line.1": {"text": "Ber\u00fchrt ein kalter Schall die Wunde,", "tokens": ["Be\u00b7r\u00fchrt", "ein", "kal\u00b7ter", "Schall", "die", "Wun\u00b7de", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "ART", "ADJA", "NN", "ART", "NN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.2": {"text": "So schmerzt er nur und heilt sie nicht;", "tokens": ["So", "schmerzt", "er", "nur", "und", "heilt", "sie", "nicht", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VVFIN", "PPER", "ADV", "KON", "VVFIN", "PPER", "PTKNEG", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.3": {"text": "Der Trost wohnt nicht im leeren Munde,", "tokens": ["Der", "Trost", "wohnt", "nicht", "im", "lee\u00b7ren", "Mun\u00b7de", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VVFIN", "PTKNEG", "APPRART", "ADJA", "NN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.4": {"text": "Er ist des Herzens tiefste Pflicht.", "tokens": ["Er", "ist", "des", "Her\u00b7zens", "tiefs\u00b7te", "Pflicht", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VAFIN", "ART", "NN", "ADJA", "NN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}}, "stanza.4": {"line.1": {"text": "Vor einem Wort am rechten Orte", "tokens": ["Vor", "ei\u00b7nem", "Wort", "am", "rech\u00b7ten", "Or\u00b7te"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["APPR", "ART", "NN", "APPRART", "ADJA", "NN"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.2": {"text": "Kehrt wohl der Harm beruhigt um,", "tokens": ["Kehrt", "wohl", "der", "Harm", "be\u00b7ru\u00b7higt", "um", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVIMP", "ADV", "ART", "NN", "VVFIN", "PTKVZ", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.3": {"text": "Doch wahrer Schmerz hat keine Worte,", "tokens": ["Doch", "wah\u00b7rer", "Schmerz", "hat", "kei\u00b7ne", "Wor\u00b7te", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "ADJA", "NN", "VAFIN", "PIAT", "NN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.4": {"text": "Und auch der wahre Trost ist stumm.", "tokens": ["Und", "auch", "der", "wah\u00b7re", "Trost", "ist", "stumm", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "ADV", "ART", "ADJA", "NN", "VAFIN", "ADJD", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}}}}}