{"textgrid.poem.59840": {"metadata": {"author": {"name": "Bodenstedt, Friedrich von", "birth": "N.A.", "death": "N.A."}, "title": "4.", "genre": "verse", "period": "N.A.", "pub_year": 1855, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Mag bei dem Reden der Wahrheit auch gro\u00dfe Gefahr sein,", "tokens": ["Mag", "bei", "dem", "Re\u00b7den", "der", "Wahr\u00b7heit", "auch", "gro\u00b7\u00dfe", "Ge\u00b7fahr", "sein", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VMFIN", "APPR", "ART", "NN", "ART", "NN", "ADV", "ADJA", "NN", "VAINF", "$,"], "meter": "+--+--+--+--+-", "measure": "dactylic.penta"}, "line.2": {"text": "Immer doch, Mirza-Schaffy, mu\u00dft du ehrlich und wahr sein \u2013", "tokens": ["Im\u00b7mer", "doch", ",", "Mir\u00b7za\u00b7Schaffy", ",", "mu\u00dft", "du", "ehr\u00b7lich", "und", "wahr", "sein", "\u2013"], "token_info": ["word", "word", "punct", "word", "punct", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "ADV", "$,", "NE", "$,", "VMFIN", "PPER", "ADJD", "KON", "ADJD", "VAINF", "$("], "meter": "+-+-+-+-+--+-", "measure": "hexameter"}, "line.3": {"text": "Darfst nicht zum Irrlichte werden im Sumpfe der L\u00fcge,", "tokens": ["Darfst", "nicht", "zum", "Irr\u00b7lich\u00b7te", "wer\u00b7den", "im", "Sump\u00b7fe", "der", "L\u00fc\u00b7ge", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PAV", "PTKNEG", "APPRART", "NN", "VAFIN", "APPRART", "NN", "ART", "NN", "$,"], "meter": "-+-+--+--+--+-", "measure": "iambic.penta.relaxed"}, "line.4": {"text": "Denn alles Sch\u00f6ne ist wahr, und des Sch\u00f6nen kannst du nie bar sein!", "tokens": ["Denn", "al\u00b7les", "Sch\u00f6\u00b7ne", "ist", "wahr", ",", "und", "des", "Sch\u00f6\u00b7nen", "kannst", "du", "nie", "bar", "sein", "!"], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "PIAT", "NN", "VAFIN", "ADJD", "$,", "KON", "ART", "NN", "VMFIN", "PPER", "ADV", "ADJD", "VAINF", "$."], "meter": "-+-+-++--+-+-+-+", "measure": "iambic.octa.plus.relaxed"}, "line.5": {"text": "Doch zu jeglicher Strafe und Unbill kluger Vermeidung", "tokens": ["Doch", "zu", "jeg\u00b7li\u00b7cher", "Stra\u00b7fe", "und", "Un\u00b7bill", "klu\u00b7ger", "Ver\u00b7mei\u00b7dung"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word"], "pos": ["KON", "APPR", "PIAT", "NN", "KON", "ADJD", "ADJA", "NN"], "meter": "--+--+--+-+--+-", "measure": "anapaest.tri.plus"}, "line.6": {"text": "H\u00fcll' deine Weisheit in blumiger Worte Verkleidung:", "tokens": ["H\u00fcll'", "dei\u00b7ne", "Weis\u00b7heit", "in", "blu\u00b7mi\u00b7ger", "Wor\u00b7te", "Ver\u00b7klei\u00b7dung", ":"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["NN", "PPOSAT", "NN", "APPR", "ADJA", "NN", "NN", "$."], "meter": "+--+--+--+--+-", "measure": "dactylic.penta"}, "line.7": {"text": "Gleichwie die Traube mit k\u00f6stlichem Tranke gef\u00fcllt ist", "tokens": ["Gleich\u00b7wie", "die", "Trau\u00b7be", "mit", "k\u00f6st\u00b7li\u00b7chem", "Tran\u00b7ke", "ge\u00b7f\u00fcllt", "ist"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word"], "pos": ["KON", "ART", "NN", "APPR", "ADJA", "NN", "VVPP", "VAFIN"], "meter": "+--+--+--+--+-", "measure": "dactylic.penta"}, "line.8": {"text": "Und doch von Laube und gr\u00fcnem Geranke umh\u00fcllt ist.", "tokens": ["Und", "doch", "von", "Lau\u00b7be", "und", "gr\u00fc\u00b7nem", "Ge\u00b7ran\u00b7ke", "um\u00b7h\u00fcllt", "ist", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "ADV", "APPR", "NN", "KON", "ADJA", "NN", "VVPP", "VAFIN", "$."], "meter": "-+-+--+--+--+-", "measure": "iambic.penta.relaxed"}}}}}