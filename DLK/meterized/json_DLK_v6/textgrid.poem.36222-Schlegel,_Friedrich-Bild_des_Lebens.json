{"textgrid.poem.36222": {"metadata": {"author": {"name": "Schlegel, Friedrich", "birth": "N.A.", "death": "N.A."}, "title": "Bild des Lebens", "genre": "verse", "period": "N.A.", "pub_year": 1800, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Krank, matt, geb\u00fcckt, sah ich den Alten schleichen,", "tokens": ["Krank", ",", "matt", ",", "ge\u00b7b\u00fcckt", ",", "sah", "ich", "den", "Al\u00b7ten", "schlei\u00b7chen", ","], "token_info": ["word", "punct", "word", "punct", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["NN", "$,", "ADJD", "$,", "VVPP", "$,", "VVFIN", "PPER", "ART", "NN", "VVFIN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "Den Blinden mu\u00df die Hand des Mitleids f\u00fchren.", "tokens": ["Den", "Blin\u00b7den", "mu\u00df", "die", "Hand", "des", "Mit\u00b7leids", "f\u00fch\u00b7ren", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VMFIN", "ART", "NN", "ART", "NN", "VVINF", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Weh! die der Augen s\u00fc\u00dfes Licht verlieren;", "tokens": ["Weh", "!", "die", "der", "Au\u00b7gen", "s\u00fc\u00b7\u00dfes", "Licht", "ver\u00b7lie\u00b7ren", ";"], "token_info": ["word", "punct", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["NN", "$.", "ART", "ART", "NN", "ADJA", "NN", "VVINF", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.4": {"text": "Das k\u00f6nnte wohl den h\u00e4rt'sten Sinn erweichen!", "tokens": ["Das", "k\u00f6nn\u00b7te", "wohl", "den", "h\u00e4rt'\u00b7sten", "Sinn", "er\u00b7wei\u00b7chen", "!"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PDS", "VMFIN", "ADV", "ART", "ADJA", "NN", "VVINF", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}, "stanza.2": {"line.1": {"text": "Ob bald die Nebel vor der Sonne weichen,", "tokens": ["Ob", "bald", "die", "Ne\u00b7bel", "vor", "der", "Son\u00b7ne", "wei\u00b7chen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "ADV", "ART", "NN", "APPR", "ART", "NN", "VVINF", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "Fragt er, die Strahlen schon die Berge zieren.", "tokens": ["Fragt", "er", ",", "die", "Strah\u00b7len", "schon", "die", "Ber\u00b7ge", "zie\u00b7ren", "."], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "PPER", "$,", "ART", "NN", "ADV", "ART", "NN", "VVFIN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Es h\u00f6rend, hebt er an zu triumphieren;", "tokens": ["Es", "h\u00f6\u00b7rend", ",", "hebt", "er", "an", "zu", "tri\u00b7um\u00b7phie\u00b7ren", ";"], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VVPP", "$,", "VVFIN", "PPER", "PTKVZ", "PTKZU", "VVINF", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.4": {"text": "Froh, durch Gesang den Himmel zu erreichen.", "tokens": ["Froh", ",", "durch", "Ge\u00b7sang", "den", "Him\u00b7mel", "zu", "er\u00b7rei\u00b7chen", "."], "token_info": ["word", "punct", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADJD", "$,", "APPR", "NN", "ART", "NN", "PTKZU", "VVINF", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}, "stanza.3": {"line.1": {"text": "Das war es, was mich mehr als Tr\u00e4nen r\u00fchrte;", "tokens": ["Das", "war", "es", ",", "was", "mich", "mehr", "als", "Tr\u00e4\u00b7nen", "r\u00fchr\u00b7te", ";"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PDS", "VAFIN", "PPER", "$,", "PWS", "PPER", "ADV", "KOUS", "NN", "VVFIN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "Ein rechtes Bild des armen Menschenlebens,", "tokens": ["Ein", "rech\u00b7tes", "Bild", "des", "ar\u00b7men", "Men\u00b7schen\u00b7le\u00b7bens", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "ART", "ADJA", "NN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Wie Blind' auch uns in Nacht das Mitleid f\u00fchrte.", "tokens": ["Wie", "Blind'", "auch", "uns", "in", "Nacht", "das", "Mit\u00b7leid", "f\u00fchr\u00b7te", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PWAV", "NN", "ADV", "PPER", "APPR", "NN", "ART", "NN", "VVFIN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}, "stanza.4": {"line.1": {"text": "Die Sonne sucht der dumpfe Blick vergebens;", "tokens": ["Die", "Son\u00b7ne", "sucht", "der", "dump\u00b7fe", "Blick", "ver\u00b7ge\u00b7bens", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VVFIN", "ART", "ADJA", "NN", "ADV", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "Selig, wenn nur das Herz den Strahl noch sp\u00fcrte,", "tokens": ["Se\u00b7lig", ",", "wenn", "nur", "das", "Herz", "den", "Strahl", "noch", "sp\u00fcr\u00b7te", ","], "token_info": ["word", "punct", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["NE", "$,", "KOUS", "ADV", "ART", "NN", "ART", "NN", "ADV", "VVFIN", "$,"], "meter": "+--+-+-+-+-", "measure": "iambic.penta.invert"}, "line.3": {"text": "In Nacht das Licht begr\u00fc\u00dfend unsres Strebens!", "tokens": ["In", "Nacht", "das", "Licht", "be\u00b7gr\u00fc\u00b7\u00dfend", "uns\u00b7res", "Stre\u00b7bens", "!"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "NN", "ART", "NN", "VVPP", "PPOSAT", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}}}}