{"textgrid.poem.33064": {"metadata": {"author": {"name": "B\u00fcchner, Luise", "birth": "N.A.", "death": "N.A."}, "title": "1.", "genre": "verse", "period": "N.A.", "pub_year": 1849, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Wie oft gedenkt mein Herz der sch\u00f6nen Sage", "tokens": ["Wie", "oft", "ge\u00b7denkt", "mein", "Herz", "der", "sch\u00f6\u00b7nen", "Sa\u00b7ge"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word"], "pos": ["PWAV", "ADV", "VVFIN", "PPOSAT", "NN", "ART", "ADJA", "NN"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "Von Pha\u00ebthon's Schwestern, welche \u2013 voll Erbarmen", "tokens": ["Von", "Pha\u00ebthon's", "Schwes\u00b7tern", ",", "wel\u00b7che", "\u2013", "voll", "Er\u00b7bar\u00b7men"], "token_info": ["word", "word", "word", "punct", "word", "punct", "word", "word"], "pos": ["APPR", "NE", "NN", "$,", "PRELS", "$(", "ADJD", "NN"], "meter": "+-+-+-+-+-", "measure": "trochaic.penta"}, "line.3": {"text": "Mit der Verzweiflung und dem Schmerz der Armen \u2013", "tokens": ["Mit", "der", "Ver\u00b7zwei\u00b7flung", "und", "dem", "Schmerz", "der", "Ar\u00b7men", "\u2013"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "ART", "NN", "KON", "ART", "NN", "ART", "NN", "$("], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.4": {"text": "Der G\u00f6tter Einer schuf zum Baum der Klage,", "tokens": ["Der", "G\u00f6t\u00b7ter", "Ei\u00b7ner", "schuf", "zum", "Baum", "der", "Kla\u00b7ge", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "PIS", "VVFIN", "APPRART", "NN", "ART", "NN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.5": {"text": "Zur Trauerweide, endend ihre Plage.", "tokens": ["Zur", "Trau\u00b7er\u00b7wei\u00b7de", ",", "en\u00b7dend", "ih\u00b7re", "Pla\u00b7ge", "."], "token_info": ["word", "word", "punct", "word", "word", "word", "punct"], "pos": ["APPRART", "NN", "$,", "VVPP", "PPOSAT", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.6": {"text": "Es sprie\u00dfen Zweige aus den sch\u00f6nen Armen,", "tokens": ["Es", "sprie\u00b7\u00dfen", "Zwei\u00b7ge", "aus", "den", "sch\u00f6\u00b7nen", "Ar\u00b7men", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "NN", "APPR", "ART", "ADJA", "NN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.7": {"text": "Mitleid'ge Rinde zieht sich um die warmen", "tokens": ["Mit\u00b7lei\u00b7d'\u00b7ge", "Rin\u00b7de", "zieht", "sich", "um", "die", "war\u00b7men"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["ADJA", "NN", "VVFIN", "PRF", "APPR", "ART", "ADJA"], "meter": "-+--+-+-+-+-", "measure": "iambic.penta.relaxed"}, "line.8": {"text": "Gequ\u00e4lten Herzen, und die laute Klage", "tokens": ["Ge\u00b7qu\u00e4l\u00b7ten", "Her\u00b7zen", ",", "und", "die", "lau\u00b7te", "Kla\u00b7ge"], "token_info": ["word", "word", "punct", "word", "word", "word", "word"], "pos": ["ADJA", "NN", "$,", "KON", "ART", "ADJA", "NN"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.9": {"text": "Wird leises Fl\u00fcstern, melancholisch Klingen.", "tokens": ["Wird", "lei\u00b7ses", "Fl\u00fcs\u00b7tern", ",", "me\u00b7lan\u00b7cho\u00b7lisch", "Klin\u00b7gen", "."], "token_info": ["word", "word", "word", "punct", "word", "word", "punct"], "pos": ["VAFIN", "ADJA", "NN", "$,", "ADJD", "NN", "$."], "meter": "-+-+--+--+-", "measure": "iambic.tetra.relaxed"}, "line.10": {"text": "Wir m\u00fcssen menschlich unsren Schmerz bezwingen,", "tokens": ["Wir", "m\u00fcs\u00b7sen", "menschlich", "un\u00b7sren", "Schmerz", "be\u00b7zwin\u00b7gen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VMFIN", "ADJD", "PPOSAT", "NN", "VVINF", "$,"], "meter": "-+--+-+-+-", "measure": "iambic.tetra.relaxed"}, "line.11": {"text": "Kein Schwesterherz darf mehr so s\u00fc\u00df vergeh'n!", "tokens": ["Kein", "Schwes\u00b7ter\u00b7herz", "darf", "mehr", "so", "s\u00fc\u00df", "ver\u00b7geh'n", "!"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PIAT", "NN", "VMFIN", "ADV", "ADV", "ADJD", "VVINF", "$."], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.12": {"text": "O, wollt's ein Gott! wie m\u00f6cht' auch ich so gerne", "tokens": ["O", ",", "wollt's", "ein", "Gott", "!", "wie", "m\u00f6cht'", "auch", "ich", "so", "ger\u00b7ne"], "token_info": ["word", "punct", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "word"], "pos": ["NE", "$,", "PWAV", "ART", "NN", "$.", "PWAV", "VMFIN", "ADV", "PPER", "ADV", "ADV"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.13": {"text": "Auf einem theuren Grab in weiter Ferne", "tokens": ["Auf", "ei\u00b7nem", "theu\u00b7ren", "Grab", "in", "wei\u00b7ter", "Fer\u00b7ne"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["APPR", "ART", "ADJA", "NN", "APPR", "ADV", "NN"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.14": {"text": "Als stille Trauerweide ewig steh'n!", "tokens": ["Als", "stil\u00b7le", "Trau\u00b7er\u00b7wei\u00b7de", "e\u00b7wig", "steh'n", "!"], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "ADJA", "NN", "ADJD", "VVINF", "$."], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}}}}}