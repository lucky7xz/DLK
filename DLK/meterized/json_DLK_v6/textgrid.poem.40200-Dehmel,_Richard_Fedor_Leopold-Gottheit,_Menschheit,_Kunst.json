{"textgrid.poem.40200": {"metadata": {"author": {"name": "Dehmel, Richard Fedor Leopold", "birth": "N.A.", "death": "N.A."}, "title": "Gottheit, Menschheit, Kunst", "genre": "verse", "period": "N.A.", "pub_year": 1891, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Als der kindliche Mensch das Auge noch wandte nach Oben", "tokens": ["Als", "der", "kind\u00b7li\u00b7che", "Mensch", "das", "Au\u00b7ge", "noch", "wand\u00b7te", "nach", "O\u00b7ben"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "word"], "pos": ["KOUS", "ART", "ADJA", "NN", "ART", "NN", "ADV", "VVFIN", "APPR", "NN"], "meter": "--+--+-+--+--+-", "measure": "anapaest.di.plus"}, "line.2": {"text": "und im ewigen Raum suchte ein ewig Geschlecht,", "tokens": ["und", "im", "e\u00b7wi\u00b7gen", "Raum", "such\u00b7te", "ein", "e\u00b7wig", "Ge\u00b7schlecht", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "APPRART", "ADJA", "NN", "VVFIN", "ART", "ADJD", "NN", "$,"], "meter": "--+--+---+--+", "measure": "anapaest.di.plus"}, "line.3": {"text": "als er die selige Ruhe, die Keinem g\u00f6nnte die Erde,", "tokens": ["als", "er", "die", "se\u00b7li\u00b7ge", "Ru\u00b7he", ",", "die", "Kei\u00b7nem", "g\u00f6nn\u00b7te", "die", "Er\u00b7de", ","], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "PPER", "ART", "ADJA", "NN", "$,", "PRELS", "PIS", "VVFIN", "ART", "NN", "$,"], "meter": "+--+--+--+-+--+-", "measure": "hexameter"}, "line.4": {"text": "weit ins unendliche All w\u00e4hnte und sehnte verbannt:", "tokens": ["weit", "ins", "un\u00b7end\u00b7li\u00b7che", "All", "w\u00e4hn\u00b7te", "und", "sehn\u00b7te", "ver\u00b7bannt", ":"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADJD", "APPRART", "ADJA", "NN", "VVFIN", "KON", "VVFIN", "VVPP", "$."], "meter": "+--+---+--+--+", "measure": "dactylic.di.plus"}, "line.5": {"text": "da umgab er sich gern mit den ", "tokens": ["da", "um\u00b7gab", "er", "sich", "gern", "mit", "den"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["ADV", "VVFIN", "PPER", "PRF", "ADV", "APPR", "ART"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.6": {"text": "auf dem erstrittenen Herd thronte der friedliche Gott.", "tokens": ["auf", "dem", "er\u00b7strit\u00b7te\u00b7nen", "Herd", "thron\u00b7te", "der", "fried\u00b7li\u00b7che", "Gott", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "ART", "ADJA", "NN", "VVFIN", "ART", "ADJA", "NN", "$."], "meter": "+--+--++--+--+", "measure": "dactylic.di.plus"}, "line.7": {"text": "Aber dem heiligen Wahn entwuchs die wirkliche Sch\u00f6nheit;", "tokens": ["A\u00b7ber", "dem", "hei\u00b7li\u00b7gen", "Wahn", "ent\u00b7wuchs", "die", "wirk\u00b7li\u00b7che", "Sch\u00f6n\u00b7heit", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "ART", "ADJA", "NN", "VVFIN", "ART", "ADJA", "NN", "$."], "meter": "+--+--+-+-+--+-", "measure": "hexameter"}, "line.8": {"text": "weil er edel geirrt, wurde ein Edleres wahr.", "tokens": ["weil", "er", "e\u00b7del", "ge\u00b7irrt", ",", "wur\u00b7de", "ein", "Ed\u00b7le\u00b7res", "wahr", "."], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "PPER", "ADJD", "VVPP", "$,", "VAFIN", "ART", "NN", "PTKVZ", "$."], "meter": "+-+--++--+--+", "measure": "trochaic.hexa.relaxed"}, "line.9": {"text": "Wo er die Gottheit geglaubt, da hatte die Menschheit gewaltet:", "tokens": ["Wo", "er", "die", "Got\u00b7theit", "ge\u00b7glaubt", ",", "da", "hat\u00b7te", "die", "Menschheit", "ge\u00b7wal\u00b7tet", ":"], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["PWAV", "PPER", "ART", "NN", "VVPP", "$,", "ADV", "VAFIN", "ART", "NN", "VVPP", "$."], "meter": "---+--+-+--+-+-", "measure": "iambic.penta.relaxed"}, "line.10": {"text": "glaub' an die Menschheit, Mensch! und du bist selber ein Gott!", "tokens": ["glaub'", "an", "die", "Menschheit", ",", "Mensch", "!", "und", "du", "bist", "sel\u00b7ber", "ein", "Gott", "!"], "token_info": ["word", "word", "word", "word", "punct", "word", "punct", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "APPR", "ART", "NN", "$,", "NN", "$.", "KON", "PPER", "VAFIN", "ADV", "ART", "NN", "$."], "meter": "-+--+-+-+--+", "measure": "iambic.penta.relaxed"}}}}}