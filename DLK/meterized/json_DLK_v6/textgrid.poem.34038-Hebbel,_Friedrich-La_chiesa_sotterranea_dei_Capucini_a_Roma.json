{"textgrid.poem.34038": {"metadata": {"author": {"name": "Hebbel, Friedrich", "birth": "N.A.", "death": "N.A."}, "title": "La chiesa sotterranea dei Capucini a Roma", "genre": "verse", "period": "N.A.", "pub_year": 1838, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Menschen-Gebeine hat man zu Sternen und Blumen verflochten,", "tokens": ["Men\u00b7schen\u00b7Ge\u00b7bei\u00b7ne", "hat", "man", "zu", "Ster\u00b7nen", "und", "Blu\u00b7men", "ver\u00b7floch\u00b7ten", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["NE", "VAFIN", "PIS", "APPR", "NN", "KON", "NN", "VVFIN", "$,"], "meter": "+--+-+--+--+--+-", "measure": "hexameter"}, "line.2": {"text": "Von der farbigen Wand grinsen sie zierlich herab;", "tokens": ["Von", "der", "far\u00b7bi\u00b7gen", "Wand", "grin\u00b7sen", "sie", "zier\u00b7lich", "her\u00b7ab", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "ART", "ADJA", "NN", "VVFIN", "PPER", "ADJD", "ADV", "$."], "meter": "--+--++--+--+", "measure": "anapaest.di.plus"}, "line.3": {"text": "Aufgestapelte Sch\u00e4del umsteh'n in geordneten Reihen", "tokens": ["Auf\u00b7ge\u00b7sta\u00b7pel\u00b7te", "Sch\u00e4\u00b7del", "um\u00b7steh'n", "in", "ge\u00b7ord\u00b7ne\u00b7ten", "Rei\u00b7hen"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["VVFIN", "NE", "VVFIN", "APPR", "ADJA", "NN"], "meter": "+-+--+--+--+--+-", "measure": "hexameter"}, "line.4": {"text": "D\u00e4mmernde Nischen, worin manches Gerippe sich streckt,", "tokens": ["D\u00e4m\u00b7mern\u00b7de", "Ni\u00b7schen", ",", "wo\u00b7rin", "man\u00b7ches", "Ge\u00b7rip\u00b7pe", "sich", "streckt", ","], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["ADJA", "NN", "$,", "PWAV", "PIAT", "NN", "PRF", "VVFIN", "$,"], "meter": "+--+-+-+--+--+", "measure": "iambic.hexa.invert"}, "line.5": {"text": "Wie im Leben, bekleidet mit br\u00e4unlicher Kutte, ein T\u00e4flein", "tokens": ["Wie", "im", "Le\u00b7ben", ",", "be\u00b7klei\u00b7det", "mit", "br\u00e4un\u00b7li\u00b7cher", "Kut\u00b7te", ",", "ein", "T\u00e4\u00b7flein"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word", "punct", "word", "word"], "pos": ["PWAV", "APPRART", "NN", "$,", "VVFIN", "APPR", "ADJA", "NN", "$,", "ART", "NN"], "meter": "--+--+--+--+--+-", "measure": "anapaest.tetra.plus"}, "line.6": {"text": "In der kn\u00f6chernen Hand, welches das Sterbejahr nennt,", "tokens": ["In", "der", "kn\u00f6\u00b7cher\u00b7nen", "Hand", ",", "wel\u00b7ches", "das", "Ster\u00b7be\u00b7jahr", "nennt", ","], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["APPR", "ART", "ADJA", "NN", "$,", "PRELS", "ART", "NN", "VVFIN", "$,"], "meter": "--+--+---+--+", "measure": "anapaest.di.plus"}, "line.7": {"text": "Und dein F\u00fchrer, ein M\u00f6nch, wie diese Todten es waren,", "tokens": ["Und", "dein", "F\u00fch\u00b7rer", ",", "ein", "M\u00f6nch", ",", "wie", "die\u00b7se", "Tod\u00b7ten", "es", "wa\u00b7ren", ","], "token_info": ["word", "word", "word", "punct", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "PPOSAT", "NN", "$,", "ART", "NN", "$,", "PWAV", "PDAT", "NN", "PPER", "VAFIN", "$,"], "meter": "--+--+-+-+--+-", "measure": "anapaest.di.plus"}, "line.8": {"text": "Sagt dir l\u00e4chelnd: dereinst werde ich ruhen, wie sie!", "tokens": ["Sagt", "dir", "l\u00e4\u00b7chelnd", ":", "de\u00b7reinst", "wer\u00b7de", "ich", "ru\u00b7hen", ",", "wie", "sie", "!"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word", "punct", "word", "word", "punct"], "pos": ["VVFIN", "PPER", "ADJD", "$.", "ADV", "VAFIN", "PPER", "VVINF", "$,", "PWAV", "PPER", "$."], "meter": "+-+--++--+--+", "measure": "trochaic.hexa.relaxed"}, "line.9": {"text": "Aber Italiens Sonne bestralt durch niedrige Fenster", "tokens": ["A\u00b7ber", "I\u00b7ta\u00b7li\u00b7ens", "Son\u00b7ne", "be\u00b7stralt", "durch", "nied\u00b7ri\u00b7ge", "Fens\u00b7ter"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["KON", "NE", "NN", "VVFIN", "APPR", "ADJA", "NN"], "meter": "+--+--+--+-+--+-", "measure": "hexameter"}, "line.10": {"text": "All den Moder, und sanft pl\u00e4tschert ein Springbrunn im Hof.", "tokens": ["All", "den", "Mo\u00b7der", ",", "und", "sanft", "pl\u00e4t\u00b7schert", "ein", "Spring\u00b7brunn", "im", "Hof", "."], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["NN", "ART", "NN", "$,", "KON", "ADJD", "VVFIN", "ART", "NN", "APPRART", "NN", "$."], "meter": "+-+--+-+-+--+", "measure": "trochaic.hexa.relaxed"}}}}}