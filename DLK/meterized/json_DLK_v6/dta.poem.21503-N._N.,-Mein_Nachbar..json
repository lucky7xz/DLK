{"dta.poem.21503": {"metadata": {"author": {"name": "N. N., ", "birth": "N.A.", "death": "N.A."}, "title": "Mein Nachbar.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1885", "urn": "urn:nbn:de:kobv:b4-200905196929", "language": ["de:0.99"], "booktitle": "Arent, Wilhelm (Hrsg.): Moderne Dichter-Charaktere. Leipzig, [1885]."}, "poem": {"stanza.1": {"line.1": {"text": "An jedem Abend, wenn die sp\u00e4te Stunde", "tokens": ["An", "je\u00b7dem", "A\u00b7bend", ",", "wenn", "die", "sp\u00e4\u00b7te", "Stun\u00b7de"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word"], "pos": ["APPR", "PIAT", "NN", "$,", "KOUS", "ART", "ADJA", "NN"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "Die m\u00fcden Glieder in den Schlummer lockt,", "tokens": ["Die", "m\u00fc\u00b7den", "Glie\u00b7der", "in", "den", "Schlum\u00b7mer", "lockt", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "APPR", "ART", "NN", "VVFIN", "$,"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.3": {"text": "Und ich im Vorgef\u00fchl der s\u00fc\u00dfen Ruhe", "tokens": ["Und", "ich", "im", "Vor\u00b7ge\u00b7f\u00fchl", "der", "s\u00fc\u00b7\u00dfen", "Ru\u00b7he"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["KON", "PPER", "APPRART", "NN", "ART", "ADJA", "NN"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.4": {"text": "Das Buch ges\u00e4ttigt aus den H\u00e4nden lege,", "tokens": ["Das", "Buch", "ge\u00b7s\u00e4t\u00b7tigt", "aus", "den", "H\u00e4n\u00b7den", "le\u00b7ge", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VVPP", "APPR", "ART", "NN", "VVFIN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.5": {"text": "F\u00e4ngt \u00fcber mir ein st\u00f6rendes Concert an.", "tokens": ["F\u00e4ngt", "\u00fc\u00b7ber", "mir", "ein", "st\u00f6\u00b7ren\u00b7des", "Con\u00b7cert", "an", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "APPR", "PPER", "ART", "ADJA", "NN", "PTKVZ", "$."], "meter": "-+-+-+--+-+", "measure": "iambic.penta.relaxed"}, "line.6": {"text": "Es gleiten Finger \u00fcber das Piano", "tokens": ["Es", "glei\u00b7ten", "Fin\u00b7ger", "\u00fc\u00b7ber", "das", "Pi\u00b7a\u00b7no"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["PPER", "ADJA", "NN", "APPR", "ART", "NN"], "meter": "-+-+-+--+-+", "measure": "iambic.penta.relaxed"}, "line.7": {"text": "Und sonder Zweifel ungeschickte Finger.", "tokens": ["Und", "son\u00b7der", "Zwei\u00b7fel", "un\u00b7ge\u00b7schick\u00b7te", "Fin\u00b7ger", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["KON", "ADJA", "NN", "ADJA", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.8": {"text": "Bald h\u00f6r ich eine Scala, wie ein Sch\u00fcler", "tokens": ["Bald", "h\u00f6r", "ich", "ei\u00b7ne", "Sca\u00b7la", ",", "wie", "ein", "Sch\u00fc\u00b7ler"], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word"], "pos": ["ADV", "VVFIN", "PPER", "ART", "NE", "$,", "PWAV", "ART", "NN"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.9": {"text": "Beim Unterrichte sie nicht schlechter spielt,", "tokens": ["Beim", "Un\u00b7ter\u00b7rich\u00b7te", "sie", "nicht", "schlech\u00b7ter", "spielt", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPRART", "NN", "PPER", "PTKNEG", "ADJD", "VVFIN", "$,"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.10": {"text": "Bald eine Melodie aus irgend einer", "tokens": ["Bald", "ei\u00b7ne", "Me\u00b7lo\u00b7die", "aus", "ir\u00b7gend", "ei\u00b7ner"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["ADV", "ART", "NN", "APPR", "ADV", "ART"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.11": {"text": "Uralten Oper oder Operette \u2014", "tokens": ["Ur\u00b7al\u00b7ten", "O\u00b7per", "o\u00b7der", "O\u00b7per\u00b7et\u00b7te"], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["ADJA", "NN", "KON", "NN", "$("], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.12": {"text": "Das alles unterbrochen oft durch Pausen,", "tokens": ["Das", "al\u00b7les", "un\u00b7ter\u00b7bro\u00b7chen", "oft", "durch", "Pau\u00b7sen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["PDS", "PIS", "VVPP", "ADV", "APPR", "NE", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.13": {"text": "Die nicht im Notenblatte stehen m\u00f6gen,", "tokens": ["Die", "nicht", "im", "No\u00b7ten\u00b7blat\u00b7te", "ste\u00b7hen", "m\u00f6\u00b7gen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "PTKNEG", "APPRART", "NN", "VVINF", "VMFIN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.14": {"text": "Durch falsche Griffe, die in wilder Hast", "tokens": ["Durch", "fal\u00b7sche", "Grif\u00b7fe", ",", "die", "in", "wil\u00b7der", "Hast"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word"], "pos": ["APPR", "ADJA", "NN", "$,", "PRELS", "APPR", "ADJA", "NN"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.15": {"text": "Sofort noch einmal falsch gegriffen werden:", "tokens": ["So\u00b7fort", "noch", "ein\u00b7mal", "falsch", "ge\u00b7grif\u00b7fen", "wer\u00b7den", ":"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "ADV", "ADV", "ADJD", "VVPP", "VAINF", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.16": {"text": "Kurz, ich bin selbst nicht sonderlich empfindlich", "tokens": ["Kurz", ",", "ich", "bin", "selbst", "nicht", "son\u00b7der\u00b7lich", "emp\u00b7find\u00b7lich"], "token_info": ["word", "punct", "word", "word", "word", "word", "word", "word"], "pos": ["ADJD", "$,", "PPER", "VAFIN", "ADV", "PTKNEG", "ADV", "ADJD"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.17": {"text": "In R\u00fccksicht auf das Musikalische,", "tokens": ["In", "R\u00fcck\u00b7sicht", "auf", "das", "Mu\u00b7si\u00b7ka\u00b7li\u00b7sche", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "NN", "APPR", "ART", "NN", "$,"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.18": {"text": "Doch denkt die Zeit, die Ruhebed\u00fcrftigkeit", "tokens": ["Doch", "denkt", "die", "Zeit", ",", "die", "Ru\u00b7he\u00b7be\u00b7d\u00fcrf\u00b7tig\u00b7keit"], "token_info": ["word", "word", "word", "word", "punct", "word", "word"], "pos": ["KON", "VVFIN", "ART", "NN", "$,", "ART", "NN"], "meter": "-+-+-+--+-+", "measure": "iambic.penta.relaxed"}, "line.19": {"text": "Und nehm\u2019t dazu den seltsamen Genu\u00df,", "tokens": ["Und", "nehm't", "da\u00b7zu", "den", "selt\u00b7sa\u00b7men", "Ge\u00b7nu\u00df", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "VVFIN", "PAV", "ART", "ADJA", "NN", "$,"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.20": {"text": "Und dann vergebt mir nicht, wenn ich am Ende", "tokens": ["Und", "dann", "ver\u00b7gebt", "mir", "nicht", ",", "wenn", "ich", "am", "En\u00b7de"], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word", "word"], "pos": ["KON", "ADV", "VVFIN", "PPER", "PTKNEG", "$,", "KOUS", "PPER", "APPRART", "NN"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.21": {"text": "Voll Aerger nach dem Concertirer forsche,", "tokens": ["Voll", "A\u00b7er\u00b7ger", "nach", "dem", "Con\u00b7cer\u00b7ti\u00b7rer", "for\u00b7sche", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADJD", "NN", "APPR", "ART", "NN", "VVFIN", "$,"], "meter": "-+--+--+--+-", "measure": "amphibrach.tetra"}, "line.22": {"text": "Die unbequemen Kl\u00e4nge abzuthun.", "tokens": ["Die", "un\u00b7be\u00b7que\u00b7men", "Kl\u00e4n\u00b7ge", "ab\u00b7zu\u00b7thun", "."], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "VVIZU", "$."], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}}, "stanza.2": {"line.1": {"text": "Und was vernahm ich? Ein bejahrter Mann,", "tokens": ["Und", "was", "ver\u00b7nahm", "ich", "?", "Ein", "be\u00b7jahr\u00b7ter", "Mann", ","], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["KON", "PWS", "VVFIN", "PPER", "$.", "ART", "ADJA", "NN", "$,"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.2": {"text": "Ein d\u00fcrftiger, ist mein Pianospieler,", "tokens": ["Ein", "d\u00fcrf\u00b7ti\u00b7ger", ",", "ist", "mein", "Pi\u00b7a\u00b7no\u00b7spie\u00b7ler", ","], "token_info": ["word", "word", "punct", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "$,", "VAFIN", "PPOSAT", "NN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Den ganzen Tag geht er dem Handwerk nach,", "tokens": ["Den", "gan\u00b7zen", "Tag", "geht", "er", "dem", "Hand\u00b7werk", "nach", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "VVFIN", "PPER", "ART", "NN", "PTKVZ", "$,"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.4": {"text": "Und Abends, wenn die Kinder eingeschlafen,", "tokens": ["Und", "A\u00b7bends", ",", "wenn", "die", "Kin\u00b7der", "ein\u00b7ge\u00b7schla\u00b7fen", ","], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["KON", "NN", "$,", "KOUS", "ART", "NN", "VVPP", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.5": {"text": "F\u00fcr die er all\u2019 die schweren Sorgen tr\u00e4gt,", "tokens": ["F\u00fcr", "die", "er", "all'", "die", "schwe\u00b7ren", "Sor\u00b7gen", "tr\u00e4gt", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "PRELS", "PPER", "PIS", "ART", "ADJA", "NN", "VVFIN", "$,"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.6": {"text": "Uebt er Piano.", "tokens": ["Uebt", "er", "Pi\u00b7a\u00b7no", "."], "token_info": ["word", "word", "word", "punct"], "pos": ["VVFIN", "PPER", "NE", "$."], "meter": "+-+-+", "measure": "trochaic.tri"}, "line.7": {"text": "Lacht mich aus darum.", "tokens": ["Lacht", "mich", "aus", "da\u00b7rum", "."], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["VVFIN", "PRF", "APPR", "PAV", "$."], "meter": "+-+-+", "measure": "trochaic.tri"}, "line.8": {"text": "Mir traten ein paar Thr\u00e4nen in die Augen;", "tokens": ["Mir", "tra\u00b7ten", "ein", "paar", "Thr\u00e4\u00b7nen", "in", "die", "Au\u00b7gen", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "ART", "PIAT", "NN", "APPR", "ART", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.9": {"text": "Mitf\u00fchlend las ich in des Mannes Herz.", "tokens": ["Mit\u00b7f\u00fch\u00b7lend", "las", "ich", "in", "des", "Man\u00b7nes", "Herz", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["NN", "VVFIN", "PPER", "APPR", "ART", "NN", "NN", "$."], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}}, "stanza.3": {"line.1": {"text": "Er kann nicht spielen und er wird\u2019s nicht k\u00f6nnen,", "tokens": ["Er", "kann", "nicht", "spie\u00b7len", "und", "er", "wird's", "nicht", "k\u00f6n\u00b7nen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VMFIN", "PTKNEG", "VVINF", "KON", "PPER", "VAFIN", "PTKNEG", "VMFIN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "Zu steif ist seine Hand, sein Ohr zu stumpf,", "tokens": ["Zu", "steif", "ist", "sei\u00b7ne", "Hand", ",", "sein", "Ohr", "zu", "stumpf", ","], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["PTKA", "ADJD", "VAFIN", "PPOSAT", "NN", "$,", "PPOSAT", "NN", "PTKA", "ADJD", "$,"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.3": {"text": "Ihr kennt das Spr\u00fcchlein wohl von Hans und H\u00e4nschen,", "tokens": ["Ihr", "kennt", "das", "Spr\u00fcch\u00b7lein", "wohl", "von", "Hans", "und", "H\u00e4n\u00b7schen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "ART", "NN", "ADV", "APPR", "NE", "KON", "NN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.4": {"text": "Und dennoch l\u00e4\u00dft er\u2019s nicht. Ihm ist dies Spiel", "tokens": ["Und", "den\u00b7noch", "l\u00e4\u00dft", "er's", "nicht", ".", "Ihm", "ist", "dies", "Spiel"], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word", "word"], "pos": ["KON", "ADV", "VVFIN", "PIS", "PTKNEG", "$.", "PPER", "VAFIN", "PDS", "NN"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.5": {"text": "Die einzige Sprosse, die aus Noth und Kummer", "tokens": ["Die", "ein\u00b7zi\u00b7ge", "Spros\u00b7se", ",", "die", "aus", "Noth", "und", "Kum\u00b7mer"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word", "word"], "pos": ["ART", "ADJA", "NN", "$,", "PRELS", "APPR", "NN", "KON", "NN"], "meter": "-+--+-+-+-+-", "measure": "iambic.penta.relaxed"}, "line.6": {"text": "Des \u00f6den Lebens ihn nach oben leitet,", "tokens": ["Des", "\u00f6\u00b7den", "Le\u00b7bens", "ihn", "nach", "o\u00b7ben", "lei\u00b7tet", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "PPER", "APPR", "ADV", "VVFIN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.7": {"text": "Die einzige. Und die barmherzige Kunst,", "tokens": ["Die", "ein\u00b7zi\u00b7ge", ".", "Und", "die", "barm\u00b7her\u00b7zi\u00b7ge", "Kunst", ","], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "$.", "KON", "ART", "ADJA", "NN", "$,"], "meter": "-+--+--+--+", "measure": "amphibrach.tetra"}, "line.8": {"text": "Sie aller Segenspender edelste,", "tokens": ["Sie", "al\u00b7ler", "Se\u00b7gen\u00b7spen\u00b7der", "e\u00b7dels\u00b7te", ","], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["PPER", "PIAT", "NN", "ADJA", "$,"], "meter": "-+-+-+-+--", "measure": "unknown.measure.tetra"}, "line.9": {"text": "St\u00f6\u00dft ihn auch ohne Trost nicht aus dem Tempel,", "tokens": ["St\u00f6\u00dft", "ihn", "auch", "oh\u00b7ne", "Trost", "nicht", "aus", "dem", "Tem\u00b7pel", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "PPER", "ADV", "APPR", "NN", "PTKNEG", "APPR", "ART", "NN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.10": {"text": "Der gl\u00e4ubig drin der Seele Heilung sucht.", "tokens": ["Der", "gl\u00e4u\u00b7big", "drin", "der", "See\u00b7le", "Hei\u00b7lung", "sucht", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADJD", "ADV", "ART", "NN", "NN", "VVFIN", "$."], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.11": {"text": "Aus falschen Griffen, aus verfehlten Takten", "tokens": ["Aus", "fal\u00b7schen", "Grif\u00b7fen", ",", "aus", "ver\u00b7fehl\u00b7ten", "Tak\u00b7ten"], "token_info": ["word", "word", "word", "punct", "word", "word", "word"], "pos": ["APPR", "ADJA", "NN", "$,", "APPR", "ADJA", "NN"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.12": {"text": "Gie\u00dft sie dem Lechzenden Befriedigung", "tokens": ["Gie\u00dft", "sie", "dem", "Lech\u00b7zen\u00b7den", "Be\u00b7frie\u00b7di\u00b7gung"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["VVFIN", "PPER", "ART", "NN", "NN"], "meter": "+--+-+-+--", "measure": "iambic.tetra.invert"}, "line.13": {"text": "In die ge\u00e4ngstigte, gequ\u00e4lte Brust \u2026", "tokens": ["In", "die", "ge\u00b7\u00e4ngs\u00b7tig\u00b7te", ",", "ge\u00b7qu\u00e4l\u00b7te", "Brust", "\u2026"], "token_info": ["word", "word", "word", "punct", "word", "word", "punct"], "pos": ["APPR", "ART", "ADJA", "$,", "ADJA", "NN", "$("], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}}, "stanza.4": {"line.1": {"text": "Spiel immer zu, du armer, alter Mann!", "tokens": ["Spiel", "im\u00b7mer", "zu", ",", "du", "ar\u00b7mer", ",", "al\u00b7ter", "Mann", "!"], "token_info": ["word", "word", "word", "punct", "word", "word", "punct", "word", "word", "punct"], "pos": ["NN", "ADV", "PTKVZ", "$,", "PPER", "ADJA", "$,", "ADJA", "NN", "$."], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.2": {"text": "Du st\u00f6rst nicht, nein. Melodisch klingt um mich", "tokens": ["Du", "st\u00f6rst", "nicht", ",", "nein", ".", "Me\u00b7lo\u00b7disch", "klingt", "um", "mich"], "token_info": ["word", "word", "word", "punct", "word", "punct", "word", "word", "word", "word"], "pos": ["PPER", "VVFIN", "PTKNEG", "$,", "PTKANT", "$.", "NN", "VVFIN", "APPR", "PPER"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.3": {"text": "Die edle Weihe eines Menschenherzens.", "tokens": ["Die", "ed\u00b7le", "Wei\u00b7he", "ei\u00b7nes", "Men\u00b7schen\u00b7her\u00b7zens", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "ART", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}}}}