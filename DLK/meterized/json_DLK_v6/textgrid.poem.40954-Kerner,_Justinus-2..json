{"textgrid.poem.40954": {"metadata": {"author": {"name": "Kerner, Justinus", "birth": "N.A.", "death": "N.A."}, "title": "2.", "genre": "verse", "period": "N.A.", "pub_year": 1824, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Das Auge und das Herze sind", "tokens": ["Das", "Au\u00b7ge", "und", "das", "Her\u00b7ze", "sind"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["ART", "NN", "KON", "PDS", "VVFIN", "VAFIN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Zwei Liebende, eng im Verein,", "tokens": ["Zwei", "Lie\u00b7ben\u00b7de", ",", "eng", "im", "Ver\u00b7ein", ","], "token_info": ["word", "word", "punct", "word", "word", "word", "punct"], "pos": ["CARD", "NN", "$,", "ADJD", "APPRART", "NN", "$,"], "meter": "-+--+--+", "measure": "prosodiakos"}, "line.3": {"text": "Wenn lang das Herze leidet Pein,", "tokens": ["Wenn", "lang", "das", "Her\u00b7ze", "lei\u00b7det", "Pein", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "ADJD", "PDS", "VVFIN", "VVFIN", "NN", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "Wird gern das Auge tr\u00fcb und blind.", "tokens": ["Wird", "gern", "das", "Au\u00b7ge", "tr\u00fcb", "und", "blind", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VAFIN", "ADV", "ART", "NN", "ADJD", "KON", "ADJD", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}}, "stanza.2": {"line.1": {"text": "Und wird das Auge blind und tr\u00fcb,", "tokens": ["Und", "wird", "das", "Au\u00b7ge", "blind", "und", "tr\u00fcb", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "VAFIN", "ART", "NN", "ADJD", "KON", "ADJD", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Das Herze gern im Tode bricht;", "tokens": ["Das", "Her\u00b7ze", "gern", "im", "To\u00b7de", "bricht", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["PDS", "VVFIN", "ADV", "APPRART", "NN", "VVFIN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.3": {"text": "\u00bbgern brech' ich,\u00ab es zum Auge spricht,", "tokens": ["\u00bb", "gern", "brech'", "ich", ",", "\u00ab", "es", "zum", "Au\u00b7ge", "spricht", ","], "token_info": ["punct", "word", "word", "word", "punct", "punct", "word", "word", "word", "word", "punct"], "pos": ["$(", "ADV", "VVFIN", "PPER", "$,", "$(", "PPER", "APPRART", "NN", "VVFIN", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "\u00bbdann siehst du wieder, treues Lieb!\u00ab", "tokens": ["\u00bb", "dann", "siehst", "du", "wie\u00b7der", ",", "treu\u00b7es", "Lieb", "!", "\u00ab"], "token_info": ["punct", "word", "word", "word", "word", "punct", "word", "word", "punct", "punct"], "pos": ["$(", "ADV", "VVFIN", "PPER", "ADV", "$,", "ADJA", "NN", "$.", "$("], "meter": "-+-+-+-+", "measure": "iambic.tetra"}}}}}