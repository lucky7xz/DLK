{"dta.poem.19564": {"metadata": {"author": {"name": "Meyer, Conrad Ferdinand", "birth": "N.A.", "death": "N.A."}, "title": "Hirtenfeuer.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1882", "urn": "urn:nbn:de:kobv:b4-200905193933", "language": ["de:0.99"], "booktitle": "Meyer, Conrad Ferdinand: Gedichte. Leipzig, 1882."}, "poem": {"stanza.1": {"line.1": {"text": "Lie\u00dfest unter uns dich nieder,", "tokens": ["Lie\u00b7\u00dfest", "un\u00b7ter", "uns", "dich", "nie\u00b7der", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "APPR", "PPER", "PRF", "PTKVZ", "$,"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.2": {"text": "Liebe, liebenswerthe Frau,", "tokens": ["Lie\u00b7be", ",", "lie\u00b7bens\u00b7wert\u00b7he", "Frau", ","], "token_info": ["word", "punct", "word", "word", "punct"], "pos": ["NN", "$,", "VVFIN", "NN", "$,"], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.3": {"text": "Aber heute ziehst du wieder,", "tokens": ["A\u00b7ber", "heu\u00b7te", "ziehst", "du", "wie\u00b7der", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["KON", "ADV", "VVFIN", "PPER", "ADV", "$,"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.4": {"text": "Wie die Sterne ziehn im Blau.", "tokens": ["Wie", "die", "Ster\u00b7ne", "ziehn", "im", "Blau", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["PWAV", "ART", "NN", "VVFIN", "APPRART", "NN", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}}, "stanza.2": {"line.1": {"text": "Siehst den Abendstern du blinken", "tokens": ["Siehst", "den", "A\u00b7bends\u00b7tern", "du", "blin\u00b7ken"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["VVFIN", "ART", "NN", "PPER", "VVINF"], "meter": "+--+--+-", "measure": "dactylic.tri"}, "line.2": {"text": "Dort vor seinem Untergang?", "tokens": ["Dort", "vor", "sei\u00b7nem", "Un\u00b7ter\u00b7gang", "?"], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["ADV", "APPR", "PPOSAT", "NN", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.3": {"text": "Einen Augenblick im Sinken", "tokens": ["Ei\u00b7nen", "Au\u00b7gen\u00b7blick", "im", "Sin\u00b7ken"], "token_info": ["word", "word", "word", "word"], "pos": ["ART", "NN", "APPRART", "NN"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.4": {"text": "Ruht er auf dem Bergeshang.", "tokens": ["Ruht", "er", "auf", "dem", "Ber\u00b7ges\u00b7hang", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "PPER", "APPR", "ART", "NN", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}}, "stanza.3": {"line.1": {"text": "In der fl\u00fcchtigen Minute,", "tokens": ["In", "der", "fl\u00fcch\u00b7ti\u00b7gen", "Mi\u00b7nu\u00b7te", ","], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["APPR", "ART", "ADJA", "NN", "$,"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.2": {"text": "In dem eilenden Moment", "tokens": ["In", "dem", "ei\u00b7len\u00b7den", "Mo\u00b7ment"], "token_info": ["word", "word", "word", "word"], "pos": ["APPR", "ART", "ADJA", "NN"], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.3": {"text": "Ist's als ob er gastlich ruhte,", "tokens": ["Ist's", "als", "ob", "er", "gast\u00b7lich", "ruh\u00b7te", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["VAFIN", "KOKOM", "KOUS", "PPER", "ADJD", "VVFIN", "$,"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.4": {"text": "Wie ein Hirtenfeuer brennt.", "tokens": ["Wie", "ein", "Hir\u00b7ten\u00b7feu\u00b7er", "brennt", "."], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["PWAV", "ART", "NN", "VVFIN", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}}, "stanza.4": {"line.1": {"text": "Aber nur die kleinste Weile", "tokens": ["A\u00b7ber", "nur", "die", "kleins\u00b7te", "Wei\u00b7le"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["KON", "ADV", "ART", "ADJA", "NN"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.2": {"text": "Bringt er auf der Erde zu,", "tokens": ["Bringt", "er", "auf", "der", "Er\u00b7de", "zu", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "PPER", "APPR", "ART", "NN", "PTKVZ", "$,"], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.3": {"text": "Sieh \u2014 er zittert ja vor Eile", "tokens": ["Sieh", "er", "zit\u00b7tert", "ja", "vor", "Ei\u00b7le"], "token_info": ["word", "punct", "word", "word", "word", "word", "word"], "pos": ["NE", "$(", "PPER", "VVFIN", "ADV", "APPR", "NN"], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.4": {"text": "Und verschwindet, Frau, wie du.", "tokens": ["Und", "ver\u00b7schwin\u00b7det", ",", "Frau", ",", "wie", "du", "."], "token_info": ["word", "word", "punct", "word", "punct", "word", "word", "punct"], "pos": ["KON", "VVFIN", "$,", "NN", "$,", "PWAV", "PPER", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}}}}}