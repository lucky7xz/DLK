{"textgrid.poem.32931": {"metadata": {"author": {"name": "Flaischlen, C\u00e4sar", "birth": "N.A.", "death": "N.A."}, "title": "1L: Hei! wie sich die Segel bl\u00e4hn ... und wie sch\u00f6n es in die Sonne hineingeht!", "genre": "verse", "period": "N.A.", "pub_year": 1892, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Hei! wie sich die Segel bl\u00e4hn ... und wie sch\u00f6n es in die Sonne hineingeht!", "tokens": ["Hei", "!", "wie", "sich", "die", "Se\u00b7gel", "bl\u00e4hn", "...", "und", "wie", "sch\u00f6n", "es", "in", "die", "Son\u00b7ne", "hin\u00b7ein\u00b7geht", "!"], "token_info": ["word", "punct", "word", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["NE", "$.", "PWAV", "PRF", "ART", "NN", "VVINF", "$(", "KON", "PWAV", "ADJD", "PPER", "APPR", "ART", "NN", "VVFIN", "$."], "meter": "+-+-+-+--+-+-+-+-+", "measure": "trochaic.octa.plus.relaxed"}}, "stanza.2": {"line.1": {"text": "und wie der Wind sich in die Wellen w\u00fchlt!", "tokens": ["und", "wie", "der", "Wind", "sich", "in", "die", "Wel\u00b7len", "w\u00fchlt", "!"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "PWAV", "ART", "NN", "PRF", "APPR", "ART", "NN", "VVFIN", "$."], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.2": {"text": "und wie es aufsch\u00e4umt und wogt und wirft und packt und zerrt und ringt und st\u00f6hnt!", "tokens": ["und", "wie", "es", "auf\u00b7sch\u00e4umt", "und", "wogt", "und", "wirft", "und", "packt", "und", "zerrt", "und", "ringt", "und", "st\u00f6hnt", "!"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "PWAV", "PPER", "VVPP", "KON", "VVFIN", "KON", "VVFIN", "KON", "VVFIN", "KON", "VVFIN", "KON", "VVFIN", "KON", "VVFIN", "$."], "meter": "-+--+-+-+-+-+-+-+", "measure": "iambic.octa.plus.relaxed"}, "line.3": {"text": "das ist doch noch Kraft ... und Freude!", "tokens": ["das", "ist", "doch", "noch", "Kraft", "...", "und", "Freu\u00b7de", "!"], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "punct"], "pos": ["PDS", "VAFIN", "ADV", "ADV", "NN", "$(", "KON", "NN", "$."], "meter": "-+--+-+-", "measure": "iambic.tri.relaxed"}, "line.4": {"text": "Und man m\u00f6chte mittun, hei! ... und Wind sein oder Welle ...", "tokens": ["Und", "man", "m\u00f6ch\u00b7te", "mit\u00b7tun", ",", "hei", "!", "...", "und", "Wind", "sein", "o\u00b7der", "Wel\u00b7le", "..."], "token_info": ["word", "word", "word", "word", "punct", "word", "punct", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "PIS", "VMFIN", "VVINF", "$,", "ITJ", "$.", "$(", "KON", "NN", "VAINF", "KON", "NN", "$("], "meter": "+-+-+-+-+-+-+-", "measure": "trochaic.septa"}, "line.5": {"text": "und immer so mitten in die Sonne hinein!", "tokens": ["und", "im\u00b7mer", "so", "mit\u00b7ten", "in", "die", "Son\u00b7ne", "hin\u00b7ein", "!"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "ADV", "ADV", "ADV", "APPR", "ART", "NN", "PTKVZ", "$."], "meter": "-+--+-+-+--+", "measure": "iambic.penta.relaxed"}}}}}