{"dta.poem.7122": {"metadata": {"author": {"name": "Brockes, Barthold Heinrich", "birth": "N.A.", "death": "N.A."}, "title": "Betrachtung des Schlafs,  \n als  \n eine G\u00f6ttliche Wohlthat,  \n bey dem 1728sten Jahres-Wechsel.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1730", "urn": "urn:nbn:de:kobv:b4-20087-5", "language": ["de:0.99"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "Wenn uns, so lang es Tag, Flei\u00df, Arbeit, Sorg und M\u00fch", "tokens": ["Wenn", "uns", ",", "so", "lang", "es", "Tag", ",", "Flei\u00df", ",", "Ar\u00b7beit", ",", "Sorg", "und", "M\u00fch"], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "punct", "word", "punct", "word", "punct", "word", "word", "word"], "pos": ["KOUS", "PPER", "$,", "ADV", "ADJD", "PPER", "NN", "$,", "NN", "$,", "NN", "$,", "NN", "KON", "NN"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Des C\u00f6rpers Krafft geschw\u00e4cht, ersch\u00f6pfft, verzehret,", "tokens": ["Des", "C\u00f6r\u00b7pers", "Krafft", "ge\u00b7schw\u00e4cht", ",", "er\u00b7sch\u00f6pfft", ",", "ver\u00b7zeh\u00b7ret", ","], "token_info": ["word", "word", "word", "word", "punct", "word", "punct", "word", "punct"], "pos": ["ART", "ADJA", "NN", "VVPP", "$,", "VVFIN", "$,", "VVFIN", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.3": {"text": "Wird alles wiederum uns auf das neu bescheret", "tokens": ["Wird", "al\u00b7les", "wie\u00b7de\u00b7rum", "uns", "auf", "das", "neu", "be\u00b7sche\u00b7ret"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word"], "pos": ["VAFIN", "PIS", "ADV", "PPER", "APPR", "ART", "ADJD", "VVFIN"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.4": {"text": "Durch diese Frucht der Nacht.", "tokens": ["Durch", "die\u00b7se", "Frucht", "der", "Nacht", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "PDAT", "NN", "ART", "NN", "$."], "meter": "-+-+-+", "measure": "iambic.tri"}, "line.5": {"text": "Wie schwartz, wie traurig ist zuweilen unser Sinn", "tokens": ["Wie", "schwartz", ",", "wie", "trau\u00b7rig", "ist", "zu\u00b7wei\u00b7len", "un\u00b7ser", "Sinn"], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "word"], "pos": ["PWAV", "ADJD", "$,", "PWAV", "ADJD", "VAFIN", "ADV", "PPOSAT", "NN"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.6": {"text": "Des Abends, ehe man sich schlaffen leget;", "tokens": ["Des", "A\u00b7bends", ",", "e\u00b7he", "man", "sich", "schlaf\u00b7fen", "le\u00b7get", ";"], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "$,", "KOUS", "PIS", "PRF", "VVINF", "VVFIN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.7": {"text": "Fr\u00fch aber, wenn man aufgewacht,", "tokens": ["Fr\u00fch", "a\u00b7ber", ",", "wenn", "man", "auf\u00b7ge\u00b7wacht", ","], "token_info": ["word", "word", "punct", "word", "word", "word", "punct"], "pos": ["ADJD", "ADV", "$,", "KOUS", "PIS", "VVPP", "$,"], "meter": "++-+-+-+", "measure": "iambic.tetra"}, "line.8": {"text": "Ist aller Gram verschwunden und dahin,", "tokens": ["Ist", "al\u00b7ler", "Gram", "ver\u00b7schwun\u00b7den", "und", "da\u00b7hin", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["VAFIN", "PIAT", "NN", "VVPP", "KON", "PAV", "$,"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.9": {"text": "Den wir des Abends sp\u00e4t in unsrer Brust geheget.", "tokens": ["Den", "wir", "des", "A\u00b7bends", "sp\u00e4t", "in", "uns\u00b7rer", "Brust", "ge\u00b7he\u00b7get", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "PPER", "ART", "NN", "ADJD", "APPR", "PPOSAT", "NN", "VVPP", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}}}}}