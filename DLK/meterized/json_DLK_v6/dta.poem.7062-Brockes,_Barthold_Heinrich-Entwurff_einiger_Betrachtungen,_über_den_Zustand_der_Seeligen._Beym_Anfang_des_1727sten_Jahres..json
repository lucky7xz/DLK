{"dta.poem.7062": {"metadata": {"author": {"name": "Brockes, Barthold Heinrich", "birth": "N.A.", "death": "N.A."}, "title": "Entwurff einiger Betrachtungen,  \n \u00fcber den  \n  Zustand der Seeligen.  \n Beym Anfang des 1727sten Jahres.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1730", "urn": "urn:nbn:de:kobv:b4-20087-5", "language": ["de:0.85", "nl:0.14"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "So bald demnach die Seelen nun hienieden", "tokens": ["So", "bald", "dem\u00b7nach", "die", "See\u00b7len", "nun", "hien\u00b7ie\u00b7den"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["ADV", "ADV", "PAV", "ART", "NN", "ADV", "ADV"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.2": {"text": "Von ihren C\u00f6rpern sich geschieden,", "tokens": ["Von", "ih\u00b7ren", "C\u00f6r\u00b7pern", "sich", "ge\u00b7schie\u00b7den", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "PPOSAT", "NN", "PRF", "VVPP", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.3": {"text": "Zieht, allem Ansehn nach, den Augenblick", "tokens": ["Zieht", ",", "al\u00b7lem", "An\u00b7sehn", "nach", ",", "den", "Au\u00b7gen\u00b7blick"], "token_info": ["word", "punct", "word", "word", "word", "punct", "word", "word"], "pos": ["VVFIN", "$,", "PIS", "NN", "PTKVZ", "$,", "ART", "NN"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.4": {"text": "Wie eine Decke sich zur\u00fcck,", "tokens": ["Wie", "ei\u00b7ne", "De\u00b7cke", "sich", "zu\u00b7r\u00fcck", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PWAV", "ART", "NN", "PRF", "PTKVZ", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.5": {"text": "Und \u00f6ffnet auf einmal den Frommen,", "tokens": ["Und", "\u00f6ff\u00b7net", "auf", "ein\u00b7mal", "den", "From\u00b7men", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "VVFIN", "APPR", "ADV", "ART", "NN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.6": {"text": "Die in den seel\u2019gen Zustand kommen,", "tokens": ["Die", "in", "den", "seel'\u00b7gen", "Zu\u00b7stand", "kom\u00b7men", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "APPR", "ART", "ADJA", "NN", "VVINF", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.7": {"text": "An Glantz, an Licht, an Pracht, an Anmuth und Gestalt,", "tokens": ["An", "Glantz", ",", "an", "Licht", ",", "an", "Pracht", ",", "an", "An\u00b7muth", "und", "Ge\u00b7stalt", ","], "token_info": ["word", "word", "punct", "word", "word", "punct", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["APPR", "NN", "$,", "APPR", "NN", "$,", "APPR", "NN", "$,", "APPR", "NN", "KON", "NN", "$,"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.8": {"text": "Den allerherrlichsten und licht\u2019sten Aufenthalt", "tokens": ["Den", "al\u00b7ler\u00b7herr\u00b7lichs\u00b7ten", "und", "licht'\u00b7sten", "Auf\u00b7ent\u00b7halt"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["ART", "ADJA", "KON", "ADJA", "NN"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.9": {"text": "Der seel\u2019gen Geister und der Seelen,", "tokens": ["Der", "seel'\u00b7gen", "Geis\u00b7ter", "und", "der", "See\u00b7len", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "KON", "ART", "NN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.10": {"text": "Die GOTT beliebt aus Gnaden zu erwehlen.", "tokens": ["Die", "GoTT", "be\u00b7liebt", "aus", "Gna\u00b7den", "zu", "er\u00b7weh\u00b7len", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "ADJD", "APPR", "NN", "PTKZU", "VVINF", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.11": {"text": "Sie werden,", "tokens": ["Sie", "wer\u00b7den", ","], "token_info": ["word", "word", "punct"], "pos": ["PPER", "VAFIN", "$,"], "meter": "-+-", "measure": "amphibrach.single"}, "line.12": {"text": "Nach abgelegten Stoff der Erden,", "tokens": ["Nach", "ab\u00b7ge\u00b7leg\u00b7ten", "Stoff", "der", "Er\u00b7den", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "ADJA", "NN", "ART", "NN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.13": {"text": "Von Engeln selbst bewillkommt seyn,", "tokens": ["Von", "En\u00b7geln", "selbst", "be\u00b7will\u00b7kommt", "seyn", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "NN", "ADV", "VVPP", "VAINF", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.14": {"text": "Die werden sie vermuhtlich gleichfalls zieren", "tokens": ["Die", "wer\u00b7den", "sie", "ver\u00b7muht\u00b7lich", "gleich\u00b7falls", "zie\u00b7ren"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["PDS", "VAFIN", "PPER", "ADJD", "ADV", "VVFIN"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.15": {"text": "Mit einem hellen Schein,", "tokens": ["Mit", "ei\u00b7nem", "hel\u00b7len", "Schein", ","], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["APPR", "ART", "ADJA", "NN", "$,"], "meter": "-+-+-+", "measure": "iambic.tri"}, "line.16": {"text": "Der reiner noch und heller, als die Sonne.", "tokens": ["Der", "rei\u00b7ner", "noch", "und", "hel\u00b7ler", ",", "als", "die", "Son\u00b7ne", "."], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "ADV", "KON", "ADJD", "$,", "KOUS", "ART", "NN", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.17": {"text": "Vermuhtlich werden sie sie f\u00fchren", "tokens": ["Ver\u00b7muht\u00b7lich", "wer\u00b7den", "sie", "sie", "f\u00fch\u00b7ren"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["ADJD", "VAFIN", "PPER", "PPER", "VVINF"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.18": {"text": "Zu allen Seeligen. O welche Lust! o Wonne!", "tokens": ["Zu", "al\u00b7len", "See\u00b7li\u00b7gen", ".", "O", "wel\u00b7che", "Lust", "!", "o", "Won\u00b7ne", "!"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "punct", "word", "word", "punct"], "pos": ["APPR", "PIAT", "NN", "$.", "NE", "PWAT", "NN", "$.", "FM", "NN", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.19": {"text": "O unbeschreiblichs Licht,", "tokens": ["O", "un\u00b7be\u00b7schreib\u00b7lichs", "Licht", ","], "token_info": ["word", "word", "word", "punct"], "pos": ["NE", "ADJA", "NN", "$,"], "meter": "-+-+-+", "measure": "iambic.tri"}, "line.20": {"text": "Das durch ihr gantzes Wesen bricht!", "tokens": ["Das", "durch", "ihr", "gant\u00b7zes", "We\u00b7sen", "bricht", "!"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["PDS", "APPR", "PPOSAT", "ADJA", "NN", "VVFIN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.21": {"text": "O unbegreiffliches Vergn\u00fcgen und Entz\u00fccken", "tokens": ["O", "un\u00b7be\u00b7greif\u00b7fli\u00b7ches", "Ver\u00b7gn\u00fc\u00b7gen", "und", "Ent\u00b7z\u00fc\u00b7cken"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["NE", "ADJA", "NN", "KON", "NN"], "meter": "-+--+--+-+-+-", "measure": "amphibrach.tri.plus"}, "line.22": {"text": "Die sie sodann bey allen Glantz durchdringt!", "tokens": ["Die", "sie", "so\u00b7dann", "bey", "al\u00b7len", "Glantz", "durch\u00b7dringt", "!"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "PPER", "ADV", "APPR", "PIAT", "NN", "VVFIN", "$."], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.23": {"text": "Wer ist geschickt die Wollust auszudr\u00fccken,", "tokens": ["Wer", "ist", "ge\u00b7schickt", "die", "Wol\u00b7lust", "aus\u00b7zu\u00b7dr\u00fc\u00b7cken", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["PWS", "VAFIN", "VVPP", "ART", "NN", "VVIZU", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.24": {"text": "Die die Erstaunens-w\u00fcrdige,", "tokens": ["Die", "die", "Er\u00b7stau\u00b7nens\u00b7w\u00fcr\u00b7di\u00b7ge", ","], "token_info": ["word", "word", "word", "punct"], "pos": ["ART", "ART", "NN", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.25": {"text": "So pl\u00f6tzlich-schnelle, herrliche", "tokens": ["So", "pl\u00f6tz\u00b7lich\u00b7schnel\u00b7le", ",", "herr\u00b7li\u00b7che"], "token_info": ["word", "word", "punct", "word"], "pos": ["ADV", "ADJA", "$,", "ADJA"], "meter": "-+-+-+--", "measure": "unknown.measure.tri"}, "line.26": {"text": "Und himmlische Ver\u00e4ndrung solchen Seelen", "tokens": ["Und", "himm\u00b7li\u00b7sche", "Ver\u00b7\u00e4n\u00b7drung", "sol\u00b7chen", "See\u00b7len"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["KON", "ADJA", "NN", "PIAT", "NN"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.27": {"text": "Vermuthlich wircken mu\u00df. Es w\u00e4ren eh\u2019r", "tokens": ["Ver\u00b7muth\u00b7lich", "wir\u00b7cken", "mu\u00df", ".", "Es", "w\u00e4\u00b7ren", "eh'r"], "token_info": ["word", "word", "word", "punct", "word", "word", "word"], "pos": ["ADV", "VVINF", "VMFIN", "$.", "PPER", "VAFIN", "NE"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.28": {"text": "Die Tropffen in der Fluth, der Sand am Meer,", "tokens": ["Die", "Tropf\u00b7fen", "in", "der", "Fluth", ",", "der", "Sand", "am", "Meer", ","], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "APPR", "ART", "NN", "$,", "ART", "NN", "APPRART", "NN", "$,"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.29": {"text": "Als die erquickende Vergn\u00fcgungen, zu z\u00e4hlen.", "tokens": ["Als", "die", "er\u00b7qui\u00b7cken\u00b7de", "Ver\u00b7gn\u00fc\u00b7gun\u00b7gen", ",", "zu", "z\u00e4h\u00b7len", "."], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "punct"], "pos": ["KOUS", "ART", "ADJA", "NN", "$,", "PTKZU", "VVINF", "$."], "meter": "-+-+--+-+--+-", "measure": "iambic.penta.relaxed"}, "line.30": {"text": "Sie f\u00fchlen nunmehr und empfinden,", "tokens": ["Sie", "f\u00fch\u00b7len", "nun\u00b7mehr", "und", "emp\u00b7fin\u00b7den", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "ADV", "KON", "VVFIN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.31": {"text": "Da\u00df aller Zweifel, Angst und Furcht, der Sicherheit,", "tokens": ["Da\u00df", "al\u00b7ler", "Zwei\u00b7fel", ",", "Angst", "und", "Furcht", ",", "der", "Si\u00b7cher\u00b7heit", ","], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "punct", "word", "word", "punct"], "pos": ["KOUS", "PIAT", "NN", "$,", "NN", "KON", "NN", "$,", "ART", "NN", "$,"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.32": {"text": "Der Wahrheit und Gewi\u00dfheit wegen,", "tokens": ["Der", "Wahr\u00b7heit", "und", "Ge\u00b7wi\u00df\u00b7heit", "we\u00b7gen", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "KON", "NN", "APPR", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.33": {"text": "Von ihrer k\u00fcnfft\u2019gen Seeligkeit,", "tokens": ["Von", "ih\u00b7rer", "k\u00fcnf\u00b7ft'\u00b7gen", "See\u00b7lig\u00b7keit", ","], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["APPR", "PPOSAT", "ADJA", "NN", "$,"], "meter": "-+--+-+-+", "measure": "iambic.tetra.relaxed"}, "line.34": {"text": "Die sie bisher gar offt zu foltern pflegen,", "tokens": ["Die", "sie", "bis\u00b7her", "gar", "offt", "zu", "fol\u00b7tern", "pfle\u00b7gen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "PPER", "ADV", "ADV", "ADV", "PTKZU", "VVINF", "VVINF", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.35": {"text": "Dahin, verschwunden und vergangen,", "tokens": ["Da\u00b7hin", ",", "ver\u00b7schwun\u00b7den", "und", "ver\u00b7gan\u00b7gen", ","], "token_info": ["word", "punct", "word", "word", "word", "punct"], "pos": ["PAV", "$,", "VVPP", "KON", "VVPP", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.36": {"text": "Da sie nunmehr die Ehren-Kron empfangen,", "tokens": ["Da", "sie", "nun\u00b7mehr", "die", "Eh\u00b7ren\u00b7Kron", "emp\u00b7fan\u00b7gen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "PPER", "ADV", "ART", "NN", "VVPP", "$,"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.37": {"text": "Und also sicher sind, sie nimmer zu verlieren.", "tokens": ["Und", "al\u00b7so", "si\u00b7cher", "sind", ",", "sie", "nim\u00b7mer", "zu", "ver\u00b7lie\u00b7ren", "."], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["KON", "ADV", "ADJD", "VAFIN", "$,", "PPER", "ADV", "PTKZU", "VVINF", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.38": {"text": "Welch ein entz\u00fcckend Feur der Anmuth mu\u00df sie r\u00fchren!", "tokens": ["Welch", "ein", "ent\u00b7z\u00fc\u00b7ckend", "Feur", "der", "An\u00b7muth", "mu\u00df", "sie", "r\u00fch\u00b7ren", "!"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PIAT", "ART", "ADJD", "NN", "ART", "NN", "VMFIN", "PPER", "VVINF", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.39": {"text": "Welch ein verwunderndes und fr\u00f6liches Bewegen", "tokens": ["Welch", "ein", "ver\u00b7wun\u00b7dern\u00b7des", "und", "fr\u00f6\u00b7li\u00b7ches", "Be\u00b7we\u00b7gen"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["PIAT", "ART", "ADJA", "KON", "ADJA", "NN"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.40": {"text": "Mu\u00df sich im gantzen Wesen regen!", "tokens": ["Mu\u00df", "sich", "im", "gant\u00b7zen", "We\u00b7sen", "re\u00b7gen", "!"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["VMFIN", "PRF", "APPRART", "ADJA", "NN", "ADJA", "$."], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.41": {"text": "Welch \u00fcberschwengliches und innerlichs Ergetzen", "tokens": ["Welch", "\u00fc\u00b7bersc\u00b7hweng\u00b7li\u00b7ches", "und", "in\u00b7ner\u00b7lichs", "Er\u00b7get\u00b7zen"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["PIAT", "ADJA", "KON", "ADJA", "NN"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.42": {"text": "Mu\u00df sie von s\u00fcsser Lieb in frohe Brunst versetzen!", "tokens": ["Mu\u00df", "sie", "von", "s\u00fcs\u00b7ser", "Lieb", "in", "fro\u00b7he", "Brunst", "ver\u00b7set\u00b7zen", "!"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VMFIN", "PPER", "APPR", "ADJA", "NN", "APPR", "ADJA", "NN", "VVINF", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}}}}}