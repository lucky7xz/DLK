{"textgrid.poem.23899": {"metadata": {"author": {"name": "Bierbaum, Otto Julius", "birth": "N.A.", "death": "N.A."}, "title": "Lied des Einsamen", "genre": "verse", "period": "N.A.", "pub_year": 1887, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Ein banger Tr\u00e4umer such ich das Gl\u00fcck.", "tokens": ["Ein", "ban\u00b7ger", "Tr\u00e4u\u00b7mer", "such", "ich", "das", "Gl\u00fcck", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "VVFIN", "PPER", "ART", "NN", "$."], "meter": "-+-+-+--+", "measure": "iambic.tetra.chol"}, "line.2": {"text": "Drum bin ich nirgends zuhaus.", "tokens": ["Drum", "bin", "ich", "nir\u00b7gends", "zu\u00b7haus", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PAV", "VAFIN", "PPER", "ADV", "PTKVZ", "$."], "meter": "-+-+--+", "measure": "iambic.tri.chol"}, "line.3": {"text": "Manchmal ein Sonnenschein, manchmal ein Blick", "tokens": ["Manch\u00b7mal", "ein", "Son\u00b7nen\u00b7schein", ",", "manch\u00b7mal", "ein", "Blick"], "token_info": ["word", "word", "word", "punct", "word", "word", "word"], "pos": ["ADV", "ART", "NN", "$,", "ADV", "ART", "NN"], "meter": "+--+--+--+", "measure": "dactylic.tetra"}, "line.4": {"text": "Aus fremden Augen \u2013 oh schnelles Gl\u00fcck,", "tokens": ["Aus", "frem\u00b7den", "Au\u00b7gen", "\u2013", "oh", "schnel\u00b7les", "Gl\u00fcck", ","], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["APPR", "ADJA", "NN", "$(", "ADJD", "ADJA", "NN", "$,"], "meter": "-+-+--+-+", "measure": "iambic.tetra.relaxed"}, "line.5": {"text": "Wie schnelle l\u00f6schst du aus.", "tokens": ["Wie", "schnel\u00b7le", "l\u00f6schst", "du", "aus", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PWAV", "VVFIN", "VVFIN", "PPER", "PTKVZ", "$."], "meter": "-+-+-+", "measure": "iambic.tri"}}, "stanza.2": {"line.1": {"text": "Verlorene Liebe kehrt nie zur\u00fcck.", "tokens": ["Ver\u00b7lo\u00b7re\u00b7ne", "Lie\u00b7be", "kehrt", "nie", "zu\u00b7r\u00fcck", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ADJA", "NN", "VVFIN", "ADV", "PTKVZ", "$."], "meter": "-+--+--+-+", "measure": "amphibrach.tri.plus"}, "line.2": {"text": "Wie ist das Leben leer.", "tokens": ["Wie", "ist", "das", "Le\u00b7ben", "leer", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PWAV", "VAFIN", "ART", "NN", "ADJD", "$."], "meter": "-+-+-+", "measure": "iambic.tri"}, "line.3": {"text": "Ein banger Tr\u00e4umer such ich das Gl\u00fcck;", "tokens": ["Ein", "ban\u00b7ger", "Tr\u00e4u\u00b7mer", "such", "ich", "das", "Gl\u00fcck", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "VVFIN", "PPER", "ART", "NN", "$."], "meter": "-+-+-+--+", "measure": "iambic.tetra.chol"}, "line.4": {"text": "Ach, Gl\u00fcck ist selten und Liebe ist Gl\u00fcck,", "tokens": ["Ach", ",", "Gl\u00fcck", "ist", "sel\u00b7ten", "und", "Lie\u00b7be", "ist", "Gl\u00fcck", ","], "token_info": ["word", "punct", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ITJ", "$,", "NN", "VAFIN", "ADJD", "KON", "NN", "VAFIN", "NN", "$,"], "meter": "-+-+--+--+", "measure": "iambic.tetra.relaxed"}, "line.5": {"text": "Und Einsamkeit ist schwer.", "tokens": ["Und", "Ein\u00b7sam\u00b7keit", "ist", "schwer", "."], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["KON", "NN", "VAFIN", "ADJD", "$."], "meter": "-+-+-+", "measure": "iambic.tri"}}}}}