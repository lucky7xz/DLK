{"dta.poem.8313": {"metadata": {"author": {"name": "Ebeling, Johann Justus", "birth": "N.A.", "death": "N.A."}, "title": "Die  \n  Torheit derer Menschen,  \n die sich  \n  \u00fcber die Witterung beschweren.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1747", "urn": "urn:nbn:de:kobv:b4-200905198782", "language": ["de:0.99"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "Die Klag ist fast allgemein, wenn die\nSommerlust vergeht,", "tokens": ["Die", "Klag", "ist", "fast", "all\u00b7ge\u00b7mein", ",", "wenn", "die", "Som\u00b7mer\u00b7lust", "ver\u00b7geht", ","], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VAFIN", "ADV", "ADJD", "$,", "KOUS", "ART", "NN", "VVFIN", "$,"], "meter": "-+--+-+--+-+-+", "measure": "iambic.hexa.relaxed"}, "line.2": {"text": "Und im Herbst der rauhe Nord durch", "tokens": ["Und", "im", "Herbst", "der", "rau\u00b7he", "Nord", "durch"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["KON", "APPRART", "NN", "ART", "ADJA", "NN", "APPR"], "meter": "--+-+-+-", "measure": "anapaest.init"}, "line.3": {"text": "Jetzo taugt die Wittrung nichts, da das Sonnen-", "tokens": ["Jet\u00b7zo", "taugt", "die", "Witt\u00b7rung", "nichts", ",", "da", "das", "Son\u00b7nen"], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word"], "pos": ["ADV", "VVFIN", "ART", "NN", "PIS", "$,", "KOUS", "ART", "TRUNC"], "meter": "-+--+-+--+-", "measure": "iambic.tetra.relaxed"}, "line.4": {"text": "Und bei einer tr\u00fcben Luft sich zum kalten Steinbok", "tokens": ["Und", "bei", "ei\u00b7ner", "tr\u00fc\u00b7ben", "Luft", "sich", "zum", "kal\u00b7ten", "Stein\u00b7bok"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word"], "pos": ["KON", "APPR", "ART", "ADJA", "NN", "PRF", "APPRART", "ADJA", "NN"], "meter": "+-+-+-+--+-+-", "measure": "trochaic.hexa.relaxed"}, "line.5": {"text": "Nunmehr ist die sch\u00f6ne Zeit, die den Menschen an-", "tokens": ["Nun\u00b7mehr", "ist", "die", "sch\u00f6\u00b7ne", "Zeit", ",", "die", "den", "Men\u00b7schen", "an"], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word", "word"], "pos": ["ADV", "VAFIN", "ART", "ADJA", "NN", "$,", "PRELS", "ART", "NN", "TRUNC"], "meter": "--+-+-+--+-+", "measure": "iambic.penta.relaxed"}, "line.6": {"text": "Die zur Reise und zur Lust, zur Gesundheit recht", "tokens": ["Die", "zur", "Rei\u00b7se", "und", "zur", "Lust", ",", "zur", "Ge\u00b7sund\u00b7heit", "recht"], "token_info": ["word", "word", "word", "word", "word", "word", "punct", "word", "word", "word"], "pos": ["ART", "APPRART", "NN", "KON", "APPRART", "NN", "$,", "APPRART", "NN", "ADJD"], "meter": "--+-+-+--+-+", "measure": "iambic.penta.relaxed"}, "line.7": {"text": "In den frostgen Herbst vorbei: Nunmehr gehet an", "tokens": ["In", "den", "frost\u00b7gen", "Herbst", "vor\u00b7bei", ":", "Nun\u00b7mehr", "ge\u00b7het", "an"], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word"], "pos": ["APPR", "ART", "ADJA", "NN", "PTKVZ", "$.", "ADV", "VVFIN", "PTKVZ"], "meter": "--+-++-+-+-+", "measure": "anapaest.init"}, "line.8": {"text": "Der von schweren Nebel-Dunst tr\u00fcbgemachter", "tokens": ["Der", "von", "schwe\u00b7ren", "Ne\u00b7bel\u00b7Dunst", "tr\u00fcb\u00b7ge\u00b7mach\u00b7ter"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["ART", "APPR", "ADJA", "NN", "ADJA"], "meter": "+-+-+-+--+-", "measure": "trochaic.penta.relaxed"}, "line.9": {"text": "So spricht fast ein jeder jezt, der aus Gram Ca-", "tokens": ["So", "spricht", "fast", "ein", "je\u00b7der", "jezt", ",", "der", "aus", "Gram", "Ca"], "token_info": ["word", "word", "word", "word", "word", "word", "punct", "word", "word", "word", "word"], "pos": ["ADV", "VVFIN", "ADV", "ART", "PIS", "ADV", "$,", "PRELS", "APPR", "NE", "TRUNC"], "meter": "-+--+-+--+-", "measure": "iambic.tetra.relaxed"}, "line.10": {"text": "Und die weisen Ordnungen, die der Sch\u00f6pfer aus-", "tokens": ["Und", "die", "wei\u00b7sen", "Ord\u00b7nun\u00b7gen", ",", "die", "der", "Sch\u00f6p\u00b7fer", "aus"], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word"], "pos": ["KON", "ART", "ADJA", "NN", "$,", "PRELS", "ART", "NN", "TRUNC"], "meter": "--+--+-+-+-+", "measure": "anapaest.di.plus"}, "line.11": {"text": "Als ein Thore meistern will. ", "tokens": ["Als", "ein", "Tho\u00b7re", "meis\u00b7tern", "will", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "ART", "NN", "VVINF", "VMFIN", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.12": {"text": "Und im Lauffe der Natur, herrlich das zum Zwek-", "tokens": ["Und", "im", "Lauf\u00b7fe", "der", "Na\u00b7tur", ",", "herr\u00b7lich", "das", "zum", "Zwek"], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word", "word"], "pos": ["KON", "APPRART", "NN", "ART", "NN", "$,", "ADJD", "ART", "APPRART", "TRUNC"], "meter": "--+--+-+-+-+", "measure": "anapaest.di.plus"}, "line.13": {"text": "Was er angeordnet hat, weis am besten wenn der", "tokens": ["Was", "er", "an\u00b7ge\u00b7ord\u00b7net", "hat", ",", "weis", "am", "bes\u00b7ten", "wenn", "der"], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "word"], "pos": ["PWS", "PPER", "VVPP", "VAFIN", "$,", "PTKVZ", "APPRART", "ADJA", "KOUS", "ART"], "meter": "+-+-+--+-+-+-", "measure": "trochaic.hexa.relaxed"}, "line.14": {"text": "Einer nassen Witterung auf die Erde fallen mu\u00df.", "tokens": ["Ei\u00b7ner", "nas\u00b7sen", "Wit\u00b7te\u00b7rung", "auf", "die", "Er\u00b7de", "fal\u00b7len", "mu\u00df", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "APPR", "ART", "NN", "VVINF", "VMFIN", "$."], "meter": "+-+-+--+-+-+-+", "measure": "trochaic.septa.relaxed"}, "line.15": {"text": "Alsdenn wenn des Sommersbrand, unsern Erd-", "tokens": ["Als\u00b7denn", "wenn", "des", "Som\u00b7mers\u00b7brand", ",", "un\u00b7sern", "Erd"], "token_info": ["word", "word", "word", "word", "punct", "word", "word"], "pos": ["ADV", "KOUS", "ART", "NN", "$,", "PPOSAT", "NN"], "meter": "-+--+-+--+", "measure": "iambic.tetra.relaxed"}, "line.16": {"text": "Kommt bei einem kalten Nord, Regen und der", "tokens": ["Kommt", "bei", "ei\u00b7nem", "kal\u00b7ten", "Nord", ",", "Re\u00b7gen", "und", "der"], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word"], "pos": ["VVFIN", "APPR", "ART", "ADJA", "NN", "$,", "NN", "KON", "ART"], "meter": "+-+-+-++-+-", "measure": "unknown.measure.hexa"}, "line.17": {"text": "Der den dorren Erdenschoos wiederum mit Saft", "tokens": ["Der", "den", "dor\u00b7ren", "Er\u00b7den\u00b7schoos", "wie\u00b7de\u00b7rum", "mit", "Saft"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["ART", "ART", "ADJA", "NN", "ADV", "APPR", "NN"], "meter": "--+-+--+-+-+", "measure": "iambic.penta.relaxed"}, "line.18": {"text": "Daraus in dem k\u00fcnftgen Jahr, ein verneuter", "tokens": ["Da\u00b7raus", "in", "dem", "k\u00fcnft\u00b7gen", "Jahr", ",", "ein", "ver\u00b7neu\u00b7ter"], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word"], "pos": ["PAV", "APPR", "ART", "ADJA", "NN", "$,", "ART", "ADJA"], "meter": "-+--+--+-+-", "measure": "amphibrach.tri.plus"}, "line.19": {"text": "Und ist das nicht woll gemacht? Soll der Sch\u00f6p-", "tokens": ["Und", "ist", "das", "nicht", "woll", "ge\u00b7macht", "?", "Soll", "der", "Sch\u00f6p"], "token_info": ["word", "word", "word", "word", "word", "word", "punct", "word", "word", "word"], "pos": ["KON", "VAFIN", "PDS", "PTKNEG", "ADV", "VVPP", "$.", "VMFIN", "ART", "TRUNC"], "meter": "-+--+-+--+", "measure": "iambic.tetra.relaxed"}, "line.20": {"text": "Nach der Menschen Eigensin, da ihr Denken und", "tokens": ["Nach", "der", "Men\u00b7schen", "Ei\u00b7gen\u00b7sin", ",", "da", "ihr", "Den\u00b7ken", "und"], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word"], "pos": ["APPR", "ART", "NN", "NN", "$,", "KOUS", "PPOSAT", "NN", "KON"], "meter": "+-+-+-+--+-+", "measure": "trochaic.hexa.relaxed"}, "line.21": {"text": "Allemahl ver\u00e4ndert ist; so m\u00fcst diese Welt vergehn:", "tokens": ["Al\u00b7le\u00b7mahl", "ver\u00b7\u00e4n\u00b7dert", "ist", ";", "so", "m\u00fcst", "die\u00b7se", "Welt", "ver\u00b7gehn", ":"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VVPP", "VAFIN", "$.", "ADV", "VMFIN", "PDAT", "NN", "VVINF", "$."], "meter": "+-+-+-+-+--+-+", "measure": "trochaic.septa.relaxed"}, "line.22": {"text": "Dieser der da reisen will, w\u00fcnscht das Sonnen-", "tokens": ["Die\u00b7ser", "der", "da", "rei\u00b7sen", "will", ",", "w\u00fcnscht", "das", "Son\u00b7nen"], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word"], "pos": ["PDS", "ART", "ADV", "VVINF", "VMFIN", "$,", "VVFIN", "ART", "TRUNC"], "meter": "-+--+--+-+-", "measure": "amphibrach.tri.plus"}, "line.23": {"text": "Da der Akkersman ihn fleht doch mit einen feuch-", "tokens": ["Da", "der", "Ak\u00b7kers\u00b7man", "ihn", "fleht", "doch", "mit", "ei\u00b7nen", "feuch"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word"], "pos": ["KOUS", "ART", "NN", "PPER", "VVFIN", "ADV", "APPR", "ART", "TRUNC"], "meter": "-+-+--+--+-+", "measure": "iambic.penta.relaxed"}, "line.24": {"text": "Seine ausgedorrte Frucht auf dem Felde zu bele-", "tokens": ["Sei\u00b7ne", "aus\u00b7ge\u00b7dorr\u00b7te", "Frucht", "auf", "dem", "Fel\u00b7de", "zu", "be\u00b7le"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word"], "pos": ["PPOSAT", "ADJA", "NN", "APPR", "ART", "NN", "APPR", "TRUNC"], "meter": "+-+-+-+--+-+--", "measure": "trochaic.hexa.relaxed"}, "line.25": {"text": "Wenn die Sonne heitrer scheint und den Wanders-", "tokens": ["Wenn", "die", "Son\u00b7ne", "hei\u00b7trer", "scheint", "und", "den", "Wan\u00b7der\u00b7s"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word"], "pos": ["KOUS", "ART", "NN", "ADJD", "VVFIN", "KON", "ART", "TRUNC"], "meter": "+-+-+-+--+-+", "measure": "trochaic.hexa.relaxed"}, "line.26": {"text": "W\u00fcnschet er ganz m\u00fcd und matt, da\u00df der Luftkreis", "tokens": ["W\u00fcn\u00b7schet", "er", "ganz", "m\u00fcd", "und", "matt", ",", "da\u00df", "der", "Luft\u00b7kreis"], "token_info": ["word", "word", "word", "word", "word", "word", "punct", "word", "word", "word"], "pos": ["VVFIN", "PPER", "ADV", "ADJD", "KON", "ADJD", "$,", "KOUS", "ART", "NN"], "meter": "+---+-+--+-", "measure": "trochaic.tetra.relaxed"}, "line.27": {"text": "Und kaum ist er abgek\u00fchlt, soll die Sonne wieder", "tokens": ["Und", "kaum", "ist", "er", "ab\u00b7ge\u00b7k\u00fchlt", ",", "soll", "die", "Son\u00b7ne", "wie\u00b7der"], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word", "word"], "pos": ["KON", "ADV", "VAFIN", "PPER", "VVPP", "$,", "VMFIN", "ART", "NN", "ADV"], "meter": "--+-+-+--+-+-", "measure": "iambic.penta.relaxed"}, "line.28": {"text": "Jener will gar W\u00e4rm und Frost fast zu gleicher Zeit", "tokens": ["Je\u00b7ner", "will", "gar", "W\u00e4rm", "und", "Frost", "fast", "zu", "glei\u00b7cher", "Zeit"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "word"], "pos": ["PDAT", "VMFIN", "ADV", "NN", "KON", "NN", "ADV", "APPR", "ADJA", "NN"], "meter": "+-+-+-+--+-+", "measure": "trochaic.hexa.relaxed"}, "line.29": {"text": "Ist es warm, so w\u00fcnscht ers kalt, ist es kalt so", "tokens": ["Ist", "es", "warm", ",", "so", "w\u00fcnscht", "ers", "kalt", ",", "ist", "es", "kalt", "so"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word", "punct", "word", "word", "word", "word"], "pos": ["VAFIN", "PPER", "ADJD", "$,", "ADV", "VVFIN", "PIS", "ADJD", "$,", "VAFIN", "PPER", "ADJD", "ADV"], "meter": "+-+-+--+-+-", "measure": "sapphicusminor"}, "line.30": {"text": "Weil er wie ers haben will, nicht recht einmahl", "tokens": ["Weil", "er", "wie", "ers", "ha\u00b7ben", "will", ",", "nicht", "recht", "ein\u00b7mahl"], "token_info": ["word", "word", "word", "word", "word", "word", "punct", "word", "word", "word"], "pos": ["KOUS", "PPER", "KOKOM", "PIS", "VAINF", "VMFIN", "$,", "PTKNEG", "ADV", "ADV"], "meter": "+-+-+-+-+-+", "measure": "trochaic.hexa"}, "line.31": {"text": "Er beschwert sich \u00fcber das, was er, wie es kommt", "tokens": ["Er", "be\u00b7schwert", "sich", "\u00fc\u00b7ber", "das", ",", "was", "er", ",", "wie", "es", "kommt"], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "punct", "word", "word", "word"], "pos": ["PPER", "VVFIN", "PRF", "APPR", "PDS", "$,", "PWS", "PPER", "$,", "PWAV", "PPER", "VVFIN"], "meter": "--+-+--+-+-+", "measure": "iambic.penta.relaxed"}, "line.32": {"text": "Gott kann nicht die Witterung blos nach unsern\nSinn bequemen:", "tokens": ["Gott", "kann", "nicht", "die", "Wit\u00b7te\u00b7rung", "blos", "nach", "un\u00b7sern", "Sinn", "be\u00b7que\u00b7men", ":"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["NN", "VMFIN", "PTKNEG", "ART", "NN", "ADV", "APPR", "PPOSAT", "NN", "ADJA", "$."], "meter": "+-+-+--+-+-+-+-", "measure": "trochaic.septa.relaxed"}, "line.33": {"text": "Sondern es ist unsre Pflicht, da\u00df wir unsre Seegel", "tokens": ["Son\u00b7dern", "es", "ist", "uns\u00b7re", "Pflicht", ",", "da\u00df", "wir", "uns\u00b7re", "See\u00b7gel"], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word", "word"], "pos": ["KON", "PPER", "VAFIN", "PPOSAT", "NN", "$,", "KOUS", "PPER", "PPOSAT", "NN"], "meter": "+--+--+--+-+-", "measure": "dactylic.tri.plus"}, "line.34": {"text": "Wie im Reiche der Natur, Wind und Witterungen", "tokens": ["Wie", "im", "Rei\u00b7che", "der", "Na\u00b7tur", ",", "Wind", "und", "Wit\u00b7te\u00b7run\u00b7gen"], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word"], "pos": ["PWAV", "APPRART", "NE", "ART", "NN", "$,", "NN", "KON", "NN"], "meter": "--+--+-+-+-+-", "measure": "anapaest.di.plus"}, "line.35": {"text": "Da\u00df wir unsre Arbeit stets, nach der Witterung", "tokens": ["Da\u00df", "wir", "uns\u00b7re", "Ar\u00b7beit", "stets", ",", "nach", "der", "Wit\u00b7te\u00b7rung"], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word"], "pos": ["KOUS", "PPER", "PPOSAT", "NN", "ADV", "$,", "APPR", "ART", "NN"], "meter": "+---+-+--+--", "measure": "trochaic.tetra.relaxed"}, "line.36": {"text": "Und von deren Einrichtung kein unbillig Urtheil", "tokens": ["Und", "von", "de\u00b7ren", "Ein\u00b7rich\u00b7tung", "kein", "un\u00b7bil\u00b7lig", "Ur\u00b7theil"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["KON", "APPR", "PRELAT", "NN", "PIAT", "ADJD", "NN"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.37": {"text": "Wer sich aber drob beschwert, der giebt dadurch", "tokens": ["Wer", "sich", "a\u00b7ber", "drob", "be\u00b7schwert", ",", "der", "giebt", "da\u00b7durch"], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word"], "pos": ["PWS", "PRF", "ADV", "ADV", "VVPP", "$,", "PRELS", "VVFIN", "PAV"], "meter": "+-+-+-+-+-+", "measure": "trochaic.hexa"}, "line.38": {"text": "Da\u00df er, warlich \u00fcberklug, und also ein albern", "tokens": ["Da\u00df", "er", ",", "war\u00b7lich", "\u00fc\u00b7berk\u00b7lug", ",", "und", "al\u00b7so", "ein", "al\u00b7bern"], "token_info": ["word", "word", "punct", "word", "word", "punct", "word", "word", "word", "word"], "pos": ["KOUS", "PPER", "$,", "ADV", "VVFIN", "$,", "KON", "ADV", "ART", "NN"], "meter": "--+-+-+-+--+-", "measure": "iambic.penta.relaxed"}, "line.39": {"text": "Der den Sch\u00f6pfer meistern will, da nach seinen", "tokens": ["Der", "den", "Sch\u00f6p\u00b7fer", "meis\u00b7tern", "will", ",", "da", "nach", "sei\u00b7nen"], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word"], "pos": ["ART", "ART", "NN", "VVINF", "VMFIN", "$,", "KOUS", "APPR", "PPOSAT"], "meter": "--+-+-+--+-", "measure": "iambic.tetra.relaxed"}, "line.40": {"text": "Sich die Zeiten, Wetter, Luft, wunderbahrlich", "tokens": ["Sich", "die", "Zei\u00b7ten", ",", "Wet\u00b7ter", ",", "Luft", ",", "wun\u00b7der\u00b7bahr\u00b7lich"], "token_info": ["word", "word", "word", "punct", "word", "punct", "word", "punct", "word"], "pos": ["PRF", "ART", "NN", "$,", "NN", "$,", "NN", "$,", "ADJD"], "meter": "+-+-+-+--+-", "measure": "trochaic.penta.relaxed"}}}}}