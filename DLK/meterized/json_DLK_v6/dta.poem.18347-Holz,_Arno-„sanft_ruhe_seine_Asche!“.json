{"dta.poem.18347": {"metadata": {"author": {"name": "Holz, Arno", "birth": "N.A.", "death": "N.A."}, "title": "\u201esanft ruhe seine Asche!\u201c", "genre": "Lyrik", "period": "N.A.", "pub_year": "1886", "urn": "urn:nbn:de:kobv:b4-200905192665", "language": ["de:0.99"], "booktitle": "Holz, Arno: Das Buch der Zeit. Lieder eines Modernen. Z\u00fcrich, 1886."}, "poem": {"stanza.1": {"line.1": {"text": "Gottlob, da\u00df endlich er verreckt!", "tokens": ["Gott\u00b7lob", ",", "da\u00df", "end\u00b7lich", "er", "ver\u00b7reckt", "!"], "token_info": ["word", "punct", "word", "word", "word", "word", "punct"], "pos": ["NN", "$,", "KOUS", "ADV", "PPER", "VVPP", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Er hat sich nie ein Lorbeerkr\u00e4nzchen,", "tokens": ["Er", "hat", "sich", "nie", "ein", "Lor\u00b7beer\u00b7kr\u00e4nz\u00b7chen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VAFIN", "PRF", "ADV", "ART", "NN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.3": {"text": "Doch oft ein Piepm\u00e4tzchen erleckt.", "tokens": ["Doch", "oft", "ein", "Pie\u00b7pm\u00e4tz\u00b7chen", "er\u00b7leckt", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["KON", "ADV", "ART", "NN", "VVPP", "$."], "meter": "-+--+--+", "measure": "prosodiakos"}, "line.4": {"text": "Das H\u00f6chste war f\u00fcr dieses P\u00fcppchen", "tokens": ["Das", "H\u00f6chs\u00b7te", "war", "f\u00fcr", "die\u00b7ses", "P\u00fcpp\u00b7chen"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["ART", "ADJA", "VAFIN", "APPR", "PDAT", "NN"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.5": {"text": "Ein \u201eA\u201cllerh\u00f6chstes Bettels\u00fcppchen.", "tokens": ["Ein", "\u201e", "A", "\u201c", "ller\u00b7h\u00f6chs\u00b7tes", "Bet\u00b7tel\u00b7s\u00fcpp\u00b7chen", "."], "token_info": ["word", "punct", "word", "punct", "word", "word", "punct"], "pos": ["ART", "$(", "NE", "$(", "ADJA", "NN", "$."], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.6": {"text": "Er schwitzte daf\u00fcr zum Erbarmen", "tokens": ["Er", "schwitz\u00b7te", "da\u00b7f\u00fcr", "zum", "Er\u00b7bar\u00b7men"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["PPER", "VVFIN", "PAV", "APPRART", "NN"], "meter": "-+--+--+-", "measure": "amphibrach.tri"}, "line.7": {"text": "Allj\u00e4hrlich ein Geburtstagscarmen;", "tokens": ["All\u00b7j\u00e4hr\u00b7lich", "ein", "Ge\u00b7burts\u00b7tag\u00b7scar\u00b7men", ";"], "token_info": ["word", "word", "word", "punct"], "pos": ["ADV", "ART", "NN", "$."], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.8": {"text": "Drin hie\u00df er die Quadrate rund \u2014", "tokens": ["Drin", "hie\u00df", "er", "die", "Quad\u00b7ra\u00b7te", "rund"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VVFIN", "PPER", "ART", "NN", "ADJD", "$("], "meter": "-+--+--+", "measure": "prosodiakos"}, "line.9": {"text": "Zugleich ein Dichter und ein Hund!", "tokens": ["Zu\u00b7gleich", "ein", "Dich\u00b7ter", "und", "ein", "Hund", "!"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "ART", "NN", "KON", "ART", "NN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}}}}}