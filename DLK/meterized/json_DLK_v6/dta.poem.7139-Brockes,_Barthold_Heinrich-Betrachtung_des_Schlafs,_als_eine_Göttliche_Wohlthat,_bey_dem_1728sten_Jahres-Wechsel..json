{"dta.poem.7139": {"metadata": {"author": {"name": "Brockes, Barthold Heinrich", "birth": "N.A.", "death": "N.A."}, "title": "Betrachtung des Schlafs,  \n als  \n eine G\u00f6ttliche Wohlthat,  \n bey dem 1728sten Jahres-Wechsel.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1730", "urn": "urn:nbn:de:kobv:b4-20087-5", "language": ["de:0.99"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "Wenn man in einer klaren Fluth", "tokens": ["Wenn", "man", "in", "ei\u00b7ner", "kla\u00b7ren", "Fluth"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["KOUS", "PIS", "APPR", "ART", "ADJA", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Sich spiegelt, sich besieht, ist alles deutlich, rein", "tokens": ["Sich", "spie\u00b7gelt", ",", "sich", "be\u00b7sieht", ",", "ist", "al\u00b7les", "deut\u00b7lich", ",", "rein"], "token_info": ["word", "word", "punct", "word", "word", "punct", "word", "word", "word", "punct", "word"], "pos": ["PRF", "VVFIN", "$,", "PRF", "VVFIN", "$,", "VAFIN", "PIS", "ADJD", "$,", "ADJD"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.3": {"text": "Und eigentlich zu sehen.", "tokens": ["Und", "ei\u00b7gent\u00b7lich", "zu", "se\u00b7hen", "."], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["KON", "ADV", "PTKZU", "VVINF", "$."], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.4": {"text": "Allein,", "tokens": ["Al\u00b7lein", ","], "token_info": ["word", "punct"], "pos": ["ADV", "$,"], "meter": "-+", "measure": "iambic.single"}, "line.5": {"text": "So bald man sie bewegt; wird alsobald", "tokens": ["So", "bald", "man", "sie", "be\u00b7wegt", ";", "wird", "al\u00b7so\u00b7bald"], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word"], "pos": ["ADV", "ADV", "PIS", "PPER", "VVFIN", "$.", "VAFIN", "NE"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.6": {"text": "Die deutlichste Gestalt,", "tokens": ["Die", "deut\u00b7lichs\u00b7te", "Ge\u00b7stalt", ","], "token_info": ["word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "$,"], "meter": "-+-+-+", "measure": "iambic.tri"}, "line.7": {"text": "Verzogen, auseinander gehen,", "tokens": ["Ver\u00b7zo\u00b7gen", ",", "aus\u00b7ein\u00b7an\u00b7der", "ge\u00b7hen", ","], "token_info": ["word", "punct", "word", "word", "punct"], "pos": ["NN", "$,", "ADV", "VVINF", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.8": {"text": "Nachdem die wallenden nie stillen Circkel sich", "tokens": ["Nach\u00b7dem", "die", "wal\u00b7len\u00b7den", "nie", "stil\u00b7len", "Cir\u00b7ckel", "sich"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["KOUS", "ART", "ADJA", "ADV", "ADJA", "NN", "PRF"], "meter": "-+-+--++-+-+", "measure": "iambic.hexa.relaxed"}, "line.9": {"text": "In klein und grosse Creise drehen:", "tokens": ["In", "klein", "und", "gros\u00b7se", "Crei\u00b7se", "dre\u00b7hen", ":"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "ADJD", "KON", "ADJA", "NN", "VVINF", "$."], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.10": {"text": "Auf gleiche Weise scheint die Phantasie,", "tokens": ["Auf", "glei\u00b7che", "Wei\u00b7se", "scheint", "die", "Phan\u00b7ta\u00b7sie", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "ADJA", "NN", "VVFIN", "ART", "NN", "$,"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.11": {"text": "In einer stets gest\u00f6rten Harmonie,", "tokens": ["In", "ei\u00b7ner", "stets", "ge\u00b7st\u00f6r\u00b7ten", "Har\u00b7mo\u00b7nie", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "ART", "ADV", "ADJA", "NN", "$,"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.12": {"text": "Jm Traum, wie eine Fluth, beweget,", "tokens": ["Jm", "Traum", ",", "wie", "ei\u00b7ne", "Fluth", ",", "be\u00b7we\u00b7get", ","], "token_info": ["word", "word", "punct", "word", "word", "word", "punct", "word", "punct"], "pos": ["APPRART", "NN", "$,", "PWAV", "ART", "NN", "$,", "VVFIN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.13": {"text": "Wodurch wir Theile sehn,", "tokens": ["Wo\u00b7durch", "wir", "Thei\u00b7le", "sehn", ","], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["PWAV", "PPER", "NN", "VVINF", "$,"], "meter": "-+-+-+", "measure": "iambic.tri"}, "line.14": {"text": "Die nicht zusammen hangen,", "tokens": ["Die", "nicht", "zu\u00b7sam\u00b7men", "han\u00b7gen", ","], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["ART", "PTKNEG", "ADV", "VVINF", "$,"], "meter": "-+-+-+-", "measure": "iambic.tri"}, "line.15": {"text": "Und Bilder, die den Augenblick vergehn,", "tokens": ["Und", "Bil\u00b7der", ",", "die", "den", "Au\u00b7gen\u00b7blick", "ver\u00b7gehn", ","], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["KON", "NN", "$,", "PRELS", "ART", "NN", "VVINF", "$,"], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.16": {"text": "Da sie sich kaum zu bilden angefangen.", "tokens": ["Da", "sie", "sich", "kaum", "zu", "bil\u00b7den", "an\u00b7ge\u00b7fan\u00b7gen", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "PPER", "PRF", "ADV", "PTKZU", "VVINF", "VVPP", "$."], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}}}}}