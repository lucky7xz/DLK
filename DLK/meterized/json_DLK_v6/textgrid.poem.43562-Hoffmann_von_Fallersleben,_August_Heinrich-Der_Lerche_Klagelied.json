{"textgrid.poem.43562": {"metadata": {"author": {"name": "Hoffmann von Fallersleben, August Heinrich", "birth": "N.A.", "death": "N.A."}, "title": "Der Lerche Klagelied", "genre": "verse", "period": "N.A.", "pub_year": 1836, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Ich arme Lerche sitz' im Bauer,", "tokens": ["Ich", "ar\u00b7me", "Ler\u00b7che", "sitz'", "im", "Bau\u00b7er", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "ADJA", "NN", "VVFIN", "APPRART", "NN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.2": {"text": "Ich trippele, trappele hin und her;", "tokens": ["Ich", "trip\u00b7pe\u00b7le", ",", "trap\u00b7pe\u00b7le", "hin", "und", "her", ";"], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "$,", "VVFIN", "PTKVZ", "KON", "PTKVZ", "$."], "meter": "-+---+-+-+", "measure": "dactylic.init"}, "line.3": {"text": "Ich kann nicht singen vor Gram und Trauer \u2013", "tokens": ["Ich", "kann", "nicht", "sin\u00b7gen", "vor", "Gram", "und", "Trau\u00b7er", "\u2013"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VMFIN", "PTKNEG", "VVFIN", "APPR", "NN", "KON", "NN", "$("], "meter": "-+-+--+-+-", "measure": "iambic.tetra.relaxed"}, "line.4": {"text": "Ach, wenn ich doch wieder drau\u00dfen w\u00e4r'!", "tokens": ["Ach", ",", "wenn", "ich", "doch", "wie\u00b7der", "drau\u00b7\u00dfen", "w\u00e4r'", "!"], "token_info": ["word", "punct", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ITJ", "$,", "KOUS", "PPER", "ADV", "ADV", "ADV", "VAFIN", "$."], "meter": "+-+-+-+-+", "measure": "trochaic.penta"}}, "stanza.2": {"line.1": {"text": "Da drau\u00dfen m\u00f6cht' ich im Freien leben,", "tokens": ["Da", "drau\u00b7\u00dfen", "m\u00f6cht'", "ich", "im", "Frei\u00b7en", "le\u00b7ben", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "ADV", "VMFIN", "PPER", "APPRART", "NN", "VVINF", "$,"], "meter": "-+-+--+-+-", "measure": "iambic.tetra.relaxed"}, "line.2": {"text": "Wie andre V\u00f6gel in Freud' und Lust!", "tokens": ["Wie", "and\u00b7re", "V\u00f6\u00b7gel", "in", "Freud'", "und", "Lust", "!"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PWAV", "ADJA", "NN", "APPR", "NN", "KON", "NN", "$."], "meter": "-+-+--+-+", "measure": "iambic.tetra.relaxed"}, "line.3": {"text": "Da drau\u00dfen hoch in den L\u00fcften schweben", "tokens": ["Da", "drau\u00b7\u00dfen", "hoch", "in", "den", "L\u00fcf\u00b7ten", "schwe\u00b7ben"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["ADV", "ADV", "ADJD", "APPR", "ART", "NN", "VVINF"], "meter": "-+-+--+-+-", "measure": "iambic.tetra.relaxed"}, "line.4": {"text": "Und singen mein Lied aus voller Brust!", "tokens": ["Und", "sin\u00b7gen", "mein", "Lied", "aus", "vol\u00b7ler", "Brust", "!"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "VVFIN", "PPOSAT", "NN", "APPR", "ADJA", "NN", "$."], "meter": "-+--+-+-+", "measure": "iambic.tetra.relaxed"}}, "stanza.3": {"line.1": {"text": "Was hilft's, da\u00df ihr mich speist und tr\u00e4nket?", "tokens": ["Was", "hilft's", ",", "da\u00df", "ihr", "mich", "speist", "und", "tr\u00e4n\u00b7ket", "?"], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PWS", "VVFIN", "$,", "KOUS", "PPER", "PRF", "ADJD", "KON", "VVFIN", "$."], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.2": {"text": "Das ist f\u00fcr mich nur halbes Gl\u00fcck:", "tokens": ["Das", "ist", "f\u00fcr", "mich", "nur", "hal\u00b7bes", "Gl\u00fcck", ":"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PDS", "VAFIN", "APPR", "PPER", "ADV", "ADJA", "NN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.3": {"text": "Wenn ihr noch mein in Liebe denket,", "tokens": ["Wenn", "ihr", "noch", "mein", "in", "Lie\u00b7be", "den\u00b7ket", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "PPER", "ADV", "PPOSAT", "APPR", "NN", "VVFIN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.4": {"text": "So gebt mir meine Freiheit zur\u00fcck!", "tokens": ["So", "gebt", "mir", "mei\u00b7ne", "Frei\u00b7heit", "zu\u00b7r\u00fcck", "!"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VVFIN", "PPER", "PPOSAT", "NN", "PTKVZ", "$."], "meter": "-+-+-+--+", "measure": "iambic.tetra.chol"}}}}}