{"textgrid.poem.61271": {"metadata": {"author": {"name": "Geibel, Emanuel", "birth": "N.A.", "death": "N.A."}, "title": "Beruhigung", "genre": "verse", "period": "N.A.", "pub_year": 1833, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Wenn ein Freund auf deinem Pfade", "tokens": ["Wenn", "ein", "Freund", "auf", "dei\u00b7nem", "Pfa\u00b7de"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["KOUS", "ART", "NN", "APPR", "PPOSAT", "NN"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.2": {"text": "Dich mit Wort und Tat versehrt,", "tokens": ["Dich", "mit", "Wort", "und", "Tat", "ver\u00b7sehrt", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "APPR", "NN", "KON", "NN", "VVPP", "$,"], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.3": {"text": "Denke still an Gottes Gnade,", "tokens": ["Den\u00b7ke", "still", "an", "Got\u00b7tes", "Gna\u00b7de", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["NN", "ADJD", "APPR", "NN", "NN", "$,"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.4": {"text": "Die dir t\u00e4glich widerf\u00e4hrt.", "tokens": ["Die", "dir", "t\u00e4g\u00b7lich", "wi\u00b7der\u00b7f\u00e4hrt", "."], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["ART", "PPER", "ADJD", "VVPP", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}}, "stanza.2": {"line.1": {"text": "Halt im Zaume deiner Seele", "tokens": ["Halt", "im", "Zau\u00b7me", "dei\u00b7ner", "See\u00b7le"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["NN", "APPRART", "NN", "PPOSAT", "NN"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.2": {"text": "Spr\u00fchnden Zorn und denk' an ihn,", "tokens": ["Spr\u00fchn\u00b7den", "Zorn", "und", "denk'", "an", "ihn", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["NN", "NN", "KON", "VVFIN", "APPR", "PPER", "$,"], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.3": {"text": "Der nicht einmal deine Fehle,", "tokens": ["Der", "nicht", "ein\u00b7mal", "dei\u00b7ne", "Feh\u00b7le", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ART", "PTKNEG", "ADV", "PPOSAT", "NN", "$,"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.4": {"text": "Der sie tausendmal verziehn.", "tokens": ["Der", "sie", "tau\u00b7send\u00b7mal", "ver\u00b7ziehn", "."], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["ART", "PPER", "ADV", "VVINF", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}}, "stanza.3": {"line.1": {"text": "So bereit sei, sonder Klage", "tokens": ["So", "be\u00b7reit", "sei", ",", "son\u00b7der", "Kla\u00b7ge"], "token_info": ["word", "word", "word", "punct", "word", "word"], "pos": ["ADV", "ADJD", "VAFIN", "$,", "KON", "NN"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.2": {"text": "Zu verzeihn in jeder Frist,", "tokens": ["Zu", "ver\u00b7zeihn", "in", "je\u00b7der", "Frist", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PTKZU", "VVINF", "APPR", "PIAT", "NN", "$,"], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.3": {"text": "Wie mit jedem neuen Tage", "tokens": ["Wie", "mit", "je\u00b7dem", "neu\u00b7en", "Ta\u00b7ge"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["PWAV", "APPR", "PIAT", "ADJA", "NN"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.4": {"text": "Er bereit zum Segnen ist.", "tokens": ["Er", "be\u00b7reit", "zum", "Seg\u00b7nen", "ist", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "ADJD", "APPRART", "NN", "VAFIN", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}}, "stanza.4": {"line.1": {"text": "Preis' ihn auch, da\u00df er im Liede", "tokens": ["Preis'", "ihn", "auch", ",", "da\u00df", "er", "im", "Lie\u00b7de"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word"], "pos": ["NE", "PPER", "ADV", "$,", "KOUS", "PPER", "APPRART", "NN"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.2": {"text": "Einen Balsam dir beschert,", "tokens": ["Ei\u00b7nen", "Bal\u00b7sam", "dir", "be\u00b7schert", ","], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "PPER", "VVPP", "$,"], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.3": {"text": "Der da wirkt, da\u00df neuer Friede", "tokens": ["Der", "da", "wirkt", ",", "da\u00df", "neu\u00b7er", "Frie\u00b7de"], "token_info": ["word", "word", "word", "punct", "word", "word", "word"], "pos": ["ART", "ADV", "VVFIN", "$,", "KOUS", "ADJA", "NN"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.4": {"text": "Stets in deinen Busen kehrt.", "tokens": ["Stets", "in", "dei\u00b7nen", "Bu\u00b7sen", "kehrt", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "APPR", "PPOSAT", "NN", "VVFIN", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}}}}}