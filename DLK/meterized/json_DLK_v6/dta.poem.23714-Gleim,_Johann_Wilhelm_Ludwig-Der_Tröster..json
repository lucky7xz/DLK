{"dta.poem.23714": {"metadata": {"author": {"name": "Gleim, Johann Wilhelm Ludwig", "birth": "N.A.", "death": "N.A."}, "title": "Der Tr\u00f6ster.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1745", "urn": "urn:nbn:de:kobv:b4-200905197682", "language": ["de:0.99"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "Als Barinchen ihren Liebling,", "tokens": ["Als", "Ba\u00b7rin\u00b7chen", "ih\u00b7ren", "Lieb\u00b7ling", ","], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["KOUS", "NN", "PPOSAT", "NN", "$,"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.2": {"text": "In dem leichten Todtenkleide,", "tokens": ["In", "dem", "leich\u00b7ten", "Tod\u00b7ten\u00b7klei\u00b7de", ","], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["APPR", "ART", "ADJA", "NN", "$,"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.3": {"text": "Auf der Baare liegen sahe:", "tokens": ["Auf", "der", "Baa\u00b7re", "lie\u00b7gen", "sa\u00b7he", ":"], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "ART", "NN", "VVINF", "VVFIN", "$."], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.4": {"text": "Stiegen aus dem sch\u00f6nsten Busen", "tokens": ["Stie\u00b7gen", "aus", "dem", "sch\u00f6ns\u00b7ten", "Bu\u00b7sen"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["NN", "APPR", "ART", "ADJA", "NN"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.5": {"text": "Tausend Ach, und tausend Seufzer.", "tokens": ["Tau\u00b7send", "Ach", ",", "und", "tau\u00b7send", "Seuf\u00b7zer", "."], "token_info": ["word", "word", "punct", "word", "word", "word", "punct"], "pos": ["CARD", "ITJ", "$,", "KON", "CARD", "NN", "$."], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.6": {"text": "Von den Wangen, die an Farbe", "tokens": ["Von", "den", "Wan\u00b7gen", ",", "die", "an", "Far\u00b7be"], "token_info": ["word", "word", "word", "punct", "word", "word", "word"], "pos": ["APPR", "ART", "NN", "$,", "PRELS", "APPR", "NN"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.7": {"text": "Dem erbla\u00dften Todten glichen,", "tokens": ["Dem", "er\u00b7bla\u00df\u00b7ten", "Tod\u00b7ten", "gli\u00b7chen", ","], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "VVFIN", "$,"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.8": {"text": "Flossen tausend heisse Tr\u00e4nen.", "tokens": ["Flos\u00b7sen", "tau\u00b7send", "heis\u00b7se", "Tr\u00e4\u00b7nen", "."], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["NN", "CARD", "ADJA", "NN", "$."], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.9": {"text": "Und es rief das arme M\u00e4dchen", "tokens": ["Und", "es", "rief", "das", "ar\u00b7me", "M\u00e4d\u00b7chen"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["KON", "PPER", "VVFIN", "ART", "ADJA", "NN"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.10": {"text": "Tausendmal: Gerechter Himmel,", "tokens": ["Tau\u00b7send\u00b7mal", ":", "Ge\u00b7rech\u00b7ter", "Him\u00b7mel", ","], "token_info": ["word", "punct", "word", "word", "punct"], "pos": ["NN", "$.", "NN", "NN", "$,"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.11": {"text": "Grausamer gerechter Himmel,", "tokens": ["Grau\u00b7sa\u00b7mer", "ge\u00b7rech\u00b7ter", "Him\u00b7mel", ","], "token_info": ["word", "word", "word", "punct"], "pos": ["NN", "ADJD", "NN", "$,"], "meter": "+---+-+-", "measure": "dactylic.init"}, "line.12": {"text": "Gib mir meinen Liebling wieder!", "tokens": ["Gib", "mir", "mei\u00b7nen", "Lieb\u00b7ling", "wie\u00b7der", "!"], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["VVIMP", "PPER", "PPOSAT", "NN", "ADV", "$."], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.13": {"text": "Aber der gerechte Himmel", "tokens": ["A\u00b7ber", "der", "ge\u00b7rech\u00b7te", "Him\u00b7mel"], "token_info": ["word", "word", "word", "word"], "pos": ["KON", "ART", "ADJA", "NN"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.14": {"text": "Gab den Liebling doch nicht wieder.", "tokens": ["Gab", "den", "Lieb\u00b7ling", "doch", "nicht", "wie\u00b7der", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "ART", "NN", "ADV", "PTKNEG", "ADV", "$."], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.15": {"text": "Ich beiammerte das M\u00e4dchen.", "tokens": ["Ich", "bei\u00b7am\u00b7mer\u00b7te", "das", "M\u00e4d\u00b7chen", "."], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "ART", "NN", "$."], "meter": "-+-+--+-", "measure": "iambic.tri.relaxed"}, "line.16": {"text": "Und ich bat den harten Himmel:", "tokens": ["Und", "ich", "bat", "den", "har\u00b7ten", "Him\u00b7mel", ":"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "PPER", "VVFIN", "ART", "ADJA", "NN", "$."], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.17": {"text": "La\u00df doch nur Geliebte leben.", "tokens": ["La\u00df", "doch", "nur", "Ge\u00b7lieb\u00b7te", "le\u00b7ben", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["VVIMP", "ADV", "ADV", "NN", "VVINF", "$."], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.18": {"text": "Himmel, wenn Geliebte sterben,", "tokens": ["Him\u00b7mel", ",", "wenn", "Ge\u00b7lieb\u00b7te", "ster\u00b7ben", ","], "token_info": ["word", "punct", "word", "word", "word", "punct"], "pos": ["NN", "$,", "KOUS", "NN", "VVINF", "$,"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.19": {"text": "M\u00fcssen treue M\u00e4dchen weinen.", "tokens": ["M\u00fcs\u00b7sen", "treu\u00b7e", "M\u00e4d\u00b7chen", "wei\u00b7nen", "."], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["NE", "ADJA", "NN", "VVINF", "$."], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.20": {"text": "Ach, wie wird mein treues M\u00e4dchen", "tokens": ["Ach", ",", "wie", "wird", "mein", "treu\u00b7es", "M\u00e4d\u00b7chen"], "token_info": ["word", "punct", "word", "word", "word", "word", "word"], "pos": ["ITJ", "$,", "PWAV", "VAFIN", "PPOSAT", "ADJA", "NN"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.21": {"text": "Einst bei meiner Leiche weinen!", "tokens": ["Einst", "bei", "mei\u00b7ner", "Lei\u00b7che", "wei\u00b7nen", "!"], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "APPR", "PPOSAT", "NN", "VVINF", "$."], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.22": {"text": "Ach wie traurig wird es seufzen!", "tokens": ["Ach", "wie", "trau\u00b7rig", "wird", "es", "seuf\u00b7zen", "!"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["NN", "KOKOM", "ADJD", "VAFIN", "PPER", "VVINF", "$."], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.23": {"text": "Ach wer wird, wenn ich einst sterbe,", "tokens": ["Ach", "wer", "wird", ",", "wenn", "ich", "einst", "ster\u00b7be", ","], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["ITJ", "PWS", "VAFIN", "$,", "KOUS", "PPER", "ADV", "VVFIN", "$,"], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}, "line.24": {"text": "Mein getreues M\u00e4dchen tr\u00f6sten?", "tokens": ["Mein", "ge\u00b7treu\u00b7es", "M\u00e4d\u00b7chen", "tr\u00f6s\u00b7ten", "?"], "token_info": ["word", "word", "word", "word", "punct"], "pos": ["PPOSAT", "ADJA", "NN", "VVINF", "$."], "meter": "+-+-+-+-", "measure": "trochaic.tetra"}}}}}