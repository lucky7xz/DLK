{"textgrid.poem.58286": {"metadata": {"author": {"name": "Tersteegen, Gerhard", "birth": "N.A.", "death": "N.A."}, "title": "324. Die beste Tugendschule", "genre": "verse", "period": "N.A.", "pub_year": 1733, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Die beste Tugendschul' ist selbst dein Seelengrund;", "tokens": ["Die", "bes\u00b7te", "Tu\u00b7gend\u00b7schul'", "ist", "selbst", "dein", "See\u00b7len\u00b7grund", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "VAFIN", "ADV", "PPOSAT", "NN", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Wenn alles schweigt in dir und du dich drein wirst senken,", "tokens": ["Wenn", "al\u00b7les", "schweigt", "in", "dir", "und", "du", "dich", "drein", "wirst", "sen\u00b7ken", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "PIS", "VVFIN", "APPR", "PPER", "KON", "PPER", "PRF", "ADV", "VAFIN", "VVINF", "$,"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.3": {"text": "So lehrt die Weisheit dich mit ihrem eignen Mund", "tokens": ["So", "lehrt", "die", "Weis\u00b7heit", "dich", "mit", "ih\u00b7rem", "eig\u00b7nen", "Mund"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word"], "pos": ["ADV", "VVFIN", "ART", "NN", "PRF", "APPR", "PPOSAT", "ADJA", "NN"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.4": {"text": "Und alle Tugenden dir wesentlich wird schenken.", "tokens": ["Und", "al\u00b7le", "Tu\u00b7gen\u00b7den", "dir", "we\u00b7sent\u00b7lich", "wird", "schen\u00b7ken", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "PIAT", "NN", "PPER", "ADJD", "VAFIN", "VVINF", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}}}}}