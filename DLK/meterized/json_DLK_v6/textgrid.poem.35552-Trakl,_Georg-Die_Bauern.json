{"textgrid.poem.35552": {"metadata": {"author": {"name": "Trakl, Georg", "birth": "N.A.", "death": "N.A."}, "title": "Die Bauern", "genre": "verse", "period": "N.A.", "pub_year": 1900, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Vorm Fenster t\u00f6nendes Gr\u00fcn und Rot.", "tokens": ["Vorm", "Fens\u00b7ter", "t\u00f6\u00b7nen\u00b7des", "Gr\u00fcn", "und", "Rot", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["APPRART", "NN", "ADJA", "NN", "KON", "NN", "$."], "meter": "-+-+--+-+", "measure": "iambic.tetra.relaxed"}, "line.2": {"text": "Im schwarzverr\u00e4ucherten, niederen Saal", "tokens": ["Im", "schwarz\u00b7ver\u00b7r\u00e4u\u00b7cher\u00b7ten", ",", "nie\u00b7de\u00b7ren", "Saal"], "token_info": ["word", "word", "punct", "word", "word"], "pos": ["APPRART", "ADJA", "$,", "ADJA", "NN"], "meter": "-+-+--+--+", "measure": "iambic.tetra.relaxed"}, "line.3": {"text": "Sitzen die Knechte und M\u00e4gde beim Mahl;", "tokens": ["Sit\u00b7zen", "die", "Knech\u00b7te", "und", "M\u00e4g\u00b7de", "beim", "Mahl", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["NN", "ART", "NN", "KON", "NN", "APPRART", "NN", "$."], "meter": "+--+--+--+", "measure": "dactylic.tetra"}, "line.4": {"text": "Und sie schenken den Wein und sie brechen das Brot.", "tokens": ["Und", "sie", "schen\u00b7ken", "den", "Wein", "und", "sie", "bre\u00b7chen", "das", "Brot", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "PPER", "VVFIN", "ART", "NN", "KON", "PPER", "VVFIN", "ART", "NN", "$."], "meter": "--+--+--+--+", "measure": "anapaest.tetra.plus"}}, "stanza.2": {"line.1": {"text": "Im tiefen Schweigen der Mittagszeit", "tokens": ["Im", "tie\u00b7fen", "Schwei\u00b7gen", "der", "Mit\u00b7tags\u00b7zeit"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["APPRART", "ADJA", "NN", "ART", "NN"], "meter": "-+-+--+-+", "measure": "iambic.tetra.relaxed"}, "line.2": {"text": "F\u00e4llt bisweilen ein karges Wort.", "tokens": ["F\u00e4llt", "bis\u00b7wei\u00b7len", "ein", "kar\u00b7ges", "Wort", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "ADV", "ART", "ADJA", "NN", "$."], "meter": "+-+--+-+", "measure": "glykoneus"}, "line.3": {"text": "Die \u00c4cker flimmern in einem fort", "tokens": ["Die", "\u00c4\u00b7cker", "flim\u00b7mern", "in", "ei\u00b7nem", "fort"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["ART", "NN", "VVFIN", "APPR", "ART", "PTKVZ"], "meter": "-+-+--+-+", "measure": "iambic.tetra.relaxed"}, "line.4": {"text": "Und der Himmel bleiern und weit.", "tokens": ["Und", "der", "Him\u00b7mel", "blei\u00b7ern", "und", "weit", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "ART", "NN", "VVINF", "KON", "ADJD", "$."], "meter": "--+-+--+", "measure": "iambic.tri.chol"}}, "stanza.3": {"line.1": {"text": "Fratzenhaft flackert im Herd die Glut", "tokens": ["Frat\u00b7zen\u00b7haft", "fla\u00b7ckert", "im", "Herd", "die", "Glut"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["NN", "VVFIN", "APPRART", "NN", "ART", "NN"], "meter": "+--+--+-+", "measure": "dactylic.di.plus"}, "line.2": {"text": "Und ein Schwarm von Fliegen summt.", "tokens": ["Und", "ein", "Schwarm", "von", "Flie\u00b7gen", "summt", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "ART", "NN", "APPR", "NN", "VVFIN", "$."], "meter": "+-+-+-+", "measure": "trochaic.tetra"}, "line.3": {"text": "Die M\u00e4gde lauschen bl\u00f6d und verstummt", "tokens": ["Die", "M\u00e4g\u00b7de", "lau\u00b7schen", "bl\u00f6d", "und", "ver\u00b7stummt"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["ART", "NN", "VVINF", "ADJD", "KON", "VVFIN"], "meter": "-+-+-+--+", "measure": "iambic.tetra.chol"}, "line.4": {"text": "Und ihre Schl\u00e4fen h\u00e4mmert das Blut.", "tokens": ["Und", "ih\u00b7re", "Schl\u00e4\u00b7fen", "h\u00e4m\u00b7mert", "das", "Blut", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "PPOSAT", "NN", "VVFIN", "ART", "NN", "$."], "meter": "-+-+-+--+", "measure": "iambic.tetra.chol"}}, "stanza.4": {"line.1": {"text": "Und manchmal treffen sich Blicke voll Gier,", "tokens": ["Und", "manch\u00b7mal", "tref\u00b7fen", "sich", "Bli\u00b7cke", "voll", "Gier", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "ADV", "VVFIN", "PRF", "NN", "ADJD", "NN", "$,"], "meter": "-+-+--+--+", "measure": "iambic.tetra.relaxed"}, "line.2": {"text": "Wenn tierischer Dunst die Stube durchweht.", "tokens": ["Wenn", "tie\u00b7ri\u00b7scher", "Dunst", "die", "Stu\u00b7be", "durch\u00b7weht", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "ADJA", "NN", "ART", "NN", "VVFIN", "$."], "meter": "-+--+-+--+", "measure": "iambic.tetra.relaxed"}, "line.3": {"text": "Eint\u00f6nig spricht ein Knecht das Gebet", "tokens": ["Ein\u00b7t\u00f6\u00b7nig", "spricht", "ein", "Knecht", "das", "Ge\u00b7bet"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["ADJD", "VVFIN", "ART", "NN", "ART", "NN"], "meter": "+--+-+-+-", "measure": "iambic.tetra.invert"}, "line.4": {"text": "Und ein Hahn kr\u00e4ht unter der T\u00fcr.", "tokens": ["Und", "ein", "Hahn", "kr\u00e4ht", "un\u00b7ter", "der", "T\u00fcr", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "ART", "NN", "VVFIN", "APPR", "ART", "NN", "$."], "meter": "--+-+--+", "measure": "iambic.tri.chol"}}, "stanza.5": {"line.1": {"text": "Und wieder ins Feld. Ein Grauen packt", "tokens": ["Und", "wie\u00b7der", "ins", "Feld", ".", "Ein", "Grau\u00b7en", "packt"], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word"], "pos": ["KON", "ADV", "APPRART", "NN", "$.", "ART", "NN", "VVFIN"], "meter": "-+--+-+-+", "measure": "iambic.tetra.relaxed"}, "line.2": {"text": "Sie oft im tosenden \u00c4hrengebraus", "tokens": ["Sie", "oft", "im", "to\u00b7sen\u00b7den", "\u00c4h\u00b7ren\u00b7ge\u00b7braus"], "token_info": ["word", "word", "word", "word", "word"], "pos": ["PPER", "ADV", "APPRART", "ADJA", "NN"], "meter": "-+-+--+--+", "measure": "iambic.tetra.relaxed"}, "line.3": {"text": "Und klirrend schwingen ein und aus", "tokens": ["Und", "klir\u00b7rend", "schwin\u00b7gen", "ein", "und", "aus"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["KON", "ADJD", "VVFIN", "PTKVZ", "KON", "APPR"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "Die Sensen geisterhaft im Takt.", "tokens": ["Die", "Sen\u00b7sen", "geis\u00b7ter\u00b7haft", "im", "Takt", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "ADJD", "APPRART", "NN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}}}}}