{"dta.poem.6531": {"metadata": {"author": {"name": "Brockes, Barthold Heinrich", "birth": "N.A.", "death": "N.A."}, "title": "Von dem Licht.", "genre": "Lyrik", "period": "N.A.", "pub_year": "1730", "urn": "urn:nbn:de:kobv:b4-20087-5", "language": ["de:0.99"], "booktitle": "N.A."}, "poem": {"stanza.1": {"line.1": {"text": "Jmgleichen, wenn so Wind, als Fluth,", "tokens": ["Jm\u00b7glei\u00b7chen", ",", "wenn", "so", "Wind", ",", "als", "Fluth", ","], "token_info": ["word", "punct", "word", "word", "word", "punct", "word", "word", "punct"], "pos": ["NE", "$,", "KOUS", "ADV", "NN", "$,", "KOUS", "NN", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "In einer sanften Stille ruht,", "tokens": ["In", "ei\u00b7ner", "sanf\u00b7ten", "Stil\u00b7le", "ruht", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["APPR", "ART", "ADJA", "NN", "VVFIN", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.3": {"text": "Und dann die Sonn\u2019 ins Wasser strahlet,", "tokens": ["Und", "dann", "die", "Sonn'", "ins", "Was\u00b7ser", "strah\u00b7let", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "ADV", "ART", "NN", "APPRART", "NN", "VVFIN", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.4": {"text": "Als in ein Spiegel-Glas, alsdenn so mahlet", "tokens": ["Als", "in", "ein", "Spie\u00b7gel\u00b7Glas", ",", "als\u00b7denn", "so", "mah\u00b7let"], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word"], "pos": ["KOUS", "APPR", "ART", "NN", "$,", "ADV", "ADV", "VVFIN"], "meter": "-+-+-+-+-+-", "measure": "iambic.penta"}, "line.5": {"text": "Und bildet sie viel helle Schildereyen:", "tokens": ["Und", "bil\u00b7det", "sie", "viel", "hel\u00b7le", "Schil\u00b7de\u00b7re\u00b7yen", ":"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "VVFIN", "PPER", "PIAT", "ADJA", "NN", "$."], "meter": "-+---+-+--+", "measure": "iambic.tetra.chol"}, "line.6": {"text": "Die Strahlen dienen ihr an Pinsel statt;", "tokens": ["Die", "Strah\u00b7len", "die\u00b7nen", "ihr", "an", "Pin\u00b7sel", "statt", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "NN", "VVFIN", "PPER", "APPR", "NN", "PTKVZ", "$."], "meter": "-+-+-+-+-+", "measure": "iambic.penta"}, "line.7": {"text": "Und auf den wallenden Crystallen, die so glatt,", "tokens": ["Und", "auf", "den", "wal\u00b7len\u00b7den", "Crys\u00b7tal\u00b7len", ",", "die", "so", "glatt", ","], "token_info": ["word", "word", "word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["KON", "APPR", "ART", "ADJA", "NN", "$,", "PRELS", "ADV", "ADJD", "$,"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.8": {"text": "Erblickt man ihr beflammtes Bild,", "tokens": ["Er\u00b7blickt", "man", "ihr", "be\u00b7flamm\u00b7tes", "Bild", ","], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "PIS", "PPOSAT", "ADJA", "NN", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.9": {"text": "Das unsern Blick mit Glantz und Wiederschein erf\u00fcllt.", "tokens": ["Das", "un\u00b7sern", "Blick", "mit", "Glantz", "und", "Wie\u00b7der\u00b7schein", "er\u00b7f\u00fcllt", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "APPR", "NN", "KON", "NN", "VVPP", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}}}}}