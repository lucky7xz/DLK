{"textgrid.poem.58695": {"metadata": {"author": {"name": "Tersteegen, Gerhard", "birth": "N.A.", "death": "N.A."}, "title": "7. Die best\u00e4ndige Nahheit Jesu", "genre": "verse", "period": "N.A.", "pub_year": 1733, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Siehe, ich bin bei euch alle Tage bis an der Welt Ende. Matth. 28, 20", "tokens": ["Sie\u00b7he", ",", "ich", "bin", "bei", "euch", "al\u00b7le", "Ta\u00b7ge", "bis", "an", "der", "Welt", "En\u00b7de", ".", "Mat\u00b7th", ".", "28", ",", "20"], "token_info": ["word", "punct", "word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "punct", "word", "punct", "number", "punct", "number"], "pos": ["VVIMP", "$,", "PPER", "VAFIN", "APPR", "PPER", "PIAT", "NN", "APPR", "APPR", "ART", "NN", "NN", "$.", "NN", "$.", "CARD", "$,", "CARD"], "meter": "-+-+-+--+--+--+-+-", "measure": "iambic.septa.relaxed"}}, "stanza.2": {"line.1": {"text": "Ich sehe dies und das und soll nur Eines sehen,", "tokens": ["Ich", "se\u00b7he", "dies", "und", "das", "und", "soll", "nur", "Ei\u00b7nes", "se\u00b7hen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "PDS", "KON", "PDS", "KON", "VMFIN", "ADV", "PIS", "VVINF", "$,"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Du, Jesus, Freund, bleibst nah, auch wenn du scheinst zu gehen;", "tokens": ["Du", ",", "Je\u00b7sus", ",", "Freund", ",", "bleibst", "nah", ",", "auch", "wenn", "du", "scheinst", "zu", "ge\u00b7hen", ";"], "token_info": ["word", "punct", "word", "punct", "word", "punct", "word", "word", "punct", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "$,", "NE", "$,", "NN", "$,", "VVFIN", "ADJD", "$,", "ADV", "KOUS", "PPER", "ADV", "PTKZU", "VVINF", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.3": {"text": "Gib, da\u00df ich's kindlich glaub', wenn ich's nicht seh' noch sp\u00fcr',", "tokens": ["Gib", ",", "da\u00df", "ich's", "kind\u00b7lich", "glaub'", ",", "wenn", "ich's", "nicht", "seh'", "noch", "sp\u00fcr'", ","], "token_info": ["word", "punct", "word", "word", "word", "word", "punct", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVIMP", "$,", "KOUS", "PIS", "ADJD", "VVFIN", "$,", "KOUS", "PIS", "PTKNEG", "ADV", "ADV", "VVFIN", "$,"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.4": {"text": "Da\u00df du seist alle Tag und auch noch jetzt bei mir!", "tokens": ["Da\u00df", "du", "seist", "al\u00b7le", "Tag", "und", "auch", "noch", "jetzt", "bei", "mir", "!"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "PPER", "VAFIN", "PIAT", "NN", "KON", "ADV", "ADV", "ADV", "APPR", "PPER", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}}}}}