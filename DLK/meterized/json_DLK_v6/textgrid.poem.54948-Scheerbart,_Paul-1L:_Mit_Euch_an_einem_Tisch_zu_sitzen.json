{"textgrid.poem.54948": {"metadata": {"author": {"name": "Scheerbart, Paul", "birth": "N.A.", "death": "N.A."}, "title": "1L: Mit Euch an einem Tisch zu sitzen", "genre": "verse", "period": "N.A.", "pub_year": 1889, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Mit Euch an einem Tisch zu sitzen", "tokens": ["Mit", "Euch", "an", "ei\u00b7nem", "Tisch", "zu", "sit\u00b7zen"], "token_info": ["word", "word", "word", "word", "word", "word", "word"], "pos": ["APPR", "PPER", "APPR", "ART", "NN", "PTKZU", "VVINF"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.2": {"text": "Macht mir den gr\u00f6\u00dften H\u00f6llenspa\u00df.", "tokens": ["Macht", "mir", "den", "gr\u00f6\u00df\u00b7ten", "H\u00f6l\u00b7len\u00b7spa\u00df", "."], "token_info": ["word", "word", "word", "word", "word", "punct"], "pos": ["NN", "PPER", "ART", "ADJA", "NN", "$."], "meter": "+--+-+-+", "measure": "iambic.tetra.invert"}, "line.3": {"text": "Ich tr\u00e4ume schon von Euren Witzen.", "tokens": ["Ich", "tr\u00e4u\u00b7me", "schon", "von", "Eu\u00b7ren", "Wit\u00b7zen", "."], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPER", "VVFIN", "ADV", "APPR", "PPOSAT", "NN", "$."], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.4": {"text": "Wohl dem, der mit Euch Austern a\u00df.", "tokens": ["Wohl", "dem", ",", "der", "mit", "Euch", "Aus\u00b7tern", "a\u00df", "."], "token_info": ["word", "word", "punct", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "ART", "$,", "PRELS", "APPR", "PPER", "NN", "VVFIN", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}}, "stanza.2": {"line.1": {"text": "Denn was Ihr trinkt", "tokens": ["Denn", "was", "Ihr", "trinkt"], "token_info": ["word", "word", "word", "word"], "pos": ["KON", "PWS", "PPER", "VVFIN"], "meter": "-+-+", "measure": "iambic.di"}, "line.2": {"text": "Ist pure Galle.", "tokens": ["Ist", "pu\u00b7re", "Gal\u00b7le", "."], "token_info": ["word", "word", "word", "punct"], "pos": ["VAFIN", "ADJA", "NN", "$."], "meter": "-+-+-", "measure": "iambic.di"}, "line.3": {"text": "Und was Ihr e\u00dft", "tokens": ["Und", "was", "Ihr", "e\u00dft"], "token_info": ["word", "word", "word", "word"], "pos": ["KON", "PWS", "PPER", "VVFIN"], "meter": "-+-+", "measure": "iambic.di"}, "line.4": {"text": "Ein alter Quark.", "tokens": ["Ein", "al\u00b7ter", "Quark", "."], "token_info": ["word", "word", "word", "punct"], "pos": ["ART", "ADJA", "NN", "$."], "meter": "-+-+", "measure": "iambic.di"}}, "stanza.3": {"line.1": {"text": "Recht grob m\u00f6cht ich Euch Allen sagen,", "tokens": ["Recht", "grob", "m\u00f6cht", "ich", "Euch", "Al\u00b7len", "sa\u00b7gen", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["NN", "ADJD", "VMFIN", "PPER", "PPER", "PIS", "VVINF", "$,"], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.2": {"text": "Da\u00df Ihr mir nie mehr k\u00f6nnt behagen.", "tokens": ["Da\u00df", "Ihr", "mir", "nie", "mehr", "k\u00f6nnt", "be\u00b7ha\u00b7gen", "."], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["KOUS", "PPER", "PPER", "ADV", "ADV", "VMFIN", "VVINF", "$."], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.3": {"text": "Ihr seid das Luderpack der Welt", "tokens": ["Ihr", "seid", "das", "Lu\u00b7der\u00b7pack", "der", "Welt"], "token_info": ["word", "word", "word", "word", "word", "word"], "pos": ["PPER", "VAFIN", "ART", "NN", "ART", "NN"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.4": {"text": "Und habt mir manchen Tag verg\u00e4llt!", "tokens": ["Und", "habt", "mir", "man\u00b7chen", "Tag", "ver\u00b7g\u00e4llt", "!"], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["KON", "VAFIN", "PPER", "PIAT", "NN", "VVPP", "$."], "meter": "-+-+-+-+", "measure": "iambic.tetra"}}}}}