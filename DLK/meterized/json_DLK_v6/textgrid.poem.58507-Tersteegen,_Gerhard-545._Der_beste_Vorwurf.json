{"textgrid.poem.58507": {"metadata": {"author": {"name": "Tersteegen, Gerhard", "birth": "N.A.", "death": "N.A."}, "title": "545. Der beste Vorwurf", "genre": "verse", "period": "N.A.", "pub_year": 1733, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Selbstliebe ist es nur, oft unter Demutschein,", "tokens": ["Selbst\u00b7lie\u00b7be", "ist", "es", "nur", ",", "oft", "un\u00b7ter", "De\u00b7mut\u00b7schein", ","], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["NN", "VAFIN", "PPER", "ADV", "$,", "ADV", "APPR", "NN", "$,"], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.2": {"text": "Da\u00df du an dich nur denkst bald eitel, bald mit Pein;", "tokens": ["Da\u00df", "du", "an", "dich", "nur", "denkst", "bald", "ei\u00b7tel", ",", "bald", "mit", "Pein", ";"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "punct", "word", "word", "word", "punct"], "pos": ["KOUS", "PPER", "APPR", "PPER", "ADV", "ADV", "ADV", "ADJD", "$,", "ADV", "APPR", "NN", "$."], "meter": "-+-+-+-+-+-+", "measure": "alexandrine.iambic.hexa"}, "line.3": {"text": "Willst du die reine Ruh und alles Gute schauen,", "tokens": ["Willst", "du", "die", "rei\u00b7ne", "Ruh", "und", "al\u00b7les", "Gu\u00b7te", "schau\u00b7en", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VMFIN", "PPER", "ART", "ADJA", "NN", "KON", "PIAT", "NN", "VVINF", "$,"], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}, "line.4": {"text": "Denk stets an deinen Gott mit Liebe und Vertrauen!", "tokens": ["Denk", "stets", "an", "dei\u00b7nen", "Gott", "mit", "Lie\u00b7be", "und", "Ver\u00b7trau\u00b7en", "!"], "token_info": ["word", "word", "word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["VVIMP", "ADV", "APPR", "PPOSAT", "NN", "APPR", "NN", "KON", "NN", "$."], "meter": "-+-+-+-+-+-+-", "measure": "alexandrine.iambic.hexa"}}}}}