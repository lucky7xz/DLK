{"textgrid.poem.58279": {"metadata": {"author": {"name": "Tersteegen, Gerhard", "birth": "N.A.", "death": "N.A."}, "title": "317. Du sollst nicht stehlen!", "genre": "verse", "period": "N.A.", "pub_year": 1733, "urn": "N.A.", "language": ["de:0.99"], "booktitle": "N.A."}, "text": null, "poem": {"stanza.1": {"line.1": {"text": "Mensch, deinen Gott alleine lieb,", "tokens": ["Mensch", ",", "dei\u00b7nen", "Gott", "al\u00b7lei\u00b7ne", "lieb", ","], "token_info": ["word", "punct", "word", "word", "word", "word", "punct"], "pos": ["NN", "$,", "PPOSAT", "NN", "ADV", "ADJD", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.2": {"text": "Sonst bist du wahrlich schon ein Dieb,", "tokens": ["Sonst", "bist", "du", "wahr\u00b7lich", "schon", "ein", "Dieb", ","], "token_info": ["word", "word", "word", "word", "word", "word", "word", "punct"], "pos": ["ADV", "VAFIN", "PPER", "ADV", "ADV", "ART", "NN", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.3": {"text": "Weil du, was Gottes ist, Gott raubest!", "tokens": ["Weil", "du", ",", "was", "Got\u00b7tes", "ist", ",", "Gott", "rau\u00b7best", "!"], "token_info": ["word", "word", "punct", "word", "word", "word", "punct", "word", "word", "punct"], "pos": ["KOUS", "PPER", "$,", "PRELS", "NN", "VAFIN", "$,", "NN", "VVFIN", "$."], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}, "line.4": {"text": "Dein Herz geh\u00f6ret Gott nur zu,", "tokens": ["Dein", "Herz", "ge\u00b7h\u00f6\u00b7ret", "Gott", "nur", "zu", ","], "token_info": ["word", "word", "word", "word", "word", "word", "punct"], "pos": ["PPOSAT", "NN", "VVFIN", "NN", "ADV", "PTKVZ", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.5": {"text": "In ihm such Freud', in ihm such Ruh,", "tokens": ["In", "ihm", "such", "Freud'", ",", "in", "ihm", "such", "Ruh", ","], "token_info": ["word", "word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["APPR", "PPER", "VVFIN", "NN", "$,", "APPR", "PPER", "ADV", "NN", "$,"], "meter": "-+-+-+-+", "measure": "iambic.tetra"}, "line.6": {"text": "Bedenk es recht, wenn du es glaubest!", "tokens": ["Be\u00b7denk", "es", "recht", ",", "wenn", "du", "es", "glau\u00b7best", "!"], "token_info": ["word", "word", "word", "punct", "word", "word", "word", "word", "punct"], "pos": ["VVFIN", "PPER", "ADJD", "$,", "KOUS", "PPER", "PPER", "VVFIN", "$."], "meter": "-+-+-+-+-", "measure": "iambic.tetra"}}}}}